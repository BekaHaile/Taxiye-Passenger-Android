<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/bg_grey_opaque"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_selector"
            android:tag="mwar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Jugnoo Cash"
            android:textColor="@color/white"
            android:textSize="48px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70px" >

            <TextView
                android:id="@+id/textViewPromotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_banner"
                android:gravity="center"
                android:padding="15px"
                android:text="Successful"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="30px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewCurrentTransactionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_light_more"
                android:gravity="center"
                android:padding="15px"
                android:text="Successful"
                android:singleLine="true"
                android:textColor="@color/bg_grey_opaque"
                android:textSize="30px"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewAccountBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="Account Balance"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="34px" />

        <TextView
            android:id="@+id/textViewAccountBalanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5px"
            android:text="Rs. 200"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="40px" />

        <Button
            android:id="@+id/buttonAddPayment"
            android:layout_width="648px"
            android:layout_height="99px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:background="@drawable/blue_btn_selector"
            android:text="Add Payment"
            android:textColor="@drawable/white_color_selector"
            android:textSize="@dimen/button_text_size" />

        <TextView
            android:id="@+id/textViewRecentTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            android:layout_marginTop="36px"
            android:text="Recent Transactions"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="34px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0px"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <ListView
            android:id="@+id/listViewTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0px"
            android:divider="@drawable/transparent"
            android:dividerHeight="0px"
            android:listSelector="@drawable/transparent"
            android:splitMotionEvents="false" >
        </ListView>

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="40px" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</LinearLayout>