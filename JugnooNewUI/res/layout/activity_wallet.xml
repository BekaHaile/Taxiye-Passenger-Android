<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white_light_grey"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

	<RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="JUGNOO CASH"
            android:textColor="@color/white"
            android:textSize="30.6px" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110px" >

            <TextView
                android:id="@+id/textViewPromotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="15px"
                android:text="Promotional banner"
                android:maxLines="3"
                android:textColor="@color/grey_black_light"
                android:textSize="26px"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewAccountBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="Current Balance"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="34px" />

        <TextView
            android:id="@+id/textViewAccountBalanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5px"
            android:text="Rs. 200"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="30px" />

        <Button
            android:id="@+id/buttonAddPayment"
            android:layout_width="648px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:background="@drawable/button_yellow_selector"
            android:text="ADD JUGNOO CASH"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/button_text_size" />

        <TextView
            android:id="@+id/textViewRecentTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36px"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            android:layout_marginTop="70px"
            android:text="Recent Transactions"
            android:textColor="@color/grey_black_light"
            android:textSize="34px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0px"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <ListView
            android:id="@+id/listViewTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0px"
            android:divider="@drawable/background_transparent"
            android:dividerHeight="0px"
            android:listSelector="@drawable/background_transparent"
            android:splitMotionEvents="false" >
        </ListView>

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="30px" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</LinearLayout>