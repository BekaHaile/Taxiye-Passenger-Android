<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false" >

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2px"
            android:splitMotionEvents="false" >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:text="Title"
                android:textColor="@color/grey_dark_more"
                android:textSize="50px"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:text="Message"
                android:textColor="@color/grey_dark"
                android:textSize="34px" />

            <TextView
                android:id="@+id/textExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40px"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:maxHeight="800px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="Terms and Conditions"
                android:textColor="@drawable/text_color_yellow_alpha_selector"
                android:textSize="34px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/grey_light" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_gravity="center_horizontal"
                android:splitMotionEvents="false" >

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="307px"
                    android:layout_height="90px"
                    android:background="@drawable/button_white_yellow_blr_selector"
                    android:singleLine="true"
                    android:text="Cancel"
                    android:textColor="@drawable/text_color_yellow_white_selector"
                    android:textSize="34px" />

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="307px"
                    android:layout_height="90px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_white_yellow_brr_selector"
                    android:singleLine="true"
                    android:text="OK"
                    android:textColor="@drawable/text_color_yellow_white_selector"
                    android:textSize="34px" />
                
                <ImageView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey_light"
                android:layout_centerHorizontal="true"
                 />
                
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>