<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="720px"
            android:layout_height="96px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/yellow" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="MY ACCOUNT"
                android:textColor="@color/white"
                android:textSize="30.6px" />

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="60.7px"
                android:layout_height="76.9px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:padding="20px"
                android:src="@drawable/back_white_selector" />
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350px" >

                <ImageView
                    android:id="@+id/imageViewUserImageBlur"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_light_grey"
                    android:scaleType="centerCrop"
                     />
                
                <ImageView
                    android:id="@+id/imageViewUserImageBlurCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#10000000"
                    android:scaleType="centerCrop"
                     />
                
                

                <RelativeLayout
                    android:id="@+id/relativeLayoutProfileImage"
                    android:layout_width="211px"
                    android:layout_height="211px"
                    android:layout_centerInParent="true"
                    android:splitMotionEvents="false"
                    android:tag="mwar" >

                    <ImageView
                        android:id="@+id/imageViewProfileImageBack"
                        android:layout_width="211px"
                        android:layout_height="211px"
                        android:background="@drawable/circle_white"
                        android:tag="mwar" />

                    <ImageView
                        android:id="@+id/imageViewProfileImage"
                        android:layout_width="190px"
                        android:layout_height="190px"
                        android:layout_centerInParent="true"
                        android:tag="mwar" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayoutEditTexts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/editTextUserName"
                    android:layout_width="628px"
                    android:layout_height="70px"
                    android:background="#0000"
                    android:capitalize="words"
                    android:gravity="center_vertical"
                    android:hint="Name"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/black_text_alpha"
                    android:textCursorDrawable="@null"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="628px"
                    android:layout_height="2px"
                    android:src="@color/yellow_alpha" />

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="628px"
                    android:layout_height="70px"
                    android:layout_marginTop="5px"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/black_text_alpha"
                    android:textCursorDrawable="@null"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="628px"
                    android:layout_height="2px"
                    android:src="@color/yellow_alpha" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="628px"
                    android:layout_height="70px"
                    android:layout_marginTop="5px"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:paddingLeft="20px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/black_text_alpha"
                    android:textCursorDrawable="@null"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="628px"
                    android:layout_height="2px"
                    android:src="@color/yellow_alpha" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>