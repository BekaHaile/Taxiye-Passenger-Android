<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:orientation="vertical"
        android:splitMotionEvents="false"
         >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false"
         >
        
        
<LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:layout_marginTop="40px"
                android:text="Alert"
                android:textColor="@color/black"
                android:textSize="50px"
                android:visibility="gone"
                 />

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:layout_marginBottom="40px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="34px" />

            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 android:layout_gravity="center_horizontal"
                android:layout_marginTop="0px"
                >
            
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="327px"
                android:layout_height="83px"
                android:background="@drawable/button_yellow_blr_selector"
                android:singleLine="true"
                android:text="Cancel"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="34px"
                android:layout_marginLeft="2px"
                 />
            
             <Button
                android:id="@+id/btnOk"
                android:layout_width="328px"
                android:layout_height="83px"
                android:background="@drawable/button_yellow_brr_selector"
                android:singleLine="true"
                android:text="OK"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="34px" 
                android:layout_alignParentRight="true"
                android:layout_marginRight="2px"
                />
            
            </RelativeLayout>
            
        </LinearLayout>
        
    </RelativeLayout>

</FrameLayout>