<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="585px"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <LinearLayout
            android:id="@+id/linearLayoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativeLayoutProfileImage"
                android:layout_width="211px"
                android:layout_height="211px"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60px"
                android:splitMotionEvents="false"
                android:tag="mwar" >

                <ImageView
                    android:id="@+id/imageViewProfileImageBack"
                    android:layout_width="211px"
                    android:layout_height="211px"
                    android:background="@drawable/circle_grey"
                    android:tag="mwar" />

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="190px"
                    android:layout_height="190px"
                    android:layout_centerInParent="true"
                    android:tag="mwar" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:singleLine="true"
                android:text="UserName"
                android:textColor="@color/grey_dark"
                android:textSize="32px" />

            <TextView
                android:id="@+id/textViewViewAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:singleLine="true"
                android:text="View Account"
                android:textColor="@color/grey_dark"
                android:textSize="26px" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:splitMotionEvents="false" >

                <RelativeLayout
                    android:id="@+id/relativeLayoutGetRide"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/background_white_yellow_selector"
                    android:splitMotionEvents="false" >

                    <ImageView
                        android:id="@+id/imageViewGetRide"
                        android:layout_width="47px"
                        android:layout_height="33px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/auto_icon_selector"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewGetRide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35px"
                        android:layout_toRightOf="@+id/imageViewGetRide"
                        android:text="Get a Ride"
                        android:textColor="@drawable/text_color_grey_dark_white_selector"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewGetRideArrow"
                        android:layout_width="13px"
                        android:layout_height="26px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/arrow_icon_selector"
                        android:tag="mwar" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60px"
                        android:background="@color/grey_light" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutInvite"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/background_white_yellow_selector"
                    android:splitMotionEvents="false" >

                    <ImageView
                        android:id="@+id/imageViewInvite"
                        android:layout_width="41px"
                        android:layout_height="41px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/share_icon_selector"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewInvite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35px"
                        android:layout_toRightOf="@+id/imageViewInvite"
                        android:text="Invite and Earn"
                        android:textColor="@drawable/text_color_grey_dark_white_selector"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewInviteArrow"
                        android:layout_width="13px"
                        android:layout_height="26px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/arrow_icon_selector"
                        android:tag="mwar" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60px"
                        android:background="@color/grey_light" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutJugnooCash"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/background_white_yellow_selector"
                    android:splitMotionEvents="false" >

                    <ImageView
                        android:id="@+id/imageViewJugnooCash"
                        android:layout_width="39px"
                        android:layout_height="43px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/cash_icon_selector"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewJugnooCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35px"
                        android:layout_toRightOf="@+id/imageViewJugnooCash"
                        android:text="Jugnoo Cash"
                        android:textColor="@drawable/text_color_grey_dark_white_selector"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/textViewJugnooCashValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/imageViewJugnooCashArrow"
                        android:background="@drawable/background_yellow_rounded"
                        android:gravity="center_vertical|right"
                        android:padding="10px"
                        android:text="@string/rupee_0"
                        android:textColor="@color/black"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewJugnooCashArrow"
                        android:layout_width="13px"
                        android:layout_height="26px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/arrow_icon_selector"
                        android:tag="mwar" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60px"
                        android:background="@color/grey_light" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutPromotions"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/background_white_yellow_selector"
                    android:splitMotionEvents="false" >

                    <ImageView
                        android:id="@+id/imageViewPromotions"
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/promotion_icon_selector"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewPromotions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35px"
                        android:layout_toRightOf="@+id/imageViewPromotions"
                        android:text="Promotions"
                        android:textColor="@drawable/text_color_grey_dark_white_selector"
                        android:textSize="30px" />

                     <TextView
                        android:id="@+id/textViewPromotionsValue"
                        android:layout_width="55px"
                        android:layout_height="55px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:layout_toLeftOf="@+id/imageViewPromotionsArrow"
                        android:background="@drawable/circle_yellow"
                        android:gravity="center"
                        android:padding="10px"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="30px" />
                    
                    
                    <ImageView
                        android:id="@+id/imageViewPromotionsArrow"
                        android:layout_width="13px"
                        android:layout_height="26px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/arrow_icon_selector"
                        android:tag="mwar" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60px"
                        android:background="@color/grey_light" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutFareDetails"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/background_white_yellow_selector"
                    android:splitMotionEvents="false" >

                    <ImageView
                        android:id="@+id/imageViewFareDetails"
                        android:layout_width="38px"
                        android:layout_height="47px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/fare_details_icon_selector"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewFareDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35px"
                        android:layout_toRightOf="@+id/imageViewFareDetails"
                        android:text="Fare Details"
                        android:textColor="@drawable/text_color_grey_dark_white_selector"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewFareDetailsArrow"
                        android:layout_width="13px"
                        android:layout_height="26px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/arrow_icon_selector"
                        android:tag="mwar" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60px"
                        android:background="@color/grey_light" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutSupport"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/background_white_yellow_selector"
                    android:splitMotionEvents="false" >

                    <ImageView
                        android:id="@+id/imageViewSupport"
                        android:layout_width="39px"
                        android:layout_height="39px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/support_icon_selector"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewSupport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35px"
                        android:layout_toRightOf="@+id/imageViewSupport"
                        android:text="Support"
                        android:textColor="@drawable/text_color_grey_dark_white_selector"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewSupportArrow"
                        android:layout_width="13px"
                        android:layout_height="26px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/arrow_icon_selector"
                        android:tag="mwar" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60px"
                        android:background="@color/grey_light" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutAbout"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/background_white_yellow_selector"
                    android:splitMotionEvents="false" >

                    <ImageView
                        android:id="@+id/imageViewAbout"
                        android:layout_width="38px"
                        android:layout_height="38px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        android:src="@drawable/about_icon_selector"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="35px"
                        android:layout_toRightOf="@+id/imageViewAbout"
                        android:text="About"
                        android:textColor="@drawable/text_color_grey_dark_white_selector"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewAboutArrow"
                        android:layout_width="13px"
                        android:layout_height="26px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/arrow_icon_selector"
                        android:tag="mwar" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="60px"
                        android:background="@color/grey_light"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>