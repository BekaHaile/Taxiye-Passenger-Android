<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark" >

    <RelativeLayout
        android:id="@+id/relativeLayoutRequestInfo"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewNearestDriverETA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:singleLine="true"
                android:text="Nearest Driver is 4 minutes away"
                android:textColor="@color/black_text"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textViewCurrentRatesInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNearestDriverETA"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:singleLine="true"
                android:text="Current rates are 1.2x higher than normal to maintain availablity"
                android:textColor="@color/grey_dark"
                android:textSize="22px"
                android:visibility="visible"
                
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewFindingDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:gravity="center"
            android:singleLine="true"
            android:text="Finding a Jugnoo driver..."
            android:textColor="@color/grey_dark"
            android:textSize="30px"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>