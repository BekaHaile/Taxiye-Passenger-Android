<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false" >

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2px"
            android:splitMotionEvents="false" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30px"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:text="You have coupons available. Choose one"
                android:textColor="@color/grey_dark"
                android:textSize="34px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/grey_light" />

            <ListView
                android:id="@+id/listViewPromotions"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:divider="@color/grey_light"
                android:dividerHeight="2px"
                android:splitMotionEvents="false"
                 >
            </ListView>

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_light_more_grey"
                android:gravity="center"
                android:paddingBottom="20px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:paddingTop="20px"
                android:text="Current rates are 1.2x higher than normal to maintain availability"
                android:textColor="@color/grey_dark"
                android:textSize="34px" 
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/grey_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0px"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="327px"
                    android:layout_height="90px"
                    android:layout_marginLeft="0px"
                    android:background="@drawable/button_white_yellow_blr_selector"
                    android:singleLine="true"
                    android:text="Cancel"
                    android:textColor="@drawable/text_color_yellow_white_selector"
                    android:textSize="34px" />
                
               

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="327px"
                    android:layout_height="90px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0px"
                    android:background="@drawable/button_white_yellow_brr_selector"
                    android:singleLine="true"
                    android:text="OK"
                    android:textColor="@drawable/text_color_yellow_white_selector"
                    android:textSize="34px" />
                
                 <ImageView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/grey_light"
                android:layout_centerHorizontal="true"
                 />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>