<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/yellow"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false" >


        <ImageView
            android:id="@+id/imageViewJugnooLogo"
            android:layout_width="312px"
            android:layout_height="266px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350px"
            android:background="@drawable/jugnoo_logo_big_white"
            android:tag="mwar"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="750px" />

        <RelativeLayout
            android:id="@+id/relativeLayoutLoginSignupButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100px"
            android:splitMotionEvents="false"
            android:visibility="visible" >

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="230px"
                android:layout_height="100px"
                android:layout_marginLeft="85px"
                android:background="@drawable/button_yellow_white_border_selector"
                android:text="LOG IN"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="230px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="85px"
                android:background="@drawable/button_white_selector"
                android:text="SIGN UP"
                android:textColor="@drawable/text_color_yellow_alpha_selector"
                android:textSize="@dimen/button_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>