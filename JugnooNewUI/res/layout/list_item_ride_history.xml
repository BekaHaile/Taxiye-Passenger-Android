<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
        android:splitMotionEvents="false"
     >

    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:splitMotionEvents="false"
        >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        
        
        >
        
        
        <LinearLayout 
            android:id="@+id/fromRl"
            android:layout_width="540px"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
        android:splitMotionEvents="false"
            >
            
            
       

        <TextView
            android:id="@+id/fromText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="36px"
            android:layout_marginLeft="20px"
            android:singleLine="true"
             />
        
        <TextView
            android:id="@+id/fromValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elante shjksfjkrhldehkfthlrtewterwtrwtywery"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="36px"
            android:layout_marginLeft="5px"
             />
        
        
         </LinearLayout>
         
        
        <LinearLayout 
            android:id="@+id/toRl"
            android:layout_width="540px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
        android:splitMotionEvents="false"
            >
            
            
       

        <TextView
            android:id="@+id/toText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="36px"
            android:layout_marginLeft="20px"
            android:singleLine="true"
             />
        
        <TextView
            android:id="@+id/toValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elante shjksfjkrhldehkfthlrtewterwtrwtywery"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="36px"
            android:layout_marginLeft="50px"
             />
        
        
         </LinearLayout>
         
        
        
        <LinearLayout 
            android:id="@+id/distTimeRl"
            android:layout_width="540px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
        android:splitMotionEvents="false"
            >
            
            
       <ImageView 
           android:layout_width="30px"
           android:layout_height="30px"
           android:src="@drawable/location"
           android:tag="mwar"
            android:layout_marginLeft="10px"
           />
            

        <TextView
            android:id="@+id/distanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.6 Km"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="30px"
            android:layout_marginLeft="5px"
            android:singleLine="true"
             />
        
        
        <ImageView 
           android:layout_width="30px"
           android:layout_height="30px"
           android:src="@drawable/time"
           android:tag="mwar"
            android:layout_marginLeft="30px"
           />
        
        
        <TextView
            android:id="@+id/timeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 June, 2014"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="30px"
            android:layout_marginLeft="5px"
            android:singleLine="true"
             />
        
        
         </LinearLayout>
        
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@drawable/shadow_up"
            android:layout_marginTop="10px"
            />
        
        
    </LinearLayout>
    
    
    <LinearLayout 
         android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:gravity="right"
        >
    
    <TextView
            android:id="@+id/fareValue"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:text="Rs. 0"
            android:textColor="@color/blue_btn"
            android:gravity="right"
            android:textSize="36px"
             />
    

    
    <ImageView
        android:id="@+id/couponImg"
            android:layout_width="72px"
            android:layout_height="47px"
            android:src="@drawable/free_ride_icon"
            android:tag="mwar"
            android:layout_below="@+id/fareValue"
            android:layout_marginTop="10px"
            android:visibility="visible"
             />
    
    
        
    <ImageView
        android:id="@+id/jugnooCashImg"
            android:layout_width="72px"
            android:layout_height="47px"
            android:src="@drawable/jugnoo_cash_icon"
            android:tag="mwar"
            android:layout_below="@+id/fareValue"
            android:layout_marginTop="10px"
            android:visibility="visible"
            android:layout_gravity="right"
             />
    
    
    
    <TextView
            android:id="@+id/balanceValue"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:text="Rs. 0"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:textSize="30px"
            android:visibility="gone"
            android:layout_marginTop="10px"
             />
    
    </LinearLayout>
    
    </RelativeLayout>

</LinearLayout>