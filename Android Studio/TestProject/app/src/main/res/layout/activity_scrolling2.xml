<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    tools:context="test.jugnoo.com.testproject.ScrollingActivity2">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        app:elevation="1dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="100"
            app:scrimVisibleHeightTrigger="10dp">


            <RelativeLayout
                app:layout_collapseMode="parallax"
                android:id="@+id/layout_rest_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/iv_rest_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/restaurant" />

                <View
                    android:background="@drawable/shadow_up_menu_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </View>

                <TextView
                    android:id="@+id/tv_rest_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_rest_reviews"
                    android:layout_marginLeft="15dp"
                    android:textSize="17sp"
                    android:text="Ekam Restaurant"
                    android:textColor="@android:color/white" />


                <TextView
                    android:id="@id/tv_rest_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:layout_marginTop="3dp"
                    android:text="4.3 (14 Reviews)"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/white"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="EKAM"
                    android:textColor="@color/grey"
                    android:textSize="23sp" />


                <LinearLayout
                    android:id="@+id/llSearchCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="20px"
                    android:animateLayoutChanges="true"
                    android:gravity="right"
                    android:orientation="horizontal">



                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:layout_gravity="right"
                        android:src="@drawable/caret"
                        android:visibility="gone" />


                    <LinearLayout
                        android:id="@+id/llCartContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="62px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_marginLeft="20px"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/capsule_cart_color_pressed"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:tag="mwar">


                        <ImageView
                            android:layout_width="26px"
                            android:layout_height="26px"
                            android:layout_marginLeft="18px"
                            android:layout_marginRight="18px"
                            android:src="@drawable/ic_cart_new"
                            android:tag="mwar" />

                        <LinearLayout
                            android:id="@+id/llCartAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tvCartAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="18px"
                                android:text="240"
                                android:textColor="@android:color/white"
                                android:textSize="26px" />

                            <ImageView
                                android:layout_width="13px"
                                android:layout_height="23px"
                                android:src="@drawable/caret"
                                android:tag="mwar" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_scrolling2" />


</android.support.design.widget.CoordinatorLayout>
