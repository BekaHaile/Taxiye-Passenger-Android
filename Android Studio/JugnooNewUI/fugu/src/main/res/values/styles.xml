<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="FuguTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Progress Dialog styles-->
    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- Dialog  application theme. -->
    <style name="FuguDialogTheme" parent="Theme.AppCompat.Translucent">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <!-- beat animation styles -->
    <style name="AVLoadingIndicatorView">
        <item name="minWidth">30dp</item>
        <item name="maxWidth">30dp</item>
        <item name="minHeight">30dp</item>
        <item name="maxHeight">30dp</item>
        <item name="indicatorName">com.fugu.utils.beatAnimation.BallPulseIndicator</item>
    </style>

    <style name="AVLoadingIndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
        <item name="indicatorName">com.fugu.utils.beatAnimation.BallPulseIndicator</item>
    </style>t

    <style name="AVLoadingIndicatorView.Small">
        <item name="minWidth">24dip</item>
        <item name="maxWidth">24dip</item>
        <item name="minHeight">24dip</item>
        <item name="maxHeight">24dip</item>
        <item name="indicatorName">com.fugu.utils.beatAnimation.BallPulseIndicator</item>
    </style>

    <style name="text_rtl">
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="agent_options_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fugu_margin_35</item>
        <item name="android:background">@color/hippo_tag_color</item>
        <item name="android:paddingLeft">@dimen/fugu_margin_15</item>
        <item name="android:paddingTop">@dimen/fugu_margin_15</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/fugu_theme_color_primary</item>
        <item name="android:textSize">@dimen/fugu_text_size_small</item>
    </style>

    <style name="tvCustomerProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fugu_size_57</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/fugu_padding_5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/fugu_padding_10</item>
        <item name="android:textColor">@color/fugu_text_color_primary</item>
        <item name="android:textSize">@dimen/fugu_text_size_large</item>
    </style>

    <style name="tvProfileRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fugu_text_size_large</item>
        <item name="android:textColor">@color/hippo_black</item>
        <item name="android:layout_marginLeft">@dimen/fugu_margin_45</item>
    </style>

    <style name="FuguAppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/fugu_theme_color_primary</item>
        <item name="android:textColorPrimary">@color/fugu_text_color_primary</item>
        <item name="android:background">@color/hippo_white</item>
    </style>

    <style name="myDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowTitleStyle">@style/myDialogTitle</item>
    </style>

    <style name="myDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="dialog" parent="Base.ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/myDialogTitle</item>
    </style>

    <!--<style name="FuguAppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/fugu_theme_color_primary</item>
        <item name="android:textColorPrimary">@color/fugu_text_color_primary</item>
        <item name="android:background">@color/white</item>
    </style>-->

    <style name="hippo"/>

    <style name="hippo.text" parent="hippo">
        <item name="android:textSize">@dimen/fugu_text_size_intermediate</item>
        <item name="android:layout_marginLeft">@dimen/fugu_margin_10</item>
        <item name="android:layout_marginRight">@dimen/fugu_margin_10</item>
        <item name="android:layout_marginBottom">@dimen/fugu_margin_5</item>
        <item name="android:layout_marginTop">@dimen/fugu_margin_5</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="hippo.subtitle" parent="hippo.text">
        <item name="android:textSize">@dimen/fugu_text_size_large</item>
        <item name="android:textColor">@color/fugu_support_text</item>

    </style>

    <style name="primary_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/fugu_main_btn_selector</item>-->
        <item name="android:textAppearance">@style/hippo.text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/fugu_text_size_normal</item>
        <!--<item name="android:layout_marginLeft">@dimen/fugu_margin_10</item>
        <item name="android:layout_marginRight">@dimen/fugu_margin_10</item>
        <item name="android:paddingLeft">@dimen/fugu_padding_10</item>
        <item name="android:paddingRight">@dimen/fugu_padding_10</item>-->
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="hippo.Edittext" parent="hippo">
        <item name="android:textSize">@dimen/fugu_text_size_medium</item>
        <item name="android:layout_marginLeft">@dimen/fugu_margin_10</item>
        <item name="android:layout_marginRight">@dimen/fugu_margin_10</item>
        <item name="android:layout_marginBottom">@dimen/fugu_margin_5</item>
        <item name="android:layout_marginTop">@dimen/fugu_margin_5</item>
        <item name="android:textColorHint">@color/fugu_type_message_hint</item>
        <item name="android:textColor">@color/fugu_type_message_text</item>
    </style>


    <!--<style name="feedbackRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/feedback_rating</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>-->

    <style name="hippo.rating" parent="hippo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fugu_text_size_intermediate</item>
        <item name="android:layout_marginBottom">@dimen/fugu_margin_5</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="rating_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/hippo.text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/fugu_text_size_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="lead_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fugu_margin_4</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/fugu_text_color_primary</item>
        <item name="android:paddingLeft">@dimen/fugu_margin_8</item>
        <item name="android:textSize">@dimen/fugu_text_size_normal</item>
    </style>

</resources>
