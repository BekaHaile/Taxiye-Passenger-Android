<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="@dimen/fugu_margin_12"
        android:layout_marginRight="@dimen/fugu_margin_12"
        android:layout_marginTop="@dimen/fugu_margin_12"
        card_view:cardBackgroundColor="@color/hippo_white"
        card_view:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:splitMotionEvents="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fugu_margin_10">

                    <TextView
                        android:id="@+id/textViewStatus"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fugu_margin_10"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:text="Status:"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />

                    <TextView
                        android:id="@+id/textViewStatusValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:layout_toRightOf="@id/textViewStatus"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fugu_margin_5">

                    <TextView
                        android:id="@+id/textViewFrom"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fugu_margin_10"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:text="Sender Name:"

                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />

                    <TextView
                        android:id="@+id/textViewFromValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:layout_toRightOf="@id/textViewFrom"
                        android:text="1234"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fugu_margin_5">

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fugu_margin_10"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:text="Title:"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />

                    <TextView
                        android:id="@+id/textViewTitleValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:layout_toRightOf="@id/textViewTitle"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fugu_margin_5"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textViewMsg"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fugu_margin_10"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:text="Message:"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />

                    <TextView
                        android:id="@+id/textViewMsgValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:layout_toRightOf="@id/textViewMsg"
                        android:text="sdnfkn skdfn kjsdnf kjsnd fkj sdkfj skjdf kjsd fkjsd fkjsd fk sdkfk"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fugu_margin_10"
                    android:layout_marginTop="@dimen/fugu_margin_5">

                    <TextView
                        android:id="@+id/textViewDate"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fugu_margin_10"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:text="Date:"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />

                    <TextView
                        android:id="@+id/textViewDateValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/fugu_margin_10"
                        android:layout_toRightOf="@id/textViewDate"
                        android:text="15 Aug 2016"
                        android:textColor="@color/fugu_text_color_primary"
                        android:textSize="@dimen/fugu_text_size_normal" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/viewExtra"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearLayoutMain" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>