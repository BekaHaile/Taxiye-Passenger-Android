<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white_light_grey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="720px"
            android:layout_height="96px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/yellow" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="MY ACCOUNT"
                android:textColor="@color/white"
                android:textSize="30.6px" />

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="60.7px"
                android:layout_height="76.9px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:padding="20px"
                android:src="@drawable/back_white_selector" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/linearLayoutMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:splitMotionEvents="false" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="295px" >

                        <ImageView
                            android:id="@+id/imageViewUserImageBlur"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white_light_grey"
                            android:scaleType="centerCrop" />

                        <ImageView
                            android:id="@+id/imageViewUserImageBlurCover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#10000000"
                            android:scaleType="centerCrop" />

                        <RelativeLayout
                            android:id="@+id/relativeLayoutProfileImage"
                            android:layout_width="211px"
                            android:layout_height="211px"
                            android:layout_centerInParent="true"
                            android:splitMotionEvents="false"
                            android:tag="mwar" >

                            <ImageView
                                android:id="@+id/imageViewProfileImageBack"
                                android:layout_width="211px"
                                android:layout_height="211px"
                                android:background="@drawable/circle_white"
                                android:tag="mwar" />

                            <ImageView
                                android:id="@+id/imageViewProfileImage"
                                android:layout_width="190px"
                                android:layout_height="190px"
                                android:layout_centerInParent="true"
                                android:tag="mwar" />
                        </RelativeLayout>

                        <ProgressBar
                            android:id="@+id/progressBarProfileUpdate"
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutEditTexts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30px"
                        android:orientation="vertical"
                        android:splitMotionEvents="false" >

                        <RelativeLayout
                            android:layout_width="660px"
                            android:layout_height="wrap_content" >

                            <EditText
                                android:id="@+id/editTextUserName"
                                android:layout_width="590px"
                                android:layout_height="70px"
                                android:background="#0000"
                                android:capitalize="words"
                                android:gravity="center_vertical"
                                android:hint="Name"
                                android:paddingLeft="20px"
                                android:paddingRight="20px"
                                android:singleLine="true"
                                android:textColor="@color/black_text"
                                android:textColorHint="@color/black_text_alpha"
                                android:textCursorDrawable="@null"
                                android:textSize="30px" />

                            <ImageView
                                android:id="@+id/imageViewEditName"
                                android:layout_width="68px"
                                android:layout_height="68px"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="15px"
                                android:src="@drawable/edit_icon_selector"
                                android:tag="mwar" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="660px"
                            android:layout_height="2px"
                            android:src="@color/yellow_alpha" />

                        <RelativeLayout
                            android:layout_width="660px"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px" >

                            <EditText
                                android:id="@+id/editTextEmail"
                                android:layout_width="560px"
                                android:layout_height="70px"
                                android:background="#0000"
                                android:gravity="center_vertical"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="20px"
                                android:paddingRight="20px"
                                android:singleLine="true"
                                android:textColor="@color/black_text"
                                android:textColorHint="@color/black_text_alpha"
                                android:textCursorDrawable="@null"
                                android:textSize="30px" />

                            <ImageView
                                android:id="@+id/imageViewEmailVerifyStatus"
                                android:layout_width="68px"
                                android:layout_height="68px"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/imageViewEditEmail"
                                android:padding="15px"
                                android:src="@drawable/warning_icon"
                                android:tag="mwar" />

                            <ImageView
                                android:id="@+id/imageViewEditEmail"
                                android:layout_width="68px"
                                android:layout_height="68px"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="15px"
                                android:src="@drawable/edit_icon_selector"
                                android:tag="mwar" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="660px"
                            android:layout_height="2px"
                            android:src="@color/yellow_alpha" />

                        <RelativeLayout
                            android:id="@+id/relativeLayoutEmailVerify"
                            android:layout_width="626px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10px"
                            android:visibility="gone" >

                            <ImageView
                                android:id="@+id/imageViewOraneTriangle"
                                android:layout_width="28px"
                                android:layout_height="28px"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="73px"
                                android:src="@drawable/triangle_orange" />

                            <RelativeLayout
                                android:layout_width="616px"
                                android:layout_height="58px"
                                android:layout_marginTop="10px"
                                android:background="@drawable/button_yellow_orange_normal" >

                                <TextView
                                    android:id="@+id/textViewEmailVerifyMessage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20px"
                                    android:gravity="center"
                                    android:text="Please verify the Address."
                                    android:textColor="@color/white"
                                    android:textSize="26px" />

                                <TextView
                                    android:id="@+id/textViewEmailVerify"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="50px"
                                    android:gravity="center"
                                    android:text="VERIFY ME"
                                    android:textColor="@drawable/text_color_white_alpha_selector"
                                    android:textSize="26px" />

                                <ImageView
                                    android:id="@+id/imageViewEmailVerifyArrow"
                                    android:layout_width="13px"
                                    android:layout_height="26px"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20px"
                                    android:rotation="180"
                                    android:src="@drawable/back_white_selector"
                                    android:tag="mwar" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="660px"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px" >

                            <EditText
                                android:id="@+id/editTextPhone"
                                android:layout_width="590px"
                                android:layout_height="70px"
                                android:background="#0000"
                                android:gravity="center_vertical"
                                android:hint="Phone Number"
                                android:inputType="phone"
                                android:paddingLeft="20px"
                                android:paddingRight="20px"
                                android:singleLine="true"
                                android:textColor="@color/black_text"
                                android:textColorHint="@color/black_text_alpha"
                                android:textCursorDrawable="@null"
                                android:textSize="30px" />

                            <ImageView
                                android:id="@+id/imageViewEditPhoneNo"
                                android:layout_width="68px"
                                android:layout_height="68px"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="15px"
                                android:src="@drawable/edit_icon_selector"
                                android:tag="mwar" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="660px"
                            android:layout_height="2px"
                            android:src="@color/yellow_alpha" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:layout_marginTop="30px"
                        android:background="@color/white" >


                        <TextView
                            android:id="@+id/textViewChangePassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="70px"
                            android:gravity="center"
                            android:text="Change Password"
                            android:textColor="@drawable/text_color_black_alpha_selector"
                            android:textSize="28px" />

                        <ImageView
                            android:id="@+id/imageViewChangePassword"
                            android:layout_width="13px"
                            android:layout_height="26px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40px"
                            android:src="@drawable/arrow_icon_selector"
                            android:tag="mwar" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="center_horizontal"
                            android:src="@color/yellow_alpha" />
                    </RelativeLayout>


                    <Button
                        android:id="@+id/buttonLogout"
                        android:layout_width="648px"
                        android:layout_height="100px"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="70px"
                        android:layout_marginTop="70px"
                        android:background="@drawable/button_yellow_selector"
                        android:text="LOGOUT"
                        android:textColor="@drawable/text_color_white_alpha_selector"
                        android:textSize="@dimen/button_text_size" />

                    <TextView
                        android:id="@+id/textViewScroll"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:text=" " />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/socomo20/Documents/android_studio_workspace/JugnooNewUI/jugnooNewUI/src/main/res/layout/activity_account_user.xml -->