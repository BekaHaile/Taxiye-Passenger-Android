<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50px"
        android:background="@drawable/dialog_background_color"
        android:splitMotionEvents="false" >

        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2px"
            android:splitMotionEvents="false" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:text="Schedule Ride"
                android:textColor="@color/grey_dark_more"
                android:textSize="36px" />

            <RelativeLayout
                android:id="@+id/relativeLayoutPickupLoaction"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginBottom="40px" 
                android:layout_marginTop="20px"
                >

                <ImageView
                    android:id="@+id/imageViewPickupLocation"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:src="@drawable/location_icon_schedule"
                    android:tag="mwar" />

                <TextView
                    android:id="@+id/textViewPickupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="40px"
                    android:layout_toRightOf="@+id/imageViewPickupLocation"
                    android:gravity="center_vertical"
                    android:hint="Pick up Location"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/grey_dark"
                    android:textSize="30px" />
                
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:src="@color/yellow_alpha"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="40px"
                    />
                
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutPickupTime"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:layout_marginBottom="60px" >

                <ImageView
                    android:id="@+id/imageViewPickupTime"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:src="@drawable/calendar_icon"
                    android:tag="mwar" />

                <TextView
                    android:id="@+id/textViewPickupTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="40px"
                    android:layout_toRightOf="@+id/imageViewPickupTime"
                    android:gravity="center_vertical"
                    android:hint="Date and Time"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@drawable/text_color_grey_dark_light_selector"
                    android:textSize="30px" />
                
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:src="@color/yellow_alpha"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="40px"
                    />
                
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/grey_light" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0px"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="307px"
                    android:layout_height="90px"
                    android:layout_marginLeft="0px"
                    android:background="@drawable/button_white_yellow_blr_selector"
                    android:singleLine="true"
                    android:text="Cancel"
                    android:textColor="@drawable/text_color_yellow_white_selector"
                    android:textSize="34px" />

                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="307px"
                    android:layout_height="90px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0px"
                    android:background="@drawable/button_white_yellow_brr_selector"
                    android:singleLine="true"
                    android:text="OK"
                    android:textColor="@drawable/text_color_yellow_white_selector"
                    android:textSize="34px" />

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/grey_light" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout><!-- From: file:/Users/shankar/Documents/android_studio_workspace/JugnooNewUI/jugnooNewUI/src/main/res/layout/dialog_schedule_ride.xml -->