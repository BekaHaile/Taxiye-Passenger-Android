<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_btn"
    >

    <RelativeLayout
    android:id="@+id/initialLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="96px"
    android:splitMotionEvents="false"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/relativeLayoutRequestInfo"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewNearestDriverETA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:singleLine="true"
                android:text="Nearest Driver is 4 minutes away"
                android:textColor="@color/black_text"
                android:textSize="30px" />

            <TextView
                android:id="@+id/textViewCurrentRatesInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNearestDriverETA"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:singleLine="true"
                android:text="Current rates are 1.2x higher than normal to maintain availablity"
                android:textColor="@color/grey_dark"
                android:textSize="22px" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutInitialSearchBar"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20px"
        android:background="@drawable/background_white_rounded"
        android:splitMotionEvents="false" >

        <ImageView
            android:id="@+id/imageViewInitialSearchGPSIcon"
            android:layout_width="30px"
            android:layout_height="44px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18px"
            android:src="@drawable/search_location_icon"
            android:tag="mwar" />

        <TextView
            android:id="@+id/textViewInitialSearch"
            android:layout_width="580px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/imageViewInitialSearchGPSIcon"
            android:background="@color/transparent"
            android:hint="Search pickup location"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textSize="30px" />

        <ProgressBar
            android:id="@+id/progressBarInitialSearch"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px" />
    </RelativeLayout>

    <Button
        android:id="@+id/initialMyLocationBtn"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_above="@+id/relativeLayoutRequestButtons"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:background="@drawable/mylocation_btn_selector"
        android:tag="mwar" />

    <RelativeLayout
        android:id="@+id/relativeLayoutRequestButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayoutRequestInfo"
        android:layout_marginBottom="40px"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/requestRideBtn"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_marginLeft="40px"
            android:background="@drawable/button_yellow_selector"
            android:text="RIDE NOW"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/requestRideLaterBtn"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:background="@drawable/button_yellow_selector"
            android:text="RIDE LATER"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/button_text_size" />

    </RelativeLayout>
</RelativeLayout>









    <RelativeLayout
        android:id="@+id/assigningLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="96px"
        android:splitMotionEvents="false"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/relativeLayoutAssigningInfo"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textViewFindingDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:singleLine="true"
                android:text="Finding a Jugnoo driver..."
                android:textColor="@color/grey_dark"
                android:textSize="30px" />
        </RelativeLayout>


        <Button
            android:id="@+id/assigningMyLocationBtn"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_above="@+id/relativeLayoutAssigningButtons"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="40px"
            android:background="@drawable/mylocation_btn_selector"
            android:tag="mwar" />

        <RelativeLayout
            android:id="@+id/relativeLayoutAssigningButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px"
            android:splitMotionEvents="false" >


            <Button
                android:id="@+id/initialCancelRideBtn"
                android:layout_width="648px"
                android:layout_height="100px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_yellow_selector"
                android:text="CANCEL REQUEST"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/shankar/Documents/android_studio_workspace/JugnooNewUI/jugnooNewUI/src/main/res/layout/activity_spare.xml -->