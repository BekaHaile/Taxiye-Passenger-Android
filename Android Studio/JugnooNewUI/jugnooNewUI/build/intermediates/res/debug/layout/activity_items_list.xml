<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/bg_grey_opaque"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_inv_btn_selector"
            android:tag="mwar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="SHOP"
            android:textColor="@color/orange_text"
            android:textSize="34px" />

        <Button
            android:id="@+id/infoBtn"
            android:layout_width="75px"
            android:layout_height="75px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:background="@drawable/info_yellow_selector"
            android:tag="mwar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="932px"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0px"
            android:divider="@color/white"
            android:dividerHeight="10px"
            android:listSelector="@drawable/background_transparent"
            android:splitMotionEvents="false" >
        </ListView>

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="34px" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutCheckout"
        android:layout_width="match_parent"
        android:layout_height="112px"
        android:background="@drawable/orange_bg_selector" >

        <RelativeLayout
            android:id="@+id/relativeLayoutSelectedItemsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px" >

            <ImageView
                android:id="@+id/imageViewSelectedItemsCount"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/ring_orange_dark"
                android:tag="mwar" />

            <TextView
                android:id="@+id/textViewSelectedItemsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="34px" />
        </RelativeLayout>
        
        
        <TextView 
                        android:id="@+id/textViewCheckout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="34px"
                        android:textColor="@drawable/text_color_white_dark_selector"
                        android:text="CHECKOUT"
                        android:singleLine="true"
                        android:layout_centerInParent="true"
                        />
        
        
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/shankar/Documents/android_studio_workspace/JugnooNewUI/jugnooNewUI/src/main/res/layout/activity_items_list.xml -->