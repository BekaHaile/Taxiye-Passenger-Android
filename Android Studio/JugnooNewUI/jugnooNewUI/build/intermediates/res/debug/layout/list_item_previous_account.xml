<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        >

        <ImageView
            android:id="@+id/imageViewAccount"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:tag="mwar"
            android:src="@drawable/account_icon"
            />

        <LinearLayout
            android:layout_width="430px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageViewAccount"
            android:layout_marginLeft="20px">
            <TextView
                android:id="@+id/textViewAccountEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="******@jugnoo.in"
                android:textColor="@color/black_text"
                android:textSize="27px"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/textViewAccountPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="******999"
                android:textColor="@color/black_text"
                android:textSize="27px"
                android:singleLine="true"
                android:layout_marginTop="5px"
                />

            </LinearLayout>



        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80px"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@drawable/text_color_black_alpha_selector"
            android:textSize="26px" />

        <ImageView
            android:layout_width="13px"
            android:layout_height="26px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:src="@drawable/arrow_icon_selector"
            android:tag="mwar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:src="@color/yellow_alpha" />

    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/socomo20/Documents/android_studio_workspace/JugnooNewUI/jugnooNewUI/src/main/res/layout/list_item_previous_account.xml -->