<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/bg_grey_opaque"
        android:splitMotionEvents="false" >

        <Button
            android:id="@+id/backBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:background="@drawable/back_inv_btn_selector"
            android:tag="mwar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="PRODUCT DETAILS"
            android:textColor="@color/orange_text"
            android:textSize="34px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageViewItem"
                    android:layout_width="675px"
                    android:layout_height="365px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25px"
                    android:tag="mwar"
                    android:scaleType="centerCrop"
                     />

                <TextView
                    android:id="@+id/textViewItemName"
                    android:layout_width="660px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:text="Item name"
                    android:textColor="@color/black_text_shop"
                    android:textSize="34px"
                    android:layout_marginTop="20px"
                     />
                
                <TextView
                    android:id="@+id/textViewItemPrice"
                    android:layout_width="660px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:text="Rs. 0"
                    android:textColor="@color/black_light"
                    android:textSize="28px"
                    android:layout_marginTop="5px"
                     />
                
                <TextView
                    android:id="@+id/textViewItemDescription"
                    android:layout_width="660px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:text="Item Description"
                    android:textColor="@color/black_text_shop"
                    android:textSize="34px"
                    android:layout_marginTop="20px"
                     />
                
                <Button 
                    android:id="@+id/buttonAddToCart"
                    android:layout_width="349px"
                    android:layout_height="90px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/orange_btn_round_selector"
                    android:tag="mwar"
                    android:layout_marginTop="60px"
                    android:textSize="34px"
                    android:textColor="@drawable/text_color_white_dark_selector"
                    android:text="ADD TO CART"
                    
                    
                    />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:text="   "
                    android:textColor="@color/black"
                    android:textSize="4px"
                    android:layout_marginTop="20px"
                     />
                
                
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/socomo20/Documents/android_studio_workspace/JugnooNewUI/jugnooNewUI/src/main/res/layout/activity_item_info_description.xml -->