<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:background="@drawable/list_white_selector"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:layout_width="720px"
        android:layout_height="360px"
        android:splitMotionEvents="false" >


            <ImageView
                android:id="@+id/imageViewItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/transparent"
                android:tag="mwar"
                 />
            
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="113px"
                android:layout_alignParentBottom="true"
                android:background="@color/black_translucent"
                
                
                >
                
                <LinearLayout 
                    android:id="@+id/linearLayoutItemInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25px"
                    android:orientation="vertical"
                    
                    >
                    
                    <TextView 
                        android:id="@+id/textViewItemName"
                        android:layout_width="450px"
                        android:layout_height="wrap_content"
                        android:textSize="34px"
                        android:textColor="@drawable/text_color_white_dark_selector"
                        android:text="Pineapple"
                        android:singleLine="true"
                        />
                    
                    <TextView 
                        android:id="@+id/textViewItemPrice"
                        android:layout_width="450px"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:textColor="@drawable/text_color_white_dark_selector"
                        android:text="Rs. 0"
                        android:singleLine="true"
                        />
                    
                    
                </LinearLayout>
                
                
                <LinearLayout 
                    android:id="@+id/relativeLayoutCountOperations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
               	    android:layout_centerVertical="true"
               	    android:layout_alignParentRight="true"
               	    android:orientation="horizontal"
                    >
                
                <ImageView 
                    android:id="@+id/imageViewMinus"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_gravity="center_vertical"
                    android:tag="mwar"
                    android:src="@drawable/minus_selector"
                    
                    />
                    
                    
               	<RelativeLayout 
               	    android:id="@+id/relativeLayoutItemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
               	    
               	    >
                
                <ImageView 
                    android:id="@+id/imageViewItemCount"
                    android:layout_width="75px"
                    android:layout_height="75px"
                    android:tag="mwar"
                    android:src="@drawable/ring_white_small"
                    
                    
                    />
                
                
                <TextView 
                        android:id="@+id/textViewItemCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="34px"
                        android:textColor="@color/white"
                        android:text="0"
                        android:singleLine="true"
                        android:layout_centerInParent="true"
                        />
                
                </RelativeLayout>
                
               	<ImageView 
                    android:id="@+id/imageViewPlus"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:layout_gravity="center_vertical"
                    android:tag="mwar"
                    android:src="@drawable/plus_selector"
                    
                    />
               	
                
               	</LinearLayout>
                
                
                
            </RelativeLayout>
            
            
        </RelativeLayout>

</LinearLayout><!-- From: file:/Users/socomo20/Documents/github/jugnoo-android-autos-new/jugnoo-android-autos/Android%20Studio/JugnooNewUI/jugnooNewUI/src/main/res/layout/list_item_item_info.xml -->