<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--<solid android:color="@color/theme_color_dark"/>-->
            <gradient android:endColor="@color/gradient_pressed_end" android:startColor="@color/gradient_pressed_start"
                android:angle="0"/>

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!--<solid android:color="@color/theme_color"/>-->
            <gradient android:endColor="@color/gradient_normal_end" android:startColor="@color/gradient_normal_start"
                android:angle="0"/>

        </shape>
    </item>

</selector>