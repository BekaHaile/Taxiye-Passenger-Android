<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#02AAAAAA" />
            <corners android:radius="9.5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#05AAAAAA" />
            <corners android:radius="8.5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#0FAAAAAA" />
            <corners android:radius="6.5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#1CAAAAAA" />
            <corners android:radius="6.5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#24AAAAAA" />
            <corners android:radius="5.5dp" />
        </shape>
    </item>

    <!-- content background -->
    <item
        android:left="0dp"
        android:right="@dimen/dropshadow_width_minus"
        android:top="0dp"
        android:bottom="@dimen/dropshadow_width_minus"
        >
        <selector>

            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/text_color_hint" />
                    <corners android:radius="@dimen/dp_5" />
                    <stroke android:width="1dp" android:color="@color/dotted_color" android:dashGap="2dp" android:dashWidth="4dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="@dimen/dp_5" />
                    <stroke android:width="1dp" android:color="@color/dotted_color" android:dashGap="2dp" android:dashWidth="4dp" />
                </shape>
            </item>

        </selector>
    </item>
</layer-list>

