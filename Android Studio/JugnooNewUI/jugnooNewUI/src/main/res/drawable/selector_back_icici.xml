<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient android:endColor="@color/gradient_pressed_end" android:startColor="@color/gradient_pressed_start"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="50dp"/>
            <stroke android:color="@color/text_color_light" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="50dp"/>
            <solid android:color="@color/stroke_light_grey_30"/>
        </shape>
    </item>



    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient android:endColor="@color/gradient_normal_end" android:startColor="@color/gradient_normal_start"/>
        </shape>
    </item>

</selector>