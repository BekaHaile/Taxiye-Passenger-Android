<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/gradient_pressed_end" android:startColor="@color/gradient_pressed_start"
                android:angle="0"/>

            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="@dimen/dp_5"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/dp_5"
                />
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/gradient_normal_end" android:startColor="@color/gradient_normal_start"
                android:angle="0"/>
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="@dimen/dp_5"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/dp_5"
                />
        </shape>

    </item>

</selector>