<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/button_shadow"
        />

    <item
        android:bottom="1dp"
        android:left="-0.5dp"
        android:right="-0.5dp"
        >
        <selector >
            <item
                android:state_pressed="true">
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <solid
                        android:color="@color/red_dark_alpha"
                        />
                    <corners
                        android:radius="@dimen/button_corner_radius"
                        />
                </shape>
            </item>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <solid
                        android:color="@color/red_dark"
                        />
                    <corners
                        android:radius="@dimen/button_corner_radius"
                        />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>