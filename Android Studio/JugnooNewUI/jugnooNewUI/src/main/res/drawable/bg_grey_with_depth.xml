<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_2" />
            <solid android:color="@color/menu_item_selector_color_F7" />
        </shape>
    </item>

    <!--top, dark, inner shadow-->
    <item
        android:bottom="@dimen/dp_2">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_2" />
            <solid android:color="@color/divider_color" />
        </shape>
    </item>

    <!--bottom, light, outer glow-->
    <item
        android:top="@dimen/dp_1">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_2" />
            <solid android:color="@color/divider_color" />
        </shape>
    </item>

    <item
        android:left="@dimen/dp_2">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_2" />
            <solid android:color="@color/divider_color" />
        </shape>
    </item>

    <item
        android:right="@dimen/dp_1">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_2" />
            <solid android:color="@color/divider_color" />
        </shape>
    </item>

    <!--your color-->
    <item
        android:top="@dimen/dp_2"
        android:bottom="@dimen/dp_1"
        android:left="@dimen/dp_2"
        android:right="@dimen/dp_1">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_2" />
            <solid android:color="@color/menu_item_selector_color_F7" />
        </shape>
    </item>
</layer-list>