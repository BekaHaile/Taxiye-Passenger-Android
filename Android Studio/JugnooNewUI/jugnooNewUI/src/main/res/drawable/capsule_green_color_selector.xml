<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_pressed="true">
        <shape>
            <corners android:radius="50dp" />
            <gradient android:endColor="@color/gradient_pressed_end" android:startColor="@color/gradient_pressed_start"
                android:angle="0"/>


        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <corners android:radius="50dp" />
            <solid android:color="@color/grey_alpha_50"/>
            <gradient android:endColor="@color/gradient_pressed_end" android:startColor="@color/gradient_pressed_start"
                android:angle="0"/>

        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="50dp" />

            <gradient android:endColor="@color/gradient_normal_end" android:startColor="@color/gradient_normal_start"
                android:angle="0"/>


        </shape>
    </item>
</selector>