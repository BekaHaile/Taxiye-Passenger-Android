<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350px"
            >
            <ImageView
                android:id="@+id/imageViewJugnooLogo"
                android:layout_width="400px"
                android:layout_height="317px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/jugnoo_logo_big_white"
                android:tag="mwar"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageViewDebug1"
                android:layout_width="180px"
                android:layout_height="120px"
                android:layout_marginTop="170px"

            />

            <ImageView
                android:id="@+id/imageViewDebug2"
                android:layout_width="180px"
                android:layout_height="120px"
                android:layout_marginTop="170px"
                android:layout_alignParentRight="true"

                />

            <ImageView
                android:id="@+id/imageViewDebug3"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_marginTop="60px"
                android:layout_centerHorizontal="true"

                />

            </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px"

            >
            <RelativeLayout
                android:id="@+id/relativeLayoutLoginSignupButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40px"
                android:splitMotionEvents="false"
                android:visibility="visible" >

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="280px"
                    android:layout_height="100px"
                    android:layout_marginLeft="65px"
                    android:background="@drawable/button_yellow_white_border_selector"
                    android:text="LOG IN"
                    android:textColor="@drawable/text_color_white_alpha_selector"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="280px"
                    android:layout_height="100px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="65px"
                    android:background="@drawable/button_white_selector"
                    android:text="SIGN UP"
                    android:textColor="@drawable/text_color_yellow_alpha_selector"
                    android:textSize="@dimen/button_text_size" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearLayoutNoNet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:splitMotionEvents="false"
                android:visibility="visible"
                android:orientation="vertical"
                >
                
                <ImageView
                    android:layout_width="90px"
                    android:layout_height="80px"
                    android:layout_gravity="center_horizontal"
                    android:tag="mwar"
                    android:src="@drawable/no_internet_icon"/>

                <TextView
                    android:id="@+id/textViewNoNet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_internet_connection"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginTop="20px"
                    android:layout_gravity="center_horizontal"
                    />

                <RelativeLayout
                    android:id="@+id/relativeLayoutNoInternetButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40px"
                    android:layout_marginTop="40px"
                    android:splitMotionEvents="false"
                    android:visibility="visible" >

                    <Button
                        android:id="@+id/buttonNoNetCall"
                        android:layout_width="280px"
                        android:layout_height="100px"
                        android:layout_marginLeft="65px"
                        android:singleLine="true"
                        android:gravity="center"
                        android:background="@drawable/button_yellow_white_border_selector"
                        android:text="@string/call_to_book"
                        android:textColor="@drawable/text_color_white_alpha_selector"
                        android:textSize="32px" />

                    <Button
                        android:id="@+id/buttonRefresh"
                        android:layout_width="280px"
                        android:layout_height="100px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="65px"
                        android:gravity="center"
                        android:background="@drawable/button_white_selector"
                        android:text="@string/refresh"
                        android:textColor="@drawable/text_color_yellow_alpha_selector"
                        android:textSize="32px" />
                </RelativeLayout>

            </LinearLayout>
            </LinearLayout>

    </RelativeLayout>

</LinearLayout>