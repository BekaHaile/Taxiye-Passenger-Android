<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:splitMotionEvents="false">

    <!-- Main View -->
    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <!-- layout container -->
        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <!-- splash buttons -->
            <include layout="@layout/layout_splash_ls" />


            <!-- login buttons -->
            <include layout="@layout/layout_splash_login" />


            <!-- Signup layout-->
            <include layout="@layout/layout_splash_signup" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewScroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Jugnoo Logo layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayoutJugnooLogo"
            android:layout_width="720px"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageViewJugnooLogo"
                android:layout_width="300px"
                android:layout_height="316px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo_big"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:tag="mhar"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageViewDebug1"
                android:layout_width="180px"
                android:layout_height="120px"
                android:layout_marginTop="170px" />

            <ImageView
                android:id="@+id/imageViewDebug2"
                android:layout_width="180px"
                android:layout_height="120px"
                android:layout_alignParentRight="true"
                android:layout_marginTop="170px" />

            <ImageView
                android:id="@+id/imageViewDebug3"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60px" />

        </RelativeLayout>

        <View
            android:id="@+id/extra"
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewBack"
        style="@style/back_image"
        android:layout_centerVertical="false"
        android:layout_marginTop="10px"
        android:visibility="gone" />

</RelativeLayout>