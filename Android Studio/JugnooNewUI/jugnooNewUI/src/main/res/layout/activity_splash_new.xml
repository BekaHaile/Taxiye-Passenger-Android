<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_img"
    android:orientation="vertical"
    android:splitMotionEvents="false">


    <ImageView
        android:id="@+id/imageViewJugnooTop"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260px"
        >

        <ImageView
            android:id="@+id/imageViewJugnooLogo"
            android:layout_width="400px"
            android:layout_height="317px"
            android:layout_centerHorizontal="true"
            android:background="@drawable/jugnoo_logo_big_white"
            android:tag="mwar"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/imageViewDebug1"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginLeft="125px"
            android:layout_marginTop="190px"

            />

        <ImageView
            android:id="@+id/imageViewDebug2"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginLeft="330px"
            android:layout_marginTop="190px"

            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewLoginSignupButtonsTop"
        android:layout_width="match_parent"
        android:layout_height="290px"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_marginTop="130px"
        >

        <LinearLayout
            android:id="@+id/linearLayoutLoginSignupButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            android:visibility="visible"
            >

            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="@dimen/splash_button_width"
                android:layout_height="@dimen/splash_button_height"
                android:background="@drawable/button_white_selector"
                android:text="@string/sign_up"
                android:textAllCaps="true"
                android:textColor="@color/text_color_theme_alpha_selector"
                android:textSize="@dimen/text_size_40"/>

            <TextView
                android:id="@+id/textViewAlreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:text="@string/nl_splash_already_have_account"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_26"
                />


            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="@dimen/splash_button_width"
                android:layout_height="@dimen/splash_button_height"
                android:background="@drawable/button_theme_alpha_white_stroke_selector"
                android:text="LOG IN"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size"/>

            <TextView
                android:id="@+id/textViewTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60px"
                android:text="@string/nl_splash_terms"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_26"
                />

            <TextView
                android:id="@+id/textViewPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:text="@string/nl_splash_policy"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_26"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayoutNoNet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:layout_width="90px"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/no_internet_icon"
                android:tag="mwar"/>

            <TextView
                android:id="@+id/textViewNoNet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:text="@string/no_internet_connection"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_30"
                />

            <RelativeLayout
                android:id="@+id/relativeLayoutNoInternetButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40px"
                android:layout_marginTop="40px"
                android:splitMotionEvents="false"
                android:visibility="visible">

                <Button
                    android:id="@+id/buttonNoNetCall"
                    android:layout_width="@dimen/splash_button_width"
                    android:layout_height="@dimen/splash_button_height"
                    android:layout_marginLeft="65px"
                    android:background="@drawable/button_yellow_white_border_selector"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/call_to_book"
                    android:textColor="@drawable/text_color_white_alpha_selector"
                    android:textSize="@dimen/text_size_40"/>

                <Button
                    android:id="@+id/buttonRefresh"
                    android:layout_width="@dimen/splash_button_width"
                    android:layout_height="@dimen/splash_button_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="65px"
                    android:background="@drawable/button_white_selector"
                    android:gravity="center"
                    android:text="@string/refresh"
                    android:textColor="@drawable/text_color_yellow_alpha_selector"
                    android:textSize="@dimen/text_size_40"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>