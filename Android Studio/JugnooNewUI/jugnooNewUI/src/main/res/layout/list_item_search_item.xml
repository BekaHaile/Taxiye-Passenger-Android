<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="mwar"
                android:splitMotionEvents="false"
                android:background="@drawable/bg_white_menu_item_selector_color_selector"
    >

    <ImageView
        android:id="@+id/imageViewType"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:src="@drawable/ic_work"
        android:visibility="visible"
        android:tag="mwar" />

    <LinearLayout
        android:id="@+id/linearLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:orientation="vertical"
        android:gravity="center"
        android:splitMotionEvents="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewType"
        >

        <TextView
            android:id="@+id/textViewSearchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/text_color_light_selector"
            android:textSize="@dimen/text_size_28"
            />

        <TextView
            android:id="@+id/textViewSearchAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7px"
            android:text="Name"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_24"
            />

        <TextView
            android:id="@+id/textViewAddressUsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7px"
            android:text="@string/address_used_format"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_24"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewSep"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/stroke_color_light"
        android:layout_below="@+id/linearLayoutContent"
        />

</RelativeLayout>