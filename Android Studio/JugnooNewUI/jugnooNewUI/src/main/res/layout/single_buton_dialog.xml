<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="17.4dp"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
       android:weightSum="6"
        android:orientation="vertical"
        android:background="@drawable/background_white_rounded_bordered">

        <TextView
            android:id="@+id/tv_single_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:textColor="#4a4a4a"
            android:gravity="center"
            android:layout_weight="4"
            android:layout_centerHorizontal="true"
            android:text="Are you sure you want to Logout ?"
            android:textSize="13.5sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="@dimen/btn_height"
            android:layout_below="@+id/tv_single_head"
            android:id="@+id/tv_single_ok"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:padding="6dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="2"
            android:clickable="true"
            android:textColor="@color/whiteTxtColor"
            android:background="@drawable/layout_orange_button"
            android:layout_marginBottom="22dp"
            android:text="Ok"/>







    </LinearLayout>


</RelativeLayout>