<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewThumbsDown"
        android:layout_width="290px"
        android:layout_height="290px"
        android:layout_marginTop="40px"
        android:src="@drawable/ic_thumbs_down"
        android:tag="mwar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_marginLeft="80px"
            android:layout_toLeftOf="@+id/textViewImprove"
            android:src="@color/text_color"/>

        <TextView
            android:id="@+id/textViewImprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/what_could_we_improve"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_36"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="80px"
            android:layout_toRightOf="@+id/textViewImprove"
            android:src="@color/text_color"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        android:text="@string/about"
        android:gravity="center"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/stroke_color_dark"/>

    <TextView
        android:id="@+id/textViewMatter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35px"
        android:text="@string/we_will_look_into_the_matter"
        android:textSize="@dimen/text_size_36"
        android:textColor="@color/stroke_color_dark"/>

    <Button
        android:id="@+id/buttonSupport"
        style="@style/ButtonTheme"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_marginTop="75px"
        android:text="@string/go_to_support"
        />


    <TextView
        android:id="@id/textViewSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:textAllCaps="true"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_size_34"
        android:text="@string/skip"/>

</LinearLayout>