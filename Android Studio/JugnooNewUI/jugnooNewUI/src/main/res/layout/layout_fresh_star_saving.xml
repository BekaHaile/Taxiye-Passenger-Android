<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cvStarSavings"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20px"
    android:layout_marginStart="20px"
    android:layout_marginEnd="20px"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4px"
    android:visibility="visible"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105px">

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_centerVertical="true"
            android:src="@drawable/star"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/ivStar"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvStarSavings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star_savings"
                android:textAllCaps="true"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_24"
                />

            <TextView
                android:id="@+id/tvStarSavingsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/you_will_receive_cashback_on_order"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>