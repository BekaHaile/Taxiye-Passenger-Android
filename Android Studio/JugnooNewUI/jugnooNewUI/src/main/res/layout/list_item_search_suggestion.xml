<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llRootSearchSuggestion"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_white_menu_item_selector_color_selector"
              android:orientation="vertical">


    <TextView
        android:id="@+id/tvSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_16"
        app:typekitFont="@string/maven_r"
        tools:text="Query String"/>


    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/stroke_light_grey_alpha"/>


</LinearLayout>
