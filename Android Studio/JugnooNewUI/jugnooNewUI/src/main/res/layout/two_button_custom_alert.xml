<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="17.4dp"
    android:background="@android:color/transparent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_rounded_bordered">

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:text="X"
            android:id="@+id/camera_cross"
            android:clickable="true"
            android:layout_margin="4dp"
           android:visibility="gone"
            android:gravity="center"
            android:textColor="#4d5254"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:padding="10dp"
            android:textColor="#4a4a4a"
            android:layout_centerHorizontal="true"
            android:text="Are you sure you want to Logout ?"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="22dp"
            android:gravity="center"
            android:layout_below="@+id/tvInfo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvYes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                 android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/layout_orange_button"
                android:textColor="@color/whiteTxtColor"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="28dp"
                android:background="@drawable/layout_orange_button"
                android:textColor="@color/whiteTxtColor"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Confirm"
                android:textAllCaps="false"

                android:textSize="17sp" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>