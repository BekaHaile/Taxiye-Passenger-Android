<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assigningLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/top_bar_height"
    android:splitMotionEvents="false"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linearLayoutAssigningButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="112dp"
            android:background="@color/white"
            android:splitMotionEvents="false"
            android:clickable="true"
            android:focusable="true">

            <ProgressBar
                android:id="@+id/pbAssigning"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:indeterminate="true"
                android:indeterminateBehavior="cycle"
                android:progressDrawable="@drawable/progressbar"
                android:tag="@string/dont_touch_me"
                android:layout_marginTop="-6dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_below="@+id/pbAssigning">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/textViewFindingDriver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20px"
                        android:layout_marginEnd="20px"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/finding_a_jugnoo_driver"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_34" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <product.clicklabs.jugnoo.utils.ProgressWheel
                            android:id="@+id/pwBidTimer"
                            xmlns:wheel="http://schemas.android.com/apk/res-auto"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:tag="@string/dont_touch_me"
                            android:visibility="gone"
                            wheel:matProg_barColor="@color/theme_color"
                            wheel:matProg_barWidth="3dp"
                            wheel:matProg_fillRadius="true"
                            wheel:matProg_linearProgress="true"
                            wheel:matProg_rimColor="@color/feed_grey_tab"
                            wheel:matProg_rimWidth="3dp"
                            android:alpha="0.9"
                            />

                        <TextView
                            android:id="@+id/tvBidTimer"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:tag="@string/dont_touch_me"
                            android:gravity="center"
                            android:text="99"
                            android:visibility="gone"
                            android:textColor="@color/text_color_dark"
                            android:textSize="18sp" />

                    </RelativeLayout>



                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvBidsIncoming"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:tag="@string/dont_touch_me"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />
                
                <ImageView
                    android:id="@+id/findDriverJugnooAnimation"
                    android:layout_width="@dimen/jugnoo_anim_loading_height"
                    android:layout_height="@dimen/jugnoo_anim_loading_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:background="@drawable/loader_new_frame_anim" />

                <Button
                    android:id="@+id/initialCancelRideBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_theme"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textSize="28px"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="15px"
                    android:layout_marginBottom="10px"
                    android:text="@string/cancel_request"/>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewCancellation"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:background="@color/menu_item_selector_color"
            android:gravity="center"
            android:text="@string/cancellation_charges_may_apply"
            android:textColor="@color/stroke_color_dark"
            android:textSize="@dimen/text_size_26" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutAssigningDropLocationClick"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginStart="20px"
        android:layout_marginEnd="20px"
        android:layout_marginTop="20px"
        android:background="@drawable/dropshadow_in_white"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/imageViewAssigningDropLocationSearch"
            android:layout_width="16px"
            android:layout_height="16px"
            android:layout_centerVertical="true"
            android:layout_marginStart="37px"
            android:src="@drawable/circle_red"
            android:tag="mwar" />

        <TextView
            android:id="@+id/textViewAssigningDropLocationClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="37px"
            android:layout_toStartOf="@+id/linearLayoutAssigningDropLocationEditProgress"
            android:layout_toEndOf="@+id/imageViewAssigningDropLocationSearch"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/enter_destination"
            android:paddingEnd="20px"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="30px" />

        <LinearLayout
            android:id="@+id/linearLayoutAssigningDropLocationEditProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <product.clicklabs.jugnoo.utils.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progressBarAssigningDropLocation"
                android:layout_width="70px"
                android:layout_height="70px"
                android:tag="mwar"
                android:visibility="visible"
                wheel:matProg_barColor="@color/theme_color"
                wheel:matProg_barWidth="3dp"
                wheel:matProg_fillRadius="true"
                wheel:matProg_progressIndeterminate="true" />

            <ImageView
                android:id="@+id/imageViewAssigningDropLocationEdit"
                android:layout_width="60px"
                android:layout_height="60px"
                android:padding="15px"
                android:src="@drawable/edit_icon_selector"
                android:tag="mwar"
                android:visibility="visible" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutDestinationHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayoutAssigningDropLocationClick"
        android:layout_marginStart="50px"
        android:layout_marginEnd="50px"
        android:layout_marginTop="-15px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageViewDestHelp"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginStart="50px"
            android:layout_marginTop="-30px"
            android:background="@drawable/triangle_help_text"
            android:rotation="0"
            android:tag="mwar" />

        <TextView
            android:id="@+id/textViewDestHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewDestHelp"
            android:background="@drawable/background_black_80_r"
            android:padding="15px"
            android:text="@string/for_complete_peace_of_mind_please_enter_the_destination_so_we_can_provide_him_turn_by_turn_navigation"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_30" />
    </RelativeLayout>


    <!-- drop location layout-->
    <RelativeLayout
        android:id="@+id/relativeLayoutAssigningDropLocationParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </RelativeLayout>

</RelativeLayout>

