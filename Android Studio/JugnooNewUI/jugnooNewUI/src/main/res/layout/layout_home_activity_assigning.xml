<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assigningLayout"
    android:layout_marginTop="@dimen/top_bar_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:splitMotionEvents="false"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/linearLayoutAssigningButtons"
        android:layout_width="match_parent"
        android:layout_height="224px"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:splitMotionEvents="false">

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressBarFindingDriver"
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_alignParentTop="true"
            android:indeterminate="true"
            android:paddingBottom="0px"
            android:paddingTop="0px"
            app:spb_colors="@array/gplus_colors"
            app:spb_generate_background_with_colors="false"
            app:spb_mirror_mode="true"
            app:spb_progressiveStart_activated="true"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            app:spb_reversed="true"
            app:spb_sections_count="1"
            app:spb_speed="2.2"
            app:spb_stroke_separator_length="8px"
            app:spb_stroke_width="10px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFindingDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:singleLine="true"
                android:text="Finding a Jugnoo driver..."
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_34" />

            <ImageView
                android:id="@+id/findDriverJugnooAnimation"
                android:layout_width="@dimen/jugnoo_anim_loading_width"
                android:layout_height="@dimen/jugnoo_anim_loading_height"
                android:layout_marginTop="20px"
                android:background="@drawable/auto_loading_frame_anim"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/initialCancelRideBtn"
                style="@style/ButtonTheme"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:text="@string/cancel_request" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutAssigningDropLocationClick"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/dropshadow_in_white"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/imageViewAssigningDropLocationSearch"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/circle_red"
            android:tag="mwar"/>

        <TextView
            android:id="@+id/textViewAssigningDropLocationClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toLeftOf="@+id/linearLayoutAssigningDropLocationEditProgress"
            android:layout_toRightOf="@+id/imageViewAssigningDropLocationSearch"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/enter_your_destination"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textCursorDrawable="@null"
            android:textSize="30px"
            />

        <LinearLayout
            android:id="@+id/linearLayoutAssigningDropLocationEditProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <product.clicklabs.jugnoo.utils.ProgressWheel
                android:id="@+id/progressBarAssigningDropLocation"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:layout_width="70px"
                android:layout_height="70px"
                android:tag="mwar"
                android:visibility="visible"
                wheel:matProg_barColor="@color/theme_color"
                wheel:matProg_barWidth="3dp"
                wheel:matProg_fillRadius="true"
                wheel:matProg_progressIndeterminate="true"
                />

            <ImageView
                android:id="@+id/imageViewAssigningDropLocationEdit"
                android:layout_width="60px"
                android:layout_height="60px"
                android:padding="15px"
                android:src="@drawable/edit_icon_selector"
                android:tag="mwar"
                android:visibility="visible"
                />

        </LinearLayout>


    </RelativeLayout>



    <!-- drop location layout-->
    <RelativeLayout
        android:id="@+id/relativeLayoutAssigningDropLocationParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </RelativeLayout>

</RelativeLayout>

