<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/assigningLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        >

        <!-- finding driver layout-->
        <RelativeLayout
            android:id="@+id/relativeLayoutAssigningInfo"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textViewFindingDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:singleLine="true"
                android:text="Finding a Jugnoo driver..."
                android:textColor="@color/grey_dark"
                android:textSize="34px"/>

            <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
                android:id="@+id/progressBarFindingDriver"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-4px"
                android:indeterminate="true"
                android:paddingBottom="0px"
                android:paddingTop="0px"
                app:spb_colors="@array/gplus_colors"
                app:spb_generate_background_with_colors="false"
                app:spb_mirror_mode="true"
                app:spb_progressiveStart_activated="true"
                app:spb_progressiveStart_speed="1.5"
                app:spb_progressiveStop_speed="3.4"
                app:spb_reversed="true"
                app:spb_sections_count="1"
                app:spb_speed="2.2"
                app:spb_stroke_separator_length="8px"
                app:spb_stroke_width="10px"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/assigningMyLocationBtn"
            android:layout_width="83px"
            android:layout_height="83px"
            android:layout_above="@+id/linearLayoutAssigningButtons"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="50px"
            android:background="@drawable/mylocation_btn_selector"
            android:tag="mwar"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/linearLayoutAssigningButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:splitMotionEvents="false"
            android:orientation="vertical"
            >


            <Button
                android:id="@+id/initialCancelRideBtn"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginBottom="40px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cancel_request_button"
                android:tag="mwar"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutAssigningDropLocationClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:splitMotionEvents="false"
            android:orientation="vertical"
            android:layout_below="@+id/relativeLayoutAssigningInfo">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@+id/linearLayoutAssigningDropLocationClick"
                android:src="@drawable/shadow_down" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="33px"
                android:layout_height="33px"
                android:layout_marginLeft="30px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_icon"
                android:tag="mwar"/>

            <TextView
                android:id="@+id/textViewAssigningDropLocationClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="Set drop location"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textCursorDrawable="@null"
                android:textSize="30px"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@+id/linearLayoutAssigningDropLocationClick"
                android:src="@drawable/shadow_down" />
        </LinearLayout>



        <!-- drop location layout-->
        <RelativeLayout
            android:id="@+id/relativeLayoutAssigningDropLocationParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutAssigningInfo"
            android:visibility="gone"
            >

        </RelativeLayout>

    </RelativeLayout>

