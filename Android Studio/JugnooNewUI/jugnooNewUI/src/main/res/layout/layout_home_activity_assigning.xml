<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assigningLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:splitMotionEvents="false"
    android:visibility="visible">


    <Button
        android:id="@+id/assigningMyLocationBtn"
        android:layout_width="83px"
        android:layout_height="83px"
        android:layout_above="@+id/linearLayoutAssigningButtons"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="50px"
        android:background="@drawable/mylocation_btn_selector"
        android:tag="mwar"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/linearLayoutAssigningButtons"
        android:layout_width="match_parent"
        android:layout_height="224px"
        android:layout_alignParentBottom="true"
        android:background="@color/sliding_bottom_bg_color"
        android:splitMotionEvents="false">

        <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressBarFindingDriver"
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:layout_alignParentTop="true"
            android:indeterminate="true"
            android:paddingBottom="0px"
            android:paddingTop="0px"
            app:spb_colors="@array/gplus_colors"
            app:spb_generate_background_with_colors="false"
            app:spb_mirror_mode="true"
            app:spb_progressiveStart_activated="true"
            app:spb_progressiveStart_speed="1.5"
            app:spb_progressiveStop_speed="3.4"
            app:spb_reversed="true"
            app:spb_sections_count="1"
            app:spb_speed="2.2"
            app:spb_stroke_separator_length="8px"
            app:spb_stroke_width="10px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFindingDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:gravity="center"
                android:singleLine="true"
                android:text="Finding a Jugnoo driver..."
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_34" />

            <Button
                android:id="@+id/initialCancelRideBtn"
                style="@style/ButtonTheme"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="20px"
                android:text="@string/cancel_request" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAssigningDropLocationClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/linearLayoutAssigningDropLocationClick"
            android:src="@drawable/shadow_down" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="33px"
                android:layout_height="33px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                android:src="@drawable/search_icon"
                android:tag="mwar" />

            <TextView
                android:id="@+id/textViewAssigningDropLocationClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="Set drop location"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textCursorDrawable="@null"
                android:textSize="30px" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/linearLayoutAssigningDropLocationClick"
            android:src="@drawable/shadow_down" />
    </LinearLayout>


    <!-- drop location layout-->
    <RelativeLayout
        android:id="@+id/relativeLayoutAssigningDropLocationParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </RelativeLayout>

</RelativeLayout>

