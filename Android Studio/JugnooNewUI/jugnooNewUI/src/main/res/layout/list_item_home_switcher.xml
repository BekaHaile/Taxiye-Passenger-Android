<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/rlRoot"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margin_bottom_home_switcher_item"
    app:cardCornerRadius="3.5dp"
    app:cardElevation="1.5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#454552"
        android:id="@+id/bgHomeSwitcher"
        android:orientation="horizontal"
        android:tag="mwar">


        <ImageView
            android:id="@+id/ivOffering"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/ic_rides_switcher" />




        <LinearLayout
            android:id="@+id/layout_graph"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center|start"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvOfferingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rides"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_15"
                app:typekitFont="@string/montserrat_m"
                />

            <TextView
                android:id="@+id/tvOfferingDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rides"
                android:textColor="@color/white_80"
                android:textSize="@dimen/sp_14"
                app:typekitFont="@string/maven_r"
                 />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/iv_graph_layout"
            android:orientation="vertical"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:id="@+id/iv_graph_margin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>

            <ImageView
                android:id="@+id/iv_graph_image"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.7"/>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>




