<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_rounded_bordered"
    android:id="@+id/linearLayoutRideShortInfo"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:layout_marginTop="35px"
    android:layout_marginBottom="10px"
    >

    <RelativeLayout
        android:id="@+id/relativeLayoutIssueWithRide"
        android:layout_width="match_parent"
        android:layout_height="74px"
        >

        <TextView
            android:id="@+id/textViewIssueWithRide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_light_selector"
            android:text="@string/issue_with_a_recent_ride"
            android:textSize="@dimen/text_size_34"
            android:layout_marginLeft="30px"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:layout_width="19px"
            android:layout_height="34px"
            android:tag="mwar"
            android:src="@drawable/ic_back_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/text_color_hint"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="152px"
        >

        <LinearLayout
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/textViewDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_color"
                android:text="Driver Name"
                android:textSize="@dimen/text_size_30"
                android:layout_marginLeft="20px"
                />

            <TextView
                android:id="@+id/textViewDriverCarNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_color"
                android:text="PB65AC0123"
                android:textSize="@dimen/text_size_26"
                android:layout_marginLeft="20px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentRight="true"
            >

            <TextView
                android:id="@+id/textViewTripTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_color"
                android:text="Trip Total"
                android:textSize="@dimen/text_size_30"
                android:layout_marginRight="20px"
                />

            <TextView
                android:id="@+id/textViewTripTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_color"
                android:text="@string/rupee_0"
                android:textSize="@dimen/text_size_40"
                android:layout_marginRight="20px"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutDriverImage"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:tag="mwar">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_grey"
                android:tag="mwar" />

            <ImageView
                android:id="@+id/imageViewDriver"
                android:layout_width="94px"
                android:layout_height="94px"
                android:layout_centerInParent="true"
                android:tag="mwar" />
        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/text_color_hint"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="@string/date_colon_format"
            android:textSize="@dimen/text_size_26"
            android:layout_marginTop="20px"
            android:layout_marginLeft="40px"
            />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDate"
            android:orientation="vertical"
            android:layout_marginLeft="45px"
            android:layout_marginTop="20px"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/imageViewStart"
                android:layout_width="26px"
                android:layout_height="37px"
                android:tag="mwar"
                android:src="@drawable/ic_start"
                />

            <ImageView
                android:id="@+id/imageViewStartEndLine"
                android:layout_width="4px"
                android:layout_height="78px"
                android:tag="mwar"
                android:src="@drawable/ic_start_end_line"
                />

            <ImageView
                android:id="@+id/imageViewEnd"
                android:layout_width="23px"
                android:layout_height="30px"
                android:tag="mwar"
                android:src="@drawable/ic_end"
                />
            
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/textViewDate"
            >

            <TextView
                android:id="@+id/textViewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="@string/start"
                android:textSize="@dimen/text_size_26"
                android:layout_marginTop="15px"
                android:layout_marginLeft="80px"
                />
            <TextView
                android:id="@+id/textViewStartValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_color_light"
                android:text="@string/sample_address"
                android:textSize="@dimen/text_size_26"
                android:layout_marginTop="5px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="20px"
                />


            <TextView
                android:id="@+id/textViewEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="@string/end"
                android:textSize="@dimen/text_size_26"
                android:layout_marginTop="15px"
                android:layout_marginLeft="80px"
                />
            <TextView
                android:id="@+id/textViewEndValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/text_color_light"
                android:text="@string/sample_address"
                android:textSize="@dimen/text_size_26"
                android:layout_marginTop="5px"
                android:layout_marginLeft="80px"
                android:layout_marginRight="20px"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/transparent"
                android:layout_marginTop="15px"
                />

        </LinearLayout>


    </RelativeLayout>
    



</LinearLayout>