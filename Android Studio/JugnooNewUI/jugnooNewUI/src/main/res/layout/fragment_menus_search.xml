<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/layout_search_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="25px"
            android:paddingLeft="26px"
            android:paddingRight="26px">


            <TextView
                android:id="@+id/label_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14px"
                android:text="@string/label_searched_items"
                android:visibility="gone"
                android:layout_marginLeft="20px"
                android:textColor="@color/text_color"
                android:textSize="26px"
                app:font="maven" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_category_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="50px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                app:cardCornerRadius="6dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewCategoryItems"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true"
                    android:scrollbars="vertical"
                    android:splitMotionEvents="false"/>
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/label_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14px"
                android:layout_marginLeft="20px"
                android:text="@string/label_relevant_categories"
                android:visibility="gone"
                android:textColor="@color/text_color"
                android:textSize="26px"
                app:font="maven" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_categories"
                android:visibility="gone"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                app:cardCornerRadius="6dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewCategories"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fadeScrollbars="true"
                    android:scrollbars="vertical"
                    android:splitMotionEvents="false"/>
            </android.support.v7.widget.CardView>

            <!--Empty space so checkout bar does not overlap-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_97"
                android:background="@color/white"
                android:orientation="vertical"
                android:tag="@string/dont_touch_me"/>
        </LinearLayout>


        <TextView
            android:id="@+id/textViewPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:text="@string/sorry_no_match_found"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_26"

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/shadow_new_height"
            android:background="@drawable/shadow_down_new" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>