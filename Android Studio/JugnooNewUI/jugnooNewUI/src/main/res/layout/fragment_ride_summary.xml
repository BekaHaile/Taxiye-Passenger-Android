<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light_grey"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/relativeLayoutMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/mapLite"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <include
        layout="@layout/layout_ride_summary"
        ></include>

    <product.clicklabs.jugnoo.utils.ProgressWheel
        android:id="@+id/progressWheel"
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:tag="mwar"
        wheel:matProg_barColor="@color/theme_color"
        wheel:matProg_fillRadius="true"
        wheel:matProg_progressIndeterminate="false"/>

</RelativeLayout>