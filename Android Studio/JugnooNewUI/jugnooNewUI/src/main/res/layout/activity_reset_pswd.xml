<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="10dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/enter_one_time_password_string"
            android:textColor="@color/generalTxtColor"
            android:textSize="@dimen/normal_text_view_size" />

        <EditText
            android:id="@+id/editTextOTP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:nextFocusDown="@+id/password_et"
            android:singleLine="true"
            android:maxLength="15"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/services_name_txt_color"
            android:hint="Enter OTP"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/et_text_size" />

        <EditText
            android:id="@+id/editTextNewPass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:nextFocusDown="@+id/password_et"
            android:singleLine="true"
            android:maxLength="15"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/services_name_txt_color"
            android:hint="New Password"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/et_text_size" />

        <EditText
            android:id="@+id/editTextConfirmPass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:nextFocusDown="@+id/password_et"
            android:singleLine="true"
            android:maxLength="15"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/services_name_txt_color"
            android:hint="Confirm Password"
            android:textColorHint="@color/hintColor"
            android:textSize="@dimen/et_text_size" />

        <Button
            android:id="@+id/buttonResetPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:background="@drawable/layout_orange_button"
            android:text="@string/reset_password_screen"
            android:textAllCaps="false"
            android:textColor="@color/whiteTxtColor"
            android:textSize="@dimen/btn_text_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>