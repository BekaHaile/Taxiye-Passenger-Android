<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="@dimen/dp_30"
    android:layout_marginStart="@dimen/dp_10"
    >

    <RelativeLayout
        android:id="@+id/summary_badge"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:splitMotionEvents="false"
        android:background="@drawable/background_transparent"
        android:tag="mwar">


        <ImageView
            android:id="@+id/profileBack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/profileImg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:tag="mwar" />

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:tag="mwar" />
        <ImageView
            android:id="@+id/badgeClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/profileBack"
            android:layout_alignTop="@id/profileBack"
            android:visibility="gone"
            android:src="@drawable/ic_tick_orange"/>
    </RelativeLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/summary_badge"
        android:layout_alignStart="@id/summary_badge"
        android:gravity="center"
        android:id="@+id/tvBadgeName"
        android:layout_height="wrap_content"
        android:tag="@string/dont_touch_me"
        tools:text="ssssss"
        android:textSize="12sp"
        android:textColor="@color/black"

        android:layout_below="@id/summary_badge" />
</RelativeLayout>