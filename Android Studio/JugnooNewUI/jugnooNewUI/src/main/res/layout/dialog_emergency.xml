<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:id="@+id/linearLayoutInner"
        android:layout_width="644px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="15px"
        android:background="@drawable/background_grey_rounded_bordered"
        android:splitMotionEvents="false"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="644px"
            android:layout_height="162px"
            android:tag="mwar"
            android:src="@drawable/ic_24_7_help"
            android:layout_marginTop="25px"
            />
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3px"
            android:layout_marginLeft="3px"
            android:layout_marginRight="3px"
            android:background="@drawable/button_white_br"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            
            <TextView
                android:id="@+id/textViewEnableEmergencyMode"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="20px"
                android:textColor="@color/text_color_light_selector"
                android:textSize="@dimen/text_size_36"
                android:gravity="center_vertical"
                android:paddingLeft="40px"
                android:text="@string/enable_emergency_mode"
                android:textAllCaps="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@color/stroke_light_grey_alpha"
                />
            
            <TextView
                android:id="@+id/textViewSendRideStatus"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:textColor="@color/text_color_light_selector"
                android:textSize="@dimen/text_size_36"
                android:gravity="center_vertical"
                android:paddingLeft="40px"
                android:text="@string/send_ride_status"
                android:textAllCaps="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@color/stroke_light_grey_alpha"
                />

            <TextView
                android:id="@+id/textViewInAppCustomerSupport"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginBottom="20px"
                android:textColor="@color/text_color_light_selector"
                android:textSize="@dimen/text_size_36"
                android:gravity="center_vertical"
                android:paddingLeft="40px"
                android:text="@string/in_app_customer_support"
                android:textAllCaps="true"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/stroke_light_grey_alpha" />
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="83px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0px"
                android:background="@drawable/button_white_grey_br_selector"
                android:text="@string/cancel"
                android:textColor="@color/text_color"
                android:textSize="30px"/>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>