<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/constraintLayoutRideTypeConfirm"
    android:background="@color/white"
    android:visibility="visible"
    android:tag="@string/dont_touch_me"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/divider_color"
        />

    <ImageView
        android:id="@+id/ivRideTypeImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        />

    <TextView
        android:id="@+id/tvRideTypeInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivRideTypeImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="13sp"
        tools:text="@string/hired_vehicle_at_hourly_rate"
        android:textColor="@color/text_color_light"
        />
    <TextView
        android:id="@+id/tvRideTypeRateInfo"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvRideTypeInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        tools:text="@string/package_starting_at_format"
        />

    <View
        android:id="@+id/viewSepRideType"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvRideTypeRateInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="38dp"
        />


    <TextView
        android:id="@+id/tvHourlyPackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/hourly_package"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_hourly_package"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/viewSepRideType"
        app:layout_constraintTop_toBottomOf="@+id/viewSepRideType"
        app:layout_constraintBottom_toTopOf="@+id/viewSepRideType"/>


    <TextView
        android:id="@+id/tvMultipleStops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/multiple_stops"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_multiple_stops"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/viewSepRideType"
        app:layout_constraintStart_toEndOf="@+id/viewSepRideType"
        app:layout_constraintTop_toBottomOf="@+id/viewSepRideType"
        app:layout_constraintBottom_toTopOf="@+id/viewSepRideType" />

    <TextView
        android:id="@+id/tvSafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_always_available"
        android:focusable="true"
        android:text="@string/always_available"
        android:drawablePadding="5dp"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/viewSepRideType"
        app:layout_constraintBottom_toTopOf="@+id/viewSepRideType"
        app:layout_constraintEnd_toEndOf="@+id/viewSepRideType"
        />

    <Button
        android:id="@+id/buttonConfirmRideType"
        android:layout_width="280dp"
        android:layout_height="48dp"
        style="@style/ButtonThemeCapsule"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/viewSepRideType"
        app:layout_constraintEnd_toStartOf="@+id/viewSepRideType"
        app:layout_constraintStart_toEndOf="@+id/viewSepRideType"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/ride_now" />


</android.support.constraint.ConstraintLayout>