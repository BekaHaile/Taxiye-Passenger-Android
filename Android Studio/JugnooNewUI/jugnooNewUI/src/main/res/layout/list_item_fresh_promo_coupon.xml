<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent_menu_item_selector"
    >

    <ImageView
        android:id="@+id/imageViewRadio"
        style="@style/ic_radio_button_style"
        android:layout_marginStart="30px"
        android:layout_centerVertical="true"

        />

    <TextView
        android:id="@+id/textViewOfferName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textViewTNC"
        android:layout_toEndOf="@+id/imageViewRadio"
        android:text="@string/cashback_nabc"
        android:maxLines="2"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_30"
        android:layout_marginStart="20px"
        />

    <TextView
        android:id="@+id/textViewTNC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingBottom="30px"
        android:paddingStart="20px"
        android:paddingEnd="10px"
        android:paddingTop="30px"
        android:layout_marginEnd="20px"
        android:text="@string/tnc"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_22"/>

    <TextView
        android:id="@+id/textViewNoCurrentOffersYet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_available_offers"
        android:padding="@dimen/dp_10"
        android:gravity="start"
        android:visibility="gone"
        android:textSize="@dimen/text_size_30"/>

</RelativeLayout>