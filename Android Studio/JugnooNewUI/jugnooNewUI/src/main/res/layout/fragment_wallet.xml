<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/relative"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:background="@color/white_light_grey"
              android:orientation="vertical"
              android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="JUGNOO CASH"
            android:textColor="@color/white"
            android:textSize="30.6px" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewPromotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:maxLines="3"
                        android:padding="15px"
                        android:text="Promotional banner"
                        android:textColor="@color/grey_black_light"
                        android:textSize="26px"
                        android:visibility="visible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewAccountBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32px"
                    android:text="Current Balance"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="32px" />

                <TextView
                    android:id="@+id/textViewAccountBalanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15px"
                    android:text="Rs. 200"
                    android:textColor="@color/bg_grey_opaque"
                    android:textSize="27px" />

                <Button
                    android:id="@+id/buttonAddPayment"
                    android:layout_width="525px"
                    android:layout_height="84px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22px"
                    android:background="@drawable/button_yellow_selector"
                    android:text="ADD JUGNOO CASH"
                    android:textColor="@drawable/text_color_white_alpha_selector"
                    android:textSize="@dimen/button_text_size" />

                <TextView
                    android:id="@+id/inviteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22px"
                    android:text="Invite friends and earn jugnoo cash"
                    android:textColor="@color/grey_black_light"
                    android:textSize="22px" />


                 <ImageView
                    android:visibility="visible"
                    android:id="@+id/logoAnimView"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    android:tag="mwar"
                    android:background="@drawable/animation_list"
                    />


                <TextView
                    android:id="@+id/textViewRecentTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="36px"
                    android:layout_marginRight="36px"
                    android:layout_marginTop="16px"
                    android:text="Recent Transactions"
                    android:textColor="@color/grey_dark"
                    android:textSize="31px" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:orientation="vertical"
                android:splitMotionEvents="false" >

                <ListView
                    android:id="@+id/listViewTransactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0px"
                    android:divider="@drawable/background_transparent"
                    android:dividerHeight="0px"
                    android:listSelector="@drawable/background_transparent"
                    android:splitMotionEvents="false" >
                </ListView>

                <TextView
                    android:id="@+id/textViewInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="30px" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="180px"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>