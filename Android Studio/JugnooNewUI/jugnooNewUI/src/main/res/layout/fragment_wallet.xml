<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/relative"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:background="@color/white_light_grey"
              android:orientation="vertical"
              android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="WALLET"
            android:textColor="@color/white"
            android:textSize="30.6px" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- promotional message rl-->
                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textViewPromotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:maxLines="3"
                        android:padding="15px"
                        android:text="Promotional banner"
                        android:textColor="@color/grey_black_light"
                        android:textSize="26px"
                        android:visibility="gone" />
                </RelativeLayout>

                <!-- jugnoo cash rl-->
                <RelativeLayout
                    android:id="@+id/relativeLayoutJugnooCash"
                    android:layout_width="match_parent"
                    android:layout_height="110px">


                    <ImageView
                        android:id="@+id/imageViewJugnooCashIcon"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        />

                    <TextView
                        android:id="@+id/textViewJugnooCashBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Jugnoo Cash"
                        android:textColor="@color/bg_grey_opaque"
                        android:textSize="32px"
                        android:layout_toRightOf="@+id/imageViewJugnooCashIcon"
                        android:layout_marginLeft="20px"
                        />


                    <TextView
                        android:id="@+id/textViewJugnooCashBalanceValue"
                        android:layout_width="250px"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="@string/rupee_0"
                        android:textColor="@color/bg_grey_opaque"
                        android:textSize="32px"
                        android:layout_marginRight="73px"
                        android:layout_alignParentRight="true"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/yellow"
                        />


                </RelativeLayout>

                <!-- paytm wallet rl-->
                <RelativeLayout
                    android:id="@+id/relativeLayoutPaytm"
                    android:layout_width="match_parent"
                    android:layout_height="110px">


                    <ImageView
                        android:id="@+id/imageViewPaytmIcon"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50px"
                        />

                    <TextView
                        android:id="@+id/textViewPaytmBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Paytm Wallet"
                        android:textColor="@color/bg_grey_opaque"
                        android:textSize="32px"
                        android:layout_toRightOf="@+id/imageViewPaytmIcon"
                        android:layout_marginLeft="20px"
                        />

                    <ImageView
                        android:id="@+id/imageViewPaytmArrow"
                        android:layout_width="13px"
                        android:layout_height="26px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/arrow_icon_selector"
                        android:tag="mwar"/>


                    <TextView
                        android:id="@+id/textViewPaytmBalanceValue"
                        android:layout_width="250px"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:text="@string/rupee_0"
                        android:textColor="@color/bg_grey_opaque"
                        android:textSize="32px"
                        android:layout_toLeftOf="@+id/imageViewPaytmArrow"
                        android:layout_marginRight="20px"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/yellow"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/"
                    android:layout_width="420px"
                    android:layout_height="110px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px">

                    <TextView
                        android:id="@+id/inviteTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="22px"
                        android:text="Invite friends and earn jugnoo cash"
                        android:textColor="@color/grey_black_light"
                        android:textSize="22px" />

                </RelativeLayout>






                <TextView
                    android:id="@+id/textViewRecentTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="36px"
                    android:layout_marginRight="36px"
                    android:layout_marginTop="16px"
                    android:text="Recent Transactions"
                    android:textColor="@color/grey_dark"
                    android:textSize="31px" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:orientation="vertical"
                android:splitMotionEvents="false" >

                <ListView
                    android:id="@+id/listViewTransactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0px"
                    android:divider="@drawable/background_transparent"
                    android:dividerHeight="0px"
                    android:listSelector="@drawable/background_transparent"
                    android:splitMotionEvents="false" >
                </ListView>

                <TextView
                    android:id="@+id/textViewInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="TextView"
                    android:textColor="@color/black"
                    android:textSize="30px" />

                <product.clicklabs.jugnoo.utils.ProgressWheel
                    android:id="@+id/progressBar"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="180px"
                    xmlns:wheel="http://schemas.android.com/apk/res-auto"
                    wheel:matProg_barColor="@color/yellow"
                    wheel:matProg_fillRadius="true"
                    wheel:matProg_progressIndeterminate="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>