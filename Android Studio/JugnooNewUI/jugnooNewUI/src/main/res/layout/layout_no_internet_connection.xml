<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/whiteTxtColor"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/toolbar_text_size"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"></TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/no_connection_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/lightBlackTxtColor"
        android:textSize="@dimen/text_size"
        android:text="No Internet Connection" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/no_connection_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"

        android:background="@drawable/icon_no_connection" />
    <Button
        android:id="@+id/refresh_btn"
        android:layout_width="200dp"
        android:background="@drawable/layout_orange_button"
        android:layout_height="@dimen/btn_height"
        android:text="Refresh"
        android:layout_below="@+id/no_connection_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/whiteTxtColor"
        android:textSize="@dimen/btn_text_size" />


</RelativeLayout>