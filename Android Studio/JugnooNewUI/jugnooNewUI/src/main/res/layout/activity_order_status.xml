<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar"
        android:background="#f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:layout_marginRight="28px"
            android:orientation="vertical"
            android:paddingBottom="40px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="20px"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:text="@string/order_status_txt"
                    android:textColor="@color/text_color_light"
                    android:layout_centerVertical="true"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:id="@+id/tvOrderStatusVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvOrderStatus"
                    android:text="@string/order_status_txt"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_28" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/apply_btn_pressed" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px">

                <TextView
                    android:id="@+id/tvOrderTime"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:text="@string/order_time"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:id="@+id/tvOrderTimeVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvOrderTime"
                    android:text="@string/order_status_txt"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/apply_btn_pressed" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px">

                <TextView
                    android:id="@+id/tvDeliveryTime"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_time"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:id="@+id/tvDeliveryTimeVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvDeliveryTime"
                    android:text="@string/order_status_txt"
                    android:layout_centerVertical="true"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/apply_btn_pressed" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80px">

                <TextView
                    android:id="@+id/tvDeliveryTo"
                    android:layout_width="200px"
                    android:layout_height="55px"
                    android:text="@string/delivery_to"
                    android:textAllCaps="true"
                    android:gravity="bottom"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20px"
                    android:layout_toRightOf="@+id/tvDeliveryTo">

                <LinearLayout
                    android:id="@+id/llDeliveryPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivDeliveryPlace"
                        android:layout_width="40px"
                        android:layout_height="37px"
                        android:src="@drawable/home"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/tvDelveryPlace"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="HOME"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_28" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDeliveryToVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llDeliveryPlace"
                    android:paddingTop="5px"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvDeliveryTo"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28" />

                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="4px"
                android:paddingRight="4px"
                android:layout_marginTop="26px"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8px"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <product.clicklabs.jugnoo.utils.NonScrollListView
                        android:id="@+id/listViewCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:divider="@color/transparent"
                        android:dividerHeight="0dp"
                        android:splitMotionEvents="false" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="92px"
                        android:background="@color/rank_1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="#d0d0d0" />

                        <TextView
                            android:id="@+id/tvSubAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:text="@string/sub_total_amount"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_32" />

                        <TextView
                            android:id="@+id/tvSubAmountVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="30px"
                            android:text="@string/rupee_0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_38"

                            />
                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="4px"
                android:paddingRight="4px"
                android:layout_marginTop="26px"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8px"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llFinalAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26px"
                        android:orientation="vertical">


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageViewSep"
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginLeft="34px"
                        android:layout_marginRight="34px"
                        android:layout_marginTop="17px"
                        android:background="@color/stroke_light_grey_alpha" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="92px"
                        android:background="@color/rank_1">

                        <TextView
                            android:id="@+id/tvPaymentMethod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:text="@string/payment_method"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_32" />

                        <ImageView
                            android:id="@+id/ivPaymentMethodVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="30px"
                            android:tag="mwar" />

                        <TextView
                            android:id="@+id/tvPaymentMethodCash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="30px"
                            android:text="@string/cash"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_32"
                            android:visibility="gone" />

                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/bNeedHelp"
                style="@style/ButtonTheme"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:text="@string/need_help"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/order_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutReceipt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:orientation="horizontal"
                android:splitMotionEvents="false"
                android:visibility="gone"
                android:weightSum="2">

                <Button
                    android:id="@+id/cancelfeedbackBtn"
                    android:layout_width="0px"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15px"
                    android:layout_weight="1"
                    android:background="@drawable/button_theme"
                    android:text="@string/need_help"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_34" />

                <Button
                    android:id="@+id/buttonCancelOrder"
                    android:layout_width="0px"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15px"
                    android:layout_weight="1"
                    android:background="@drawable/button_theme"
                    android:text="@string/cancel_order"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_34" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:orientation="horizontal"
                android:splitMotionEvents="false"
                android:visibility="visible"
                android:weightSum="2">

                <Button
                    android:id="@+id/feedbackBtn"
                    android:layout_width="0px"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15px"
                    android:layout_weight="1"
                    android:background="@drawable/button_theme"
                    android:text="@string/ok"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_34"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/reorderBtn"
                    android:layout_width="0px"
                    android:layout_height="@dimen/button_height"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15px"
                    android:layout_weight="1"
                    android:background="@drawable/button_theme"
                    android:text="Re-Order"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_34" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>