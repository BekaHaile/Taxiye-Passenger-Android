<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white_light_grey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="720px"
            android:layout_height="96px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/yellow" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="DEBUG"
                android:textColor="@color/white"
                android:textSize="30.6px" />

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="60.7px"
                android:layout_height="76.9px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:padding="20px"
                android:src="@drawable/back_white_selector" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false" >

            <LinearLayout
                android:id="@+id/linearLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_light_grey"
                android:orientation="vertical"
                android:splitMotionEvents="false" >


                <TextView
                    android:id="@+id/textViewDebugOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Debug Options"
                    android:textSize="34px"
                    android:textColor="@color/black_text"
                    android:background="@color/white_dark1"
                    android:padding="20px"

                    />

                <RelativeLayout
                    android:id="@+id/relativeLayoutShowAllDrivers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewShowAllDrivers"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Show All Drivers"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewShowAllDrivers"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked_new"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutShowDriverInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewShowDriverInfo"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Show Driver Information"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewShowDriverInfo"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked_new"
                        android:tag="mwar"
                        />
                </RelativeLayout>









                <TextView
                    android:id="@+id/textViewServerEnv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Server Environment"
                    android:textSize="34px"
                    android:textColor="@color/black_text"
                    android:background="@color/white_dark1"
                    android:padding="20px"

                    />

                <RelativeLayout
                    android:id="@+id/relativeLayoutLive4012"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewLive4012"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Live (4012)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewLive4012"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked_new"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTest8012"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewTest8012"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Training (8012)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewTest8012"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked_new"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTest8012_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewTest8012_1"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Dev (8012)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewTest8012_1"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked_new"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTest8013"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewTest8013"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Test (8013)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewTest8013"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked_new"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTest8014"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewTest8014"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Test (8014)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewTest8014"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked_new"
                        android:tag="mwar"
                        />
                </RelativeLayout>










                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40px"
                    android:layout_marginTop="20px">

                    <Button
                        android:id="@+id/buttonSave"
                        android:layout_width="280px"
                        android:layout_height="100px"
                        android:layout_marginRight="45px"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_yellow_white_border_selector"
                        android:text="SAVE"
                        android:textColor="@drawable/text_color_white_alpha_selector"
                        android:textSize="@dimen/button_text_size" />

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="280px"
                        android:layout_height="100px"
                        android:layout_marginLeft="45px"
                        android:background="@drawable/button_yellow_white_border_selector"
                        android:text="CANCEL"
                        android:textColor="@drawable/text_color_white_alpha_selector"
                        android:textSize="@dimen/button_text_size" />
                </RelativeLayout>
                


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>