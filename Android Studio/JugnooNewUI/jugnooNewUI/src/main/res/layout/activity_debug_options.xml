<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/white_light_grey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:splitMotionEvents="false"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/debug"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_40" />

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="80.7px"
                android:layout_height="96.9px"
                android:layout_marginLeft="5px"
                android:padding="30px"
                android:src="@drawable/ic_back_selector"
                android:tag="mwar" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="@drawable/shadow_down"
            />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false" >

            <LinearLayout
                android:id="@+id/linearLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_light_grey"
                android:orientation="vertical"
                android:splitMotionEvents="false" >


                <TextView
                    android:id="@+id/textViewDebugOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Debug Options"
                    android:textSize="34px"
                    android:textColor="@color/black_text"
                    android:background="@color/white_dark1"
                    android:padding="20px"

                    />

                <RelativeLayout
                    android:id="@+id/relativeLayoutShowAllDrivers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewShowAllDrivers"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Show All Drivers"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewShowAllDrivers"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutShowDriverInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewShowDriverInfo"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Show Driver Information"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewShowDriverInfo"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked"
                        android:tag="mwar"
                        />
                </RelativeLayout>









                <TextView
                    android:id="@+id/textViewServerEnv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Server Environment"
                    android:textSize="34px"
                    android:textColor="@color/black_text"
                    android:background="@color/white_dark1"
                    android:padding="20px"

                    />

                <RelativeLayout
                    android:id="@+id/relativeLayoutLive4012"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewLive4012"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Live (4012)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewLive4012"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTest8012"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewTest8012"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Training / Dev (8012)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewTest8012"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked"
                        android:tag="mwar"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/relativeLayoutTest8013"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewTest8013"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Test (8013)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewTest8013"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTest8014"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewTest8014"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Test (8014)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewTest8014"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTest8015"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/textViewTest8015"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text="Test (8015)"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewTest8015"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/editTextCustom"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="30px"
                        android:text=""
                        android:hint="Custom URL"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewCustom"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked"
                        android:tag="mwar"
                        />
                </RelativeLayout>










                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40px"
                    android:layout_marginTop="20px">

                    <Button
                        android:id="@+id/buttonSave"
                        android:layout_width="280px"
                        android:layout_height="100px"
                        android:layout_marginRight="45px"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_theme"
                        android:text="SAVE"
                        android:textColor="@drawable/text_color_white_alpha_selector"
                        android:textSize="@dimen/button_text_size" />

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="280px"
                        android:layout_height="100px"
                        android:layout_marginLeft="45px"
                        android:background="@drawable/button_theme"
                        android:text="CANCEL"
                        android:textColor="@drawable/text_color_white_alpha_selector"
                        android:textSize="@dimen/button_text_size" />
                </RelativeLayout>


                <Button
                    android:id="@+id/buttonRefreshGCM"
                    android:layout_width="280px"
                    android:layout_height="70px"
                    android:layout_marginLeft="45px"
                    android:layout_marginBottom="40px"
                    android:background="@drawable/button_theme"
                    android:text="Refresh GCM"
                    android:textColor="@drawable/text_color_white_alpha_selector"
                    android:textSize="26px" />


                <TextView
                    android:id="@+id/textViewScroll"
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:textSize="28px"/>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>