<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color_F7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_min_order"
        android:layout_width="match_parent"
        android:background="#FFEDE4"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_min_order_label"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:paddingStart="60px"
            android:paddingEnd="60px"
            android:paddingTop="22px"
            android:paddingBottom="22px"
            android:textSize="28px"
            app:typekitFont="maven"

            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/labelOrMinOrder"
            android:layout_gravity="center"
            app:typekitFont="@string/maven"
            android:text="@string/label_or_above_order_via_fatafat"
            android:textSize="25px"
            android:textColor="@color/text_color"
            android:layout_marginBottom="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_via_fatafaat"
            android:textColor="#ff742c"
            android:textSize="34px"
            android:paddingBottom="22px"
            android:gravity="center"
            android:text="@string/action_order_via_fatafat"
            app:typekitFont="maven"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

       <!-- <View  android:layout_width="match_parent"
            android:background="@drawable/shadow_down_new"
            android:layout_height="8dp"/>-->
    </LinearLayout>



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/layout_min_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px_20">

            <!-- Delivery Address view -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewDeliveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="26px"
                    android:text="@string/delivery_address"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    android:visibility="visible" />


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8px"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="10px"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="4px">

                    <RelativeLayout
                        android:id="@+id/relativeLayoutDeliveryAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_transparent_menu_item_selector"
                        android:minHeight="58dp">

                        <ImageView
                            android:id="@+id/imageViewAddressType"
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20px"
                            android:src="@drawable/ic_loc_other"
                            android:tag="mwar" />

                        <LinearLayout
                            android:layout_width="500px"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10px"
                            android:layout_marginEnd="25px"
                            android:layout_marginTop="25px"
                            android:layout_toEndOf="@+id/imageViewAddressType"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewAddressName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Home"
                                android:textColor="@color/text_color_light_selector"
                                android:textSize="30px"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/textViewAddressValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4px"
                                android:text="Add Address"
                                android:textColor="@color/text_color_light"
                                android:textSize="26px" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_no_address_alert"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:tag="@string/dont_touch_me"
                            android:text="Please confirm delivery address."
                            android:textColor="@color/red_alert_no_address"
                            android:textSize="14.5sp"
                            android:visibility="gone"
                            app:typekitFont="@string/maven_r" />

                        <ImageView
                            android:id="@+id/imageViewDeliveryAddressForward"
                            style="@style/back_image"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="5px"
                            android:rotation="180" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!-- Delivery From view -->
            <LinearLayout
                android:id="@+id/llDeliveryFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="26px"
                    android:text="@string/delivery_from"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    android:visibility="visible"
                    app:typekitFont="maven" />


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8px"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="14px"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="4px">

                    <RelativeLayout
                        android:id="@+id/rlDeliveryFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_transparent_menu_item_selector"
                        android:minHeight="116px">

                        <ImageView
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20px"
                            android:padding="10px"
                            android:src="@drawable/ic_restaurant"
                            android:tag="mwar" />

                        <TextView
                            android:id="@+id/tvRestName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/px_80"
                            android:layout_marginEnd="@dimen/px_20"
                            android:layout_marginTop="@dimen/px_25"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="30px"
                            app:typekitFont="maven" />

                        <TextView
                            android:id="@+id/tvRestAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvRestName"
                            android:layout_marginBottom="@dimen/px_25"
                            android:layout_marginStart="@dimen/px_80"
                            android:layout_marginEnd="@dimen/px_20"
                            android:layout_marginTop="4px"
                            android:text=""
                            android:textColor="@color/text_color_light"
                            android:textSize="26px"
                            app:typekitFont="@string/maven_r" />

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!-- Delivery Slot view-->
            <LinearLayout
                android:id="@+id/linearLayoutDeliverySlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_40"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewDeliverySlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="26px"
                    android:text="@string/delivery_slot"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    android:visibility="visible" />


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8px"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="10px"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="4px">

                    <TextView
                        android:id="@+id/textViewNoDeliverySlot"
                        android:layout_width="wrap_content"
                        android:layout_height="95px"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/no_delivery_slot"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"
                        android:visibility="gone" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerViewDeliverySlots"
                        android:layout_width="match_parent"
                        android:layout_height="95px"
                        android:splitMotionEvents="false"
                        android:visibility="visible" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!-- Cart view-->
            <include layout="@layout/layout_fresh_cart" />

            <!-- Star Saving view-->
            <include layout="@layout/layout_fresh_star_saving" />

            <!-- Become a jugnoo star-->
            <include layout="@layout/layout_fresh_become_star" />

            <!-- Payment view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewPaymentVia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="26px"
                    android:text="@string/payment_via"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    android:visibility="visible" />


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8px"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="10px"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="4px">


                    <LinearLayout
                        android:id="@+id/linearLayoutWalletContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5px"
                        android:layout_marginTop="5px"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/relativeLayoutPaytm"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewPaytmRadio"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginStart="30px" />

                                <ImageView
                                    android:layout_width="84px"
                                    android:layout_height="27px"
                                    android:layout_marginStart="24px"
                                    android:src="@drawable/ic_paytm_no_padding"
                                    android:tag="mwar" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewPaytmValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="30px"
                                android:text="00"
                                android:textColor="@color/text_green_color"
                                android:textSize="@dimen/text_size_30" />

                            <ImageView
                                android:id="@+id/imageViewAddPaytm"
                                android:layout_width="52px"
                                android:layout_height="53px"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="30px"
                                android:src="@drawable/ic_add_checkout"
                                android:tag="mwar" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutMobikwik"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewRadioMobikwik"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginStart="30px" />

                                <ImageView
                                    android:layout_width="120px"
                                    android:layout_height="36px"
                                    android:layout_marginStart="24px"
                                    android:src="@drawable/ic_mobikwik_no_padding"
                                    android:tag="mwar" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewMobikwikValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="30px"
                                android:text="00"
                                android:textColor="@color/text_green_color"
                                android:textSize="@dimen/text_size_30" />

                            <ImageView
                                android:id="@+id/imageViewAddMobikwik"
                                android:layout_width="52px"
                                android:layout_height="53px"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="30px"
                                android:src="@drawable/ic_add_checkout"
                                android:tag="mwar" />

                        </RelativeLayout>


                        <include
                            layout="@layout/layout_icici_upi_payment_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/px_30"
                            android:layout_marginEnd="@dimen/px_30"
                            />


                        <RelativeLayout
                            android:id="@+id/relativeLayoutFreeCharge"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewRadioFreeCharge"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginStart="30px" />

                                <ImageView
                                    android:layout_width="123px"
                                    android:layout_height="28px"
                                    android:layout_marginStart="24px"
                                    android:src="@drawable/ic_freecharge_no_padding"
                                    android:tag="mwar" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewFreeChargeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="30px"
                                android:text="00"
                                android:textColor="@color/text_green_color"
                                android:textSize="@dimen/text_size_30" />

                            <ImageView
                                android:id="@+id/imageViewAddFreeCharge"
                                android:layout_width="52px"
                                android:layout_height="53px"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="30px"
                                android:src="@drawable/ic_add_checkout"
                                android:tag="mwar" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutJugnooPay"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewRadioJugnooPay"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginStart="30px" />

                                <ImageView
                                    android:layout_width="45px"
                                    android:layout_height="45px"
                                    android:layout_marginStart="23px"
                                    android:src="@drawable/ic_pay_grey"
                                    android:tag="mwar" />

                                <TextView
                                    android:id="@+id/textViewJugnooPay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="14px"
                                    android:text="@string/jugnoo_pay"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_34" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imageViewAddJugnooPay"
                                android:layout_width="52px"
                                android:layout_height="53px"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="30px"
                                android:src="@drawable/ic_add_checkout"
                                android:tag="mwar" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutCash"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewCashRadio"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginStart="30px" />

                                <ImageView
                                    android:layout_width="47px"
                                    android:layout_height="25px"
                                    android:layout_marginStart="24px"
                                    android:src="@drawable/ic_cash_no_padding"
                                    android:tag="mwar" />

                                <TextView
                                    android:id="@+id/textViewCash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16px"
                                    android:text="@string/cash"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_34" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlUPI"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivUPI"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginStart="30px" />


                                <TextView
                                    android:id="@+id/tvUPI"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16px"
                                    android:text="@string/other_modes_to_pay"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_34"
                                    app:typekitFont="maven" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlOtherModesToPay"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivOtherModesToPay"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginStart="30px" />


                                <TextView
                                    android:id="@+id/tvOtherModesToPay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16px"
                                    android:text="@string/other_modes_to_pay"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_34"
                                    app:typekitFont="maven" />

                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <!-- Offer view-->
            <LinearLayout
                android:id="@+id/linearLayoutOffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewOffers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="26px"
                    android:text="@string/offers"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    android:visibility="visible" />


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8px"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="15px"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="4px">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/listViewOffers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/transparent"
                        android:dividerHeight="0dp"
                        android:splitMotionEvents="false"/>


                </android.support.v7.widget.CardView>


            </LinearLayout>

            <!-- Instruction view-->
            <LinearLayout
                android:id="@+id/linearLayoutDeliveryInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewDeliveryInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingStart="26px"
                    android:text="@string/delivery_instructions"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    android:visibility="visible" />


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8px"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="10px"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="4px">

                    <EditText
                        android:id="@+id/editTextDeliveryInstructions"
                        android:layout_width="match_parent"
                        android:layout_height="116px"
                        android:layout_marginStart="36px"
                        android:layout_marginEnd="36px"
                        android:background="@color/transparent"
                        android:gravity="start"
                        android:hint="@string/add_special_notes"
