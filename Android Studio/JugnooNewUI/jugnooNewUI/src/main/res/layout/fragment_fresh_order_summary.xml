<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_fresh_invoice"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:id="@+id/linearLayoutReceipt"
            android:layout_width="660px"
            android:layout_height="900px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            >

            <ImageView
                android:layout_width="53px"
                android:layout_height="900px"
                android:background="@drawable/ic_ride_summary_line"
                />

            <ImageView
                android:layout_width="53px"
                android:layout_height="900px"
                android:background="@drawable/ic_ride_summary_line"
                android:rotation="180"
                android:layout_alignParentRight="true"
                />

            <LinearLayout
                android:layout_width="562px"
                android:layout_height="892px"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4px"
                android:layout_marginLeft="-6px"
                android:layout_marginTop="4px"
                android:layout_marginRight="-6px"
                android:background="@drawable/background_white_top_bottom_border"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/textViewOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24"
                        android:text="@string/order_id"
                        android:layout_marginTop="15px"
                        android:layout_marginBottom="15px"
                        />

                    <TextView
                        android:id="@+id/textViewOrderIdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24"
                        android:text="TEMP"
                        android:layout_marginLeft="5px"
                        android:layout_marginTop="15px"
                        android:layout_marginBottom="15px"
                        />

                    
                </LinearLayout>
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"
                    />
                
                
                <LinearLayout
                    android:layout_width="560px"
                    android:layout_height="102px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5px"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/imageViewOrderDeliveryDate"
                            android:layout_width="35px"
                            android:layout_height="38px"
                            android:layout_marginLeft="20px"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_order_summary_date"
                            android:tag="mwar"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginLeft="10px"
                            >

                            <TextView
                                android:id="@+id/textViewOrderDeliveryDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/delivery_date"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_18"/>

                            <TextView
                                android:id="@+id/textViewOrderDeliveryDateValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="04 Apr, 16"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_22"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_height="100px"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/imageViewOrderDeliverySlot"
                            android:layout_width="38px"
                            android:layout_height="38px"
                            android:layout_marginLeft="20px"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_order_summary_slot"
                            android:tag="mwar"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_marginLeft="10px"
                            >

                            <TextView
                                android:id="@+id/textViewOrderDeliverySlot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/delivery_slot"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_18"/>

                            <TextView
                                android:id="@+id/textViewOrderDeliverySlotValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10:00 - 02:00 PM"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_22"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"
                    />

                <TextView
                    android:id="@+id/textViewOrderReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="68px"
                    android:gravity="center"
                    android:text="@string/order_receipt"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewOrderItems"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:splitMotionEvents="false"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <TextView
                        android:id="@+id/textViewTotalAmount"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/total_amount"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewTotalAmountValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <TextView
                        android:id="@+id/textViewDeliveryCharges"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/delivery_charges"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewDeliveryChargesValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    >

                    <TextView
                        android:id="@+id/textViewAmountPayable"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/amount_payable"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewAmountPayableValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"
                    />

                <TextView
                    android:id="@+id/textViewPaymentBy"
                    android:layout_width="match_parent"
                    android:layout_height="68px"
                    android:gravity="center"
                    android:text="@string/payment_by"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    >

                    <TextView
                        android:id="@+id/textViewPaymentMode"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/paytm"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewPaymentModeValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>


            </LinearLayout>




        </RelativeLayout>

        <Button
            android:id="@+id/buttonOk"
            style="@style/ButtonTheme"
            android:layout_below="@+id/linearLayoutReceipt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:text="@string/ok"
            />

    </RelativeLayout>

</RelativeLayout>