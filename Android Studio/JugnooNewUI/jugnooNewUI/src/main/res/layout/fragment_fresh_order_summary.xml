<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayoutRoot"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="1134px"
                android:background="@drawable/bg_fresh_invoice"
                android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/linearLayoutReceipt"
        android:layout_width="660px"
        android:layout_height="900px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15px">

        <ImageView
            android:layout_width="53px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_ride_summary_line"/>

        <ImageView
            android:layout_width="53px"
            android:layout_height="1000px"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_ride_summary_line"
            android:rotation="180"/>

        <ScrollView
            android:layout_width="562px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6px"
            android:layout_marginLeft="-6px"
            android:layout_marginRight="-6px"
            android:layout_marginTop="6px"
            android:background="@drawable/background_white_top_bottom_border">

            <LinearLayout
                android:layout_width="562px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="350px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewOrderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15px"
                            android:layout_marginLeft="15px"
                            android:layout_marginTop="15px"
                            android:text="@string/order_id"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_24"/>

                        <TextView
                            android:id="@+id/textViewOrderIdValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15px"
                            android:layout_marginLeft="5px"
                            android:layout_marginTop="15px"
                            android:text="TEMP"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_24"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewOrderTimeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15px"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"/>


                <LinearLayout
                    android:layout_width="560px"
                    android:layout_height="102px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="250px"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewOrderDeliveryDate"
                            android:layout_width="35px"
                            android:layout_height="38px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20px"
                            android:src="@drawable/ic_order_summary_date"
                            android:tag="mwar"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10px"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewOrderDeliveryDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/delivery_date"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/text_size_18"/>

                            <TextView
                                android:id="@+id/textViewOrderDeliveryDateValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="04 Apr, 16"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_24"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300px"
                        android:layout_height="100px"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageViewOrderDeliverySlot"
                            android:layout_width="38px"
                            android:layout_height="38px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="0px"
                            android:src="@drawable/ic_order_summary_slot"
                            android:tag="mwar"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10px"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewOrderDeliverySlot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/delivery_slot"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/text_size_18"/>

                            <TextView
                                android:id="@+id/textViewOrderDeliverySlotValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="10:00 PM - 02:00 PM"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_24"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textViewOrderAddressValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15px"
                        android:layout_marginRight="15px"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="TEMP"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"/>

                <TextView
                    android:id="@+id/textViewOrderReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="68px"
                    android:gravity="center"
                    android:text="@string/order_receipt"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewOrderItems"
                    android:layout_width="match_parent"
                    android:layout_height="240px"
                    android:layout_marginBottom="5px"
                    android:layout_marginTop="5px"
                    android:fadeScrollbars="true"
                    android:scrollbars="vertical"
                    android:splitMotionEvents="false"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <TextView
                        android:id="@+id/textViewTotalAmount"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/total_amount"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewTotalAmountValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px">

                    <TextView
                        android:id="@+id/textViewDeliveryCharges"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/delivery_charges"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewDeliveryChargesValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/discountLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px">

                    <TextView
                        android:id="@+id/textViewDiscount"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/discount"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewDiscountValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jclayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px">

                    <TextView
                        android:id="@+id/textViewjc"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/jugnoo_cash"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewjcValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/paytmlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px">

                    <TextView
                        android:id="@+id/textViewpaytm"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/paytm_cash"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewpaytmValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="15px">

                    <TextView
                        android:id="@+id/textViewAmountPayable"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/amount_payable"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewAmountPayableValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"/>

                <TextView
                    android:id="@+id/textViewPaymentBy"
                    android:layout_width="match_parent"
                    android:layout_height="68px"
                    android:gravity="center"
                    android:text="@string/payment_by"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="8px"
                    android:layout_marginRight="8px"
                    android:background="@color/text_color_hint"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:layout_marginTop="20px">

                    <TextView
                        android:id="@+id/textViewPaymentMode"
                        android:layout_width="340px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:gravity="center_vertical"
                        android:text="@string/paytm"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                    <TextView
                        android:id="@+id/textViewPaymentModeValue"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:gravity="center_vertical|right"
                        android:text="0"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"/>

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

    <Button
        android:id="@+id/buttonCancelOrder"
        style="@style/ButtonTheme"
        android:layout_below="@+id/linearLayoutReceipt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15px"
        android:text="@string/cancel_order"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/order_complete"
        android:layout_width="660px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutReceipt"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/feedbackBtn"
            android:layout_width="0px"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/linearLayoutReceipt"
            android:layout_centerHorizontal="true"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:background="@drawable/button_theme"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"/>

        <Button
            android:id="@+id/reorderBtn"
            android:layout_width="0px"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/linearLayoutReceipt"
            android:layout_centerHorizontal="true"
            android:layout_margin="15px"
            android:layout_weight="1"
            android:background="@drawable/button_theme"
            android:text="Re-Order"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"/>

    </LinearLayout>


</RelativeLayout>