<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafbfc"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="111dp"
                    android:layout_height="111dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/name_char"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="R"
                    android:visibility="gone"
                    android:textColor="@color/whiteTxtColor"
                    android:textSize="@dimen/large_text_view_size" />
            </FrameLayout>

            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="@dimen/text_view_size"
                android:textColor="@color/lightBlackTxtColor" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/edit_info_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:padding="7dp"
                    android:src="@drawable/icon_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:text="@string/info_string"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_view_size"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@color/generalTxtColor"/>


            <EditText
                android:id="@+id/first_name_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:hint="@string/full_name_string"
                android:inputType="textCapSentences"
                android:nextFocusDown="@+id/email_et"
                android:singleLine="true"
                android:textColor="@color/lightBlackTxtColor"
                android:textColorHint="@color/hintColor"
                android:textSize="@dimen/text_view_size" />


            <EditText
                android:id="@+id/email_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:hint="@string/email_string"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@+id/phone_et"
                android:singleLine="true"
                android:textColor="@color/lightBlackTxtColor"
                android:textColorHint="@color/hintColor"
                android:textSize="@dimen/text_view_size" />


            <RelativeLayout
                android:id="@+id/pswd_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/down_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="7dp"
                    android:src="@drawable/icon_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="10dp"
                    android:text="@string/change_pswd_string"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_view_size" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/pswd_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:visibility="gone">


                <EditText
                    android:id="@+id/old_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="@string/old_password_string"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/new_password_et"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/et_text_size" />


                <EditText
                    android:id="@+id/new_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="@string/new_password_string"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/confirm_password_et"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/et_text_size" />


                <EditText
                    android:id="@+id/confirm_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:hint="@string/new_confirm_password_string"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/et_text_size" />

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@color/generalTxtColor"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textViewChangeMPIN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:padding="3dp"
                    android:layout_centerVertical="true"
                    android:text="CHANGE MPIN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_view_size" />

                <RelativeLayout
                    android:id="@+id/logout_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/logout_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/imageViewLogout"
                        android:text="@string/logout_string"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_view_size" />

                    <ImageView
                        android:id="@+id/imageViewLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/logut" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>