<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/refer_a_driver"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_title_text_size" />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image" />
    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar">

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCameAcross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45px"
                android:gravity="center"
                android:text="@string/came_across_auto_driver"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_32" />

            <ImageView
                android:layout_width="435px"
                android:layout_height="226px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55px"
                android:src="@drawable/ic_promotions_driver_refer"
                android:tag="mwar" />

            <TextView
                android:id="@+id/textViewKindlyRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34px"
                android:visibility="gone"
                android:gravity="center"
                android:text="@string/kindly_recommend_us_to_them"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_32" />

            <TextView
                android:id="@+id/textViewIfTheyAreInterested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="34px"
                android:gravity="center"
                android:text="@string/if_they_are_interested"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_32" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginStart="40px"
                android:layout_marginEnd="40px"
                android:layout_marginTop="60px">

                <ImageView
                    android:layout_width="18px"
                    android:layout_height="27px"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5px"
                    android:src="@drawable/ic_user_email"
                    android:tag="mhar" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="44px"
                    android:background="#0000"
                    android:digits="@string/digits_characters_numbers"
                    android:gravity="center_vertical"
                    android:hint="@string/name_of_driver"
                    android:inputType="textNoSuggestions|textCapSentences"
                    android:maxLength="50"
                    android:paddingStart="10px"
                    android:paddingEnd="20px"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/text_size_34" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2px"
                    android:src="@color/text_color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginStart="40px"
                android:layout_marginEnd="40px">

                <ImageView
                    android:layout_width="27px"
                    android:layout_height="27px"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="4px"
                    android:src="@drawable/ic_phone"
                    android:tag="mhar" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="44px"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="@string/contact_number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingStart="10px"
                    android:paddingEnd="20px"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/text_size_34" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2px"
                    android:src="@color/text_color_hint" />

            </RelativeLayout>


            <Button
                android:id="@+id/buttonRefer"
                style="@style/ButtonTheme"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60px"
                android:layout_marginTop="60px"
                android:text="@string/refer" />

            <TextView
                android:id="@+id/textViewScroll"
                android:layout_width="1px"
                android:layout_height="1px" />


        </LinearLayout>

    </ScrollView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down" />


</RelativeLayout>