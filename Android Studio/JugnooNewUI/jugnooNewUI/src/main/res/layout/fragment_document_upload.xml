<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color_F7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DocumentUploadFragment">

    <include app:layout_constraintTop_toTopOf="parent"
        layout="@layout/list_item_documents" />

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:background="@drawable/bg_theme_color_selector"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>