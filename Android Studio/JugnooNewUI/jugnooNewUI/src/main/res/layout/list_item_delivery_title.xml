<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rLCategory"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/recent_orders_top_elements_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_title"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp"
        android:padding="-10dp"
        android:visibility="gone"
        android:src="@drawable/ic_fresh_item_placeholder"/>

    <TextView
        android:id="@+id/tv_cateogory_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAllCaps="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/icon_title"
        android:text="Ongoing Orders"
        android:textColor="@color/text_color"
        android:textSize="14.3sp"
        app:font="@string/maven"/>

    <TextView
        android:id="@+id/tv_category_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="See All"
        android:layout_marginRight="5dp"
        android:textSize="14.3sp"
        app:font="@string/maven"
        android:visibility="visible"
        android:textColor="@color/text_color"
        android:background="?android:attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/iv_category_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_10"
        android:rotation="-90"
        android:visibility="gone"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_arrow_grey"/>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_cateogory_title"
        android:background="@color/stroke_light_grey_alpha"/>-->

</RelativeLayout>