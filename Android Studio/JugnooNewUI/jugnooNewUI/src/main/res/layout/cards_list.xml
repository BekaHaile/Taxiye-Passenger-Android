<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    android:id="@+id/cards_view_foreground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/white_background_rounded_corner_selector"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity=""
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:drawablePadding="5dp"
        android:maxLines="1"
        tools:text="eqeqweqwe"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:layout_toStartOf="@+id/delete"
        app:typekitFont="@string/maven_r"

        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="36dp"
        android:layout_height="41dp"
        android:padding="12dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackground"
        android:theme="@style/GreyHighlight"
        android:scaleType="fitXY"
        android:src="@drawable/ic_delete_feed"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>