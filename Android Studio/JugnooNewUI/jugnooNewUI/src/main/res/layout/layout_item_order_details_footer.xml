<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:background="@color/text_color_hint"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/textViewTotalAmount"
                android:layout_width="340px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="@string/total_amount"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_26"/>

            <TextView
                android:id="@+id/textViewTotalAmountValue"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/delivery_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px">

            <TextView
                android:id="@+id/textViewDeliveryCharges"
                android:layout_width="340px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="@string/delivery_charges"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_26"/>

            <TextView
                android:id="@+id/textViewDeliveryChargesValue"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/discountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px">

            <TextView
                android:id="@+id/textViewDiscount"
                android:layout_width="340px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="@string/discount"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_26"/>

            <TextView
                android:id="@+id/textViewDiscountValue"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jclayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px">

            <TextView
                android:id="@+id/textViewjc"
                android:layout_width="340px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="@string/jugnoo_cash"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_26"/>

            <TextView
                android:id="@+id/textViewjcValue"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/paytmlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px">

            <TextView
                android:id="@+id/textViewpaytm"
                android:layout_width="340px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="@string/paytm_cash"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_26"/>

            <TextView
                android:id="@+id/textViewpaytmValue"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="15px">

            <TextView
                android:id="@+id/textViewAmountPayable"
                android:layout_width="340px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="@string/amount_payable"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

            <TextView
                android:id="@+id/textViewAmountPayableValue"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:background="@color/text_color_hint"/>

        <TextView
            android:id="@+id/textViewPaymentBy"
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:gravity="center"
            android:text="@string/payment_by"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_26"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:background="@color/text_color_hint"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/textViewPaymentMode"
                android:layout_width="340px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:text="@string/paytm"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

            <TextView
                android:id="@+id/textViewPaymentModeValue"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>