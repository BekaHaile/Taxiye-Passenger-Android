<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlTopBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:tag="@string/dont_touch_me"
        >

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:contentDescription="@string/back_button"
            android:padding="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_selector"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/ivBack"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/filters"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_17"
            app:font="maven"
            />

        <TextView
            android:id="@+id/tvReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/capsule_text_color_selector"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_5"
            android:text="@string/reset"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            app:font="maven"

            />

        <EditText
            android:id="@+id/etSearchCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@+id/ivBack"
            android:background="@drawable/bg_menu_item_color_f7_r"
            android:gravity="center_vertical"
            android:hint="@string/start_typing_a_cuisine"
            android:inputType="text"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_30"
            android:paddingTop="@dimen/dp_9"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_hint"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="@dimen/sp_13"
            android:visibility="gone"
            app:font="maven"
            />

        <ImageView
            android:id="@+id/ivSearchCuisine"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignRight="@+id/etSearchCuisine"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_6"
            android:src="@drawable/ic_filter_search"
            android:visibility="gone"
            />


    </RelativeLayout>

