                        android:gravity="center"
                        android:paddingBottom="30px"
                        android:paddingTop="30px"
                        android:text="@string/min_60"
                        android:textColor="@color/text_color_selector"
                        android:textSize="@dimen/text_size_26"
                        />

                    <ImageView
                        android:id="@+id/imageViewDT60"
                        android:layout_width="match_parent"
                        android:layout_height="8px"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_rectangle_gradient_normal"
                        />

                </RelativeLayout>

            </LinearLayout>


            <Button
                android:id="@+id/buttonApply"
                style="@style/ButtonTheme"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="70px"
                android:layout_marginTop="32px"
                android:text="@string/apply"
                android:textSize="@dimen/text_size_34"
                android:visibility="gone"
                />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/llCuisinesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTopBar"
        android:background="@color/menu_item_selector_color_F7"
        android:orientation="vertical"
        android:tag="@string/dont_touch_me"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="@string/cuisines"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_12"
            app:font="maven"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCuisinesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/bg_white_r_b_new"
            android:fadeScrollbars="true"
            android:scrollbars="vertical"
            android:splitMotionEvents="false"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_new_height"
        android:layout_below="@+id/rlTopBar"
        android:background="@drawable/shadow_down_new"
        />

</RelativeLayout>