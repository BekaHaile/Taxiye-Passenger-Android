<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollViewRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu_item_selector_color"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewSortBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:gravity="center_vertical"
            android:text="@string/sort_by"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_24"
            android:visibility="visible"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewSort"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="4px"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/relativeLayoutPopularity"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/bg_transparent_menu_item_selector">


                    <TextView
                        android:id="@+id/textViewPopularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:gravity="center_vertical"
                        android:text="@string/popularity"
                        android:textColor="@color/text_color_selector"
                        android:textSize="@dimen/text_size_32"
                        android:visibility="visible"
                        />

                    <View
                        android:layout_width="2px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="32px"
                        android:layout_toLeftOf="@+id/imageViewRadioPopularity"
                        android:background="@color/stroke_light_grey_alpha"
                        />

                    <ImageView
                        android:id="@+id/imageViewRadioPopularity"
                        android:layout_width="33px"
                        android:layout_height="33px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36px"
                        android:src="@drawable/ic_radio_button_normal"
                        android:tag="mwar"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44px"
                        android:layout_marginRight="44px"
                        android:background="@color/stroke_light_grey_alpha"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutDistance"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/bg_transparent_menu_item_selector">


                    <TextView
                        android:id="@+id/textViewDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:gravity="center_vertical"
                        android:text="@string/distance"
                        android:textColor="@color/text_color_selector"
                        android:textSize="@dimen/text_size_32"
                        android:visibility="visible"
                        />

                    <View
                        android:layout_width="2px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="32px"
                        android:layout_toLeftOf="@+id/imageViewRadioDistance"
                        android:background="@color/stroke_light_grey_alpha"
                        />

                    <ImageView
                        android:id="@+id/imageViewRadioDistance"
                        android:layout_width="33px"
                        android:layout_height="33px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36px"
                        android:src="@drawable/ic_radio_button_normal"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="44px"
                        android:layout_marginRight="44px"
                        android:background="@color/stroke_light_grey_alpha"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutPrice"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:background="@drawable/bg_transparent_menu_item_selector"
                    >


                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40px"
                        android:gravity="center_vertical"
                        android:text="@string/price"
                        android:textColor="@color/text_color_selector"
                        android:textSize="@dimen/text_size_32"
                        android:visibility="visible"
                        />

                    <View
                        android:layout_width="2px"
                        android:layout_height="50px"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="32px"
                        android:layout_toLeftOf="@+id/imageViewRadioPrice"
                        android:background="@color/stroke_light_grey_alpha"
                        />

                    <ImageView
                        android:id="@+id/imageViewRadioPrice"
                        android:layout_width="33px"
                        android:layout_height="33px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="36px"
                        android:src="@drawable/ic_radio_button_normal"
                        />

                </RelativeLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/textViewCuisines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:gravity="center_vertical"
            android:text="@string/cuisines"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_24"
            android:visibility="visible"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewCuisines"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="4px"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <com.dpizarro.autolabel.library.AutoLabelUI
                    android:id="@+id/cuisinesView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    />


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/textViewMinimumOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:gravity="center_vertical"
            android:text="@string/minimum_order"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_24"
            android:visibility="visible"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewMinimumOrder"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="4px"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textViewMO150"
                    android:layout_width="188px"
                    android:layout_height="40px"
                    android:background="@drawable/background_white_rounded_bordered"
                    android:gravity="center"
                    android:text="@string/less_than_150"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    />

                <TextView
                    android:id="@+id/textViewMO250"
                    android:layout_width="188px"
                    android:layout_height="40px"
                    android:layout_marginLeft="22px"
                    android:background="@drawable/background_white_rounded_bordered"
                    android:gravity="center"
                    android:text="@string/less_than_250"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    />

                <TextView
                    android:id="@+id/textViewMO500"
                    android:layout_width="188px"
                    android:layout_height="40px"
                    android:layout_marginLeft="22px"
                    android:background="@drawable/background_white_rounded_bordered"
                    android:gravity="center"
                    android:text="@string/less_than_500"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/textViewDeliveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:gravity="center_vertical"
            android:text="@string/delivery_time_wo_colon"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_24"
            android:visibility="visible"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewDeliveryTime"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="4px"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textViewDT30"
                    android:layout_width="188px"
                    android:layout_height="40px"
                    android:background="@drawable/background_white_rounded_bordered"
                    android:gravity="center"
                    android:text="@string/min_30"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    />

                <TextView
                    android:id="@+id/textViewDT45"
                    android:layout_width="188px"
                    android:layout_height="40px"
                    android:layout_marginLeft="22px"
                    android:background="@drawable/background_white_rounded_bordered"
                    android:gravity="center"
                    android:text="@string/min_45"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    />

                <TextView
                    android:id="@+id/textViewDT60"
                    android:layout_width="188px"
                    android:layout_height="40px"
                    android:layout_marginLeft="22px"
                    android:background="@drawable/background_white_rounded_bordered"
                    android:gravity="center"
                    android:text="@string/min_60"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/buttonApply"
            style="@style/ButtonTheme"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="70px"
            android:layout_marginTop="32px"
            android:text="@string/apply"
            android:textSize="@dimen/text_size_34"
            />

    </LinearLayout>

</ScrollView>