<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false">

        <RelativeLayout
            android:id="@+id/relativeLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@android:color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:scrimVisibleHeightTrigger="85dp">
                <!-- app:scrimAnimationDuration="400"

                 app:scrimVisibleHeightTrigger="50px">-->


                <include layout="@layout/restaurant_collapse_details" />


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_bar_height"
                    android:background="@android:color/white"
                    android:contentInsetLeft="0dp"
                    android:contentInsetStart="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <!--  -->
                    <!--app:layout_scrollFlags="scroll|enterAlways|snap">-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/topBarMain"
                            layout="@layout/layout_top_bar_fresh" />

                    </LinearLayout>

                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMinOrder"
                android:layout_width="match_parent"
                android:layout_height="68px"
                android:background="@color/text_color"
                android:gravity="center"
                android:text="@string/minimum_order"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_28"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlGenieHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginBottom="@dimen/px_170"
            android:layout_gravity="bottom|left"
            android:visibility="visible">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="60px"
                android:layout_below="@+id/tvGenieHelp"
                android:background="@drawable/triangle_help_text"
                android:rotation="180"
                android:tag="mwar" />

            <TextView
                android:id="@+id/tvGenieHelp"
                android:layout_width="@dimen/px_400"
                android:layout_height="wrap_content"
                android:background="@drawable/background_black_80_r"
                android:padding="15px"
                android:text="Explore more from Jugnoo"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_30" />
        </RelativeLayout>

        <!-- Sort layout-->
        <include layout="@layout/layout_fresh_activity_sort" />

        <include layout="@layout/layout_home_activity_fab_test" />




    </android.support.design.widget.CoordinatorLayout>

    <!-- menu layout -->
    <include layout="@layout/layout_home_activity_menu" />

</android.support.v4.widget.DrawerLayout>