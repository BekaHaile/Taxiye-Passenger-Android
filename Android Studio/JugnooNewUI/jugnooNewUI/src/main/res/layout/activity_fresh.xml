<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sliding_bottom_bg_color">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways|snap">
                <!-- top bar layout -->
                <include
                    android:id="@+id/topBarMain"
                    layout="@layout/layout_top_bar_fresh" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <!--android:layout_height="1038px"-->
        <RelativeLayout
            android:id="@+id/relativeLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayoutCheckoutContainer"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <ImageView
            android:id="@+id/below_shadow"
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:layout_marginTop="@dimen/px_96"
            android:src="@drawable/shadow_down" />



        <LinearLayout
            android:id="@+id/linearLayoutCheckoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6px"
                android:src="@drawable/shadow_up" />

            <TextView
                android:id="@+id/textViewMinOrder"
                android:layout_width="match_parent"
                android:layout_height="68px"
                android:background="@color/text_color"
                android:gravity="center"
                android:text="@string/minimum_order"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_28"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/relativeLayoutCheckoutBar"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:background="@color/white"
                android:splitMotionEvents="false">

                <RelativeLayout
                    android:id="@+id/relativeLayoutLeft"
                    android:layout_width="156px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6px"
                    android:background="@drawable/background_white_grey_light_selector">

                    <RelativeLayout
                        android:id="@+id/relativeLayoutSort"
                        android:layout_width="156px"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_white_grey_light_selector">

                        <View
                            android:layout_width="2px"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="25px"
                            android:layout_marginTop="25px"
                            android:background="@color/text_color_hint" />

                        <ImageView
                            android:id="@+id/imageViewSort"
                            android:layout_width="60px"
                            android:layout_height="25px"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:src="@drawable/ic_sort"
                            android:tag="mwar" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutCart"
                        android:layout_width="156px"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_white_grey_light_selector"
                        android:visibility="visible">

                        <View
                            android:layout_width="2px"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="25px"
                            android:layout_marginTop="25px"
                            android:background="@color/text_color_hint" />

                        <ImageView
                            android:id="@+id/imageViewCart"
                            android:layout_width="46px"
                            android:layout_height="36px"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:src="@drawable/ic_cart_empty"
                            android:tag="mwar" />

                        <TextView
                            android:id="@+id/textViewCartItemsCount"
                            android:layout_width="45px"
                            android:layout_height="45px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="45px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/theme_circle_card"
                            android:gravity="center"
                            android:minWidth="45px"
                            android:padding="8px"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_24" />

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="6px"
                    android:layout_toLeftOf="@+id/relativeRight"
                    android:layout_toRightOf="@+id/relativeLayoutLeft"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/cart_price"
                    android:textSize="@dimen/text_size_38"/>


                <RelativeLayout
                    android:id="@+id/relativeRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="6px">

                    <RelativeLayout
                        android:id="@+id/relativeLayoutCartNew"
                        android:layout_width="132px"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_white_grey_light_selector"
                        android:visibility="visible">

                        <View
                            android:layout_width="2px"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="25px"
                            android:layout_marginTop="25px"
                            android:background="@color/text_color_hint" />

                        <ImageView
                            android:id="@+id/imageViewCartNew"
                            android:layout_width="46px"
                            android:layout_height="36px"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40px"
                            android:src="@drawable/ic_cart_empty"
                            android:tag="mwar" />

                        <TextView
                            android:id="@+id/textViewCartItemsCountNew"
                            android:layout_width="45px"
                            android:layout_height="45px"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="25px"
                            android:layout_marginTop="10px"
                            android:background="@drawable/theme_circle_card"
                            android:gravity="center"
                            android:minWidth="45px"
                            android:padding="8px"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_24"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutCheckout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_white_grey_light_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <View
                            android:layout_width="2px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="25px"
                            android:layout_marginRight="40px"
                            android:layout_marginTop="25px"
                            android:background="@color/text_color_hint" />

                        <TextView
                            android:id="@+id/textViewCheckout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30px"
                            android:singleLine="true"
                            android:text="@string/checkout"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_32"
                            android:visibility="visible" />


                        <ImageView
                            android:id="@+id/imageViewCheckoutForward"
                            android:layout_width="21px"
                            android:layout_height="37px"
                            android:layout_marginRight="35px"
                            android:src="@drawable/ic_arrow_orange"
                            android:tag="mwar" />
                    </LinearLayout>

                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>

        <!-- Sort layout-->
        <include layout="@layout/layout_fresh_activity_sort"/>

        <include layout="@layout/layout_home_activity_fab_test" />

    </android.support.design.widget.CoordinatorLayout>

    <!-- menu layout -->
    <include layout="@layout/layout_home_activity_menu" />

</android.support.v4.widget.DrawerLayout>