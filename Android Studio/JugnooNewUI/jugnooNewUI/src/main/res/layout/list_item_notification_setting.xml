<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20px"
        android:layout_marginStart="30px"
        android:layout_marginEnd="50px"
        android:layout_marginTop="20px"
        android:layout_toStartOf="@+id/imageViewStatus"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNotiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No Current Notifications"
            android:textColor="@color/stroke_color_dark"
            android:textSize="@dimen/text_size_26" />

        <TextView
            android:id="@+id/textViewNotiText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lineSpacingExtra="5px"
            android:text="No Current Notifications"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_28" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewStatus"
        android:layout_width="77px"
        android:layout_height="50px"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10px"
        android:src="@drawable/jugnoo_sticky_off"
        android:tag="mwar" />


</RelativeLayout>