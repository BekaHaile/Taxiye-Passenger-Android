<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearRoot"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="18px"
        android:orientation="vertical"
        android:paddingLeft="4px"
        android:paddingRight="4px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_transparent_menu_item_selector">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330px"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="mwar">

                <ImageView
                    android:id="@+id/imageViewRestaurantImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_meal_place_holder"
                    android:tag="mwar"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_alpha"
                    android:gravity="center"
                    android:text="@string/closed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_32"
                    />

                <RelativeLayout
                    android:id="@+id/relativeLayoutRestaurantCloseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="42px"
                    android:orientation="vertical"
                    android:tag="mwar"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/background_close_time_bordered"
                    android:layout_marginTop="20px"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imageViewRestaurantCloseTime"
                        android:layout_width="21px"
                        android:layout_height="21px"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_exclamation"
                        android:tag="mwar"
                        android:layout_marginLeft="10px"
                        android:layout_centerVertical="true"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/textViewRestaurantCloseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="42px"
                        android:layout_toRightOf="@id/imageViewRestaurantCloseTime"
                        android:gravity="center"
                        android:text="closes in 15 minute"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="8px"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20"/>
                </RelativeLayout>


                    <ImageView
                        android:id="@+id/imageViewAddressLine"
                        android:layout_width="18px"
                        android:layout_height="28px"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_other_location_white"
                        android:tag="mwar"
                        android:background="@color/transparent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="14px"
                        android:layout_marginBottom="15px"/>

                    <TextView
                        android:id="@+id/textViewAddressLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="Sector 28 B, Chandigarh"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20"
                        android:background="@color/transparent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="40px"
                        android:layout_marginBottom="15px"/>
                </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px">


                <LinearLayout
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20px"
                    android:id="@+id/linearLayoutRestaurantName">

                    <TextView
                        android:id="@+id/textViewRestaurantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="Title\nabc"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_34" />

                    <TextView
                        android:id="@+id/textViewRestaurantCusines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10px"
                        android:maxLines="2"
                        android:text="Title"
                        android:textColor="@color/text_color_light_less"
                        android:textSize="@dimen/text_size_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12px"
                    android:layout_marginRight="15px"
                    android:layout_toRightOf="@id/linearLayoutRestaurantName">
                    <TextView
                        android:id="@+id/textViewDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Delivers in 40-60 min"
                        android:gravity="right"
                        android:textColor="@color/order_history_status_color"
                        android:textSize="@dimen/text_size_22"
                       />
                    <TextView
                        android:id="@+id/textViewMinimumOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Minimum Order r399"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"
                        android:gravity="right"
                        android:layout_marginTop="12px"
                       />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>