<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearRoot"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="18px"
        android:orientation="vertical"
        android:paddingLeft="4px"
        android:paddingRight="4px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_transparent_menu_item_selector"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330px"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="mwar">

                <ImageView
                    android:id="@+id/imageViewRestaurantImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_meal_place_holder"
                    android:tag="mwar"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_alpha"
                    android:gravity="center"
                    android:text="@string/closed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_32"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">


                <TextView
                    android:id="@+id/textViewRestaurantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toLeftOf="@+id/textViewAvailability"
                    android:maxLines="2"
                    android:text="Title\nabc"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_34"
                    />


                <TextView
                    android:id="@+id/textViewAvailability"
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:gravity="right"
                    android:text="OPENS AT 11:00 AM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28"
                    android:layout_marginTop="5px"
                    android:textAllCaps="true"
                    />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="10px"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textViewRestaurantCusines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="4px"
                    android:layout_toLeftOf="@+id/textViewAvailability"
                    android:maxLines="2"
                    android:text="Title"
                    android:textColor="@color/text_color_light_less"
                    android:textSize="@dimen/text_size_24"
                    />


                <TextView
                    android:id="@+id/textViewR1"
                    android:layout_width="20px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7px"
                    android:gravity="center"
                    android:tag="mwar"
                    android:text="@string/rupee"
                    android:textColor="@color/green_rupee"
                    android:textSize="@dimen/text_size_30"
                    />

                <TextView
                    android:id="@+id/textViewR2"
                    android:layout_width="20px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7px"
                    android:gravity="center"
                    android:tag="mwar"
                    android:text="@string/rupee"
                    android:textColor="@color/text_color_light_less"
                    android:textSize="@dimen/text_size_30"
                    />


                <TextView
                    android:id="@+id/textViewR3"
                    android:layout_width="20px"
                    android:layout_height="30px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7px"
                    android:gravity="center"
                    android:tag="mwar"
                    android:text="@string/rupee"
                    android:textColor="@color/green_rupee"
                    android:textSize="@dimen/text_size_30"
                    />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>