<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_menu_item_selector_color_selector">


    <ImageView
        android:id="@+id/imageViewRestaurantImage"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:layout_margin="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fresh_item_placeholder"
        android:tag="mwar"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_offer"
        android:layout_width="@dimen/dp_75"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@color/color_orange_menus"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_2"
        android:paddingTop="@dimen/dp_2"
        android:text="20% Promo"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_10"
        android:visibility="visible"
        app:font="@string/maven"/>


    <TextView
        android:id="@+id/textViewRestaurantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toLeftOf="@+id/arrow_forward"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:maxLines="3"
        android:text="Title"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_16"
        app:font="@string/maven"
        />

    <LinearLayout
        android:id="@+id/llRatingStars"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@+id/textViewRestaurantName"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="-5dp"
        >

        <TextView
            android:id="@+id/tvReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:gravity="center_vertical"
            android:text="37 Ratings"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_11"
            app:font="@string/maven_r"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewRestaurantCusines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/llRatingStars"
        android:layout_marginTop="@dimen/dp_5"

        android:layout_toLeftOf="@id/arrow_forward"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:maxLines="3"
        android:text="Title"
        android:textColor="@color/text_color_light_less"
        android:textSize="@dimen/sp_13"
        app:font="@string/maven_r"
        />

    <TextView
        android:id="@+id/textViewAddressLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRestaurantCusines"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:layout_toLeftOf="@id/arrow_forward"
        android:layout_marginRight="@dimen/dp_10"

        android:drawableLeft="@drawable/ic_restaurant_location"
        android:drawablePadding="@dimen/dp_2"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_2"
        android:text="Sector 28 B"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_11"
        app:font="@string/maven"
        />

    <TextView
        android:id="@+id/textViewMinimumOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAddressLine"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:text="Minimum Order 399"
        android:layout_toLeftOf="@id/arrow_forward"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/order_history_status_color"
        android:textSize="@dimen/sp_11"
        app:font="@string/maven"
        />


    <TextView
        android:id="@+id/textViewDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMinimumOrder"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:drawableLeft="@drawable/ic_clock_grey"
        android:drawablePadding="@dimen/dp_4"
        android:text="Delivers in 40-60 min"
        android:layout_toLeftOf="@id/arrow_forward"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_11"
        app:font="@string/maven"
        />

    <TextView
        android:id="@+id/textViewRestaurantCloseTime"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@+id/textViewDelivery"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:background="@drawable/capsule_red_very_light"
        android:drawableLeft="@drawable/ic_exclamation_red"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:text="Closing in 15 minute"
        android:textColor="@color/red_dark_more"
        android:textSize="@dimen/sp_10"
        app:font="@string/maven"
        />


    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_below="@+id/textViewRestaurantCloseTime"
        android:background="@color/stroke_light_grey_alpha"
        />


    <ImageView
        android:id="@+id/arrow_forward"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_11"
        android:src="@drawable/ic_arrow_grey"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        />

</RelativeLayout>