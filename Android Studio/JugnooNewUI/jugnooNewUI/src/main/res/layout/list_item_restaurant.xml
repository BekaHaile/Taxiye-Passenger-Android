<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlRoot"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_menu_item_selector_color_selector">

    
    

<!--    <View
        android:id="@+id/tv_offer_view"
        android:layout_toRightOf="@id/tv_offer"
        android:background="@drawable/drawable_menu_strip_offer_triangle"
        android:layout_width="150px"
        android:tag="@string/dont_touch_me"
        android:visibility="visible"
        android:layout_height="18dp"/>-->
    
    
    <ImageView
        android:id="@+id/imageViewRestaurantImage"
        android:layout_width="@dimen/px_150"
        android:layout_height="@dimen/px_150"
        android:layout_margin="@dimen/px_30"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fresh_item_placeholder"
        android:tag="mwar"
        android:visibility="visible" />
    <TextView
        android:id="@+id/tv_offer"
        android:background="@color/color_orange_menus"
        android:text="20% Promo"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="20px"
        android:layout_margin="30px"
        android:layout_width="150px"
        android:visibility="visible"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        app:font="@string/maven"
        android:layout_height="wrap_content" />




    <TextView
        android:id="@+id/textViewRestaurantName"
        android:layout_width="@dimen/px_380"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_26"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:maxLines="3"
        android:text="Title"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_32"
        />

    <LinearLayout
        android:id="@+id/llRatingStars"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_gravity="left"
        android:layout_below="@+id/textViewRestaurantName"
        android:layout_marginTop="5dp"
        android:tag="@string/dont_touch_me"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvReviewCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="37 Ratings"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_12"
            app:font="@string/maven_r"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewRestaurantCusines"
        android:layout_width="@dimen/px_480"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llRatingStars"
        android:layout_marginTop="@dimen/px_10"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:maxLines="3"
        android:text="Title"
        android:textColor="@color/text_color_light_less"
        android:textSize="@dimen/text_size_26"/>

    <TextView
        android:id="@+id/textViewAddressLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRestaurantCusines"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:drawableLeft="@drawable/ic_restaurant_location"
        android:drawablePadding="@dimen/dp_2"
        android:paddingBottom="@dimen/px_2"
        android:paddingLeft="@dimen/px_5"
        android:text="Sector 28 B"
        android:layout_marginTop="@dimen/px_10"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_24"
        android:maxLines="2"
        android:ellipsize="end"
        app:font="@string/maven"
        />

    <TextView
        android:id="@+id/textViewMinimumOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewAddressLine"
        android:layout_marginTop="@dimen/px_10"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:text="Minimum Order 399"
        android:textColor="@color/order_history_status_color"
        android:textSize="@dimen/text_size_22"
        />


    <TextView
        android:id="@+id/textViewDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMinimumOrder"
        android:layout_marginBottom="@dimen/px_26"
        android:layout_marginTop="@dimen/px_14"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:drawableLeft="@drawable/ic_clock_grey"
        android:drawablePadding="@dimen/dp_4"
        android:text="Delivers in 40-60 min"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_22"
        />

    <TextView
        android:id="@+id/textViewRestaurantCloseTime"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:layout_below="@+id/textViewDelivery"
        android:layout_marginBottom="@dimen/px_26"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:background="@drawable/capsule_red_very_light"
        android:drawableLeft="@drawable/ic_exclamation_red"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_15"
        android:paddingRight="@dimen/px_15"
        android:text="Closing in 15 minute"
        android:textColor="@color/red_dark_more"
        android:textSize="@dimen/text_size_20"
        />




    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginRight="@dimen/px_24"
        android:background="@color/stroke_light_grey_alpha"
        />

</RelativeLayout>