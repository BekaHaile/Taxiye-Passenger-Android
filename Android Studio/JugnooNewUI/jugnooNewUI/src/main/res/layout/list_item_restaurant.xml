<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@drawable/bg_white_menu_item_selector_color_selector"
    >

    <ImageView
        android:id="@+id/imageViewRestaurantImage"
        android:layout_width="@dimen/px_150"
        android:layout_height="@dimen/px_150"
        android:layout_margin="@dimen/px_30"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_meal_place_holder"
        android:tag="mwar"
        android:visibility="visible"
        />

    <View
        android:layout_width="@dimen/px_150"
        android:layout_height="@dimen/px_40"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@drawable/shadow_up_menu_item"
        android:layout_alignBottom="@+id/imageViewRestaurantImage"
        />


    <TextView
        android:id="@+id/textViewAddressLine"
        android:layout_width="@dimen/px_150"
        android:layout_height="wrap_content"
        android:text="Sector 28 B"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:background="@color/transparent"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_alignBottom="@+id/imageViewRestaurantImage"
        android:drawableLeft="@drawable/ic_restaurant_location"
        android:paddingLeft="@dimen/px_5"
        android:paddingBottom="@dimen/px_2"
        android:drawablePadding="@dimen/px_5"
        />

    <TextView
        android:id="@+id/textViewRestaurantName"
        android:layout_width="@dimen/px_380"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="Title\nabc"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_32"
        android:layout_marginTop="@dimen/px_26"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        />

    <TextView
        android:id="@+id/textViewRestaurantCusines"
        android:layout_width="@dimen/px_480"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:layout_below="@+id/textViewRestaurantName"
        android:layout_marginTop="@dimen/px_10"
        android:maxLines="3"
        android:text="Title\nabc"
        android:textColor="@color/text_color_light_less"
        android:textSize="@dimen/text_size_26" />

    <TextView
        android:id="@+id/textViewMinimumOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Order r399"
        android:textColor="@color/order_history_status_color"
        android:textSize="@dimen/text_size_22"
        android:layout_marginTop="@dimen/px_10"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:layout_below="@+id/textViewRestaurantCusines"
        />


    <TextView
        android:id="@+id/textViewDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivers in 40-60 min"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_22"
        android:layout_marginTop="@dimen/px_14"
        android:layout_marginBottom="@dimen/px_26"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:layout_below="@+id/textViewMinimumOrder"
        android:drawableLeft="@drawable/ic_clock_grey"
        android:drawablePadding="@dimen/px_8"
        />

    <TextView
        android:id="@+id/textViewRestaurantCloseTime"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:background="@drawable/capsule_red_very_light"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:layout_below="@+id/textViewDelivery"
        android:text="Closes in 15 minute"
        android:textColor="@color/red_dark_more"
        android:textSize="@dimen/text_size_20"
        android:layout_marginBottom="@dimen/px_26"
        android:paddingRight="@dimen/px_15"
        android:paddingLeft="@dimen/px_15"
        android:drawableLeft="@drawable/ic_exclamation_red"
        android:drawablePadding="@dimen/px_6"
        android:gravity="center_vertical"
        />


    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:background="@drawable/capsule_text_color"
        android:layout_alignParentRight="true"
        android:text="Rating 2.1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20"
        android:paddingRight="@dimen/px_15"
        android:paddingLeft="@dimen/px_15"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/px_24"
        android:layout_marginRight="@dimen/px_30"
        android:visibility="gone"
        />
    
    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginRight="@dimen/px_24"
        android:background="@color/stroke_light_grey_alpha"
        />

</RelativeLayout>