<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/bg_white_menu_item_selector_color_selector">


    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/stroke_light_grey_alpha" />




    <TextView
        android:id="@+id/tv_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_promo_menus_new"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_4"
        android:paddingTop="@dimen/dp_4"
        android:text="20% Promo"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12"
        android:visibility="visible"
        app:font="@string/maven" />

    <ImageView
        android:id="@+id/imageViewRestaurantImage"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_below="@id/tv_offer"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fresh_item_placeholder"
        android:tag="mwar"
        android:visibility="visible" />

    <View
        android:id="@+id/view_review_shadow"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_alignBottom="@id/imageViewRestaurantImage"
        android:background="@drawable/shadow_up_fresh_home_item"
        android:layout_marginLeft="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tvReviewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="3dp"
        android:drawableLeft="@drawable/ic_star_yellow_10"
        android:layout_alignRight="@id/imageViewRestaurantImage"
        android:layout_alignBottom="@id/imageViewRestaurantImage"
        android:gravity="right|bottom"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:text="3.5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:font="@string/maven_r" />


    <TextView
        android:id="@+id/textViewRestaurantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_offer"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:maxLines="3"
        android:text="Title"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_16"
        app:font="@string/maven" />


    <TextView
        android:id="@+id/textViewRestaurantCusines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRestaurantName"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:maxLines="2"
        android:text="Title"
        android:textColor="@color/text_color_light_less"
        android:textSize="@dimen/sp_14"
        app:font="@string/maven_r" />


    <TextView
        android:id="@+id/textViewDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRestaurantCusines"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_5"
        android:maxLines="1"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:drawablePadding="@dimen/dp_4"
        android:text="Delivers in 40-60 min"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        app:font="@string/maven" />

    <TextView
        android:id="@+id/textViewRestaurantCloseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDelivery"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:drawableLeft="@drawable/ic_exclamation_red"
        android:drawablePadding="@dimen/dp_3"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="Closing in 15 minute"
        android:textColor="@color/red_dark_more"
        android:textSize="@dimen/sp_14"
        app:font="@string/maven" />

    <TextView
        android:id="@+id/textViewMinimumOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/textViewDelivery"
        android:layout_toRightOf="@+id/textViewRestaurantCloseTime"
        android:text="Min. 399"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_14"
        app:font="@string/maven" />



</RelativeLayout>