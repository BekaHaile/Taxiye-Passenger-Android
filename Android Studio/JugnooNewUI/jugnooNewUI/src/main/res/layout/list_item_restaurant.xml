<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@drawable/bg_white_menu_item_selector_color_selector"
    >

    <ImageView
        android:id="@+id/imageViewRestaurantImage"
        android:layout_width="@dimen/px_150"
        android:layout_height="@dimen/px_150"
        android:layout_margin="@dimen/px_30"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_meal_place_holder"
        android:tag="mwar"
        android:visibility="visible"
        />

    <View
        android:layout_width="@dimen/px_150"
        android:layout_height="@dimen/px_40"
        android:layout_marginLeft="@dimen/px_30"
        android:background="@drawable/shadow_up_menu_item"
        android:layout_alignBottom="@+id/imageViewRestaurantImage"
        />


    <TextView
        android:id="@+id/textViewAddressLine"
        android:layout_width="@dimen/px_150"
        android:layout_height="wrap_content"
        android:text="Sector 28 B"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:background="@color/transparent"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_alignBottom="@+id/imageViewRestaurantImage"
        android:drawableLeft="@drawable/ic_restaurant_location"
        android:paddingLeft="@dimen/px_5"
        android:paddingBottom="@dimen/px_2"
        android:drawablePadding="@dimen/px_5"
        />

    <TextView
        android:id="@+id/textViewRestaurantName"
        android:layout_width="@dimen/px_380"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="Title\nabc"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_32"
        android:layout_marginTop="@dimen/px_26"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        />

    <TextView
        android:id="@+id/textViewRestaurantCusines"
        android:layout_width="@dimen/px_480"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:layout_below="@+id/textViewRestaurantName"
        android:layout_marginTop="@dimen/px_10"
        android:maxLines="3"
        android:text="Title\nabc"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_26" />

    <TextView
        android:id="@+id/textViewMinimumOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Order r399"
        android:textColor="@color/order_history_status_color"
        android:textSize="@dimen/text_size_22"
        android:layout_marginTop="@dimen/px_10"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:layout_below="@+id/textViewRestaurantCusines"
        />


    <TextView
        android:id="@+id/textViewDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivers in 40-60 min"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_22"
        android:layout_marginTop="@dimen/px_14"
        android:layout_marginBottom="@dimen/px_26"
        android:layout_toRightOf="@+id/imageViewRestaurantImage"
        android:layout_below="@+id/textViewMinimumOrder"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_below="@+id/textViewDelivery"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginRight="@dimen/px_24"
        android:background="@color/stroke_light_grey_alpha"
        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="18px"
        android:orientation="vertical"
        android:paddingLeft="4px"
        android:paddingRight="4px"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_transparent_menu_item_selector">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="330px"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="mwar">

                <TextView
                    android:id="@+id/textViewClosed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_alpha"
                    android:gravity="center"
                    android:text="@string/closed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_32"
                    />

                <RelativeLayout
                    android:id="@+id/relativeLayoutRestaurantCloseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="42px"
                    android:orientation="vertical"
                    android:tag="mwar"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:background="@drawable/background_close_time_bordered"
                    android:layout_marginTop="20px"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imageViewRestaurantCloseTime"
                        android:layout_width="21px"
                        android:layout_height="21px"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_exclamation"
                        android:tag="mwar"
                        android:layout_marginLeft="10px"
                        android:layout_centerVertical="true"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/textViewRestaurantCloseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="42px"
                        android:layout_toRightOf="@id/imageViewRestaurantCloseTime"
                        android:gravity="center"
                        android:text="closes in 15 minute"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="8px"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20"/>
                </RelativeLayout>


                </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>