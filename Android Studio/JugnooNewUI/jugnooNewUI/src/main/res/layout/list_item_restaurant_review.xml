<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvNameCap"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_16"
        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/circle_grey"
        android:gravity="center"
        android:tag="mwar"
        android:text="G"
        android:textColor="@color/text_color"
        android:textSize="@dimen/px_46"
        android:textStyle="bold"
        app:font="maven"
        />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_16"
        android:layout_marginTop="@dimen/px_30"
        android:tag="mwar"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="@dimen/px_350"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px_15"
        android:layout_marginTop="@dimen/px_40"
        android:layout_toLeftOf="@+id/tvDateTime"
        android:layout_toRightOf="@+id/tvNameCap"
        android:text="Sample"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_32"
        app:font="maven"
        />


    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_40"
        android:layout_marginTop="@dimen/px_40"
        android:text="Sample"
        android:textColor="@color/document_layout_bordor_color"
        android:textSize="@dimen/text_size_24"
        app:font="maven"
        />


    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="@dimen/px_6"
        android:layout_toRightOf="@+id/tvNameCap"
        android:background="@drawable/capsule_text_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_15"
        android:paddingRight="@dimen/px_15"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20"
        android:visibility="visible"
        app:font="maven"/>

    <TextView
        android:id="@+id/tvReviewTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_40"
        android:layout_marginTop="@dimen/px_10"
        android:layout_toRightOf="@+id/tvRating"
        android:drawablePadding="@dimen/dp_2"
        android:drawableRight="@drawable/ic_uparrow"
        android:text="Sample"
        android:textColor="@color/document_layout_bordor_color"
        android:textSize="@dimen/text_size_26"
        app:font="maven"
        />

    <TextView
        android:id="@+id/tvReviewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReviewTag"
        android:layout_marginBottom="@dimen/px_40"
        android:layout_marginRight="@dimen/px_40"
        android:layout_marginTop="@dimen/px_12"
        android:layout_toRightOf="@+id/tvNameCap"
        android:text="@string/sample_address"
        android:textColor="@color/color_menu_item_desc"
        android:textSize="@dimen/text_size_26"
        app:font="maven"
        />

    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="@color/stroke_light_grey_alpha"
        />

</RelativeLayout>