<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvNameCap"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/circle_grey"
        android:gravity="center"
        android:tag="mwar"
        android:text="G"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_28"
        app:font="maven"
        />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_22"
        android:scaleType="centerCrop"
        android:tag="mwar"
        />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toLeftOf="@+id/tvRating"
        android:layout_toRightOf="@+id/tvNameCap"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Username"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_16"
        app:font="maven"
        />


    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvName"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/capsule_text_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7"
        android:text="3.5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_11"
        android:visibility="visible"
        app:font="maven"/>

    <TextView
        android:id="@+id/tvReviewTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/tvNameCap"
        android:drawableLeft="@drawable/ic_thumbsup_small"
        android:drawablePadding="@dimen/dp_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Quality, Packaging"
        android:textColor="@color/document_layout_bordor_color"
        android:textSize="@dimen/sp_11"
        app:font="maven"
        />

    <TextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReviewTag"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/tvNameCap"
        android:drawableLeft="@drawable/ic_clock"
        android:drawablePadding="@dimen/dp_4"
        android:text="12 hrs ago"
        android:textColor="@color/document_layout_bordor_color"
        android:textSize="@dimen/sp_10"
        app:font="maven"
        />

    <TextView
        android:id="@+id/tvReviewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameCap"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_10"
        android:text="Ended up here on the way to Sukhna Lake to grab a pizza along. Got their BOGO offer and ordered medium cheesy 7 and Ala Mexican. The Ala mexican was kinda cold. "
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_13"
        app:font="maven"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvFeedImages"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_155"
        android:layout_below="@+id/tvReviewMessage"
        android:layout_marginTop="@dimen/dp_10"
        android:scrollbars="horizontal"
        android:translationZ="1dp"
        />

    <ImageView
        android:id="@+id/ivFeedImageSingle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_155"
        android:layout_below="@+id/tvReviewMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:tag="mwar"
        />


    <View
        android:id="@+id/vSepBelowMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/rvFeedImages"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/stroke_light_grey_alpha"
        />


    <TextView
        android:id="@+id/tvLikeShareCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vSepBelowMessage"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_18"
        android:text="1 Like | 1 Share"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_12"
        app:font="maven"
        />


    <ImageView
        android:id="@+id/ivFeedEdit"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vSepBelowMessage"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_feed_edit"
        android:tag="mwar"

        />

    <ImageView
        android:id="@+id/ivFeedShare"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/vSepBelowMessage"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@+id/ivFeedEdit"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_feed_share_normal"
        android:tag="mwar"
        />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/vSepBelowMessage"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@+id/ivFeedShare"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_feed_like_normal"
        android:tag="mwar"
        android:visibility="gone"
        />


    <com.sabkuchfresh.feed.ui.views.animateheartview.LikeButton
        android:clickable="false"
        android:id="@+id/ivFeedLike"
        app:circle_start_color="#ffffff"
        app:circle_end_color="#cd8fff"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:icon_size="14dp"
        app:anim_scale_factor="3.8"
        app:icon_type="heart"

        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/vSepBelowMessage"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@+id/ivFeedShare"

        />

    <View
        android:id="@+id/vShadowDown"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/ivFeedLike"
        android:background="@color/feed_grey_black"/>


</RelativeLayout>