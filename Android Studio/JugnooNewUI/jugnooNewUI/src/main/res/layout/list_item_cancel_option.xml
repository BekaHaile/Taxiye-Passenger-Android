<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="@dimen/screen_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textViewCancelOption"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="30px"
            android:paddingLeft="30px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:layout_toRightOf="@+id/imageViewCancelOptionCheck"
            android:text="@string/driver_is_late"
            android:textColor="@color/text_color"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/imageViewCancelOptionCheck"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:src="@drawable/check_box_checked"
            android:tag="mwar"
             />
    </RelativeLayout>

</LinearLayout>