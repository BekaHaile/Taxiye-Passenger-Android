<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayoutReferADriver">

        <LinearLayout
            android:id="@+id/relativeLayoutShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="619px"
                android:layout_height="283px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_promotions_friend_refer"
                android:tag="mlar"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px">

                <ImageView
                    android:id="@+id/imageViewSideLine"
                    android:layout_width="130px"
                    android:layout_height="173px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="15px"
                    android:src="@drawable/free_rides_earn_dashed_line" />

                <TextView
                    android:id="@+id/textViewShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/share_your_code"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_36" />

                <TextView
                    android:id="@+id/textViewCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewShare"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20px"
                    android:gravity="center"
                    android:text="    "
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_50" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewSideLine"
                    android:layout_marginTop="-57px"
                    android:layout_marginLeft="100px"
                    android:layout_marginRight="100px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewFbMessanger"
                        android:layout_width="115px"
                        android:layout_height="115px"
                        android:tag="mwar"
                        android:src="@drawable/ic_share_fb_messenger_selector"/>

                    <ImageView
                        android:id="@+id/imageViewWhatsapp"
                        android:layout_width="115px"
                        android:layout_height="115px"
                        android:layout_marginLeft="20px"
                        android:tag="mwar"
                        android:src="@drawable/ic_share_whatsapp_selector"/>

                    <ImageView
                        android:id="@+id/imageViewEmail"
                        android:layout_width="115px"
                        android:layout_height="115px"
                        android:layout_marginLeft="20px"
                        android:visibility="gone"
                        android:tag="mwar"
                        android:src="@drawable/ic_share_email_selector"/>

                    <ImageView
                        android:id="@+id/imageViewMessage"
                        android:layout_width="115px"
                        android:layout_height="115px"
                        android:layout_marginLeft="20px"
                        android:tag="mwar"
                        android:src="@drawable/ic_share_messages_selector"/>

                    <ImageView
                        android:id="@+id/imageViewMore"
                        android:layout_width="115px"
                        android:layout_height="115px"
                        android:layout_marginLeft="20px"
                        android:tag="mwar"
                        android:src="@drawable/ic_share_show_more_selector"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="130px"
                    android:layout_height="173px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="15px"
                    android:scaleX="-1"
                    android:src="@drawable/free_rides_earn_dashed_line" />

            </RelativeLayout>

            <Button
                android:id="@+id/buttonInvite"
                style="@style/ButtonTheme"
                android:layout_below="@+id/textViewCode"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70px"
                android:visibility="gone"
                android:text="@string/invite_friends_caps" />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="120px"
                android:gravity="center"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:textColorLink="@color/theme_color"
                android:text="@string/free_ride_desc"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/textViewMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:text="Details"
                android:visibility="gone"
                android:textColor="@color/text_color_theme_selector"
                android:textSize="@dimen/text_size_36" />

            <ImageView
                android:layout_width="164px"
                android:layout_height="4px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2px"
                android:visibility="gone"
                android:background="@color/theme_color" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayoutReferADriver"
        android:layout_width="wrap_content"
        android:layout_height="158px"
        android:visibility="visible"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/relativeLayoutMultipleTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_above="@+id/linearLayoutMultipleTab"
                android:background="@color/stroke_color_light" />

            <LinearLayout
                android:id="@+id/linearLayoutMultipleTab"
                android:layout_width="match_parent"
                android:layout_height="95px"
                android:layout_alignParentBottom="true"
                android:background="@color/menu_item_selector_color"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linearLayoutLeaderBoard"
                    android:layout_width="359px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="33px"
                        android:layout_height="32px"
                        android:src="@drawable/leaderboard"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewLeaderboard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:text="@string/leaderboard"
                        android:textSize="@dimen/text_size_32" />

                </LinearLayout>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:src="@color/stroke_color_dark" />

                <LinearLayout
                    android:id="@+id/linearLayoutRefer"
                    android:layout_width="359px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="33px"
                        android:layout_height="37px"
                        android:src="@drawable/driver"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewRefer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25px"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:text="@string/refer_a_driver"
                        android:textSize="@dimen/text_size_32" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutReferSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27px"
            android:layout_marginRight="27px"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_above="@+id/textViewReferDriver"
                android:background="@color/stroke_color_light" />

            <TextView
                android:id="@+id/textViewReferDriver"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_menu_item_selector_color_tlrrb"
                android:gravity="center"
                android:text="@string/want_to_refer_a_driver"
                android:textAllCaps="true"
                android:textColor="@color/text_color_light_selector"
                android:textSize="@dimen/text_size_30" />

            <ImageView
                android:layout_width="108px"
                android:layout_height="109px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:background="@drawable/ic_slide_up"
                android:tag="mwar" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutLeaderboardSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27px"
            android:layout_marginRight="27px"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_above="@+id/textViewLeaderboardSingle"
                android:visibility="gone"
                android:background="@color/stroke_color_light" />

            <TextView
                android:id="@+id/textViewLeaderboardSingle"
                android:layout_width="match_parent"
                android:layout_height="95px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_menu_item_selector_color_tlrrb"
                android:gravity="center"
                android:text="@string/leaderboard"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_44" />

            <ImageView
                android:layout_width="108px"
                android:layout_height="109px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:background="@drawable/ic_slide_up"
                android:tag="mwar" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>