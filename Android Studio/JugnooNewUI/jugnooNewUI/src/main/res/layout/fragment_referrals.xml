<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="match_parent"
            android:layout_height="330px"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo_white_bg"
            android:tag="mlar"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="56px"
            android:gravity="center"
            android:paddingStart="40px"
            android:paddingEnd="40px"
            android:lineSpacingExtra="4px"
            android:textColorLink="@color/theme_color"
            android:text="@string/free_ride_desc"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llShare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_360"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_lb_list"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/llWhatsappShare"
            android:layout_width="@dimen/px_500"
            android:layout_height="@dimen/px_82"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/capsule_green_color_selector"
            >

            <ImageView
                android:layout_width="@dimen/px_50"
                android:layout_height="@dimen/px_50"
                android:tag="mwar"
                android:src="@drawable/ic_whatsapp_white"
                />

            <TextView
                android:id="@+id/tvWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/white"
                android:text="@string/invite_via_whatsapp"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/px_12"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/tvMoreSharingOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_28"
            android:textColor="@color/text_color_selector"
            android:text="@string/view_more_sharing_options"
            android:paddingStart="@dimen/px_15"
            android:paddingEnd="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:layout_marginTop="@dimen/px_15"
            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llReferralCode"
        android:layout_width="@dimen/px_320"
        android:layout_height="@dimen/px_120"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="-60px"
        android:background="@drawable/bg_white_menu_color_dashed_selector"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/llShare"
        >

        <TextView
            android:id="@+id/tvYourReferralCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_24"
            android:textColor="@color/text_color"
            android:text="@string/your_referral_code"
            />


        <TextView
            android:id="@+id/tvReferralCodeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_36"
            android:textColor="@color/text_color"
            android:text="@string/_9999999999"
            android:layout_marginTop="@dimen/px_10"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutReferContainer"
        android:layout_width="wrap_content"
        android:layout_height="158px"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
            android:id="@+id/relativeLayoutMultipleTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_above="@+id/linearLayoutMultipleTab"
                android:background="@color/stroke_color_light" />

            <LinearLayout
                android:id="@+id/linearLayoutMultipleTab"
                android:layout_width="match_parent"
                android:layout_height="95px"
                android:layout_alignParentBottom="true"
                android:background="@color/menu_item_selector_color"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linearLayoutLeaderBoard"
                    android:layout_width="359px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="33px"
                        android:layout_height="32px"
                        android:src="@drawable/leaderboard"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewLeaderboard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25px"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:text="@string/leaderboard"
                        android:textSize="@dimen/text_size_32" />

                </LinearLayout>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:src="@color/stroke_color_dark" />

                <LinearLayout
                    android:id="@+id/linearLayoutRefer"
                    android:layout_width="359px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="33px"
                        android:layout_height="37px"
                        android:src="@drawable/driver"
                        android:tag="mwar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25px"
                        android:gravity="center"
                        android:textColor="@color/text_color"
                        android:text="@string/refer_a_driver"
                        android:textSize="@dimen/text_size_32" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutReferSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="27px"
            android:layout_marginEnd="27px"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_above="@+id/textViewReferDriver"
                android:background="@color/stroke_color_light" />

            <TextView
                android:id="@+id/textViewReferDriver"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_menu_item_selector_color_tlrrb"
                android:gravity="center"
                android:text="@string/want_to_refer_a_driver"
                android:textAllCaps="true"
                android:textColor="@color/text_color_light_selector"
                android:textSize="@dimen/text_size_30" />

            <ImageView
                android:layout_width="108px"
                android:layout_height="109px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30px"
                android:background="@drawable/ic_slide_up"
                android:tag="mwar" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutLeaderboardSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="27px"
            android:layout_marginEnd="27px"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_above="@+id/textViewLeaderboardSingle"
                android:visibility="gone"
                android:background="@color/stroke_color_light" />

            <TextView
                android:id="@+id/textViewLeaderboardSingle"
                android:layout_width="match_parent"
                android:layout_height="95px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_menu_item_selector_color_tlrrb"
                android:gravity="center"
                android:text="@string/leaderboard"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_44" />

            <ImageView
                android:layout_width="108px"
                android:layout_height="109px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30px"
                android:background="@drawable/ic_slide_up"
                android:tag="mwar" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>