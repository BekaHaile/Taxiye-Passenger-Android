<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llRootVendorDirectSearch"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_white_menu_item_selector_color_selector"
              android:orientation="vertical">

    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/stroke_light_grey_alpha"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tvQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_13"
            app:typekitFont="@string/maven"
            tools:text="Query String"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:text="in"
                android:textColor="@color/text_color_light_less"
                android:textSize="@dimen/sp_12"
                app:typekitFont="@string/maven_r"/>

            <TextView
                android:id="@+id/tvRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:typekitFont="@string/maven"
                tools:text="Healthy Nutrition"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
