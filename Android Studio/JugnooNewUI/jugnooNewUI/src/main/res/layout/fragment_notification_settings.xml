<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="12px"
        android:background="@color/white"
        card_view:cardCornerRadius="@dimen/button_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textViewpref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_light_selector"
                android:text="@string/push_noti_pref"
                android:textSize="@dimen/text_size_30"
                android:layout_marginTop="40px"
                android:layout_marginLeft="60px"
                android:layout_centerVertical="true"
                />
            
            <View
                android:layout_width="604px"
                android:layout_height="2px"
                android:layout_marginTop="40px"
                android:layout_marginLeft="33px"
                android:background="@color/stroke_color_light"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_noti_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:scrollbars="vertical"
                android:fadeScrollbars="true"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>