<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/menu_item_selector_color_F7">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textViewTitle"
            android:text="FATAFAT"
            style="@style/title"
            app:font="maven"/>

        <ImageView
            android:id="@+id/ivBack"
            style="@style/back_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/text_color"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"
            app:font="maven"/>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/llBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/topBar"
        android:layout_marginTop="@dimen/px_50"
        android:gravity="center_vertical"
        android:layout_marginLeft="106px"
        android:layout_marginRight="106px"
        android:layout_centerHorizontal="true">
        
        <ImageView
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70"
            android:background="@drawable/circle_border_menus"
            android:src="@drawable/ic_bar_check"
            android:padding="@dimen/px_7"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_15"
            android:layout_weight="1"
            android:src="@color/bar_color"/>

        <ImageView
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70"
            android:background="@drawable/circle_border_menus"
            android:src="@drawable/ic_bar_check"
            android:padding="@dimen/px_7"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/px_15"
            android:layout_weight="1"
            android:src="@color/bar_color"/>

        <ImageView
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70"
            android:background="@drawable/circle_border_menus"
            android:src="@drawable/ic_bar_check"
            android:padding="@dimen/px_7"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llBar"
        android:layout_marginTop="@dimen/px_70">

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        android:layout_below="@+id/topBar"
        />

</RelativeLayout>