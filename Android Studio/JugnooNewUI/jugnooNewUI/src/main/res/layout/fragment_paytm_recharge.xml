<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="PAYTM WALLET"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_title_text_size" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector" />

        <TextView
            android:id="@+id/textViewTitleEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:padding="15px"
            android:text="EDIT"
            android:textColor="@color/text_color_light_selector"
            android:textSize="30.6px" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar">

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false">


            <LinearLayout
                android:layout_width="@dimen/screen_width"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="192px"
                    android:gravity="center"
                    android:background="@color/sliding_bottom_bg_color"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewPaytmIcon"
                        android:layout_width="167px"
                        android:layout_height="53px"
                        android:src="@drawable/ic_paytm_big"
                        android:tag="mwar" />

                    <TextView
                        android:id="@+id/textViewAddCashHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="Add Cash to Paytm Wallet"
                        android:visibility="visible"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_32" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="@dimen/screen_width"
                    android:layout_height="109px"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/text_color_hint" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/text_color_hint" />

                    <TextView
                        android:id="@+id/textViewCurrentBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="36px"
                        android:gravity="center"
                        android:text="Current Balance"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_32" />


                    <TextView
                        android:id="@+id/textViewCurrentBalanceValue"
                        android:layout_width="250px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="50px"
                        android:gravity="right"
                        android:text="5000"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_32" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutInner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:splitMotionEvents="false"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="@dimen/screen_width"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="200px"
                            android:layout_height="2px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24px"
                            android:layout_marginRight="14px"
                            android:background="@color/text_color_hint" />

                        <TextView
                            android:id="@+id/textViewAddCash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/add_cash"
                            android:textColor="@color/grey_dark_more"
                            android:textSize="36px" />

                        <ImageView
                            android:layout_width="200px"
                            android:layout_height="2px"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14px"
                            android:layout_marginRight="34px"
                            android:background="@color/text_color_hint" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="@dimen/screen_width"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonAmount1"
                            android:layout_width="176px"
                            android:layout_height="74px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/background_wallet_border"
                            android:gravity="center"
                            android:text="@string/first_amount"
                            android:textColor="@color/text_color"
                            android:textSize="30px" />


                        <Button
                            android:id="@+id/buttonAmount2"
                            android:layout_width="176px"
                            android:layout_height="74px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="50px"
                            android:background="@drawable/background_wallet_border"
                            android:gravity="center"
                            android:text="@string/middle_amount"
                            android:textColor="@color/text_color"
                            android:textSize="30px" />


                        <Button
                            android:id="@+id/buttonAmount3"
                            android:layout_width="176px"
                            android:layout_height="74px"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="45px"
                            android:background="@drawable/background_wallet_border"
                            android:gravity="center"
                            android:text="@string/last_amount"
                            android:textColor="@color/text_color"
                            android:textSize="30px" />


                    </LinearLayout>


                    <EditText
                        android:id="@+id/editTextAmount"
                        android:layout_width="400px"
                        android:layout_height="80px"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50px"
                        android:background="@color/transparent"
                        android:digits="0123456789"
                        android:ems="10"
                        android:hint="Enter Amount"
                        android:inputType="number|textNoSuggestions"
                        android:maxLength="5"
                        android:gravity="center"
                        android:paddingLeft="25px"
                        android:paddingRight="25px"
                        android:singleLine="true"
                        android:textColor="@color/bg_grey_opaque"
                        android:textColorHint="@color/black_text_alpha"
                        android:textSize="@dimen/text_size_32" />

                    <ImageView
                        android:layout_width="400px"
                        android:layout_height="2px"
                        android:layout_gravity="center_horizontal"
                        android:src="@color/theme_color"/>

                    <Button
                        android:id="@+id/buttonAddMoney"
                        style="@style/ButtonTheme"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="60px"
                        android:text="@string/add_paytm_cash" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttonRemoveWallet"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200px"
                android:background="@drawable/button_theme"
                android:text="REMOVE WALLET"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textViewScroll"
                android:layout_width="20px"
                android:layout_height="20px"
                android:text=" " />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down" />

</RelativeLayout>