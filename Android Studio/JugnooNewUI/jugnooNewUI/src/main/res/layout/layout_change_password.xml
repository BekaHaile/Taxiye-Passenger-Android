<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutPasswordChange"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone"
    >
    <RelativeLayout
        android:id="@+id/relativeLayoutOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/editTextOldPassword"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="20px"
            android:hint="@string/old_password"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_light"
            android:textSize="@dimen/text_size_30"
            android:textAllCaps="true"
            android:background="@color/transparent"
            android:maxLength="50"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_black"
            android:layout_toStartOf="@+id/imaveViewOldPasswordVisibility"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            />

        <ImageView
            android:id="@+id/imaveViewOldPasswordVisibility"
            android:layout_width="75px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:padding="20px"
            android:onClick="onClick"
            android:layout_alignParentEnd="true"
            android:tag="mwar"
            android:src="@drawable/ic_password_show"
            android:layout_marginEnd="20px"

            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayoutNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/editTextNewPassword"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="20px"
            android:hint="@string/new_password"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_light"
            android:textSize="@dimen/text_size_30"
            android:background="@color/transparent"
            android:maxLength="50"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_black"
            android:layout_toStartOf="@+id/imaveViewNewPasswordVisibility"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            />

        <ImageView
            android:id="@+id/imaveViewNewPasswordVisibility"
            android:layout_width="75px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:padding="20px"
            android:onClick="onClick"
            android:layout_alignParentEnd="true"
            android:tag="mwar"
            android:src="@drawable/ic_password_show"
            android:layout_marginEnd="20px"

            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayoutRetypePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/editTextRetypePassword"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="20px"
            android:hint="@string/retype_password"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_light"
            android:textSize="@dimen/text_size_30"
            android:background="@color/transparent"
            android:maxLength="50"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_black"
            android:layout_toStartOf="@+id/imaveViewRetypePasswordVisibility"
            android:layout_marginEnd="20px"
            android:layout_marginStart="20px"
            />

        <ImageView
            android:id="@+id/imaveViewRetypePasswordVisibility"
            android:layout_width="75px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:padding="20px"
            android:onClick="onClick"
            android:layout_alignParentEnd="true"
            android:tag="mwar"
            android:src="@drawable/ic_password_show"
            android:layout_marginEnd="20px"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/stroke_color_light"
        android:layout_marginStart="40px"
        android:layout_marginEnd="40px"
        />


</LinearLayout>