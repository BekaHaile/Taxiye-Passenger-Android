<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="720px"
            android:layout_height="96px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/yellow">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="FREE RIDES"
                android:textColor="@color/white"
                android:textSize="30.6px"/>

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="60.7px"
                android:layout_height="76.9px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:padding="20px"
                android:src="@drawable/back_white_selector"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="@drawable/shadow_down"
            />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:id="@+id/relativeLayoutShare"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="285px"
                android:layout_height="214px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90px"
                android:background="@drawable/free_rides_screen_icon"
                android:tag="mwar"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textViewShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:layout_marginTop="62px"
                android:textColor="@color/grey_dark"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/share_your_code"
                />

            <TextView
                android:id="@+id/textViewCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="44px"
                android:layout_marginTop="77px"
                android:textColor="@color/black_text"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text=""
                />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:layout_marginTop="53px"
                android:maxLines="2"
                android:textColor="@color/grey_dark_more"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/free_ride_desc"
                />
            <!-- #6B6B76-->

            <TextView
                android:id="@+id/textViewMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:layout_marginTop="30px"
                android:textColor="@drawable/text_color_black_alpha_selector"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="More Info"
                />
            <ImageView
                android:layout_width="174px"
                android:layout_height="4px"
                android:layout_gravity="center_horizontal"
                android:background="@color/black_text_alpha"
                android:layout_marginTop="-2px"
                />

            <Button
                android:id="@+id/buttonInvite"
                android:layout_width="648px"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140px"
                android:background="@drawable/button_yellow"
                android:text="@string/invite_friends_caps"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageViewLogo"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:layout_margin="20px">

                <WebView
                    android:id="@+id/webViewReferralCaption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/textViewReferralCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50px"
                    android:textColor="@color/black_text"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Invite friends and\nget Jugnoo Cash"
                    />

            </RelativeLayout>

        </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@color/yellow"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewFacebook"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginLeft="85px"
                android:src="@drawable/fb_share_icon_selector"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/imageViewWhatsapp"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginLeft="85px"
                android:layout_toRightOf="@+id/imageViewFacebook"
                android:src="@drawable/whatsapp_share_icon_selector"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/imageViewSMS"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginRight="85px"
                android:layout_toLeftOf="@+id/imageViewEmail"
                android:src="@drawable/sms_share_icon_selector"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/imageViewEmail"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="85px"
                android:src="@drawable/email_share_icon_selector"
                android:tag="mwar"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewReferralCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="20px"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/black_text"
            android:textSize="32px"/>
    </LinearLayout>

</RelativeLayout>