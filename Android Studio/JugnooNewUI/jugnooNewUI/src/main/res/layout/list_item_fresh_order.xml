<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="@dimen/screen_width"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="15px"
        android:background="@drawable/background_white_grey_rb_selector"
        android:orientation="vertical"
        android:splitMotionEvents="false">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            android:layout_marginTop="25px">

            <TextView
                android:id="@+id/textViewOrderStatus"
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:text="@string/order_status"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/textViewOrderStatusValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/textViewOrderStatus"
                android:text="Placed"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24" />

            <ImageView
                android:id="@+id/imageViewType"
                android:layout_width="40px"
                android:layout_height="29px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/fatafat_icon_small"
                android:tag="mwar" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="110px"
            android:layout_marginTop="10px">

            <TextView
                android:id="@+id/textViewId"
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/textViewIdValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/textViewId"
                android:text="1234"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginRight="110px"
            android:layout_marginTop="10px">

            <TextView
                android:id="@+id/textViewOrderDate"
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:text="@string/order_date"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/textViewOrderDateValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/textViewOrderDate"
                android:text="February 30th"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25px"
            android:layout_marginLeft="25px"
            android:layout_marginRight="110px"
            android:layout_marginTop="10px">

            <TextView
                android:id="@+id/textViewDeliveryAddress"
                android:layout_width="220px"
                android:layout_height="wrap_content"
                android:text="@string/delivery_address_colon"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24" />

            <TextView
                android:id="@+id/textViewDeliveryAddressValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/textViewDeliveryAddress"
                android:text="Plot No 5, Sector 28"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24" />
        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="45px"
        android:singleLine="true"
        android:text="Rs. 1000"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_size_28" />

</RelativeLayout>