<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/grey_dark">


    <fragment
        android:id="@+id/mapView"
        android:name="product.clicklabs.jugnoo.utils.TouchableMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/relativeLayoutSearchBarText"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20px"
            android:background="@drawable/background_white_rounded_bordered"
            android:splitMotionEvents="false"
            android:visibility="visible">

            <ImageView
                android:id="@+id/textViewSearchGPSIcon"
                android:layout_width="30px"
                android:layout_height="44px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18px"
                android:src="@drawable/search_location_icon"
                android:tag="mwar"/>

            <TextView
                android:id="@+id/textVeiwSearch"
                android:layout_width="560px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/textViewSearchGPSIcon"
                android:background="@color/transparent"
                android:hint="Search address location"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black_text"
                android:textCursorDrawable="@null"
                android:textSize="30px"/>


        </RelativeLayout>

        <Button
            android:id="@+id/getMyLocation"
            android:layout_width="121px"
            android:layout_height="117px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="77px"
            android:layout_marginRight="60px"
            android:layout_marginTop="140px"
            android:background="@drawable/mylocation_btn_selector"
            android:tag="mwar"
            />


        <ImageView
            android:id="@+id/locationPointer"
            android:layout_width="45px"
            android:layout_height="74.97px"
            android:layout_above="@+id/centerPivot"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-5px"
            android:layout_marginTop="10px"
            android:src="@drawable/pin_ball"/>

        <ImageView
            android:id="@+id/centerPivot"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/layoutAddLocation"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_above="@+id/locationPointer"
            android:layout_centerHorizontal="true"
            android:background="@drawable/address_round_selector"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add Address Details"
                android:visibility="gone"
                android:layout_marginTop="5px"
                android:textColor="@color/white"
                android:textSize="30px"
                />

            <TextView
                android:id="@+id/address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="26px"
                android:paddingLeft="10px"
                android:paddingBottom="10px"
                android:paddingRight="10px"
                />

            <ProgressBar
                android:id="@+id/progress_wheel"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_margin="20px"
                android:layout_gravity="center"/>


        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_60"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/relativeLayoutSearchBar"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20px"
            android:background="@drawable/background_white_rounded_bordered"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageViewSearchGPSIcon"
                android:layout_width="30px"
                android:layout_height="44px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18px"
                android:src="@drawable/search_location_icon"
                android:tag="mwar"/>

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="510px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/imageViewSearchGPSIcon"
                android:background="@color/transparent"
                android:hint="Search address location"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textCursorDrawable="@null"
                android:textSize="30px"/>

            <ProgressBar
                android:id="@+id/progressBarSearch"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginRight="20px"/>
        </RelativeLayout>

        <product.clicklabs.jugnoo.utils.NonScrollListView
            android:id="@+id/listViewSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="0px"
            android:background="@color/white"
            android:splitMotionEvents="false">
        </product.clicklabs.jugnoo.utils.NonScrollListView>
    </LinearLayout>

    <include layout="@layout/layout_location_address_error"/>

</RelativeLayout>
