<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/feed_grey_background_light"
    android:paddingStart="@dimen/spacing_normal"
    android:paddingEnd="@dimen/spacing_normal"
    android:paddingBottom="@dimen/spacing_normal"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_profile_pic"
        android:scaleType="centerCrop"
        android:src="@drawable/whatsapp"
        android:layout_width="25dp"
        android:layout_marginEnd="@dimen/spacing_tiny"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_height="25dp" />

    <TextView
        android:layout_marginTop="18dp"
        android:id="@+id/tv_user_name"
        android:text="@string/jesse_cennedy"
        android:gravity="center_horizontal"
        app:typekitFont="maven"
        android:textColor="@color/feed_color_orange"
        android:textSize="@dimen/font_normal"
        android:maxLines="1"
        android:layout_toEndOf="@id/iv_profile_pic"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />






        <EditText
            android:id="@+id/edt_comment"
            android:layout_below="@id/iv_profile_pic"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingEnd="@dimen/spacing_normal"
            app:typekitFont="maven"
            android:paddingTop="@dimen/spacing_normal"
            android:textSize="@dimen/font_normal"
            android:maxLength="500"
            android:hint="@string/tap_to_add_reply"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textColorHint="@color/feed_grey_hint_color"
            android:textColor="@color/feed_grey_text"
            android:inputType="textMultiLine|textCapSentences"
            android:background="@drawable/bg_white_layer_shadow"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="100dp" />




</RelativeLayout>