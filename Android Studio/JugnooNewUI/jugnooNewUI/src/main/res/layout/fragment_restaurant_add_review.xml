<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etFeedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_controller"
        android:background="@drawable/background_transparent"
        android:fadeScrollbars="true"
        android:gravity="left"
        android:hint="@string/what_you_love_about_restaurant"
        android:imeOptions="actionDone"
        android:maxLength="500"
        android:padding="@dimen/px_60"
        android:scrollbars="vertical"
        android:tag="mwar"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color_hint"
        android:textCursorDrawable="@drawable/cursor_black"
        android:textSize="@dimen/px_42"
        app:font="maven"
        android:inputType="textCapSentences|textMultiLine"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/etFeedback"
        android:background="@color/stroke_light_grey_alpha"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_new_height"
        android:background="@drawable/shadow_down_new"
        />


    <RelativeLayout
        android:id="@id/layout_controller"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingLeft="20px"
        android:paddingRight="24px"
        android:paddingTop="10px"
        android:paddingBottom="32px"
        android:layout_height="100px">


        <ImageButton
            android:id="@+id/ib_access_camera"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_review_camera"
            android:layout_marginRight="20px"
            android:padding="15px"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bSubmit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:text="Submit"
            app:font="maven"
            android:textColor="@color/text_color_submit"
            android:textSize="32px"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/submitDivider"
            android:layout_toLeftOf="@id/bSubmit"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:layout_width="2px" android:background="@color/dull_line"/>
        <ImageButton
            android:id="@+id/ib_access_star"
            android:padding="15px"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_add_review_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ib_access_camera"
            />
        <TextView
            android:text="400"
            android:gravity="right"
            android:maxLines="1"
            app:font="maven"
            android:textSize="26px"
            android:textColor="@color/text_color_dark_1"
            android:layout_toRightOf="@id/ib_access_star"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/submitDivider"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />




    </RelativeLayout>
   <!-- <Button
        android:id="@+id/bSubmit"
        style="@style/ButtonTheme"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_30"
        android:text="@string/submit"
        app:font="maven" />-->


</RelativeLayout>