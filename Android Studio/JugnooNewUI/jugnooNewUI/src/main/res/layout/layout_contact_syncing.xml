<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="-20dp"
        android:layout_width="119dp"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/ivContactSyncImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_contact_sync_img"/>

        <ImageView
            android:id="@+id/ivContactSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/ic_contact_sync_orange"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:text="@string/txt_contacts_syncing"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_20"
        app:typekitFont="@string/maven"/>

</LinearLayout>