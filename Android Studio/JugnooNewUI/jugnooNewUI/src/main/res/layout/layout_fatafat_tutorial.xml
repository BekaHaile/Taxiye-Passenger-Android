<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/background_white_rounded"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dull_background"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/txt_how_it_works"
            android:textAllCaps="true"
            android:textColor="@color/text_color_grey_menus"
            android:textSize="@dimen/font_xxl"
            app:typekitFont="@string/avenir"/>

        <ImageView
            android:id="@+id/imgVwCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacing_small"
            android:padding="@dimen/spacing_small"
            android:theme="@style/GreyHighlight"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_cross"/>

    </RelativeLayout>

    <View
        android:id="@+id/vwDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grey_divider_height"
        android:background="@color/text_color_light"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHowItWorks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/spacing_huge"
        android:paddingTop="@dimen/spacing_huge"/>


</LinearLayout>