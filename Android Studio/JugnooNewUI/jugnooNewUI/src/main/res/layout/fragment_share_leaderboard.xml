<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        >

        <RelativeLayout
            android:id="@+id/relativeLayoutLocal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_activity_bar_height"
            android:background="@drawable/background_white_yellow_selector" >

            <TextView
                android:id="@+id/textViewLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/share_activity_text_margin_left"
                android:text="@string/local_leaderboard"
                android:textColor="@drawable/text_color_grey_dark_white_selector"
                android:textSize="@dimen/share_activity_text_size" />

            <ImageView
                android:layout_width="13px"
                android:layout_height="26px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@drawable/arrow_icon_selector"
                android:tag="mwar" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:src="@color/grey_dark_less" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayoutDaily"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_activity_bar_height"
            android:background="@drawable/background_white_yellow_selector" >

            <TextView
                android:id="@+id/textViewDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/share_activity_text_margin_left"
                android:text="@string/daily_leaderboard"
                android:textColor="@drawable/text_color_grey_dark_white_selector"
                android:textSize="@dimen/share_activity_text_size" />

            <ImageView
                android:layout_width="13px"
                android:layout_height="26px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@drawable/arrow_icon_selector"
                android:tag="mwar" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:src="@color/grey_dark_less" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutWeekly"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_activity_bar_height"
            android:background="@drawable/background_white_yellow_selector" >

            <TextView
                android:id="@+id/textViewWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/share_activity_text_margin_left"
                android:text="@string/weekly_leaderboard"
                android:textColor="@drawable/text_color_grey_dark_white_selector"
                android:textSize="@dimen/share_activity_text_size" />

            <ImageView
                android:layout_width="13px"
                android:layout_height="26px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@drawable/arrow_icon_selector"
                android:tag="mwar" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:src="@color/grey_dark_less" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>