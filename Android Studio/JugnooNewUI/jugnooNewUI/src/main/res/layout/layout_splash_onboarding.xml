<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlSignupOnboarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        android:src="@drawable/bg_top_2"
        android:tag="mwar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_160">

        <TextView
            android:id="@+id/tvReferralTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_you_have_a_referral_code"
            android:textSize="@dimen/px_36"
            android:layout_gravity="center"
            android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/editTextPromoCode"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="36px"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/px_90"
            android:background="#0000"
            android:capitalize="characters"
            android:digits="@string/digits_characters_caps_numbers"
            android:maxWidth="200dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/enter_referral_code_optional"
            android:textAlignment="viewStart"
            android:inputType="textCapCharacters"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/black_text"
            android:textColorHint="@color/black_text_alpha"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="@dimen/text_size_32"
            android:gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/px_90"
            android:src="@color/grey_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_enter_your_personal_info"
            android:layout_marginTop="@dimen/px_86"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/px_32"
            android:textColor="@color/text_color"
            app:font="@string/maven_r"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/px_90"
            android:layout_marginTop="@dimen/px_20"
            android:layout_weight="1">

            <ImageView
                android:layout_width="18px"
                android:layout_height="27px"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_user_email"
                android:tag="mhar" />

            <EditText
                android:id="@+id/editTextSName"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28px"
                android:layout_toLeftOf="@+id/textViewSNameRequired"
                android:background="#0000"
                android:digits="@string/digits_characters_numbers"
                android:gravity="center_vertical"
                android:hint="@string/your_full_name"
                android:inputType="textNoSuggestions|textCapWords"
                android:maxLength="50"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:id="@+id/textViewSNameRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/nl_splash_optional"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_22" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/px_90"
            android:src="@color/grey_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_90"
            android:layout_marginRight="@dimen/px_90">

            <ImageView
                android:layout_width="27px"
                android:layout_height="23px"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_email"
                android:tag="mhar" />

            <EditText
                android:id="@+id/editTextSEmail"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28px"
                android:layout_toLeftOf="@+id/textViewSEmailRequired"
                android:background="#0000"
                android:gravity="center_vertical"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textSize="@dimen/text_size_34" />

            <TextView
                android:id="@+id/textViewSEmailRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/nl_splash_optional"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_22" />

        </RelativeLayout>

        <Button
            android:id="@+id/bPromoSubmit"
            android:layout_width="@dimen/splash_button_width"
            android:layout_height="@dimen/splash_button_height"
            android:layout_marginTop="@dimen/px_50"
            android:background="@drawable/capsule_theme_color_selector"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:textColor="@color/text_color_white_grey_selector"
            android:textSize="@dimen/text_size_34" />

        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip_this_step"
            android:layout_marginTop="@dimen/px_32"
            android:textSize="@dimen/px_30"
            android:textColor="@color/grey_969696"/>

    </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/ivBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        android:layout_alignParentBottom="true"
        android:src="@drawable/splash_bottom_building_bg2"
        android:tag="mwar" />

</RelativeLayout>