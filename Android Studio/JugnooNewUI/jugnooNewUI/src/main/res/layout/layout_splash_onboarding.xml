<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlSignupOnboarding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background_drawable"
        android:visibility="@integer/show_splash_bg"
        android:tag="mwar" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        android:src="@drawable/bg_top_2"
        android:tag="mwar"
        android:visibility="@integer/show_login_top_bg" />

    <ImageView
        android:id="@+id/ivBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        android:layout_alignParentBottom="true"
        android:visibility="@integer/show_login_bottom_bg"
        android:background="@drawable/splash_bottom_building_bg1"
        android:tag="mwar" />

    <ScrollView
        android:id="@+id/svSignupOnboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/llSignupOnboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="110px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReferralTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/do_you_have_a_referral_code"
                    android:textColor="@color/layout_login_signup_text_color"
                    android:textSize="@dimen/px_36"
                    app:typekitFont="@string/maven_r" />

                <EditText
                    android:id="@+id/etReferralCode"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/px_90"
                    android:layout_marginStart="@dimen/px_90"
                    android:layout_marginTop="20px"
                    android:background="#0000"
                    android:capitalize="characters"
                    android:digits="@string/digits_characters_caps_numbers"
                    android:gravity="center"
                    android:hint="@string/enter_promocode_optional"
                    android:inputType="textCapCharacters"
                    android:maxWidth="200dp"
                    android:paddingEnd="20px"
                    android:paddingStart="20px"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textColor="@color/layout_login_signup_text_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/text_size_32"
                    app:typekitFont="@string/maven_r" />

                <ImageView
                    android:id="@+id/ivEtPromoDiv"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginEnd="@dimen/px_90"
                    android:layout_marginStart="@dimen/px_90"
                    android:src="@color/layout_login_signup_text_color" />

                <TextView
                    android:id="@+id/tvEnterPersonalDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px"
                    android:text="@string/please_enter_your_personal_info"
                    android:textColor="@color/layout_login_signup_text_color"
                    android:textSize="@dimen/px_32"
                    app:typekitFont="@string/maven_r" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/px_90"
                    android:layout_marginStart="@dimen/px_90"
                    android:layout_marginTop="@dimen/px_20"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="18px"
                        android:layout_height="27px"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_user_email"
                        android:tag="mhar" />

                    <EditText
                        android:id="@+id/etOnboardingName"
                        android:layout_width="match_parent"
                        android:layout_height="88px"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="28px"
                        android:layout_toStartOf="@+id/textViewSNameRequired1"
                        android:background="#0000"
                        android:gravity="center_vertical"
                        android:hint="@string/first_name"
                        android:inputType="textNoSuggestions|textCapWords|textPersonName"
                        android:maxLength="50"
                        android:paddingEnd="20px"
                        android:paddingStart="20px"
                        android:singleLine="true"
                        android:textColor="@color/layout_login_signup_text_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_34"
                        app:typekitFont="@string/maven_r" />

                    <TextView
                        android:id="@+id/textViewSNameRequired1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@string/nl_splash_optional"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_22" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginEnd="@dimen/px_90"
                    android:layout_marginStart="@dimen/px_90"
                    android:src="@color/grey_light" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/px_90"
                    android:layout_marginStart="@dimen/px_90"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="18px"
                        android:layout_height="27px"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_user_email"
                        android:tag="mhar" />

                    <EditText
                        android:id="@+id/etOnboardingLastName"
                        android:layout_width="match_parent"
                        android:layout_height="88px"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="28px"
                        android:layout_toStartOf="@+id/textViewSLastNameRequired1"
                        android:background="#0000"
                        android:gravity="center_vertical"
                        android:hint="@string/last_name"
                        android:inputType="textNoSuggestions|textCapWords|textPersonName"
                        android:maxLength="50"
                        android:paddingEnd="20px"
                        android:paddingStart="20px"
                        android:singleLine="true"
                        android:textColor="@color/layout_login_signup_text_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_34"
                        app:typekitFont="@string/maven_r" />

                    <TextView
                        android:id="@+id/textViewSLastNameRequired1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@string/nl_splash_optional"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_22" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginEnd="@dimen/px_90"
                    android:layout_marginStart="@dimen/px_90"
                    android:src="@color/grey_light" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/px_90"
                    android:layout_marginStart="@dimen/px_90"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="27px"
                        android:layout_height="23px"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_email"
                        android:tag="mhar" />

                    <EditText
                        android:id="@+id/etOnboardingEmail"
                        android:layout_width="match_parent"
                        android:layout_height="88px"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="28px"
                        android:layout_toStartOf="@+id/textViewSEmailRequired1"
                        android:background="#0000"
                        android:gravity="center_vertical"
                        android:hint="@string/email_address"
                        android:inputType="textEmailAddress"
                        android:paddingEnd="20px"
                        android:paddingStart="20px"
                        android:singleLine="true"
                        android:textColor="@color/layout_login_signup_text_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_34"
                        app:typekitFont="@string/maven_r" />

                    <TextView
                        android:id="@+id/textViewSEmailRequired1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="@string/nl_splash_optional"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_22" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="90px"
                    android:layout_marginStart="90px"
                    >


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:src="@color/grey_light" />

                    <ImageView
                        android:id="@+id/ivGenderIcon"
                        android:layout_width="18px"
                        android:layout_height="28px"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_user_email"/>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinnerGender"
                        android:layout_toEndOf="@+id/ivGenderIcon"
                        android:layout_width="match_parent"
                        android:layout_height="88px"
                        android:layout_marginStart="8px"
                        android:padding="8px"
                        android:popupBackground="@drawable/background_white_rounded_bordered"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="90px"
                    android:layout_marginStart="90px"
                    android:tag="@string/dont_touch_me"
                    >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:src="@color/grey_light" />
                    <ImageView
                        android:layout_width="27px"
                        android:layout_height="23px"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_dob"
                        android:tag="mhar" />





                <EditText
                    android:id="@+id/etDOB"
                    android:layout_width="match_parent"
                    android:layout_height="88px"
                    android:textDirection="locale"
                    android:focusable="false"
                    android:layout_centerVertical="true"
                    android:longClickable="false"
                    android:layout_marginStart="28px"
                    android:background="@drawable/background_transparent"
                    android:hint="@string/date_of_birth"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName|textCapCharacters"
                    android:paddingEnd="20px"
                    android:paddingStart="20px"
                    android:textSize="@dimen/text_size_34"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_light"
                    />

                </RelativeLayout>


                <Button
                    android:id="@+id/bPromoSubmit"
                    android:layout_width="@dimen/splash_button_width"
                    android:layout_height="@dimen/splash_button_height"
                    android:layout_marginTop="@dimen/px_50"
                    android:background="@drawable/capsule_theme_color_selector"
                    android:text="@string/next"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_white_grey_selector"
                    android:textSize="@dimen/text_size_34"
                    app:typekitFont="maven"
                    android:layout_marginBottom="10px"/>

                <TextView
                    android:id="@+id/tvSkip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22px"
                    android:text="@string/skip_this_step"
                    android:textColor="@color/layout_login_signup_text_color"
                    android:textSize="@dimen/px_30"
                    app:typekitFont="@string/maven_r"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>