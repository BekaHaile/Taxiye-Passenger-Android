<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root"
                android:layout_width="720px"
                android:layout_height="1134px"
                android:background="@color/white"
                tools:context="com.cdk23.nlk.AddToAddressBookActivity">



    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="1138px">

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <LinearLayout
                android:id="@+id/mapScreenShot"
                android:layout_width="match_parent"
                android:layout_height="324px"

                android:orientation="vertical"
                >
                <fragment
                    android:id="@+id/addressmapView"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapScreenShot"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25px"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_houseFlatNo"
                        android:layout_width="530px"
                        android:layout_height="90px"
                        android:background="@null"
                        android:hint="@string/house_flat_no_hint"
                        android:inputType="textFilter|textCapSentences"
                        android:paddingLeft="25px"
                        android:singleLine="true"
                        android:textColor="@color/black_text"
                        android:textCursorDrawable="@null"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewEditHouseNumber"
                        android:layout_width="68px"
                        android:layout_height="68px"
                        android:layout_gravity="center"
                        android:padding="15px"
                        android:src="@drawable/edit_icon_selector"
                        android:tag="mwar"
                        android:visibility="gone"/>
                </LinearLayout>


                <ImageView
                    android:layout_width="600px"
                    android:layout_height="2px"
                    android:src="@color/theme_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_buildingStreetName"
                        android:layout_width="530px"
                        android:layout_height="90px"
                        android:background="@null"
                        android:hint="@string/building_street_name_hint"
                        android:inputType="textFilter|textCapSentences"
                        android:paddingLeft="25px"
                        android:singleLine="true"
                        android:textColor="@color/black_text"
                        android:textCursorDrawable="@null"
                        android:textSize="30px" />

                    <ImageView
                        android:id="@+id/imageViewEditBuilding"
                        android:layout_width="68px"
                        android:layout_height="68px"
                        android:layout_gravity="center"
                        android:padding="15px"
                        android:src="@drawable/edit_icon_selector"
                        android:tag="mwar"
                        android:visibility="gone"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="600px"
                    android:layout_height="2px"
                    android:src="@color/theme_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_area"
                        android:layout_width="530px"
                        android:layout_height="90px"
                        android:background="@null"
                        android:hint="@string/area_hint"
                        android:inputType="textFilter|textCapSentences"
                        android:paddingLeft="25px"
                        android:singleLine="true"
                        android:textColor="@color/black_text"
                        android:textCursorDrawable="@null"
                        android:textSize="30px" />
                    <ImageView
                        android:id="@+id/imageViewEditArea"
                        android:layout_width="68px"
                        android:layout_height="68px"
                        android:layout_gravity="center"
                        android:padding="15px"
                        android:src="@drawable/edit_icon_selector"
                        android:tag="mwar"
                        android:visibility="gone"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="600px"
                    android:layout_height="2px"
                    android:src="@color/theme_color" />

                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:background="@null"
                    android:hint="@string/city_hint"
                    android:inputType="textFilter|textCapSentences"
                    android:paddingLeft="25px"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textCursorDrawable="@null"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="600px"
                    android:layout_height="2px"
                    android:src="@color/theme_color" />

                <EditText
                    android:id="@+id/edt_pinCode"
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:background="@null"
                    android:hint="@string/pin_code_hint"
                    android:inputType="textFilter|number"
                    android:digits="1234567890"
                    android:maxLength="6"
                    android:paddingLeft="25px"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textCursorDrawable="@null"
                    android:textSize="30px" />

                <ImageView
                    android:layout_width="600px"
                    android:layout_height="2px"
                    android:src="@color/theme_color" />

            </LinearLayout>


            <Button
                android:id="@+id/buttonAddToAddressBook"
                android:layout_width="648px"
                android:layout_height="100px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="70px"
                android:layout_marginTop="70px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_yellow_selector"
                android:text="@string/add_address_to_address_book"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size" />

            <TextView
                android:id="@+id/textViewScroll"
                android:layout_width="20px"
                android:layout_height="20px"
                android:text=" "
                />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
