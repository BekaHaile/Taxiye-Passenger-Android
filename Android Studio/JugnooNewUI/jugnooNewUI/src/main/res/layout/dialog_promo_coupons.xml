<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:id="@+id/linearLayoutInner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_rounded"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        android:layout_centerInParent="true"
        android:layout_margin="40px"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="252px"
            android:background="@drawable/background_orange_tr"
            >

            <ImageView
                android:layout_width="374px"
                android:layout_height="213px"
                android:tag="mwar"
                android:src="@drawable/ic_offer_popup"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewPromoCoupons"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:splitMotionEvents="false"
            android:scrollbars="vertical"
            android:fadeScrollbars="true"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px"
            >
        </android.support.v7.widget.RecyclerView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_menu_item_selector_color_br"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/stroke_color_dark"
                />

            <Button
                android:id="@+id/buttonSkip"
                android:layout_width="320px"
                android:layout_height="96px"
                android:textColor="@color/text_color_light_selector"
                android:background="@drawable/background_transparent"
                android:textSize="@dimen/text_size_34"
                android:text="@string/skip"
                android:layout_alignParentRight="true"
                />

            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="320px"
                android:layout_height="96px"
                android:textColor="@color/text_color_light_selector"
                android:background="@drawable/background_transparent"
                android:textSize="@dimen/text_size_34"
                android:text="@string/continue_text"
                />
            
            <View
                android:layout_width="2px"
                android:layout_height="50px"
                android:layout_centerInParent="true"
                android:background="@color/stroke_color_dark"
                />


        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>