<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/title"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/jugnoo_star" />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px_40"
        android:layout_below="@+id/topBar"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_42"
            android:layout_marginLeft="@dimen/px_28"
            android:layout_marginRight="@dimen/px_28">

            <TextView
                android:id="@+id/tvCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_membership_plan"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/tvCurrentPlanValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="999/- month"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/px_30"
            android:background="@color/menu_item_selector_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_42"
            android:layout_marginLeft="@dimen/px_28"
            android:layout_marginRight="@dimen/px_28">

            <TextView
                android:id="@+id/tvExpiresOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/membership_expires_on"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/tvExpiresOnValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="12/12/2016"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"/>
        </RelativeLayout>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llContainer"
        android:background="@color/grey_lb_list">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvBenefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px_20"
            android:paddingTop="@dimen/px_20"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/llContainer"
        android:background="@drawable/shadow_down" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down" />


</RelativeLayout>