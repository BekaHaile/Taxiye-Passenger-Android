<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/title"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="@string/jugnoo_star" />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llSavingMeter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/px_90">

                <TextView
                    android:id="@+id/tvSavingsMeter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/px_20"
                    android:text="@string/savings_meter"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_34" />

                <LinearLayout
                    android:id="@+id/llSavingsValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <product.clicklabs.jugnoo.utils.ProgressWheel
                        android:id="@+id/progressWheel"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:tag="mwar"
                        wheel:matProg_barColor="@color/colorPrimary"
                        wheel:matProg_barWidth="3dp"
                        wheel:matProg_fillRadius="true"
                        wheel:matProg_progressIndeterminate="false" />

                    <TextView
                        android:id="@+id/tvSavingsMeterRetry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:text="@string/retry_underline"
                        android:textColor="@color/text_color_selector"
                        android:textSize="@dimen/text_size_30"
                        android:visibility="visible" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvBenefits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_40"
                    android:gravity="center"
                    android:text="Benefits"
                    android:visibility="gone"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_34" />


                <product.clicklabs.jugnoo.utils.NonScrollListView
                    android:id="@+id/rvBenefits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:fadeScrollbars="true"
                    android:visibility="gone"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cvContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_40"
                android:layout_below="@+id/llSavingMeter">

                <LinearLayout
                    android:id="@+id/llContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_100"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px_28"
                        android:layout_marginRight="@dimen/px_28">

                        <TextView
                            android:id="@+id/tvCurrentPlan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/membership_plan"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_30" />

                        <TextView
                            android:id="@+id/tvCurrentPlanValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="999/- month"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_30" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/menu_item_selector_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_100"
                        android:layout_marginLeft="@dimen/px_28"
                        android:layout_marginRight="@dimen/px_28"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvExpiresOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expires_on"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_30" />

                        <TextView
                            android:id="@+id/tvExpiresOnValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="12/12/2016"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_30" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlAutoRenewal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_100"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/px_28"
                        android:layout_marginRight="@dimen/px_28"
                        android:visibility="gone"
                        android:background="@color/white">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/menu_item_selector_color" />

                        <TextView
                            android:id="@+id/tvAutoRenewal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="@string/auto_renewal"
                            android:textColor="@color/text_color_light_selector"
                            android:textSize="@dimen/text_size_30" />

                        <ImageView
                            android:id="@+id/ivAutoRenewalSwitch"
                            android:layout_width="77px"
                            android:layout_height="50px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/jugnoo_sticky_off"
                            android:tag="mwar" />

                    </RelativeLayout>
                    
                    <LinearLayout
                        android:id="@+id/llRenew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical">
                        
                        <TextView
                            android:id="@+id/tvExpiredTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your star status has expired."
                            android:textColor="#fd4f3a"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textSize="@dimen/text_size_30"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px_46"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/rlPlan1"
                                android:layout_width="@dimen/px_320"
                                android:layout_height="@dimen/px_135"
                                android:visibility="visible"
                                android:background="@color/transparent">

                                <ImageView
                                    android:id="@+id/ivRadio1"
                                    android:layout_width="@dimen/px_50"
                                    android:layout_height="@dimen/px_50"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/px_50"
                                    android:src="@drawable/ic_radio_button_normal"
                                    android:tag="mwar" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/px_24"
                                    android:layout_toRightOf="@+id/ivRadio1"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/tvPeriod1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="Monthly"
                                        android:textColor="@color/text_color"
                                        android:textSize="@dimen/text_size_36" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <com.sabkuchfresh.utils.TextViewStrikeThrough
                                            android:id="@+id/tvActualAmount1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="-10px"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="2388"
                                            android:textColor="@color/text_color"
                                            android:textSize="@dimen/text_size_24"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/tvAmount1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0px"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="199"
                                            android:textColor="@color/document_layout_bordor_color"
                                            android:textSize="@dimen/text_size_24" />

                                    </LinearLayout>
                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlPlan2"
                                android:layout_width="@dimen/px_320"
                                android:layout_height="@dimen/px_135"
                                android:visibility="visible"
                                android:background="@color/transparent">

                                <ImageView
                                    android:id="@+id/ivRadio2"
                                    android:layout_width="@dimen/px_50"
                                    android:layout_height="@dimen/px_50"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/px_25"
                                    android:src="@drawable/ic_radio_button_normal"
                                    android:tag="mwar" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/px_24"
                                    android:layout_toRightOf="@+id/ivRadio2"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/tvPeriod2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:maxLines="1"
                                        android:text="Annual"
                                        android:textColor="@color/text_color"
                                        android:textSize="@dimen/text_size_36" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <com.sabkuchfresh.utils.TextViewStrikeThrough
                                            android:id="@+id/tvActualAmount2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="-10px"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="2388"
                                            android:textColor="@color/text_color"
                                            android:textSize="@dimen/text_size_24" />

                                        <TextView
                                            android:id="@+id/tvAmount2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0px"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:text="999"
                                            android:textColor="@color/document_layout_bordor_color"
                                            android:textSize="@dimen/text_size_24" />

                                    </LinearLayout>
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/bConfirm"
                            style="@style/ButtonTheme"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/px_46"
                            android:text="@string/confirm"
                            android:layout_marginBottom="@dimen/px_40"/>
                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/llUpgradeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/cvContainer"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20">

            <TextView
                android:id="@+id/tvUpgradingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"
                android:text="asdfasfd"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnUpgradeNow"
                style="@style/ButtonTheme"
                android:layout_below="@+id/tvUpgradingText"
                android:text="@string/upgrade_now"
                android:layout_marginTop="@dimen/px_90"/>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down" />


</RelativeLayout>