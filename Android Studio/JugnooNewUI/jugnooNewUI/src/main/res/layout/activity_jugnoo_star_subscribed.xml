<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/menu_item_selector_color">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/title"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/jugnoo_star" />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px_40"
        android:layout_below="@+id/topBar"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_42"
            android:layout_marginLeft="@dimen/px_28"
            android:layout_marginRight="@dimen/px_28">

            <TextView
                android:id="@+id/tvCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/membership_plan"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/tvCurrentPlanValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="999/- month"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/px_30"
            android:background="@color/menu_item_selector_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_42"
            android:layout_marginLeft="@dimen/px_28"
            android:layout_marginRight="@dimen/px_28">

            <TextView
                android:id="@+id/tvExpiresOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expires_on"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"/>

            <TextView
                android:id="@+id/tvExpiresOnValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="12/12/2016"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"/>
        </RelativeLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llContainer"
        android:background="@color/grey_lb_list"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvSavingsMeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savings_meter"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62px"
            android:layout_marginBottom="20px"
            />

        <LinearLayout
            android:id="@+id/llSavingsValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <product.clicklabs.jugnoo.utils.ProgressWheel
                android:id="@+id/progressWheel"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:tag="mwar"
                wheel:matProg_barColor="@color/colorPrimary"
                wheel:matProg_fillRadius="true"
                wheel:matProg_progressIndeterminate="false"
                wheel:matProg_barWidth="3dp"
                />

            <TextView
                android:id="@+id/tvSavingsMeterRetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:text="@string/retry_underline"
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_30"
                android:visibility="visible"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tvSavingsFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savings_from"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="82px"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvBenefits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/px_20"
            android:paddingTop="@dimen/px_20"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/llContainer"
        android:background="@drawable/shadow_down" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down" />


</RelativeLayout>