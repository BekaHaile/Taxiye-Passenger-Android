<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/layout_rest_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">


    <ImageView
        android:id="@+id/iv_rest_collapse_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha" />



    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/opaque_black" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_rest_original_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:tag="mwar" />



    <TextView
        android:id="@+id/tv_rest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvCollapRestaurantDeliveryTime"
        android:layout_marginLeft="@dimen/px_30"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_36"
        app:font="avenir" />


    <TextView
        android:id="@+id/tvCollapRestaurantDeliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_10"
        android:layout_marginBottom="@dimen/px_20"
        android:drawableLeft="@drawable/ic_clock_grey"
        android:drawablePadding="@dimen/px_8"
        android:layout_alignParentBottom="true"
        app:font="maven"
        />


    <TextView
        android:id="@+id/tvCollapRestaurantRating"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_40"
        android:background="@drawable/capsule_text_color"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_rest_title"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20"
        android:paddingRight="@dimen/px_15"
        android:paddingLeft="@dimen/px_15"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/px_10"
        android:layout_marginRight="@dimen/px_30"
        android:visibility="visible"
        app:font="maven"
        />


</RelativeLayout>