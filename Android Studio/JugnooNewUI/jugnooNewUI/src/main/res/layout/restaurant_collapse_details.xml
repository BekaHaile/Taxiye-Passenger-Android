<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_rest_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">


    <ImageView
        android:id="@+id/iv_rest_collapse_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/black_alpha"
        android:transitionName="@string/zoom_view" />


    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_70" />

    <ImageView
        android:id="@+id/iv_rest_original_image"
        android:layout_width="match_parent"
        android:layout_height="560px"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:tag="mwar"
        android:transitionName="@string/zoom_view"
        android:visibility="gone" />





    <TextView
        android:id="@+id/tvCollapRestaurantDeliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_30"
        android:drawableLeft="@drawable/ic_clock_grey"
        android:drawablePadding="@dimen/px_8"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        app:font="maven"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/tv_rest_title"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_5"
        android:layout_marginBottom="@dimen/px_20"
        android:text="Resto"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_36"
        android:layout_above="@+id/tvCollapRestaurantDeliveryTime"
        app:font="avenir"
        android:layout_alignWithParentIfMissing="true" />


    <LinearLayout
        android:id="@+id/llCollapseRating"
        android:layout_width="200px"
        android:layout_height="150px"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="right|bottom"
        >

<!--android:background="@drawable/capsule_text_color_vendor_menu"-->
        <TextView
            android:id="@+id/tvCollapRestaurantRating"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_40"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/px_30"
            android:text="ewqe"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/text_size_24"
            android:visibility="visible"
            app:font="maven"
            />

        <TextView
            android:id="@+id/tvFeedHyperLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginBottom="@dimen/px_30"
            android:text="Feed"
            android:textColor="@color/text_color_theme_alpha_selector"
            android:textSize="@dimen/text_size_24"
            app:font="maven"
            />

    </LinearLayout>


</RelativeLayout>