<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_rest_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">


    <ImageView
        android:id="@+id/iv_rest_collapse_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/black_alpha"
        android:transitionName="@string/zoom_view" />


    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/opaque_black" />

    <ImageView
        android:id="@+id/iv_rest_original_image"
        android:layout_width="match_parent"
        android:layout_height="560px"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:tag="mwar"
        android:transitionName="@string/zoom_view"
        android:visibility="gone" />





    <TextView
        android:id="@+id/tvCollapRestaurantDeliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginTop="@dimen/px_10"
        android:drawableLeft="@drawable/ic_clock_grey"
        android:drawablePadding="@dimen/px_8"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        android:layout_alignParentLeft="true"
        app:font="maven" />


    <LinearLayout
        android:id="@+id/llCollapseRating"
        android:minWidth="30dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/tvCollapRestaurantDeliveryTime"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginBottom="-10px"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_rest_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_36"
            app:font="avenir" />
        <!--android:background="?attr/selectableItemBackground"-->
        <TextView
            android:id="@+id/tvCollapRestaurantRating"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_40"
            android:background="@drawable/capsule_text_color_vendor_menu"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_15"
            android:paddingRight="@dimen/px_15"
            android:layout_margin="@dimen/px_10"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:visibility="visible"
            app:font="maven"
            />

    </LinearLayout>




</RelativeLayout>