<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/feed_grey_background_light"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_normal"
    android:paddingRight="@dimen/spacing_normal">


    <ImageView
        android:id="@+id/iv_profile_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:layout_marginRight="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_normal"
        android:scaleType="centerCrop"
        android:src="@drawable/whatsapp" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:layout_marginTop="@dimen/spacing_normal"
        android:layout_toRightOf="@id/iv_profile_pic"
        android:text="Jesse Cennedy"
        android:textColor="@color/feed_color_orange"
        android:textSize="@dimen/font_normal"
        app:font="maven" />

    <TextView
        android:id="@+id/tv_comment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:layout_toLeftOf="@+id/iv_delete_comment"
        android:layout_toRightOf="@id/iv_profile_pic"
        android:text="Ended up here on the way to Sukhna Lake to grab a pizza along."
        android:textColor="@color/feed_grey_text"
        android:textSize="@dimen/font_small"
        app:font="maven" />

    <ImageView
        android:id="@id/iv_delete_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-5dp"
        android:background="@null"
        android:layout_below="@id/tv_user_name"
        android:src="@drawable/delete_comment" />

    <TextView
        android:id="@+id/tv_time_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_comment_description"
        android:layout_toRightOf="@id/iv_profile_pic"
        android:drawableLeft="@drawable/ic_clock"
        android:drawablePadding="2dp"
        android:text="12m"
        android:textColor="@color/feed_grey_text_secondary"
        android:textSize="@dimen/font_extra_small"
        app:font="maven" />

    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_time_posted"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/feed_grey_background" />


</RelativeLayout>