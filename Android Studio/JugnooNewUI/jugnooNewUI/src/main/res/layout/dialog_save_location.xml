<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="@string/dont_touch_me"
    android:background="@color/transparent"
    android:padding="50dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSaveAddress"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_saved_location_marker"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/save_your_pickup_location"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingBottom="6dp"
        app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ivLocationMarker"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLocationMarker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pin_ball_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSaveLocation"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="4.5dp"
        android:src="@drawable/selector_save_location"
        app:layout_constraintBottom_toBottomOf="@id/tvSaveAddress"
        app:layout_constraintEnd_toEndOf="@id/tvSaveAddress"
        app:layout_constraintTop_toTopOf="@id/tvSaveAddress" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSkip"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="4.5dp"
        android:src="@drawable/ic_save_location_skip"
        app:layout_constraintBottom_toBottomOf="@id/tvSaveAddress"
        app:layout_constraintStart_toStartOf="@id/tvSaveAddress"
        app:layout_constraintTop_toTopOf="@id/tvSaveAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>
