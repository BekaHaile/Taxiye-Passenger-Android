<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/white_light_grey" >

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="720px"
            android:layout_height="96px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/yellow" >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="FEEDBACK"
                android:textColor="@color/white"
                android:textSize="@dimen/top_bar_title_text_size" />

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="60.7px"
                android:layout_height="76.9px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:padding="20px"
                android:src="@drawable/back_white_selector" />
        </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        android:layout_below="@+id/topBar"
        />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false"
            android:layout_above="@+id/relativeLayoutSkip"
            android:layout_below="@+id/topBar"
            >

            <LinearLayout
                android:id="@+id/linearLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:splitMotionEvents="false"
                android:animateLayoutChanges="true"
                >

                <RatingBar
                    android:id="@+id/ratingBarFeedback"
                    style="@style/YellowRatingBarNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50px"
                    android:numStars="5"
                    android:rating="1"
                    android:stepSize="1.0"
                    />

                <TextView
                    android:id="@+id/textViewRateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:textSize="38px"
                    android:text="Liked it"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20px"
                    />



                <TextView
                    android:id="@+id/textViewWhatImprove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_text_alpha"
                    android:textSize="30px"
                    android:text="What could we improve?"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="30px"
                    />

                <product.clicklabs.jugnoo.utils.NonScrollListView
                    android:id="@+id/listViewFeedbackReasons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:divider="@color/transparent"
                    android:dividerHeight="0px"
                    android:splitMotionEvents="false">
                </product.clicklabs.jugnoo.utils.NonScrollListView>


                <EditText
                    android:id="@+id/editTextFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/background_white_yellow_bordered"
                    android:gravity="left"
                    android:hint="Please share your valuable feedback"
                    android:padding="20px"
                    android:scrollbars="vertical"
                    android:textSize="28px" />


                <RelativeLayout
                    android:id="@+id/relativeLayoutOtherError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <TextView
                        android:id="@+id/textViewOtherError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_status"
                        android:textSize="22px"
                        android:layout_centerVertical="true"
                        android:text="* Required"
                        android:layout_marginLeft="60px"
                        />


                </RelativeLayout>


                <Button
                    android:id="@+id/buttonSubmitFeedback"
                    android:layout_width="648px"
                    android:layout_height="80px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px"
                    android:layout_marginBottom="40px"
                    android:background="@drawable/button_yellow"
                    android:text="SUBMIT"
                    android:textColor="@drawable/text_color_white_alpha_selector"
                    android:textSize="@dimen/button_text_size" />

                <TextView
                    android:id="@+id/textViewScroll"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:text=" " />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/relativeLayoutSkip"
            android:layout_width="180px"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" >

            <TextView
                android:id="@+id/textViewSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/imageViewSkipArrow"
                android:text="Skip"
                android:textColor="@drawable/text_color_grey_dark_white_selector"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/imageViewSkipArrow"
                android:layout_width="13px"
                android:layout_height="26px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@drawable/arrow_icon_selector"
                android:tag="mwar" />
        </RelativeLayout>



</RelativeLayout>