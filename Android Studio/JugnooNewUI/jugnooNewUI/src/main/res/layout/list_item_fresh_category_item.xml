<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:orientation="vertical"
    android:background="@drawable/background_white_grey_light_selector"
    >


    <ImageView
        android:id="@+id/imageViewItemImage"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:scaleType="centerCrop"
        android:tag="mwar"
        />

    <LinearLayout
        android:layout_toRightOf="@+id/imageViewItemImage"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="15px"
        >

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Orange"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"

            />

        <TextView
            android:id="@+id/textViewItemUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="500gm"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_24"

            />

        <TextView
            android:id="@+id/textViewItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/rupee_0"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"
            android:layout_marginTop="4px"

            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutQuantitySelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        >

        <ImageView
            android:id="@+id/imageViewMinus"
            android:layout_width="74px"
            android:layout_height="74px"
            android:tag="mwar"
            android:src="@drawable/ic_minus_selector"
            android:padding="10px"
            />

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="998"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/imageViewPlus"
            android:layout_width="74px"
            android:layout_height="74px"
            android:tag="mwar"
            android:src="@drawable/ic_plus_selector"
            android:padding="10px"
            />

    </LinearLayout>



    <ImageView
        android:id="@+id/imageViewDelete"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20px"
        android:layout_marginRight="20px"
        android:padding="20px"
        android:src="@drawable/ic_cross_grey"
        android:tag="mwar"
        />

    <ImageView
        android:id="@+id/imageViewSep"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="@color/text_color_hint"
        />

</RelativeLayout>