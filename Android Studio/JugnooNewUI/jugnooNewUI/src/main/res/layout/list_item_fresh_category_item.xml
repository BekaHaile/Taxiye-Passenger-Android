<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_grey_light_selector"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewItemImage"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fresh_item_placeholder"
        android:tag="mwar"/>


    <LinearLayout
        android:id="@+id/offer_tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="27px"
        android:layout_above="@+id/imageViewItemImage"
        android:layout_marginBottom="2px"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/offer_tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center_vertical"
            android:paddingLeft="4px"
            android:paddingRight="3px"
            android:text="ACB OFFER "
            android:textColor="@color/black"
            android:textSize="18px"/>

        <ImageView
            android:id="@+id/banner_bg"
            android:layout_width="26px"
            android:layout_height="match_parent"
            android:layout_marginLeft="-4px"
            android:scaleType="fitXY"
            android:src="@drawable/bannar_image"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutContent"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="55px"
        android:layout_toRightOf="@+id/imageViewItemImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Orange"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"
            android:layout_marginTop="25px"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewItemUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:singleLine="true"
            android:text="500gm"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_28"/>

            <ImageView
                android:id="@+id/imageViewMoreInfoSeprator"
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:tag="mwar"
                android:layout_marginLeft="10px"
                android:layout_marginTop="20px"
                android:src="@color/text_color_light"/>

            <TextView
                android:id="@+id/textViewMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_marginLeft="10px"
                android:singleLine="true"
                android:text="More info"
                android:visibility="visible"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_28"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_marginBottom="25px">

            <TextView
                android:id="@+id/textViewItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:text="@string/rupee_0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_34"


                />

            <TextView
                android:id="@+id/textViewItemCost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/rupee_0"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_34"/>

            <TextView
                android:id="@+id/textViewItemOff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20px"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="70% Off"
                android:textColor="@color/off_text"
                android:textSize="@dimen/text_size_34"

                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_view"
        android:layout_width="218px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_alignTop="@+id/linearLayoutContent"
        android:layout_alignBottom="@+id/linearLayoutContent"
        >

        <Button
            android:id="@+id/add_button"
            android:layout_width="118px"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:background="@drawable/button_theme"
            android:gravity="center"
            android:text="ADD"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="32px"/>

        <LinearLayout
            android:id="@+id/linearLayoutQuantitySelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageViewMinus"
                android:layout_width="74px"
                android:layout_height="74px"
                android:padding="10px"
                android:src="@drawable/ic_minus_selector"
                android:tag="mwar"/>

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="70px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="998"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_34"/>

            <ImageView
                android:id="@+id/imageViewPlus"
                android:layout_width="74px"
                android:layout_height="74px"
                android:padding="10px"
                android:src="@drawable/ic_plus_selector"
                android:tag="mwar"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewOutOfStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="Out\nof\nStock"
            android:visibility="gone"
            android:textColor="@color/off_text"
            android:textSize="@dimen/text_size_34"/>

    </LinearLayout>

    <TextView
        android:id="@+id/unavilable_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNAVAILABLE"
        android:textSize="@dimen/text_size_28"
        android:textColor="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15px"
        android:layout_marginRight="20px"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/imageViewDelete"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:padding="20px"
        android:src="@drawable/ic_cross_grey"
        android:tag="mwar"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imageViewSep"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/linearLayoutContent"
        android:background="@color/text_color_hint"/>

</RelativeLayout>