<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/linearLayoutGridViewScreen"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_70"
        android:tag="mwar"
        android:background="@drawable/bg_white_round_less_shadow">

        <ImageView
            android:id="@+id/ivOffering"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_auto_grey" />

        <TextView
            android:id="@+id/ivOfferingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/ivOffering"
            android:text="@string/rides"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_17"
            app:font="@string/maven"/>

        <TextView
            android:id="@+id/ivOfferingDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/ivOffering"
            android:layout_below="@+id/ivOfferingName"
            android:text="@string/rides"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/sp_14"
            app:font="@string/maven_r"/>

    </RelativeLayout>

</LinearLayout>