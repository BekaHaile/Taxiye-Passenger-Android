<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white_light_grey"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="TRANSACTIONS"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_title_text_size"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector"/>
    </RelativeLayout>

    <!-- Transactions list rl-->
    <RelativeLayout
        android:id="@+id/relativeLayoutTransactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar"
        android:splitMotionEvents="false">

        <TextView
            android:id="@+id/textViewRecentTransactions"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:textSize="34px"
            android:textColor="@color/grey_black_light"
            android:gravity="center_vertical"
            android:text="Recent Transactions"
            android:paddingLeft="30px"
            />


        <ListView
            android:id="@+id/listViewTransactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/background_transparent"
            android:dividerHeight="0px"
            android:listSelector="@drawable/background_transparent"
            android:splitMotionEvents="false"
            android:layout_below="@+id/textViewRecentTransactions"
            >
        </ListView>


        <product.clicklabs.jugnoo.utils.ProgressWheel
            android:id="@+id/progressBar"
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_centerInParent="true"
            wheel:matProg_barColor="@color/yellow"
            wheel:matProg_fillRadius="true"
            wheel:matProg_progressIndeterminate="true"
            android:tag="mwar"
            />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down"
        />

</RelativeLayout>