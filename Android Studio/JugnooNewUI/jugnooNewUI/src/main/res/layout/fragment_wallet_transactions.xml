<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sliding_bottom_bg_color"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="RECENT TRANSACTIONS"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_title_text_size"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/ic_back_selector"/>
    </RelativeLayout>

    <!-- Transactions list rl-->
    <RelativeLayout
        android:id="@+id/relativeLayoutTransactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar"
        android:splitMotionEvents="false">


        <ListView
            android:id="@+id/listViewTransactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/background_transparent"
            android:dividerHeight="0px"
            android:listSelector="@drawable/background_transparent"
            android:splitMotionEvents="false"
            >
        </ListView>


        <ImageView
            android:id="@+id/imageViewJugnooAnimation"
            android:layout_width="@dimen/jugnoo_anim_loading_width"
            android:layout_height="@dimen/jugnoo_anim_loading_height"
            android:layout_centerInParent="true"
            android:background="@drawable/auto_loading_frame_anim"
            android:layout_gravity="center_horizontal"/>
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down"
        />

</RelativeLayout>