<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlSort"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/rlSortContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/black_translucent_less"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="634px" />

        <View
            android:id="@+id/viewSortFake"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_500"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rlSortBg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_500"
            android:layout_alignParentBottom="true"
            android:animateLayoutChanges="true"
            android:background="@color/white">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvDeliverySlots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_40"
                android:layout_marginLeft="2px"
                android:layout_marginRight="2px"
                android:background="@color/white"
                android:fadeScrollbars="true"
                android:paddingTop="20px"
                android:scrollbars="vertical"
                android:splitMotionEvents="false"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="524px" />

        <View
            android:id="@+id/viewSortFake1"
            android:layout_width="match_parent"
            android:layout_height="410px"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivSort"
            android:layout_width="216px"
            android:layout_height="242px"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_filter_new"
            android:tag="mwar" />

    </LinearLayout>


</RelativeLayout>