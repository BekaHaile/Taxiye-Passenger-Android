<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">


        <LinearLayout
            android:id="@+id/linearLayoutInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:background="@drawable/background_white_rounded"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:splitMotionEvents="false">


            <TextView
                android:id="@+id/textViewCancelRide"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textAllCaps="true"
                android:background="@drawable/bg_menu_item_selector_tlrr"
                android:text="@string/cancel_ride"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_44" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:tag="mwar"
                android:src="@color/text_color_light"/>

            <TextView
                android:id="@+id/textViewOnHisWay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingEnd="20px"
                android:paddingStart="20px"
                android:layout_marginTop="50px"
                android:text="@string/your_driver_is_on_his_way"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_38" />

            <TextView
                android:id="@+id/textViewContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="20px"
                android:paddingStart="20px"
                android:gravity="center"
                android:layout_marginTop="30px"
                android:text="@string/continue_with_cancellation"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_38" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="50px"
                android:layout_marginBottom="40px"
                android:orientation="horizontal">

            <Button
                android:id="@+id/buttonYes"
                android:layout_width="250px"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34"
                android:background="@drawable/button_theme"
                android:text="@string/upload_contact_yes"
                />

                <Button
                    android:id="@+id/buttonNo"
                    android:layout_width="250px"
                    android:layout_height="80px"
                    android:layout_marginStart="30px"
                    android:textSize="@dimen/text_size_34"
                    android:background="@drawable/button_white_grey_theme_border_selector"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/text_color_theme_selector"
                    android:text="@string/no_caps"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewCancellation"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:background="@drawable/bg_menu_item_selector_color_blrr"
                android:gravity="center"
                android:layout_marginTop="40px"
                android:text="@string/cancellation_charges_may_apply"
                android:textSize="@dimen/text_size_26"
                android:visibility="gone"
                android:textColor="@color/text_color"/>


        </LinearLayout>


</RelativeLayout>