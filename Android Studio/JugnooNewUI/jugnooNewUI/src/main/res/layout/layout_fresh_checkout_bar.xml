<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="@string/dont_touch_me"
    android:background="@drawable/bg_theme_color_selector"
    android:id="@+id/rlCheckoutBar"
    android:visibility="gone"
    android:animateLayoutChanges="true"
    >


    <TextView
        android:id="@+id/tvCheckoutItemsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_14"
        android:text="CHECKOUT"
        app:font="maven"
        />


    <TextView
        android:id="@+id/tvCartAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/capsule_black_20"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_centerVertical="true"
        android:text=""
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:drawablePadding="@dimen/dp_4"
        android:drawableLeft="@drawable/ic_fresh_cart_svg"
        android:drawableRight="@drawable/ic_fresh_cart_arrow_svg"
        app:font="maven"
        />

</RelativeLayout>