<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llCheckoutBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="@string/dont_touch_me"
    android:visibility="invisible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_51"
        android:background="@drawable/bg_theme_color_selector">

        <TextView
            android:id="@+id/tvCheckoutItemsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:text="CHECKOUT"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:font="maven" />


        <TextView
            android:id="@+id/tvCartAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:background="@drawable/capsule_black_20"
            android:drawableLeft="@drawable/ic_fresh_cart_svg"
            android:drawablePadding="@dimen/dp_4"
            android:drawableRight="@drawable/ic_fresh_cart_arrow_svg"
            android:gravity="center"
            android:padding="@dimen/dp_8"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:font="maven" />

    </RelativeLayout>

</LinearLayout>