<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearRoot"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:background="@color/menu_item_selector_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="4px"
        android:paddingRight="4px"
        app:cardCornerRadius="8px"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="15px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white"
        >

        <LinearLayout
            android:id="@+id/layout_card_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/linearLayoutNotificationImage"
                android:layout_width="match_parent"
                android:layout_height="340px"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:tag="mwar">

                <ImageView
                    android:id="@+id/imageViewMmeals"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_meal_place_holder"
                    android:tag="mwar"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/image_view_closed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/closed"
                    android:scaleType="centerCrop"
                    android:tag="mwar"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/food_type"
                    android:layout_width="41px"
                    android:layout_height="41px"
                    android:tag="mwar"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="22px"
                    android:layout_marginLeft="22px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">


                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/text_price"
                    android:paddingLeft="27px"
                    android:text="Title\nabc"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_32"
                    android:maxLines="2"
                    />


                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:gravity="right"
                    android:text="@string/rupee_0"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_32" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="15px"
                android:background="@color/stroke_color_light" />





            <RelativeLayout
                android:id="@+id/below_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/textViewdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/cart_layout"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:paddingLeft="27px"
                    android:paddingRight="20px"
                    android:text="Description"
                    android:maxLines="3"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_24"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/cart_layout"
                    android:layout_width="208px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    android:animateLayoutChanges="true"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/delivery_time"
                        android:layout_width="208px"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="27px"
                        android:text="Order at\n12:00pm"
                        android:gravity="right"
                        android:visibility="gone"
                        android:lineSpacingExtra="5px"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24" />

                    <Button
                        android:id="@+id/add_button"
                        android:layout_width="118px"
                        android:layout_height="60px"
                        android:layout_gravity="right"
                        android:background="@drawable/button_theme"
                        android:gravity="center"
                        android:visibility="visible"
                        android:text="ADD"
                        android:textColor="@color/white"
                        android:textSize="32px" />

                    <LinearLayout
                        android:id="@+id/linearLayoutQuantitySelector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageViewMinus"
                            android:layout_width="74px"
                            android:layout_height="74px"
                            android:padding="10px"
                            android:src="@drawable/ic_minus_selector"
                            android:tag="mwar" />

                        <TextView
                            android:id="@+id/textViewQuantity"
                            android:layout_width="50px"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="99"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_34" />

                        <ImageView
                            android:id="@+id/imageViewPlus"
                            android:layout_width="74px"
                            android:layout_height="74px"
                            android:padding="10px"
                            android:src="@drawable/ic_plus_selector"
                            android:tag="mwar" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_below="@+id/cart_layout"
                    android:layout_width="1px"
                    android:layout_height="1px"
                    />

            </RelativeLayout>

 />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>