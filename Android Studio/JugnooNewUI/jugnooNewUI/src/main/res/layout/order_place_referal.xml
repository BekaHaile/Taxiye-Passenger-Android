<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rvPromo"
    android:layout_width="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:background="@drawable/bg_transparent_menu_item_selector"
    >


    <EditText
        android:id="@+id/edtPromo"
        android:textColorHint="@color/text_color_hint_anywhere"
        android:textColor="@color/text_color"
        android:textSize="17sp"
        android:hint="@string/enter_code"
        android:gravity="start|center"
        android:minHeight="40dp"
        android:paddingBottom="16dp"
        app:typekitFont="@string/maven"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
        android:inputType="textCapCharacters"
        android:focusableInTouchMode="true"
        android:maxLines="1"
        android:theme="@style/EditText.Fatafat.Theme"
        android:layout_toStartOf="@+id/tv_apply"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/tv_apply"
        android:gravity="center"
        android:layout_alignBottom="@id/edtPromo"
        android:text="@string/apply"
        android:enabled="false"
        android:textAllCaps="true"
        android:layout_marginBottom="7dp"
        android:textSize="17sp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        app:typekitFont="@string/maven"
        android:background="@drawable/button_theme"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_promo_error"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/red_dark"
        android:textSize="15sp"
        app:typekitFont="@string/maven_r"
        android:text="Seems like an error!"
        android:layout_below="@+id/edtPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>