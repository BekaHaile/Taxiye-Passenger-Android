<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color"
    android:splitMotionEvents="false">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/follow_the_following"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.498" />

    <TextView
        android:id="@+id/stepsDialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:layout_marginTop="28dp"
        android:text="@string/press_the_call_button"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_below="@+id/textView3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/stepsDialogue"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_theme"
            android:text="@string/call"
            app:layout_constraintHorizontal_bias="0.456"
            app:layout_constraintVertical_bias="0.248" />

        <Button
            android:id="@+id/btn_cancel"
            style="@style/ButtonThemeAlternate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/cancel"
            app:layout_constraintHorizontal_bias="0.863"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.249" />
    </LinearLayout>

</RelativeLayout>