<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollViewRideSummary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayoutRideSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="360px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewRSTotalFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_fare"
                    android:textSize="@dimen/end_ride_fare_title_text_size"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/textViewRSTotalFareValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textSize="@dimen/end_ride_fare_value_text_size"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10px"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:src="@color/grey_dark_less"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                />

            <LinearLayout
                android:layout_width="360px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewRSCashPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Cash_to_be_paid"
                    android:textSize="@dimen/end_ride_fare_title_text_size"
                    android:textColor="@color/text_color"/>

                <TextView
                    android:id="@+id/textViewRSCashPaidValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:textSize="@dimen/end_ride_fare_value_text_size"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="10px"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRSViewInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24px"
                android:layout_height="24px"
                android:tag="mwar"
                android:layout_marginRight="8px"
                android:src="@drawable/ic_ride_receipt"/>

            <TextView
                android:id="@+id/textViewRSInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/view_invoice"
                android:textSize="@dimen/text_size_32"
                android:textColor="@color/text_color_theme_selector"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/textViewRSRateYourRide"
                android:src="@color/grey_dark_less"/>

            <TextView
                android:id="@+id/textViewRSRateYourRide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/rate_your_ride"
                android:textSize="@dimen/text_size_26"
                android:textColor="@color/text_color"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/textViewRSRateYourRide"
                android:src="@color/grey_dark_less"/>
        </RelativeLayout>


        <RatingBar
            android:id="@+id/ratingBarRSFeedback"
            style="@style/YellowRatingBarNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:numStars="5"
            android:rating="1"
            android:stepSize="1.0"/>


        <TextView
            android:id="@+id/textViewRSWhatImprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="15px"
            android:text="@string/what_could_we_improve"
            android:textColor="@color/text_color"
            android:textSize="30px"/>

        <product.clicklabs.jugnoo.utils.NonScrollGridView
            android:id="@+id/gridViewRSFeedbackReasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:divider="@color/transparent"
            android:dividerHeight="0px"
            android:numColumns="2"
            android:splitMotionEvents="false"/>


        <EditText
            android:id="@+id/editTextRSFeedback"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"
            android:background="@drawable/background_white_rounded_bordered"
            android:gravity="left"
            android:hint="@string/leave_a_comment"
            android:padding="20px"
            android:scrollbars="vertical"
            android:textSize="28px"
            android:textColor="@color/grey_dark_more"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="10px"
            android:animateLayoutChanges="true">
        <TextView
            android:id="@+id/textViewRSOtherError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/star_required"
            android:textColor="@color/red_status"
            android:textSize="22px"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonRSSubmitFeedback"
            style="@style/ButtonTheme"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10px"
            android:layout_marginTop="20px"
            android:text="@string/submit_feedback_caps"
            />

        <Button
            android:id="@+id/buttonRSSkipFeedback"
            android:layout_width="150px"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40px"
            android:layout_marginTop="10px"
            android:background="@drawable/background_transparent"
            android:text="@string/skip"
            android:textColor="@drawable/text_color_grey_dark_light_selector"
            android:textSize="@dimen/button_small_text_size"/>

        <TextView
            android:id="@+id/textViewRSScroll"
            android:layout_width="20px"
            android:layout_height="20px"
            android:text=" "/>

    </LinearLayout>
</ScrollView>