<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_feed_order"
    android:tag="@string/dont_touch_me"
    android:background="@color/offer_popup_item_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            >

            <LinearLayout
                android:id="@+id/rlOrderStatusFeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv1l"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:text="@string/service_status_colon"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/sp_12"
                    app:typekitFont="@string/maven_r"
                    />

                <TextView
                    android:id="@+id/tv1r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    app:typekitFont="@string/maven"
                    />

            </LinearLayout>


            <View
                android:id="@+id/divider_below_rlOrderStatusFeed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/stroke_light_grey_alpha"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv2l"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:text="@string/service_type_colon"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/sp_12"
                    app:typekitFont="@string/maven_r"
                    />

                <TextView
                    android:id="@+id/tv2r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    app:typekitFont="@string/maven"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/stroke_light_grey_alpha"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv3l"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:text="@string/service_time_colon"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/sp_12"
                    app:typekitFont="@string/maven_r"
                    />

                <TextView
                    android:id="@+id/tv3r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    app:typekitFont="@string/maven"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="-1dp"
                android:background="@color/stroke_light_grey_alpha"
                />

            <LinearLayout
                android:id="@+id/llFromAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv4l"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:text="@string/from_colon"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/sp_12"
                    app:typekitFont="@string/maven_r"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llFromPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivFromPlace"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_18"
                            android:src="@drawable/home"
                            />

                        <TextView
                            android:id="@+id/tvFromPlace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="HOME"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            app:typekitFont="@string/maven"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvFromToVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_14"
                        app:typekitFont="@string/maven"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/stroke_light_grey_alpha"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv5l"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:text="@string/service_address_colon"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/sp_12"
                    app:typekitFont="@string/maven_r"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llDeliveryPlaceFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivDeliveryPlaceFeed"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_18"
                            android:src="@drawable/home"
                            />

                        <TextView
                            android:id="@+id/tvDeliveryPlace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="HOME"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            app:typekitFont="@string/maven"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDeliveryToValFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_14"
                        app:typekitFont="@string/maven"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_white_layer_shadow_bottom_right"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tvTaskDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_14"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_15"
                    app:typekitFont="@string/maven_r"
                    />

                <LinearLayout
                    android:id="@+id/llAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_14"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_15"
                        app:typekitFont="@string/maven_r"
                        />

                    <TextView
                        android:id="@+id/tvAmountValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_15"
                        app:typekitFont="@string/maven"
                        />
                </LinearLayout>

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/cardFeedBillSummary"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardPreventCornerOverlap="true"
                android:visibility="visible"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFeedBillSummary"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_14"
                        android:text="@string/bill_summary"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_14"/>

                    <View
                        style="@style/HorizontalDividerLight"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_marginRight="@dimen/dp_17"/>

                    <LinearLayout
                        android:id="@+id/llFeedExtraCharges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <LinearLayout
                android:id="@+id/llPaidVia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_white_layer_shadow_bottom_right"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_14"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/paid_via"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_15"
                        app:typekitFont="@string/maven_r"
                        />

                    <ImageView
                        android:id="@+id/ivPaidVia"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_13"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tvPaidViaValue"
                        android:src="@drawable/ic_cash_no_padding"
                        />

                    <TextView
                        android:id="@+id/tvPaidViaValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="Cash"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_15"
                        app:typekitFont="@string/maven"
                        />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:splitMotionEvents="false"
                android:visibility="visible"
                android:weightSum="2">

                <Button
                    android:id="@+id/bNeedHelpFeed"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_7"
                    android:layout_weight="1"
                    android:background="@drawable/button_theme"
                    android:text="@string/need_help"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    app:typekitFont="@string/maven"/>

                <Button
                    android:id="@+id/bCancelOrder"
                    android:layout_width="0px"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_7"
                    android:layout_weight="1"
                    android:background="@drawable/button_white_grey_theme_border_selector"
                    android:text="@string/cancel_booking"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_theme_selector"
                    android:textSize="@dimen/sp_16"
                    android:visibility="gone"
                    app:typekitFont="@string/maven"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/feed_fragment_shadow_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:background="@drawable/shadow_down_new"
        />

</RelativeLayout>