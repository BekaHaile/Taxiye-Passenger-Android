<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offer_popup_item_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:text="@string/service_type_colon"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/sp_12"
                    app:font="@string/maven_r"
                    />

                <TextView
                    android:id="@+id/tvServiceType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home services and Repairs\n(Architect)"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    app:font="@string/maven"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/stroke_light_grey_alpha"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:text="@string/service_time_colon"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/sp_12"
                    app:font="@string/maven_r"
                    />

                <TextView
                    android:id="@+id/tvServiceTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24 June 17, 12:30 - 02:30 PM"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    app:font="@string/maven"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/stroke_light_grey_alpha"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="wrap_content"
                    android:text="@string/service_address_colon"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/sp_12"
                    app:font="@string/maven_r"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llDeliveryPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_3"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/ivDeliveryPlace"
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_18"
                            android:src="@drawable/home"
                            />

                        <TextView
                            android:id="@+id/tvDeliveryPlace"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="HOME"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/sp_14"
                            app:font="@string/maven"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDeliveryToVal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plot5"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_14"
                        app:font="@string/maven"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_white_layer_shadow_bottom_right"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_14"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_15"
                        app:font="@string/maven_r"
                        />

                    <TextView
                        android:id="@+id/tvAmountValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="right"
                        android:text="Upon Inspection"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_15"
                        app:font="@string/maven"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_white_layer_shadow_bottom_right"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_14"
                    android:background="@color/white"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/paid_via"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_15"
                        app:font="@string/maven_r"
                        />

                    <ImageView
                        android:id="@+id/ivPaidVia"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_13"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tvPaidViaValue"
                        android:src="@drawable/ic_cash_no_padding"
                        />

                    <TextView
                        android:id="@+id/tvPaidViaValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="Cash"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_15"
                        app:font="@string/maven"
                        />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bNeedHelp"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_42"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@drawable/capsule_theme_login_selector"
                android:text="@string/need_help"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:font="@string/maven"
                />


        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:background="@drawable/shadow_down_new"
        />

</RelativeLayout>