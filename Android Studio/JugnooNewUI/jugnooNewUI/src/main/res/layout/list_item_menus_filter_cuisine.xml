<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent_menu_item_selector"
    >

    <LinearLayout
        android:id="@+id/linearLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imageViewCheck"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:src="@drawable/checkbox_signup_checked"
            android:tag="mwar"

            />

        <TextView
            android:id="@+id/textViewCuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24px"
            android:layout_marginLeft="24px"
            android:layout_marginTop="24px"
            android:text="cashback\nkjhkj"
            android:textColor="@color/text_color_selector"
            android:textSize="@dimen/text_size_32"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewSep"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/stroke_light_grey_alpha"
        android:layout_below="@+id/linearLayoutContent"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        />

</RelativeLayout>