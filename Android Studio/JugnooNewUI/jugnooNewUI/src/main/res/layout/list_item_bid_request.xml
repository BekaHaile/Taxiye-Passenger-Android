<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_grey_theme_rb_selector"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/tvBidNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        tools:text="#1"
        app:typekitFont="@string/maven_r"
        />

    <TextView
        android:id="@+id/tvBidValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="SGD 8.60"
        app:typekitFont="@string/maven"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/tvBidDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        tools:text="20 KM away"
        app:typekitFont="@string/maven_r"
        android:layout_marginTop="2dp"
        />


    <TextView
        android:id="@+id/tvBidRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/text_color"
        tools:text="4.5"
        app:typekitFont="@string/maven_r"
        android:layout_marginTop="2dp"
        android:drawableStart="@drawable/ic_smallest_star_orange"
        android:drawablePadding="2dp"
        />


</LinearLayout>