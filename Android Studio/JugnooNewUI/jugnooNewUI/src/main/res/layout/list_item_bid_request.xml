<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="125dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_grey_theme_rb_selector"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/tvBidNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            android:text="@string/bid"
            app:typekitFont="@string/maven_r"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/tvBidRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            tools:text="4.5"
            app:typekitFont="@string/maven_r"
            android:drawableStart="@drawable/ic_smallest_star_orange"
            android:drawablePadding="2dp"
            android:layout_centerVertical="true"
            android:gravity="end"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke_light_grey_alpha"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:text="@string/bid"
            app:typekitFont="@string/maven"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tvBidValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:textAllCaps="true"
            android:gravity="end"
            tools:text="SGD 8.60"
            app:typekitFont="@string/maven"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/tvDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:text="@string/distance"
            app:typekitFont="@string/maven"
            />

        <TextView
            android:id="@+id/tvBidDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:gravity="end"
            android:textColor="@color/text_color"
            android:layout_toEndOf="@+id/tvDist"
            android:textSize="12sp"
            app:typekitFont="@string/maven_r"
            android:layout_marginStart="5dp"
            tools:text="20 km\nAway"/>

    </RelativeLayout>





    <TextView
        android:background="@drawable/capsule_theme_color_selector"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:typekitFont="@string/maven_r"
        android:text="@string/accept"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        />

</LinearLayout>