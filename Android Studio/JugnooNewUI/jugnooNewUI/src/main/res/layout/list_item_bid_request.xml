<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_grey_theme_rb_selector"

    >

    <TextView
        android:id="@+id/tvBidNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        tools:text="#1"
        app:typekitFont="@string/maven_r"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tvBidValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:textAllCaps="true"
        android:textStyle="bold"
        tools:text="SGD 8.60"
        app:typekitFont="@string/maven"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:id="@+id/tvBidDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        tools:text="20 km away"
        app:typekitFont="@string/maven_r"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />


    <TextView
        android:id="@+id/tvBidRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/text_color"
        tools:text="4.5"
        app:typekitFont="@string/maven_r"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_smallest_star_orange"
        android:drawablePadding="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginStart="0.5dp"
            android:layout_marginEnd="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/nl_button_theme_normal_top_flat"
            android:textColor="@color/white"
            android:textSize="7sp"
            android:gravity="center"
            android:text="@string/accept"
            />


</LinearLayout>