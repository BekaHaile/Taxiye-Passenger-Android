<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/relativeLayoutShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="285px"
                android:layout_height="214px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90px"
                android:background="@drawable/free_rides_screen_icon"
                android:tag="mwar"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textViewShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="62px"
                android:gravity="center"
                android:text="@string/share_your_code"
                android:textColor="@color/grey_dark"
                android:textSize="22px"
                />

            <TextView
                android:id="@+id/textViewCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="60px"
                android:gravity="center"
                android:text="    "
                android:textColor="@color/black_text"
                android:textSize="44px"
                />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="@string/free_ride_desc"
                android:textColor="@color/grey_dark_more"
                android:textSize="40px"
                />
            <!-- #6B6B76-->

            <TextView
                android:id="@+id/textViewMoreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:text="More Info"
                android:textColor="@drawable/text_color_black_alpha_selector"
                android:textSize="40px"
                />

            <ImageView
                android:layout_width="174px"
                android:layout_height="4px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2px"
                android:background="@color/black_text_alpha"
                />

            <Button
                android:id="@+id/buttonInvite"
                android:layout_width="648px"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="110px"
                android:background="@drawable/button_yellow"
                android:text="@string/invite_friends_caps"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>