<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white"
        android:splitMotionEvents="false"
        >

        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:src="@drawable/ic_menu_selector"
            android:tag="mwar"/>

        <Button
            android:id="@+id/buttonCheckServer"
            android:layout_width="80px"
            android:layout_height="80px"
            android:background="@drawable/background_transparent"
            android:layout_toRightOf="@+id/imageViewMenu"
            android:layout_marginLeft="50px"
            />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40"/>

        <EditText
            android:id="@+id/editTextDeliveryAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:hint="@string/type_delivery_address"
            android:background="@color/transparent"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/text_color"
            android:layout_toLeftOf="@+id/linearLayoutNotification"
            android:textCursorDrawable="@drawable/blue_color_cursor"
            />


        <LinearLayout
            android:id="@+id/linearLayoutNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:orientation="horizontal"
            >

            <!--<ImageView-->
                <!--android:id="@+id/imageViewSearch"-->
                <!--android:layout_width="58px"-->
                <!--android:layout_height="53px"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:padding="10px"-->
                <!--android:visibility="gone"-->
                <!--android:src="@drawable/ic_search"-->
                <!--android:tag="mwar"/>-->

            <RelativeLayout
                android:id="@+id/relativeLayoutNotification"
                android:layout_width="80px"
                android:layout_height="70px"
                android:layout_marginLeft="10px"
                android:layout_gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imageViewNotification"
                    android:layout_width="59px"
                    android:layout_height="39px"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_menu_notification"
                    android:tag="mwar"
                    />

                <TextView
                    android:id="@+id/textViewNotificationValue"
                    android:layout_width="32px"
                    android:layout_height="35px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_notification_unread"
                    android:gravity="center_horizontal"
                    android:paddingTop="2px"
                    android:tag="mwar"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20px"
                    />

            </RelativeLayout>


            <ImageView
                android:id="@+id/imageViewSearchCancel"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10px"
                android:visibility="gone"
                android:src="@drawable/cross_button_selector"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/imageViewDelete"
                android:layout_width="74px"
                android:layout_height="82px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:src="@drawable/ic_delete_selector"
                android:padding="20px"
                android:tag="mwar"
                android:visibility="gone"
                />

        </LinearLayout>






    </RelativeLayout>

    <ImageView
        android:id="@+id/below_shadow"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topRl"
        android:background="@drawable/shadow_down"
        />
</RelativeLayout>