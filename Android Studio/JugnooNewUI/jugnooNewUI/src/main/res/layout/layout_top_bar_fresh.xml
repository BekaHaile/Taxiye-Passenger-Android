<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false"
    >

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:background="@color/white"
            android:splitMotionEvents="false"
            >

            <ImageView
                android:id="@+id/imageViewMenu"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:src="@drawable/ic_menu_selector"
                android:tag="mwar"/>

            <Button
                android:id="@+id/buttonCheckServer"
                android:layout_width="80px"
                android:layout_height="80px"
                android:background="@drawable/background_transparent"
                android:layout_toRightOf="@+id/imageViewMenu"
                android:layout_marginLeft="50px"
                />

            <ImageView
                android:id="@+id/imageViewBack"
                style="@style/back_image"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageViewMenu"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_40"
                android:layout_marginLeft="20px"
                />

            <EditText
                android:id="@+id/editTextDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100px"
                android:hint="@string/type_delivery_address"
                android:background="@color/transparent"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/text_color"
                android:layout_toLeftOf="@+id/linearLayoutNotification"
                android:textCursorDrawable="@drawable/blue_color_cursor"
                />

            <ImageView
                android:id="@+id/imageViewSearchCross"
                android:layout_width="70px"
                android:layout_height="70px"
                android:padding="20px"
                android:layout_marginRight="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cross_et"
                android:tag="mwar"
                android:visibility="gone"
                />


            <LinearLayout
                android:id="@+id/linearLayoutNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:orientation="horizontal"
                >

                <!--<ImageView-->
                <!--android:id="@+id/imageViewSearch"-->
                <!--android:layout_width="58px"-->
                <!--android:layout_height="53px"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:padding="10px"-->
                <!--android:visibility="gone"-->
                <!--android:src="@drawable/ic_search"-->
                <!--android:tag="mwar"/>-->

                <RelativeLayout
                    android:id="@+id/relativeLayoutNotification"
                    android:layout_width="80px"
                    android:layout_height="70px"
                    android:layout_marginLeft="10px"
                    android:layout_gravity="center_vertical"
                    >

                    <ImageView
                        android:id="@+id/imageViewNotification"
                        android:layout_width="59px"
                        android:layout_height="39px"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_menu_notification"
                        android:tag="mwar"
                        />

                    <TextView
                        android:id="@+id/textViewNotificationValue"
                        android:layout_width="32px"
                        android:layout_height="35px"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_notification_unread"
                        android:gravity="center_horizontal"
                        android:paddingTop="2px"
                        android:tag="mwar"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20px"
                        />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/imageViewSearchCancel"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10px"
                    android:visibility="gone"
                    android:src="@drawable/cross_button_selector"
                    android:tag="mwar"/>

                <ImageView
                    android:id="@+id/imageViewDelete"
                    android:layout_width="74px"
                    android:layout_height="82px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:src="@drawable/ic_delete_selector"
                    android:padding="20px"
                    android:tag="mwar"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewSkip"
                android:layout_width="100px"
                android:layout_height="80px"
                android:gravity="center"
                android:text="@string/skip"
                android:textAllCaps="true"
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_30"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10px"
                android:visibility="gone"

                />


            <RelativeLayout
                android:id="@+id/relativeLayoutLocality"
                android:layout_width="350px"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="visible"
                >

                <LinearLayout
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageViewLocality"
                    android:gravity="right"
                    android:layout_marginRight="-10px"
                    >
                    <TextView
                        android:id="@+id/textViewLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/delivery_address"
                        android:textColor="@color/text_color_theme_alpha_selector"
                        android:textSize="@dimen/text_size_22"
                        />

                    <TextView
                        android:id="@+id/textViewLocationValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/text_color_selector"
                        android:textSize="@dimen/text_size_26"
                        android:singleLine="true"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewLocality"
                    android:layout_width="96px"
                    android:layout_height="96px"
                    android:layout_alignParentRight="true"
                    android:tag="mwar"
                    android:src="@drawable/ic_locality_select"
                    />


            </RelativeLayout>


            <TextView
                android:id="@+id/textViewReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/reset"
                android:textAllCaps="true"
                android:textColor="@color/text_color_selector"
                android:textSize="30.6px"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10px"
                android:visibility="gone"
                android:padding="15px"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/searchLayout"
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:background="@color/white"
            android:layout_below="@+id/topRl"
            >

            <TextView
                android:id="@+id/textViewSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:background="@drawable/background_search_shap"
                android:gravity="center_vertical"
                android:paddingLeft="16px"
                android:text="@string/search_items"
                android:textColor="@color/text_color_light"
                android:textSize="30px"
                />

            <ImageView
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="46px"
                android:src="@drawable/search_icon"/>

        </RelativeLayout>

    </LinearLayout>

    <!--<ImageView-->
        <!--android:id="@+id/below_shadow"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="6px"-->
        <!--android:layout_below="@+id/llTop"-->
        <!--android:visibility="gone"-->
        <!--android:background="@drawable/shadow_down"-->
        <!--/>-->
</RelativeLayout>