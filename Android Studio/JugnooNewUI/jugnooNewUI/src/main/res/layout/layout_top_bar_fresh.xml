<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:background="@color/white"
            android:splitMotionEvents="false"
            >

            <ImageView
                android:id="@+id/imageViewMenu"
                android:layout_width="65px"
                android:layout_height="50px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:padding="@dimen/px_15"
                android:src="@drawable/ic_menu_new_selector"
                android:tag="mwar"/>

            <Button
                android:id="@+id/buttonCheckServer"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@+id/imageViewMenu"
                android:background="@drawable/background_transparent"
                />

            <ImageView
                android:id="@+id/imageViewBack"
                style="@style/back_image"
                />

            <EditText
                android:id="@+id/editTextDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100px"
                android:background="@color/transparent"
                android:hint="@string/type_delivery_address"
                android:textColor="@color/text_color"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textSize="@dimen/text_size_30"
                />

            <ImageView
                android:id="@+id/ivDeliveryAddressCross"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:padding="20px"
                android:src="@drawable/ic_cross_et"
                android:tag="mwar"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/imageViewDelete"
                android:layout_width="74px"
                android:layout_height="82px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:padding="20px"
                android:src="@drawable/ic_delete_selector"
                android:tag="mwar"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/llSearchCartContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80px"
                android:layout_marginRight="@dimen/px_38"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    android:layout_toLeftOf="@+id/llSearchCart"
                    android:layout_marginRight="@dimen/px_10"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_30"
                    />

                <RelativeLayout
                    android:id="@+id/llSearchContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_toLeftOf="@+id/llSearchCart"
                    android:background="@drawable/capsule_white_stroke"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:id="@+id/ivSearchView"
                        android:layout_width="62px"
                        android:layout_height="62px"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6px"
                        android:src="@drawable/ic_search_new_selector"/>

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="62px"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/ivSearchCross"
                        android:layout_toRightOf="@+id/ivSearchView"
                        android:background="@drawable/background_transparent"
                        android:ellipsize="end"
                        android:hint="@string/search"
                        android:maxLines="1"
                        android:padding="10px"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color_light"
                        android:textCursorDrawable="@drawable/cursor_black"
                        android:textSize="@dimen/text_size_26"
                        />

                    <ImageView
                        android:id="@+id/ivSearchCross"
                        android:layout_width="32px"
                        android:layout_height="34px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/px_20"
                        android:padding="@dimen/px_7"
                        android:src="@drawable/ic_cross_grey"
                        android:visibility="visible"
                        />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llSearchCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px_20"
                    android:animateLayoutChanges="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="62px"
                        android:layout_height="62px"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6px"
                        android:src="@drawable/ic_search_new_selector"
                        android:visibility="visible"/>

                    <ImageView
                        android:id="@+id/ivFilter"
                        android:layout_width="62px"
                        android:layout_height="62px"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6px"
                        android:src="@drawable/ic_search_new_selector"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/llCartContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_62"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px_20"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/capsule_cart_selector"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:tag="mwar">


                        <ImageView
                            android:layout_width="@dimen/px_26"
                            android:layout_height="@dimen/px_26"
                            android:layout_marginLeft="@dimen/px_18"
                            android:layout_marginRight="@dimen/px_18"
                            android:src="@drawable/ic_cart_new"
                            android:tag="mwar"/>

                        <LinearLayout
                            android:id="@+id/llCartAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/px_18"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tvCartAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/px_18"
                                android:text="240"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_26"/>

                            <ImageView
                                android:layout_width="13px"
                                android:layout_height="23px"
                                android:src="@drawable/back_arrow_white"
                                android:tag="mwar"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutLocality"
                android:layout_width="350px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="-10px"
                    android:layout_toLeftOf="@+id/imageViewLocality"
                    android:gravity="right"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textViewLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/delivery_address"
                        android:textColor="@color/text_color_theme_alpha_selector"
                        android:textSize="@dimen/text_size_22"
                        />

                    <TextView
                        android:id="@+id/textViewLocationValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/text_color_selector"
                        android:textSize="@dimen/text_size_26"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewLocality"
                    android:layout_width="96px"
                    android:layout_height="96px"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_locality_select"
                    android:tag="mwar"
                    />


            </RelativeLayout>


            <TextView
                android:id="@+id/textViewReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:gravity="center"
                android:padding="15px"
                android:text="@string/reset"
                android:textAllCaps="true"
                android:textColor="@color/text_color_selector"
                android:textSize="30.6px"
                android:visibility="gone"
                />

        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15px"
            android:layout_below="@+id/topBar"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:src="@drawable/shadow_down_new"/>

        <LinearLayout
            android:id="@+id/llLocation"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@+id/topBar"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25px"
                android:layout_height="34px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_42"
                android:src="@drawable/ic_new_fresh_location"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_22"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDeliveryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_address"
                    android:textColor="@color/location_text_color"
                    android:textSize="@dimen/text_size_20"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_6"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="asdf"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="15px"
            android:layout_below="@+id/llLocation"
            android:src="@drawable/shadow_down_new"/>

    </LinearLayout>

</RelativeLayout>