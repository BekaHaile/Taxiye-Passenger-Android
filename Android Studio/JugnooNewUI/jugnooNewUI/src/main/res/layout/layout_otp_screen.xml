<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <TextView
            android:id="@+id/otpHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0px"
            android:gravity="center"
            android:text="Please enter the One Time Password sent to"
            android:textColor="@color/black_text"
            android:textSize="32px"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textViewOtpNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+919999999999"
                android:textColor="@color/black_text"
                android:textSize="32px"/>

            <ImageView
                android:id="@+id/imageViewSep"
                android:layout_width="2px"
                android:layout_height="40px"
                android:layout_marginLeft="10px"
                android:background="@color/black_translucent"
                />


            <ImageView
                android:id="@+id/imageViewChangePhoneNumber"
                android:layout_width="68px"
                android:layout_height="68px"
                android:padding="15px"
                android:src="@drawable/edit_icon_selector"
                android:tag="mwar"/>


        </LinearLayout>


        <TextView
            android:id="@+id/textViewEnterOTP"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:gravity="center"
            android:text="Enter One Time Password"
            android:textColor="@color/black_text_alpha"
            android:textSize="30px"
            />

        <EditText
            android:id="@+id/editTextOTP"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10px"
            android:layout_marginTop="5px"
            android:background="#0000"
            android:gravity="center"
            android:hint=""
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textColor="@color/black_text"
            android:textColorHint="@color/black_text_alpha"
            android:textCursorDrawable="@null"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="400px"
            android:layout_height="2px"
            android:layout_gravity="center_horizontal"
            android:src="@color/black_translucent"/>


        <LinearLayout
            android:id="@+id/linearLayoutWaiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120px"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/textViewWaiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Waiting to automatically detect OTP"
                android:textColor="@color/grey_dark_more"
                android:textSize="32px"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px">
                <ImageView
                    android:layout_width="530px"
                    android:layout_height="20px"
                    android:src="@drawable/white_loading_bar"
                    android:tag="mwar"/>
                <ImageView
                    android:id="@+id/imageViewYellowLoadingBar"
                    android:layout_width="530px"
                    android:layout_height="20px"
                    android:src="@drawable/yellow_loading_bar"
                    android:tag="mwar"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/textViewCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15px"
                android:gravity="center"
                android:text="0:30"
                android:textColor="@drawable/text_color_black_alpha_selector"
                android:textSize="30px"/>

        </LinearLayout>


        <Button
            android:id="@+id/buttonVerify"
            android:layout_width="648px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110px"
            android:background="@drawable/button_yellow"
            android:text="VERIFY ME"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/button_text_size"
            />


        <LinearLayout
            android:id="@+id/linearLayoutOTPOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayoutOTPThroughCall"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="100px"
                android:background="@color/white_light_grey"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/textViewOTPNotReceived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"
                    android:gravity="center"
                    android:text="Receive the OTP via call"
                    android:textColor="@color/black_text"
                    android:textSize="30px"/>


                <ImageView
                    android:layout_width="13px"
                    android:layout_height="26px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:src="@drawable/arrow_icon_selector"
                    android:tag="mwar"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@color/yellow_alpha"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutOr"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:background="@drawable/ring_black_border"
                android:tag="mwar"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="OR"
                    android:textSize="30px"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutMissCall"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="20px"
                android:background="@color/white_light_grey"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/textViewMissCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35px"
                    android:gravity="center"
                    android:text="Give us a missed call to verify"
                    android:textColor="@color/black_text"
                    android:textSize="30px"/>


                <ImageView
                    android:layout_width="13px"
                    android:layout_height="26px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40px"
                    android:src="@drawable/arrow_icon_selector"
                    android:tag="mwar"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@color/yellow_alpha"/>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewScroll"
            android:layout_width="10px"
            android:layout_height="10px"/>

    </LinearLayout>

</ScrollView>
