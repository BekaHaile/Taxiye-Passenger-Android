<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_20"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/dp_4"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvRides"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/bg_transparent_menu_item_selector"
                android:drawableTop="@drawable/ic_promo_rides"
                android:gravity="center"
                android:padding="@dimen/dp_25"
                android:text="@string/rides"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_14"
                app:font="@string/maven"
                />

            <TextView
                android:id="@+id/tvMeals"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_toRightOf="@+id/tvRides"
                android:background="@drawable/bg_transparent_menu_item_selector"
                android:drawableTop="@drawable/ic_promo_meals"
                android:gravity="center"
                android:padding="@dimen/dp_25"
                android:text="@string/meals"
                android:textColor="@color/pink_meals_fab"
                android:textSize="@dimen/sp_14"
                app:font="@string/maven"
                />

            <TextView
                android:id="@+id/tvFresh"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/tvRides"
                android:background="@drawable/bg_transparent_menu_item_selector"
                android:drawableTop="@drawable/ic_promo_fresh"
                android:gravity="center"
                android:padding="@dimen/dp_25"
                android:text="@string/fatafat"
                android:textColor="@color/green_fresh_fab"
                android:textSize="@dimen/sp_14"
                app:font="@string/maven"
                />

            <TextView
                android:id="@+id/tvMenus"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/tvRides"
                android:layout_toRightOf="@+id/tvFresh"
                android:background="@drawable/bg_transparent_menu_item_selector"
                android:drawableTop="@drawable/ic_promo_menus"
                android:gravity="center"
                android:padding="@dimen/dp_25"
                android:text="@string/menus"
                android:textColor="@color/purple_menus_fab"
                android:textSize="@dimen/sp_14"
                app:font="@string/maven"
                />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_190"
                android:layout_centerInParent="true"
                android:background="@color/stroke_light_grey_alpha"
                />

            <View
                android:layout_width="@dimen/dp_190"
                android:layout_height="@dimen/dp_1"
                android:layout_centerInParent="true"
                android:background="@color/stroke_light_grey_alpha"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>