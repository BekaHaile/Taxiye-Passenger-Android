<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">

    <View
        android:id="@+id/view_white"
        android:layout_width="350dp"
        android:layout_height="403dp"
        android:layout_margin="15dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_view_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/lock"
        android:textColor="#51515D"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/view_white"
        app:layout_constraintRight_toRightOf="@id/view_white"
        app:layout_constraintTop_toTopOf="@id/view_white" />

    <ImageView
        android:id="@+id/image_view_lock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_rentals_lock"
        app:layout_constraintLeft_toLeftOf="@id/view_white"
        app:layout_constraintRight_toRightOf="@id/view_white"
        app:layout_constraintTop_toBottomOf="@+id/text_view_head" />


    <TextView
        android:id="@+id/text_view_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Make sure the bunny is locked and parked in safety"
        android:textColor="#51515D"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/view_white"
        app:layout_constraintEnd_toEndOf="@id/view_white"
        app:layout_constraintTop_toBottomOf="@+id/image_view_lock" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/capsule_theme_color_selector"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="@string/ok"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/view_white"
        app:layout_constraintRight_toRightOf="@id/view_white"
        app:layout_constraintTop_toBottomOf="@+id/text_view_message" />

    <ImageView
        android:id="@+id/image_view_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_cross_popup_selector"
        app:layout_constraintStart_toEndOf="@id/view_white"
        app:layout_constraintEnd_toEndOf="@id/view_white"
        app:layout_constraintTop_toTopOf="@id/view_white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_white" />

</android.support.constraint.ConstraintLayout>