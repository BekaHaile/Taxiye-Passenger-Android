<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:splitMotionEvents="false"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/textViewTitle"
            android:text="@string/nl_otp_verification"
            style="@style/title" />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image"/>

        <TextView
            android:id="@+id/textViewSkip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/skip"
            android:textSize="@dimen/text_size_34"
            android:textAllCaps="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:gravity="center"
            android:padding="20px"/>
    </RelativeLayout>


    <include
        layout="@layout/layout_otp_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topRl"
        ></include>

    <RelativeLayout
        android:id="@+id/rlProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="100px">

        <product.clicklabs.jugnoo.utils.ProgressWheel
            android:id="@+id/progressBar"
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="5px"
            android:tag="mwar"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            wheel:matProg_barColor="@color/theme_color"
            wheel:matProg_barWidth="3dp"
            wheel:matProg_fillRadius="true"
            wheel:matProg_progressIndeterminate="true"
            />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trying_to_verify"
            android:textSize="@dimen/text_size_30"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/progressBar"
            android:visibility="visible"
            android:gravity="center"
            android:padding="20px"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        android:layout_below="@+id/topRl"
        />

</RelativeLayout>