<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/nl_background_theme_color">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="PROMOTIONS"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_title_text_size"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        android:layout_below="@+id/topBar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayoutInvite"
        android:layout_below="@+id/topBar"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/editTextPromoCode"
            android:layout_width="628px"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36px"
            android:background="#0000"
            android:capitalize="words"
            android:gravity="center_vertical"
            android:hint="Enter Promo Code"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:singleLine="true"
            android:textColor="@color/black_text"
            android:textColorHint="@color/black_text_alpha"
            android:textSize="30px"/>

        <ImageView
            android:layout_width="628px"
            android:layout_height="2px"
            android:layout_gravity="center_horizontal"
            android:src="@color/theme_color"/>

        <Button
            android:id="@+id/buttonApplyPromo"
            style="@style/ButtonTheme"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23px"
            android:text="@string/apply"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30px"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textViewCouponsAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36px"
                    android:layout_marginRight="36px"
                    android:layout_marginTop="10px"
                    android:text="Coupons Available"
                    android:textColor="@color/grey_black_light"
                    android:textSize="34px"/>

                <RelativeLayout
                    android:id="@+id/relativeLayoutCoupons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:orientation="vertical"
                    android:splitMotionEvents="false">

                    <product.clicklabs.jugnoo.utils.NonScrollGridView
                        android:id="@+id/listViewCoupons"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginTop="0px"
                        android:divider="@drawable/background_transparent"
                        android:dividerHeight="0px"
                        android:listSelector="@drawable/background_transparent"
                        android:numColumns="2"
                        android:splitMotionEvents="false"
                        >
                    </product.clicklabs.jugnoo.utils.NonScrollGridView>

                    <TextView
                        android:id="@+id/textViewCouponInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="34px"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/textViewOngoingOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36px"
                    android:layout_marginRight="36px"
                    android:layout_marginTop="30px"
                    android:text="Ongoing Offers"
                    android:visibility="gone"
                    android:textColor="@color/grey_black_light"
                    android:textSize="34px"/>

                <RelativeLayout
                    android:id="@+id/relativeLayoutPromotions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14px"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:splitMotionEvents="false"
                    >

                    <product.clicklabs.jugnoo.utils.NonScrollListView
                        android:id="@+id/listViewPromotions"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:layout_marginLeft="40px"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="0px"
                        android:divider="@color/grey_dark_less"
                        android:dividerHeight="2px"
                        android:listSelector="@drawable/background_transparent"
                        android:splitMotionEvents="false">
                    </product.clicklabs.jugnoo.utils.NonScrollListView>

                    <TextView
                        android:id="@+id/textViewPromoInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="TextView"
                        android:textColor="@color/black"
                        android:textSize="34px"/>

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relativeLayoutInvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30px"
        android:background="@color/sliding_bottom_bg_color"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:src="@color/text_color_light"/>

        <TextView
            android:id="@+id/textViewInvite"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="30px"
            android:paddingTop="30px"
            android:text="Invite your friends and get more coupons"
            android:textColor="@drawable/text_color_black_alpha_selector"
            android:textSize="32px"/>

        <ImageView
            android:layout_width="13px"
            android:layout_height="26px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/arrow_icon_selector"
            android:tag="mwar"/>


    </RelativeLayout>
</RelativeLayout>