<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/linearLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color_F7"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/title"
            android:text="@string/promotions"
            android:textSize="@dimen/sp_16"
            app:font="maven"
            />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_back_selector"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlEnterPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_white_layer_shadow_more_round"
            android:orientation="horizontal"
            android:weightSum="1"

            >

            <EditText
                android:id="@+id/editTextPromoCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.70"
                android:background="@null"
                android:digits="@string/digits_characters_caps_numbers"
                android:hint="@string/enter_promo_code"
                android:maxLines="1"
                android:ellipsize="end"
                android:inputType="text|textCapCharacters"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint"
                android:textCursorDrawable="@drawable/cursor_black"
                android:textSize="@dimen/sp_16"
                app:font="maven"
                />

            <Button
                android:id="@+id/buttonApplyPromo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:background="@drawable/button_theme_rtbr_selector"
                android:text="@string/apply"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:font="maven"
                />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewOffers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textViewFreeRides"
        android:layout_below="@+id/rlEnterPromo"
        android:layout_marginTop="@dimen/dp_4"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/textViewFreeRides"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_alignParentBottom="true"
        android:background="@color/menu_item_selector_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:text="@string/want_free_rides"
        android:textColor="@color/text_color_selector"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:font="maven"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/textViewFreeRides"
        android:background="@color/stroke_color_light"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/imageViewFreeRideAuto"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_above="@+id/textViewFreeRides"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-25dp"
        android:layout_marginRight="@dimen/dp_25"
        android:src="@drawable/ic_arrow_up_selector"
        android:visibility="gone"
        />


    <LinearLayout
        android:id="@+id/linearLayoutNoOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlEnterPromo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_170"
            android:src="@drawable/ic_no_items"
            />

        <TextView
            android:id="@+id/textViewNoOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/no_offers_currently"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_13"
            app:font="maven"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar"
        android:orientation="vertical"
        android:soundEffectsEnabled="true"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down_new"/>


</RelativeLayout>