<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">


    <LinearLayout
        android:id="@+id/linearLayoutInner"
        android:layout_width="644px"
        android:layout_height="wrap_content"
        android:background="@drawable/background_grey_rounded_bordered"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/linearLayoutCustomizeOption"
            android:layout_width="644px"
            android:layout_height="wrap_content"
            android:background="@drawable/background_orange_tr"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textViewCustomizeOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dips On Base"
                android:textColor="@color/white"
                android:textSize="43px"
                android:layout_marginBottom="30px"
                android:layout_marginTop="30px"
                android:gravity="center"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:background="@color/text_color_hint"/>


        <RelativeLayout
            android:id="@+id/rlCustomizeOptionItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textViewCutomizeOptionItemValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You can choose upto 6 itmes."
                android:textSize="32px"
                android:gravity="center"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:textColor="@color/lightBlackTxtColor"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:background="@color/text_color_hint"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCustomizeOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false"
            android:background="@color/transparent"
            android:layout_marginLeft="25px"
            android:layout_marginRight="25px"
            android:paddingTop="10px"
            android:layout_marginBottom="10px"
            android:scrollbars="vertical"
            android:fadeScrollbars="true">
        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:background="@color/text_color_hint"/>

       <!-- <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:orientation="horizontal"
            android:gravity="center"
            android:splitMotionEvents="false"
            android:background="@color/transparent">-->
            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:singleLine="true"
                android:text="@string/ok"
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/text_size_36"/>

        <!--</RelativeLayout>
-->

    </LinearLayout>


</RelativeLayout>