<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/offer_popup_item_color"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginStart="@dimen/px_24"
        android:layout_marginEnd="@dimen/px_24">

    <TextView
        android:id="@+id/textViewOfferName"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textViewTNC"
        android:layout_toEndOf="@+id/imageViewRadio"
        android:text="@string/cashback_nabc"
        android:maxLines="2"
        android:paddingStart="@dimen/px_26"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_30"/>

    <TextView
        android:id="@+id/textViewTNC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingBottom="20px"
        android:paddingStart="20px"
        android:paddingEnd="10px"
        android:paddingTop="20px"
        android:layout_marginEnd="10px"
        android:text="@string/tnc"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_22"/>

    </RelativeLayout>

</RelativeLayout>