<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imageViewRadio"
        android:layout_width="83px"
        android:layout_height="83px"
        android:padding="25px"
        android:src="@drawable/ic_radio_button_normal"
        android:tag="mwar"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textViewOfferName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textViewTNC"
        android:layout_toRightOf="@+id/imageViewRadio"
        android:text="cashback"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_30"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/textViewTNC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="20px"
        android:paddingLeft="20px"
        android:paddingRight="10px"
        android:paddingTop="20px"
        android:text="@string/tnc"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_22"/>

</RelativeLayout>