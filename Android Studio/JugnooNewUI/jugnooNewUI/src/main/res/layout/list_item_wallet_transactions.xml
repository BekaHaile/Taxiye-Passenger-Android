<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/relative"
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="@dimen/screen_width"
     android:layout_height="156px"
     android:orientation="vertical"
     android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="@dimen/screen_width"
        android:layout_height="156px">

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textViewTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="46px"
                android:text="27 Feb, 2015"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_32"/>

            <TextView
                android:id="@+id/textViewTransactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="43px"
                android:text="Rs. 100"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_32"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/textViewTransactionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="46px"
                android:text="12:00 PM"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_28"/>


            <TextView
                android:id="@+id/textViewTransactionMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6px"
                android:text="@string/mobikwik_colon"
                android:textColor="@color/blue_light"
                android:textSize="@dimen/text_size_28"
                android:layout_toLeftOf="@+id/textViewTransactionType"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textViewTransactionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="43px"
                android:text="Cash Added"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_28"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/stroke_color_light"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_alignParentBottom="true"
        />

    </RelativeLayout>
</LinearLayout>