<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSearch"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:layout_marginBottom="6px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="24px"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4px"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextCuisine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/start_typing_a_cuisine"
                android:paddingLeft="32px"
                android:paddingRight="12px"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint"
                android:textSize="@dimen/text_size_32"
                android:layout_toLeftOf="@+id/imageViewSearch"
                />


            <ImageView
                android:id="@+id/imageViewSearch"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_alignParentRight="true"
                android:src="@drawable/places_ic_search"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCuisines"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="740px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="18px"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4px"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCuisines"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:scrollbars="vertical"
            android:splitMotionEvents="false">
        </android.support.v7.widget.RecyclerView>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/buttonDone"
        style="@style/ButtonTheme"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0px"
        android:layout_marginTop="24px"
        android:text="@string/done"
        android:textSize="@dimen/text_size_34"
        />


</LinearLayout>