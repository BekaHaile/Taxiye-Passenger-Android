<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_normal"
        android:textSize="@dimen/font_small"
        android:text="Do you really want to delete this post? If you delete once it will no longer be available."
        android:textColor="@color/feed_grey_text"
        app:font="@string/maven_r" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/spacing_extra_tiny"
        android:layout_marginRight="@dimen/spacing_extra_tiny"
        android:background="@color/feed_grey_background" />

    <TextView
        android:id="@+id/tv_delete_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/font_large"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_small"
        android:text="Delete Post"
        android:textColor="@color/text_color_theme_color_selector"
        app:font="@string/maven_r" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/spacing_extra_tiny"
        android:layout_marginRight="@dimen/spacing_extra_tiny"
        android:background="@color/feed_grey_background" />

    <TextView
        android:id="@+id/tv_edit_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/font_large"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_small"
        android:textColor="@color/text_color_theme_color_selector"
        android:text="Edit Post"
        app:font="@string/maven_r" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/spacing_extra_tiny"
        android:layout_marginRight="@dimen/spacing_extra_tiny"
        android:background="@color/feed_grey_background" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_small"
        android:text="Cancel"
        android:textColor="@color/text_color_theme_color_selector"
        android:textSize="@dimen/font_large"
        app:font="@string/maven_r" />



</LinearLayout>