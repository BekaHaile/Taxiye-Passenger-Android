<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayoutSlidingBottom"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/sliding_bottom_bg_color"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutOptionsSingleSupply"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <LinearLayout
            android:id="@+id/linearLayoutPayment"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75px"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imageViewPayment"
                    android:layout_width="68px"
                    android:layout_height="22px"
                    android:src="@drawable/ic_paytm_small"
                    android:tag="mwar"/>

                <TextView
                    android:id="@+id/textViewCashValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:gravity="center"
                    android:text="200"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"/>
            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="25px"
            android:layout_marginTop="25px"
            android:src="@color/grey_light"/>

        <LinearLayout
            android:id="@+id/linearLayoutFare"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMinFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/nl_min_fare"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

            <TextView
                android:id="@+id/textViewMinFareValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </LinearLayout>

        <ImageView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="25px"
            android:layout_marginTop="25px"
            android:src="@color/grey_light"/>

        <LinearLayout
            android:id="@+id/linearLayoutFareEstimate"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFareEstimate"
                android:layout_width="190px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="5px"
                android:text="@string/fare_ln_estimate"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26"/>

        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewVehicles"
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:splitMotionEvents="false"
        />

    <LinearLayout
        android:id="@+id/linearLayoutOptionsMultipleSupply"
        android:layout_width="match_parent"
        android:layout_height="182px"
        android:layout_margin="30px"
        android:orientation="vertical"
        android:background="@drawable/background_white_rounded_bordered"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px">

            <LinearLayout
                android:id="@+id/linearLayoutPaymentMS"
                android:layout_width="330px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageViewPaymentMS"
                    android:layout_width="68px"
                    android:layout_height="22px"
                    android:src="@drawable/ic_paytm_small"
                    android:tag="mwar"/>

                <TextView
                    android:id="@+id/textViewCashValueMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:gravity="center"
                    android:text="200"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28"/>


            </LinearLayout>

            <ImageView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginBottom="14px"
                android:layout_marginTop="14px"
                android:src="@color/grey_light"/>

            <TextView
                android:id="@+id/textViewMinFareMS"
                android:layout_width="330px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/min_fare_rupee_format"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_28"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:background="@color/text_color_hint"
            />
        <TextView
            android:id="@+id/textVieGetFareEstimateMS"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center"
            android:text="@string/get_fare_estimate"
            android:textColor="@color/text_color_light_selector"
            android:textSize="@dimen/text_size_28"/>

    </LinearLayout>


</LinearLayout>