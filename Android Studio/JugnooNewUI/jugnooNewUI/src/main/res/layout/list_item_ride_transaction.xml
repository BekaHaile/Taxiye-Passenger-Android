<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="25px"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/button_corner_radius">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false"
            android:background="@drawable/bg_transparent_menu_item_selector"
            >

            <LinearLayout
                android:id="@+id/linearLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:splitMotionEvents="false">

                <RelativeLayout
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <TextView
                        android:id="@+id/textViewStatus"
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/status_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:id="@+id/textViewStatusValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140px"
                        android:text="@string/or"
                        android:textColor="@color/text_color_blue"
                        android:textSize="@dimen/text_size_24" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <TextView
                        android:id="@+id/textViewId"
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/id_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:id="@+id/textViewIdValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140px"
                        android:text="1234"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <TextView
                        android:id="@+id/textViewFrom"
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/from_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:id="@+id/textViewFromValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140px"
                        android:text="@string/sample_address"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTo"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textViewTo"
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/to_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22" />

                    <TextView
                        android:id="@+id/textViewToValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140px"
                        android:text="@string/sample_address"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutDetails"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="10px">

                    <TextView
                        android:id="@+id/textViewDetails"
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/address_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:id="@+id/textViewDetailsValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140px"
                        android:text="15 Aug 2016, 05:30PM, 8.5 Km"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/viewExtra"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/linearLayoutMain" />


            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="30px"
                android:layout_marginTop="24px"
                android:singleLine="true"
                android:text="@string/rupee_0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_40" />


            <ImageView
                android:id="@+id/imageViewProductType"
                android:layout_width="50px"
                android:layout_height="42px"
                android:layout_above="@+id/viewExtra"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginBottom="20px"
                android:layout_marginRight="30px"
                android:src="@drawable/ic_history_auto"
                android:tag="mwar" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>