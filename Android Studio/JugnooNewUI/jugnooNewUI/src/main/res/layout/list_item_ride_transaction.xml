<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2px"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="25px"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/button_corner_radius">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:splitMotionEvents="false">

            <LinearLayout
                android:id="@+id/linearLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:splitMotionEvents="false">

                <RelativeLayout
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px">

                    <TextView
                        android:id="@+id/textViewStatus"
                        android:layout_width="190px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/order_status_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>

                    <TextView
                        android:id="@+id/textViewStatusValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210px"
                        android:textColor="@color/text_color_blue"
                        android:textSize="@dimen/text_size_22"
                        android:text="@string/or"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <TextView
                        android:id="@+id/textViewId"
                        android:layout_width="190px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/order_id_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>

                    <TextView
                        android:id="@+id/textViewIdValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210px"
                        android:text="1234"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <TextView
                        android:id="@+id/textViewFrom"
                        android:layout_width="190px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/from_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>

                    <TextView
                        android:id="@+id/textViewFromValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210px"
                        android:text="@string/sample_address"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutTo"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textViewTo"
                        android:layout_width="190px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/to_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>

                    <TextView
                        android:id="@+id/textViewToValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210px"
                        android:text="@string/sample_address"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayoutDetails"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="10px">

                    <TextView
                        android:id="@+id/textViewDetails"
                        android:layout_width="190px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="@string/delivery_address_colon"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>

                    <TextView
                        android:id="@+id/textViewDetailsValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="210px"
                        android:text="15 Aug 2016, 05:30PM, 8.5 Km"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_22"/>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rateLayout"
                android:layout_width="140px"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayoutMain"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/linearLayoutMain"
                android:layout_marginTop="24px"
                android:layout_marginBottom="20px"
                android:layout_marginRight="30px"
                android:orientation="vertical"

                >

                <ImageView
                    android:id="@+id/imageViewProductType"
                    android:layout_width="71px"
                    android:layout_height="71px"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ic_support_auto"
                    android:tag="mwar"
                    />

                <TextView
                    android:id="@+id/textViewAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="@string/rupee_0"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_40"
                    />

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>