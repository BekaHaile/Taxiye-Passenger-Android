<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false" >
    
     <ImageView
         
            android:layout_width="match_parent"
            android:layout_height="15px" />

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        android:layout_marginTop="15px"
         >

       

        <TextView
            android:id="@+id/textViewPickupAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="0px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"
            android:text="Pickup at"
            android:textColor="@color/black_text"
            android:textSize="30px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px" >

            <TextView
                android:id="@+id/textViewFrom"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="From: "
                android:textColor="@color/black_text"
                android:textSize="24px" />

            <TextView
                android:id="@+id/textViewFromValue"
                android:layout_width="380px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_marginRight="30px"
                android:layout_toRightOf="@+id/textViewFrom"
                android:text="Plot No 5, Sector 28 B, \nChandigarh"
                android:textColor="@color/black_text_alpha"
                android:textSize="24px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px" >

            <TextView
                android:id="@+id/textViewTo"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="To: "
                android:textColor="@color/black_text"
                android:textSize="24px" />

            <TextView
                android:id="@+id/textViewToValue"
                android:layout_width="380px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_marginRight="30px"
                android:layout_toRightOf="@+id/textViewTo"
                android:text="Plot No 5, Sector 28 B, Chandigarh"
                android:textColor="@color/black_text_alpha"
                android:textSize="24px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px" >

            <TextView
                android:id="@+id/textViewDetails"
                android:layout_width="100px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="Details: "
                android:textColor="@color/black_text"
                android:textSize="24px" />

            <TextView
                android:id="@+id/textViewDetailsValue"
                android:layout_width="380px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_marginRight="30px"
                android:layout_toRightOf="@+id/textViewDetails"
                android:text="8.5 Km, 20 minutes, February 30th"
                android:textColor="@color/black_text_alpha"
                android:textSize="24px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutRateExperience"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="10px"
            >

            <TextView
                android:id="@+id/textViewRateExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="80px"
                android:gravity="center"
                android:text="Rate your experience"
                android:textColor="@drawable/text_color_black_alpha_selector"
                android:textSize="28px" />

            <ImageView
                android:layout_width="13px"
                android:layout_height="26px"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="40px"
                android:src="@drawable/arrow_icon_selector"
                android:tag="mwar" />

        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="20px"
            android:background="@color/yellow_alpha" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutRideOp"
        android:layout_width="150px"
        android:layout_height="70px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40px" >

        <TextView
            android:id="@+id/textViewAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0px"
            android:singleLine="true"
            android:text="@string/rupee_0"
            android:textColor="@color/black_text"
            android:textSize="28px" />

        <RelativeLayout
            android:id="@+id/relativeLayoutCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textViewCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/imageViewArrow"
                android:text="CANCEL"
                android:textColor="@drawable/text_color_black_alpha_selector"
                android:textSize="26px" />

            <ImageView
                android:id="@+id/imageViewArrow"
                android:layout_width="13px"
                android:layout_height="26px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="0px"
                android:src="@drawable/arrow_icon_selector"
                android:tag="mwar" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>