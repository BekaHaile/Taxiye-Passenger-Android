<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:layout_width="666px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="50px"
        android:background="@drawable/background_priority_tip"
        android:splitMotionEvents="false">



        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7px"
            android:layout_marginStart="7px"
            android:layout_marginEnd="7px"
            android:layout_marginTop="7px"
            android:background="@drawable/button_white_normal"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <ImageView
                android:layout_width="447px"
                android:layout_height="208px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25px"
                android:tag="mwar"
                android:background="@drawable/popup_free_ride_illustration" />

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25px"
                android:gravity="center"
                android:paddingStart="40px"
                android:paddingEnd="40px"
                android:text="@string/upload_contact_title"
                android:textColor="@color/grey_dark_more"
                android:textSize="34px"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:paddingStart="40px"
                android:paddingEnd="40px"
                android:text="@string/upload_contact_message"
                android:textColor="@color/grey_dark"
                android:textSize="30px" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:background="@drawable/button_theme"
                android:singleLine="true"
                android:text="@string/upload_contact_yes"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="34px" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="307px"
                android:layout_height="70px"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:layout_toStartOf="@+id/imageView1"
                android:background="@drawable/background_transparent"
                android:singleLine="true"
                android:text="@string/upload_contact_no_thanks"
                android:textColor="@color/text_color_light_selector"
                android:textSize="28px" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>