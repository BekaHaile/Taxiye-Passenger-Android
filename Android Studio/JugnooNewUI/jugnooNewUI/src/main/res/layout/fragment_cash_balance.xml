<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/relative"
              android:layout_width="720px"
              android:layout_height="1134px"
              android:background="@color/white_light_grey"
              android:orientation="vertical"
              android:splitMotionEvents="false" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="JUGNOO CASH"
            android:textColor="@color/white"
            android:textSize="30.6px" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="720px"
        android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="720px"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rupeeLogoView"
            android:layout_width="83px"
            android:layout_height="83px"
            android:layout_marginTop="36px"
            android:background="@drawable/r_icon"
            android:tag="mwar"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:id="@+id/dropTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18px"
            android:text="@string/drop_text"
            android:gravity="center"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="29px" />

        <RelativeLayout
            android:layout_width="720px"
            android:layout_height="84px"
            android:layout_marginTop="27px"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/yellow"
                />

            <ImageView
                android:id="@+id/rupeeIconView"
                android:layout_width="36px"
                android:layout_height="40px"
                android:layout_marginLeft="43px"
                android:tag="mwar"
                android:background="@drawable/rupeeicon"
                android:layout_centerVertical="true"
                />




            <ImageView

                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/yellow"
                />

            <TextView
                android:id="@+id/textViewCurrentBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Current Balance"
                android:gravity="center"
                android:layout_marginLeft="100px"
                android:layout_centerVertical="true"
                android:textColor="@color/bg_grey_opaque"
                android:textSize="32px" />


            <TextView
                android:id="@+id/textViewCurrentBalanceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="5000"
                android:gravity="center"
                android:layout_marginRight="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/bg_grey_opaque"
                android:textSize="32px" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="720px"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="60px">

            <ImageView
                android:layout_marginLeft="14px"
                android:layout_marginRight="14px"
                android:layout_width="200px"
                android:layout_height="2px"
                android:layout_gravity="center_vertical"
                android:background="@color/bg_grey_opaque"
                />

        <TextView
            android:id="@+id/textViewHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Add jugnoo cash"
            android:gravity="center"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="32px" />

            <ImageView
                android:layout_marginRight="14px"
                android:layout_width="200px"
                android:layout_height="2px"
                android:layout_marginLeft="14px"
                android:layout_gravity="center_vertical"
                android:background="@color/bg_grey_opaque"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="720px"
            android:layout_height="64px"
            android:orientation="horizontal"
            android:layout_marginTop="54px">

            <Button
                android:id="@+id/button100"
                android:layout_width="176px"
                android:layout_height="64px"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50px"
                android:background="@drawable/background_wallet_border"
                android:textSize="26px"
                android:gravity="center"
                android:textColor="@color/wallet_text_amount"
                android:text="@string/first_amount" />



            <Button
                android:id="@+id/button200"
                android:layout_width="176px"
                android:layout_height="64px"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50px"
                android:background="@drawable/background_wallet_border"
                android:textSize="26px"
                android:gravity="center"
                android:textColor="@color/wallet_text_amount"
                android:text="@string/middle_amount" />


            <Button
                android:id="@+id/button500"
                android:layout_width="176px"
                android:layout_height="64px"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="45px"
                android:background="@drawable/background_wallet_border"
                android:textSize="26px"
                android:gravity="center"
                android:textColor="@color/wallet_text_amount"
                android:text="@string/last_amount" />



        </LinearLayout>


        <EditText
            android:id="@+id/editTextAmount"
            android:layout_width="620px"
            android:layout_height="70px"
            android:layout_marginTop="81px"
            android:background="@drawable/background_wallet_border"
            android:layout_gravity="center_horizontal"
            android:hint="@string/amount_value"
            android:textColor="@color/bg_grey_opaque"
            android:textColorHint="@color/black_text_alpha"
            android:textSize="21px"
            android:inputType="number|textNoSuggestions"
            android:ems="10"
            android:textCursorDrawable="@drawable/black_cursor"
            android:digits="0123456789"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:singleLine="true"
            />


        <Button
            android:id="@+id/buttonMakePayment"
            android:layout_width="620px"
            android:layout_height="84px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100px"
            android:background="@drawable/button_yellow"
            android:text="ADD JUGNOO CASH"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/button_text_size" />

        <TextView
            android:id="@+id/textViewScroll"
            android:layout_width="100px"
            android:layout_height="10px"/>

    </LinearLayout>
    </ScrollView>

</LinearLayout>