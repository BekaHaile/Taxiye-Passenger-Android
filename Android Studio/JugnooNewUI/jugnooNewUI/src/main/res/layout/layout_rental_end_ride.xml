<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:minHeight="112dp"
    android:splitMotionEvents="false">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutEndRide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:focusable="true"
        android:minHeight="112dp"
        android:splitMotionEvents="false">

        <ProgressBar
            android:id="@+id/pbAssigning"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="-6dp"
            android:indeterminate="true"
            android:indeterminateBehavior="cycle"
            android:progressDrawable="@drawable/progressbar"
            android:tag="@string/dont_touch_me"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textViewEndRide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Ending Ride"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pbAssigning" />


        <product.clicklabs.jugnoo.utils.ProgressWheel xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pwBidTimer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0.9"
            android:tag="@string/dont_touch_me"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            wheel:layout_constraintTop_toBottomOf="@+id/textViewEndRide"
            wheel:matProg_barColor="@color/theme_color"
            wheel:matProg_barWidth="3dp"
            wheel:matProg_fillRadius="true"
            wheel:matProg_linearProgress="true"
            wheel:matProg_rimColor="@color/feed_grey_tab"
            wheel:matProg_rimWidth="3dp" />


    </android.support.constraint.ConstraintLayout>


</RelativeLayout>



