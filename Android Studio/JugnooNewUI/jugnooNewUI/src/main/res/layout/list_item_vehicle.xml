<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayoutRoot"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nl_button_size"
        android:gravity="center_vertical"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:background="@drawable/background_white_rounded_bordered"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageViewRadio"
            android:layout_width="83px"
            android:layout_height="83px"
            android:padding="25px"
            android:tag="mwar"
            android:src="@drawable/radio_unselected_icon"/>

        <ImageView
            android:id="@+id/imageViewVehicleType"
            android:layout_width="83px"
            android:layout_height="83px"
            android:padding="15px"
            android:tag="mwar"
            android:src="@drawable/ic_auto_orange"/>

        <TextView
            android:id="@+id/textViewVehicleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cashback"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:layout_marginLeft="5px"
            android:layout_marginRight="10px"
            android:textSize="@dimen/text_size_40"
            android:textColor="@color/text_color"/>


    </LinearLayout>

</LinearLayout>