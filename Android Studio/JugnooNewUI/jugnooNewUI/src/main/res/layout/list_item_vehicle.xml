<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relative"
                android:layout_width="180px"
                android:layout_height="110px"
    >

    <LinearLayout
        android:layout_width="178px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imageViewVehicle"
            android:layout_width="67px"
            android:layout_height="48px"
            android:src="@drawable/ic_auto_tab"
            android:tag="mwar"
            />

        <TextView
            android:id="@+id/textViewVehicleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/auto"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_26"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewSep"
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:layout_marginTop="25px"
        android:layout_marginBottom="25px"
        android:src="@color/text_color_hint"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>