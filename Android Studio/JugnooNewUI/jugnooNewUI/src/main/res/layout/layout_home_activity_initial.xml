<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initialLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/linearLayoutInitialSearchBarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayoutInitialSearchBar"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageViewInitialSearchGPSIcon"
                android:layout_width="33px"
                android:layout_height="33px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@drawable/search_icon"
                android:tag="mwar" />

            <TextView
                android:id="@+id/textViewInitialSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:padding="5px"
                android:layout_toRightOf="@+id/imageViewInitialSearchGPSIcon"
                android:layout_toLeftOf="@+id/progressBarInitialSearch"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="Set pick up location"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textSize="30px" />

            <product.clicklabs.jugnoo.utils.ProgressWheel
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progressBarInitialSearch"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:tag="mwar"
                wheel:matProg_barColor="@color/theme_color"
                wheel:matProg_barWidth="3dp"
                wheel:matProg_fillRadius="true"
                wheel:matProg_progressIndeterminate="true" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:rotation="180"
                android:src="@drawable/shadow_down" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutGoogleAttr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10px"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageViewGoogleAttrCross"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5px"
                android:layout_marginTop="15px"
                android:padding="20px"
                android:src="@drawable/ic_cross_et"
                android:tag="mwar" />

            <TextView
                android:id="@+id/textViewGoogleAttrText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="80px"
                android:layout_marginTop="15px"
                android:gravity="center_vertical"
                android:hint=""
                android:textColor="@color/black_text"
                android:textSize="24px" />

            <ImageView
                android:id="@+id/imageViewGoogleAttrPoweredByGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewGoogleAttrText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/powered_by_google_light"
                android:tag="DontTouchMe" />

        </RelativeLayout>


        <TextView
            android:id="@+id/textViewInitialInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/background_initial_instruction"
            android:text="No drivers available"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_30" />

        <RelativeLayout
            android:id="@+id/relativeLayoutInitialFareFactor"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_gravity="center_horizontal"
            android:background="@color/sliding_bottom_bg_color"
            android:animateLayoutChanges="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageViewPriorityTip"
                android:layout_width="36px"
                android:layout_height="41px"
                android:layout_marginLeft="30px"
                android:layout_centerVertical="true"
                android:src="@drawable/surge_icon_top"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/imageViewPriorityTip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewCurrentFareFactor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="1.2x"
                    android:textColor="@color/black_text_grey"
                    android:textSize="26px" />


                <TextView
                    android:id="@+id/textViewCurrentRatesInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="of standard rates applicable right now"
                    android:textColor="@color/grey_dark"
                    android:textSize="24px" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:rotation="180"
                android:src="@drawable/shadow_up" />
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/initialMyLocationBtn"
        android:layout_width="83px"
        android:layout_height="83px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100px"
        android:layout_marginRight="92px"
        android:background="@drawable/mylocation_btn_selector"
        android:tag="mwar" />

    <ImageView
        android:id="@+id/imageViewRideNow"
        android:layout_width="187px"
        android:layout_height="187px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60px"
        android:src="@drawable/auto_icon_r_selector"
        android:tag="mwar" />




    <!-- Location error -->
    <RelativeLayout
        android:id="@+id/relativeLayoutLocationError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_translucent_less"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/relativeLayoutLocationErrorSearchBar"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="15px"
            android:background="@drawable/dropshadow_grey"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageViewLocationErrorSearchGPSIcon"
                android:layout_width="30px"
                android:layout_height="44px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18px"
                android:src="@drawable/search_location_icon"
                android:tag="mwar" />

            <TextView
                android:id="@+id/textViewLocationErrorSearch"
                android:layout_width="580px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/imageViewLocationErrorSearchGPSIcon"
                android:background="@color/transparent"
                android:hint="Set pick up location"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textSize="30px" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/imageViewLocationErrorArrow"
            android:layout_width="39px"
            android:layout_height="230px"
            android:layout_below="@+id/relativeLayoutLocationErrorSearchBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37px"
            android:src="@drawable/curly_arrow"
            android:tag="mwar" />

        <ImageView
            android:id="@+id/imageViewLocationErrorText"
            android:layout_width="375px"
            android:layout_height="146px"
            android:layout_below="@+id/imageViewLocationErrorArrow"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47px"
            android:src="@drawable/mark_location_text"
            android:tag="mwar" />


        <ImageView
            android:id="@+id/imageViewLocationError"
            android:layout_width="110px"
            android:layout_height="140px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="190px"
            android:src="@drawable/location_error_icon"
            android:tag="mwar" />

    </RelativeLayout>


</RelativeLayout>