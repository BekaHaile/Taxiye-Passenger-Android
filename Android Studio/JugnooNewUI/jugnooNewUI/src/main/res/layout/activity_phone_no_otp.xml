<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:splitMotionEvents="false"
        android:background="@drawable/nl_background_theme_color"
        >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/nl_otp_verification"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_34" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="80.7px"
            android:layout_height="96.9px"
            android:layout_marginLeft="5px"
            android:padding="30px"
            android:src="@drawable/back_white_selector"
            android:tag="mwar" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        />


    <include
        layout="@layout/layout_otp_screen"
        ></include>


</LinearLayout>