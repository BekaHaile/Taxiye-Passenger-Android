<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.jugnoo.pay.activities.PayTutorial">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/vpPayTutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_60"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/px_40"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_theme"
        android:layout_margin="@dimen/px_20"
        android:text="@string/next"
        android:textSize="@dimen/text_size_32"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_skip"
        style="@style/ButtonThemeAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/px_20"
        android:text="@string/skip"
        android:textSize="@dimen/text_size_32"/>

</RelativeLayout>
