<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:splitMotionEvents="false">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/leaderboard_activity_item_height"
            android:background="@color/sliding_bottom_bg_color"
            >

            <TextView
                android:id="@+id/textViewNumberOfDownloads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="5px"
                android:layout_marginStart="@dimen/share_activity_text_margin_left"
                android:text="@string/number_of_downloads"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_38" />

            <TextView
                android:id="@+id/textViewNumberOfDownloadsValue"
                android:layout_width="@dimen/leaderboard_activity_item_value_height"
                android:layout_height="@dimen/leaderboard_activity_item_value_height"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/share_activity_text_margin_right"
                android:text="0"
                android:tag="mwar"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_54" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:src="@color/text_color_hint"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/leaderboard_activity_item_height"
            android:background="@color/sliding_bottom_bg_color" >

            <TextView
                android:id="@+id/textViewNumberOfFirstRides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="5px"
                android:layout_marginStart="@dimen/share_activity_text_margin_left"
                android:text="@string/number_of_first_rides"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_38"  />

            <TextView
                android:id="@+id/textViewNumberOfFirstRidesValue"
                android:layout_width="@dimen/leaderboard_activity_item_value_height"
                android:layout_height="@dimen/leaderboard_activity_item_value_height"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:tag="mwar"
                android:layout_marginEnd="@dimen/share_activity_text_margin_right"
                android:text="0"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_54" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:src="@color/text_color_hint"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/leaderboard_activity_item_height"
            android:background="@color/sliding_bottom_bg_color" >

            <TextView
                android:id="@+id/textViewMoneyEarned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lineSpacingExtra="5px"
                android:layout_marginStart="@dimen/share_activity_text_margin_left"
                android:text="@string/money_earned"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_38"  />

            <TextView
                android:id="@+id/textViewMoneyEarnedValue"
                android:layout_width="@dimen/leaderboard_activity_item_value_height"
                android:layout_height="@dimen/leaderboard_activity_item_value_height"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:tag="mwar"
                android:layout_marginEnd="@dimen/share_activity_text_margin_right"
                android:text="0"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_54" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:src="@color/text_color_hint"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/textViewDataEffective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/data_effective_format"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_30"
            android:layout_marginTop="@dimen/share_activity_data_text_margin_top" />

</LinearLayout>