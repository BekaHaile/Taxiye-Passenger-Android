<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:recyclerviewfastscroller="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/invite_friends"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        style="@style/back_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTitle"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTitle"
        />

    <TextView
        android:id="@+id/textViewSelectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/select_all"
        android:textColor="@color/text_color_light_selector"
        android:textSize="12sp"
        android:background="?attr/selectableItemBackground"
        android:theme="@style/GreyHighlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTitle"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTitle"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFriends"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintBottom_toTopOf="@+id/btnReInvite"
        android:layout_marginBottom="18dp"
        android:scrollbars="vertical"
        />

    <ImageView
        android:id="@+id/ivNoContacts"
        android:layout_width="128dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_no_emergency_contacts_added"
        app:layout_constraintStart_toStartOf="@+id/rvFriends"
        app:layout_constraintEnd_toEndOf="@+id/rvFriends"
        app:layout_constraintTop_toTopOf="@+id/rvFriends"
        app:layout_constraintBottom_toBottomOf="@+id/rvFriends"
        />
    <TextView
        android:id="@+id/tvNoContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_contacts_found"
        app:layout_constraintStart_toStartOf="@+id/rvFriends"
        app:layout_constraintEnd_toEndOf="@+id/rvFriends"
        app:layout_constraintTop_toBottomOf="@+id/ivNoContacts"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupNoContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ivNoContacts,tvNoContacts"
        />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/shadow_down"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnReInvite"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/button_theme"
        android:text="@string/reinvite"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>