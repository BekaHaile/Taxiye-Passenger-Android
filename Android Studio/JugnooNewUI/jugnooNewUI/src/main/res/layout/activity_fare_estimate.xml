<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/nl_background_theme_color">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="FARE ESTIMATE"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        />

    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <!-- Drop location layout -->

    </LinearLayout>



    <!-- fare estimate layout-->
    <RelativeLayout
        android:id="@+id/relativeLayoutFareEstimateDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="visible"
        >


        <fragment
            android:id="@+id/mapLite"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="240px"
            android:layout_margin="30px"
            />

        <!-- start end locations -->
        <RelativeLayout
            android:id="@+id/relativeLayoutEndRideStartEndInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mapLite"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:layout_marginTop="10px">

            <ImageView
                android:id="@+id/imageViewStartEnd"
                android:layout_width="336px"
                android:layout_height="44px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/start_end_icon"
                android:tag="mwar"
                />

            <LinearLayout
                android:layout_width="280px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewStartEnd"
                android:layout_marginTop="10px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/start"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"/>

                <TextView
                    android:id="@+id/textViewPickupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="14px"
                    android:gravity="center_horizontal"
                    android:maxLines="5"
                    android:text="Sector 37, Chandigarh\nIndia"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_24"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="280px"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageViewStartEnd"
                android:layout_marginTop="10px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/end"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"/>

                <TextView
                    android:id="@+id/textViewDropLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="14px"
                    android:gravity="center_horizontal"
                    android:maxLines="5"
                    android:text="Sector 28, Chandigarh\nIndia"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_24"/>
            </LinearLayout>

        </RelativeLayout>


        <!-- Estimate time and distance -->
        <LinearLayout
            android:id="@+id/linearLayoutTimeDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutEndRideStartEndInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@color/text_color_hint"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="360px"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textViewEstimateDistanceText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:gravity="center_horizontal"
                        android:text="@string/distance"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_30"

                        />

                    <TextView
                        android:id="@+id/textViewEstimateDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:gravity="center_horizontal"
                        android:text="23 Km"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_32"

                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="2px"
                    android:layout_height="90px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/text_color_hint"
                    />

                <LinearLayout
                    android:layout_width="360px"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textViewEstimateRideTimeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:gravity="center_horizontal"
                        android:text="@string/ride_time"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_30"

                        />

                    <TextView
                        android:id="@+id/textViewEstimateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:gravity="center_horizontal"
                        android:text="54 minutes"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_32"

                        />


                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:background="@color/text_color_hint"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/textViewEstimateFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewConvenienceCharge"
            android:layout_marginBottom="0px"
            android:gravity="center"
            android:text="Rs.100 - Rs.200"
            android:textColor="@color/text_color"
            android:textSize="82px"

            />

        <TextView
            android:id="@+id/textViewConvenienceCharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewEstimateFareNote"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:text="Convenience charges Rs.10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_26"

            />


        <TextView
            android:id="@+id/textViewEstimateFareNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonOk"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:text="Note: This is just an estimate.\nActual cost, time and distance may vary."
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_24"

            />


        <Button
            android:id="@+id/buttonOk"
            style="@style/ButtonTheme"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:text="@string/ok"
            />


    </RelativeLayout>


</LinearLayout>