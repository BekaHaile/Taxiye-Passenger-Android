<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light_grey"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="FARE ESTIMATE"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_title_text_size"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        />

    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <!-- Drop location layout -->

    </LinearLayout>
    <!-- fare estimate layout-->
    <RelativeLayout
        android:id="@+id/relativeLayoutFareEstimateDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >


        <fragment
            android:id="@+id/mapLite"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="172px"
            android:layout_margin="30px"
            />


        <!-- start to end locations -->
        <LinearLayout
            android:id="@+id/linearLayoutPickupDrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mapLite"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            >

            <!-- start to end images -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="39px"
                    android:layout_height="39px"
                    android:src="@drawable/ic_fe_start_circle"
                    android:tag="mwar"
                    />
                <ImageView
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/ic_fe_small_circle"
                    android:tag="mwar"
                    />
                <ImageView
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/ic_fe_small_circle"
                    android:tag="mwar"
                    />
                <ImageView
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/ic_fe_small_circle"
                    android:tag="mwar"
                    />

                <ImageView
                    android:layout_width="33px"
                    android:layout_height="52px"
                    android:layout_marginTop="10px"
                    android:src="@drawable/ic_fe_map_marker"
                    android:tag="mwar"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="522px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textViewPickupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25px"
                    android:layout_marginTop="10px"
                    android:maxLines="2"
                    android:text="CDCL, Sector 28, ChandigarhIndia"
                    android:textColor="@color/grey_text"
                    android:textSize="32px"
                    />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:src="@color/grey_light"
                    />

                <TextView
                    android:id="@+id/textViewDropLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginTop="25px"
                    android:maxLines="2"
                    android:text="Phase 6, MohaliPunjab"
                    android:textColor="@color/grey_text"
                    android:textSize="32px"
                    />


            </LinearLayout>


        </LinearLayout>


        <!-- Estimate time and distance -->
        <LinearLayout
            android:id="@+id/linearLayoutTimeDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutPickupDrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="360px"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="53px"
                    android:layout_height="53px"
                    android:src="@drawable/ic_fe_time"
                    android:tag="mwar"
                    />


                <TextView
                    android:id="@+id/textViewEstimateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:gravity="center_horizontal"
                    android:text="54 minutes"
                    android:textColor="@color/grey_text"
                    android:textSize="32px"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="360px"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="65px"
                    android:layout_height="56px"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_fe_distance"
                    android:tag="mwar"
                    />

                <TextView
                    android:id="@+id/textViewEstimateDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27px"
                    android:gravity="center_horizontal"
                    android:text="23 Km"
                    android:textColor="@color/grey_text"
                    android:textSize="32px"

                    />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/textViewEstimateFare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewConvenienceCharge"
            android:layout_marginBottom="0px"
            android:gravity="center"
            android:text="Rs.100 - Rs.200"
            android:textColor="@color/grey_text"
            android:textSize="82px"

            />
        <TextView
            android:id="@+id/textViewConvenienceCharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewEstimateFareNote"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:text="Convenience charges Rs.10"
            android:textColor="@color/grey_text_alpha"
            android:textSize="24px"

            />


        <TextView
            android:id="@+id/textViewEstimateFareNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonOk"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:text="Note: This is just an estimate.\nActual cost, time and distance may vary."
            android:textColor="@color/grey_text_alpha"
            android:textSize="24px"

            />


        <Button
            android:id="@+id/buttonOk"
            android:layout_width="648px"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:background="@drawable/button_yellow"
            android:text="OK"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/button_text_size"
            />


    </RelativeLayout>


</LinearLayout>