<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sliding_bottom_bg_color"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewReviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        android:splitMotionEvents="false">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rlNoReviews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="73px"
            android:layout_height="88px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"
            android:layout_marginTop="50px"
            android:src="@drawable/ic_curved_up_arrow"
            android:tag="mwar" />

        <TextView
            android:id="@+id/tvFeedEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_80"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="Feed is empty!\nBE FIRST ONE TO ADD..."
            android:textColor="@color/text_color"
            android:textSize="@dimen/px_36"
            app:font="maven"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_777"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_no_reviews"
            android:tag="mwar"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_new_height"
        android:background="@drawable/shadow_down_new"
        />

</RelativeLayout>