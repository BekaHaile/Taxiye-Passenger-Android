<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.sabkuchfresh.fragments.FeedHomeFragment"
    >

    <include
        layout="@layout/layout_delivery_address_bar"/>

    <include layout="@layout/layout_offering_not_available_dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/shadow_feed_sep"
            />

        <TextView
            android:id="@+id/tvAddPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp_18"
            android:paddingLeft="@dimen/dp_36"
            android:paddingRight="@dimen/dp_36"
            android:paddingTop="@dimen/dp_18"
            android:text="@string/whats_on_your_mind"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/sp_14"
            app:font="@string/maven_r"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/shadow_feed_sep"
            />
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rlNoReviews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:background="@color/white"
                >

                <ImageView
                    android:layout_below="@+id/tvFeedEmpty"
                    android:layout_marginTop="@dimen/spacing_extra_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-140dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/bg_no_reviews"

                    />

                <TextView
                    android:id="@+id/tvFeedEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_40"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:text="Feed is empty!\nBE FIRST ONE TO ADD..."
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_16"
                    app:font="maven"
                    />



            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/hello_blank_fragment"/>

        </LinearLayout>


    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
