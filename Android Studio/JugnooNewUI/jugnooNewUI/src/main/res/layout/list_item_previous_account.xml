<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="@dimen/screen_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        >

        <ImageView
            android:id="@+id/imageViewAccount"
            android:layout_width="20px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_marginStart="36px"
            android:src="@drawable/ic_user_email"
            android:tag="mhar"
            />

        <LinearLayout
            android:layout_width="430px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageViewAccount"
            android:layout_marginStart="20px">
            <TextView
                android:id="@+id/textViewAccountEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_28"
                android:singleLine="true"
                />

            <TextView
                android:id="@+id/textViewAccountPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/_999"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_28"
                android:singleLine="true"
                android:layout_marginTop="5px"
                />

            </LinearLayout>



        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="70px"
            android:gravity="center"
            android:text="@string/nl_login"
            android:textColor="@color/text_color_light_selector"
            android:textSize="@dimen/text_size_28"
            android:textAllCaps="true"
            />

        <ImageView
            style="@style/forward_image"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10px"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:src="@color/text_color_light" />

    </RelativeLayout>

</LinearLayout>