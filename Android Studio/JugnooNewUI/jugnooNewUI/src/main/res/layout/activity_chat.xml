<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textViewTitle"
            android:text="@string/chat"
            style="@style/title" />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar"
        android:layout_above="@+id/rlInput"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        android:layout_below="@+id/topBar"/>

    <RelativeLayout
        android:id="@+id/rlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/sliding_bottom_bg_color"
        android:padding="@dimen/px_20">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_toLeftOf="@+id/action_send"
            android:background="@drawable/background_white_rounded_bordered"
            android:hint="Type your message here"
            android:layout_centerVertical="true"
            android:maxHeight="96px"
            android:paddingLeft="20px"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_light"
            android:textSize="@dimen/text_size_30" />

        <ImageView
            android:id="@+id/action_send"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:tag="mwar"
            android:background="@android:color/transparent"
            android:src="@drawable/send" />
    </RelativeLayout>

</RelativeLayout>