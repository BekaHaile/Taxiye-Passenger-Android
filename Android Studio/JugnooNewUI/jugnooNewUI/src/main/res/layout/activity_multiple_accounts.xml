<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:splitMotionEvents="false"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textViewTitle"
                android:text="@string/nl_signup"
                style="@style/title" />

            <ImageView
                android:id="@+id/imageViewBack"
                style="@style/back_image" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="@drawable/shadow_down"
            />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:splitMotionEvents="false" >

                <TextView
                    android:id="@+id/textViewMultipleAccountsCreated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="40px"
                    android:gravity="center"
                    android:text="@string/nl_signup_multiple_accounts_already_created_format"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28" />

                <TextView
                    android:id="@+id/textViewPleaseLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="10px"
                    android:gravity="center"
                    android:text="@string/nl_signup_multiple_please_login_through"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28" />



                <ListView
                    android:id="@+id/listViewPreviousAccounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="10px"
                    android:divider="@drawable/background_transparent"
                    android:dividerHeight="1px"
                    android:listSelector="@drawable/background_transparent"
                    android:splitMotionEvents="false" >
                </ListView>



                <TextView
                    android:id="@+id/textViewLikeToCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:layout_marginTop="30px"
                    android:gravity="center"
                    android:text="@string/nl_signup_multiple_if_you_still_like_to_create_new"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28" />


                <RelativeLayout
                    android:id="@+id/relativeLayoutMailUs"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_marginTop="30px"
                    android:layout_marginBottom="40px"
                    android:background="@color/sliding_bottom_bg_color"

                    >

                    <TextView
                        android:id="@+id/textViewContactUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20px"
                        android:gravity="center"
                        android:text="@string/nl_signup_multiple_please_contact_customer_care"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_28" />

                    <TextView
                        android:id="@+id/textViewMailUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="80px"
                        android:gravity="center"
                        android:text="@string/mail_us"
                        android:textColor="@color/text_color_light_selector"
                        android:textSize="@dimen/text_size_26"
                        android:textAllCaps="true"/>

                    <ImageView
                        style="@style/forward_image"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20px"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@color/text_color_light" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>