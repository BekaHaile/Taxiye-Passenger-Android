<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offer_popup_item_color">

    <RelativeLayout
        android:id="@+id/rlContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        app:layout_behavior="com.sabkuchfresh.widgets.LockableBottomSheetBehavior"
        >



        <RelativeLayout
            android:id="@+id/layout_container_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/rlOrderStatusMapPeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/offer_popup_item_color">

                    <LinearLayout
                        android:id="@+id/llShadowPeek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="@string/dont_touch_me"
                        android:visibility="gone"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_72"
                            android:layout_marginTop="@dimen/dp_100"
                            android:background="@drawable/shadow_up_black_20_0"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:background="@color/offer_popup_item_color"
                            />
                    </LinearLayout>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cvOrderStatus"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/llShadowPeek"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        android:layout_marginTop="26px"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8px"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        android:soundEffectsEnabled="false"
                        >

                        <RelativeLayout
                            android:id="@+id/relativeStatusBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divider"
                            android:layout_marginBottom="30px"
                            android:layout_marginTop="40px">

                            <LinearLayout
                                android:id="@+id/llOrderPath"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="40px"
                                android:paddingEnd="40px">

                                <ImageView
                                    android:id="@+id/ivStatus0"
                                    android:layout_width="@dimen/px_25"
                                    android:layout_height="@dimen/px_25"
                                    android:background="@drawable/circle_order_status"
                                    android:tag="mwar"
                                    android:visibility="visible"/>

                                <View
                                    android:id="@+id/lineStatus1"
                                    android:layout_width="135px"
                                    android:layout_height="8px"
                                    android:background="@color/rank_5"
                                    android:visibility="visible"/>

                                <ImageView
                                    android:id="@+id/ivStatus1"
                                    android:layout_width="@dimen/px_25"
                                    android:layout_height="@dimen/px_25"
                                    android:background="@drawable/circle_order_status"
                                    android:tag="mwar"
                                    android:visibility="visible"/>

                                <View
                                    android:id="@+id/lineStatus2"
                                    android:layout_width="135px"
                                    android:layout_height="8px"
                                    android:background="@color/rank_5"
                                    android:visibility="visible"/>

                                <ImageView
                                    android:id="@+id/ivStatus2"
                                    android:layout_width="@dimen/px_25"
                                    android:layout_height="@dimen/px_25"
                                    android:background="@drawable/circle_order_status"
                                    android:tag="mwar"
                                    android:visibility="visible"/>

                                <View
                                    android:id="@+id/lineStatus3"
                                    android:layout_width="135px"
                                    android:layout_height="8px"
                                    android:background="@color/rank_5"
                                    android:visibility="visible"/>

                                <ImageView
                                    android:id="@+id/ivStatus3"
                                    android:layout_width="@dimen/px_25"
                                    android:layout_height="@dimen/px_25"
                                    android:background="@drawable/circle_order_status"
                                    android:tag="mwar"
                                    android:visibility="visible"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvStatus0"
                                android:layout_width="120px"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/llOrderPath"
                                android:layout_below="@+id/llOrderPath"
                                android:layout_marginStart="-6px"
                                android:layout_marginTop="15px"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="@string/status0"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_22"
                                android:visibility="visible"/>

                            <TextView
                                android:id="@+id/tvStatus1"
                                android:layout_width="120px"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llOrderPath"
                                android:layout_marginStart="45px"
                                android:layout_marginTop="15px"
                                android:layout_toEndOf="@+id/tvStatus0"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="@string/status1"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_22"
                                android:visibility="visible"/>

                            <TextView
                                android:id="@+id/tvStatus2"
                                android:layout_width="120px"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llOrderPath"
                                android:layout_marginStart="40px"
                                android:layout_marginTop="15px"
                                android:layout_toEndOf="@+id/tvStatus1"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="@string/status2"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_22"
                                android:visibility="visible"/>

                            <TextView
                                android:id="@+id/tvStatus3"
                                android:layout_width="120px"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@+id/llOrderPath"
                                android:layout_below="@+id/llOrderPath"
                                android:layout_marginEnd="-10px"
                                android:layout_marginTop="15px"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="@string/status3"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_22"
                                android:visibility="visible"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/layout_menus_order"
                    android:layout_height="wrap_content"
                    android:background="@color/offer_popup_item_color"
                    android:orientation="vertical"
                    android:paddingBottom="40px"
                    >

                    <RelativeLayout
                        android:id="@+id/rlOrderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        android:layout_marginTop="20px"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvOrderStatusLabel"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/order_status_txt"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_24"/>

                        <TextView
                            android:id="@+id/tvOrderStatusVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/tvOrderStatusLabel"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"/>

                        <ImageView
                            android:id="@+id/ivOrderCompleted"
                            android:layout_width="34px"
                            android:layout_height="34px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10px"
                            android:layout_toEndOf="@+id/tvOrderStatusVal"
                            android:src="@drawable/ic_order_status_green"
                            android:tag="mwar"
                            android:visibility="gone"/>

                        <View
                            style="@style/HorizontalDivider"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px">

                        <TextView
                            android:id="@+id/tvOrderTime"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/order_time"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_24"/>

                        <TextView
                            android:id="@+id/tvOrderTimeVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/tvOrderTime"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"/>
                    </RelativeLayout>

                    <View
                        style="@style/HorizontalDivider"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px">

                        <TextView
                            android:id="@+id/tvDeliveryTime"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:text="@string/delivery_time"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_24"/>

                        <TextView
                            android:id="@+id/tvDeliveryTimeVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="20px"
                            android:layout_toStartOf="@+id/imageViewCallRestaurant"
                            android:layout_toEndOf="@+id/tvDeliveryTime"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"/>

                        <ImageView
                            android:id="@+id/imageViewRestaurant"
                            android:layout_width="33px"
                            android:layout_height="33px"
                            android:layout_marginTop="20px"
                            android:layout_toEndOf="@+id/tvDeliveryTime"
                            android:src="@drawable/ic_restaurant"
                            android:tag="mwar"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/imageViewCallRestaurant"
                            android:layout_width="99px"
                            android:layout_height="99px"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="0px"
                            android:layout_marginTop="15px"
                            android:src="@drawable/ic_call_vendor"
                            android:tag="mwar"
                            android:visibility="gone"/>


                        <View
                            android:layout_width="1px"
                            android:layout_height="1px"
                            android:layout_below="@+id/tvDeliveryTimeVal"
                            android:layout_marginTop="20px"/>

                    </RelativeLayout>

                    <View
                        style="@style/HorizontalDivider"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        android:minHeight="80px">

                        <TextView
                            android:id="@+id/tvDeliveryTo"
                            android:layout_width="200px"
                            android:layout_height="55px"
                            android:gravity="bottom"
                            android:text="@string/delivery_to"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_24"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:layout_toEndOf="@+id/tvDeliveryTo"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llDeliveryPlace"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/ivDeliveryPlace"
                                    android:layout_width="40px"
                                    android:layout_height="37px"
                                    android:src="@drawable/home"
                                    android:tag="mwar"/>

                                <TextView
                                    android:id="@+id/tvDelveryPlace"
                                    android:layout_width="200px"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10px"
                                    android:text="@string/home_caps"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_28"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvDeliveryToVal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llDeliveryPlace"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/tvDeliveryTo"
                                android:paddingTop="5px"
                                android:text=""
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_28"/>

                        </LinearLayout>
                    </RelativeLayout>


                    <android.support.v7.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        android:layout_marginTop="26px"
                        android:orientation="vertical"
                        android:paddingStart="4px"
                        android:paddingEnd="4px"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8px"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="92px">

                                <View
                                    style="@style/HorizontalDividerLight"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="@dimen/px_34"
                                    android:layout_marginEnd="@dimen/px_34"/>

                                <TextView
                                    android:id="@+id/tvItemSummary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/px_34"
                                    android:text="@string/items_summary"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_28"/>

                                <TextView
                                    android:id="@+id/tvItemsQuantityVal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/px_34"
                                    android:text=""
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_28"/>
                            </RelativeLayout>

                            <product.clicklabs.jugnoo.utils.NonScrollListView
                                android:id="@+id/listViewCart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:divider="@color/transparent"
                                android:dividerHeight="0dp"
                                android:splitMotionEvents="false"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        android:layout_marginTop="26px"
                        android:orientation="vertical"
                        android:paddingStart="4px"
                        android:paddingEnd="4px"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8px"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBillSummary"
                                android:layout_width="match_parent"
                                android:layout_height="92px"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/px_34"
                                android:text="@string/bill_summary"
                                android:textAllCaps="true"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_28"/>

                            <View
                                style="@style/HorizontalDividerLight"
                                android:layout_marginStart="@dimen/px_34"
                                android:layout_marginEnd="@dimen/px_34"/>

                            <LinearLayout
                                android:id="@+id/llExtraCharges"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"></LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvTotalAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/px_26"
                                    android:layout_marginStart="40px"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/px_26"
                                    android:text="@string/total_amount"
                                    android:textColor="@color/theme_color"
                                    android:textSize="@dimen/text_size_40"
                                    app:typekitFont="maven"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/px_26"
                                    android:layout_marginBottom="@dimen/px_26"
                                    android:orientation="vertical">

                                <com.sabkuchfresh.utils.TextViewStrikeThrough
                                    android:id="@+id/tvTotalAmountValOld"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/px_30"
                                    android:layout_toStartOf="@+id/tvTotalAmountVal"
                                    android:text="@string/rupee_0"
                                    android:textColor="@color/text_color_light"
                                    android:textSize="@dimen/text_size_40"
                                    android:visibility="gone"
                                    app:typekitFont="maven"/>

                                <TextView
                                    android:id="@+id/tvTotalAmountVal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="30px"
                                    android:text="@string/rupee_0"
                                    android:textColor="@color/theme_color"
                                    android:textSize="@dimen/text_size_40"
                                    app:typekitFont="maven"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvTotalAmountMessage"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvTotalAmount"
                                    android:layout_marginBottom="@dimen/px_26"
                                    android:layout_marginStart="@dimen/px_40"
                                    android:layout_marginEnd="@dimen/px_40"
                                    android:text="@string/rupee_0"
                                    android:textColor="@color/text_color_light"
                                    android:textSize="@dimen/text_size_24"
                                    android:visibility="gone"
                                    app:typekitFont="maven"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/cvPaymentMethod"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        android:layout_marginTop="26px"
                        android:orientation="vertical"
                        android:paddingStart="4px"
                        android:paddingEnd="4px"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="8px"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/llPaymentSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPaymentSummary"
                                android:layout_width="match_parent"
                                android:layout_height="92px"
                                android:gravity="center_vertical"
                                android:paddingStart="@dimen/px_34"
                                android:text="@string/payment_summary"
                                android:textAllCaps="true"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_28"/>

                            <View
                                style="@style/HorizontalDividerLight"
                                android:layout_marginStart="@dimen/px_34"
                                android:layout_marginEnd="@dimen/px_34"/>

                            <RelativeLayout
                                android:id="@+id/rlWalletDeducted"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tvPaymentMethodVal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/px_40"
                                    android:tag="mwar"
                                    android:text="@string/cash"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_32"
                                    app:typekitFont="maven"/>

                                <TextView
                                    android:id="@+id/tvAmountPayableVal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginBottom="@dimen/px_26"
                                    android:layout_marginEnd="@dimen/px_34"
                                    android:layout_marginTop="@dimen/px_30"
                                    android:text="@string/rupee_0"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_32"
                                    app:typekitFont="maven"/>

                                <View
                                    android:id="@+id/vDividerPayment"
                                    style="@style/HorizontalDividerDotted"
                                    android:layout_below="@+id/tvAmountPayableVal"
                                    android:layout_marginStart="@dimen/px_40"
                                    android:layout_marginEnd="@dimen/px_40"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/llFinalAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/px_10"
                                android:orientation="vertical"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <Button
                        android:id="@+id/bNeedHelp"
                        style="@style/ButtonThemeCapsule"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40px"
                        android:text="@string/need_help"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/order_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutReceipt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        android:layout_marginTop="40px"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:splitMotionEvents="false"
                        android:visibility="gone"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/cancelfeedbackBtn"
                            android:layout_width="0px"
                            android:layout_height="@dimen/button_height"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="15px"
                            android:layout_weight="1"
                            android:background="@drawable/capsule_theme_color_selector"
                            android:text="@string/need_help"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_34"/>

                        <Button
                            android:id="@+id/buttonCancelOrder"
                            android:layout_width="0px"
                            android:layout_height="@dimen/button_height"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="15px"
                            android:layout_weight="1"
                            android:background="@drawable/button_white_grey_theme_capsule_border_selector"
                            android:text="@string/cancel_order"
                            android:textAllCaps="true"
                            android:textColor="@color/text_color_theme_selector"
                            android:textSize="@dimen/text_size_34"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_complete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="28px"
                        android:layout_marginEnd="28px"
                        android:layout_marginTop="40px"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:splitMotionEvents="false"
                        android:visibility="gone"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/feedbackBtn"
                            android:layout_width="0px"
                            android:layout_height="@dimen/button_height"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="15px"
                            android:layout_weight="1"
                            android:background="@drawable/capsule_theme_color_selector"
                            android:text="@string/ok"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_34"
                            android:visibility="visible"/>

                        <Button
                            android:id="@+id/reorderBtn"
                            android:layout_width="0px"
                            android:layout_height="@dimen/button_height"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="15px"
                            android:layout_weight="1"
                            android:background="@drawable/capsule_theme_color_selector"
                            android:text="@string/action_repeat_order"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_34"/>

                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/fragment_pros_order_status"/>
            </LinearLayout>


            <View
                android:background="@color/offer_popup_item_color"
                android:layout_below="@id/llMain"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>


    <ImageView
        android:id="@+id/ivTopShadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_new_height"
        android:background="@drawable/shadow_down_new"
        android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>