<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dropshadow_black"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:layout_marginTop="50px"
        android:layout_marginBottom="-10px"
        >

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/refer_a_driver"
                android:layout_marginTop="60px"
                android:textAllCaps="true"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/top_bar_title_text_size"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />



            <TextView
                android:id="@+id/textViewCameAcross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45px"
                android:gravity="center"
                android:text="@string/came_across_auto_driver"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_30" />

            <ImageView
                android:layout_width="459px"
                android:layout_height="239px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35px"
                android:src="@drawable/ic_promotions_driver_refer"
                android:tag="mwar" />

            <TextView
                android:id="@+id/textViewKindlyRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25px"
                android:gravity="center"
                android:text="@string/kindly_recommend_us_to_them"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/textViewIfTheyAreInterested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:gravity="center"
                android:text="@string/if_they_are_interested"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_30" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="30px">

                <ImageView
                    android:layout_width="18px"
                    android:layout_height="27px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5px"
                    android:src="@drawable/ic_user_email"
                    android:tag="mhar" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="44px"
                    android:background="#0000"
                    android:digits="@string/digits_characters_numbers"
                    android:gravity="center_vertical"
                    android:hint="@string/name_of_driver"
                    android:inputType="textNoSuggestions|textCapSentences"
                    android:maxLength="50"
                    android:paddingLeft="10px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_30" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2px"
                    android:src="@color/text_color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px">

                <ImageView
                    android:layout_width="27px"
                    android:layout_height="27px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4px"
                    android:src="@drawable/ic_phone"
                    android:tag="mhar" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="44px"
                    android:background="#0000"
                    android:gravity="center_vertical"
                    android:hint="@string/contact_number"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingLeft="10px"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_30" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="2px"
                    android:src="@color/text_color_hint" />

            </RelativeLayout>


            <Button
                android:id="@+id/buttonRefer"
                style="@style/ButtonTheme"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40px"
                android:layout_marginTop="50px"
                android:text="@string/refer" />

            <TextView
                android:id="@+id/textViewScroll"
                android:layout_width="20px"
                android:layout_height="1px" />


        </LinearLayout>

    </ScrollView>


    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="70px"
        android:layout_height="71px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:padding="20px"
        android:src="@drawable/ic_cross_grey_selector"
        android:layout_alignTop="@+id/scrollView"
        android:layout_alignLeft="@+id/scrollView"
        />

</RelativeLayout>