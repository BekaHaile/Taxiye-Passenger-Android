<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:background="@drawable/icon_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="@string/mobile_string"
                    android:inputType="number"
                    android:maxLength="10"
                    android:nextFocusDown="@+id/password_et"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/lightBlackTxtColor"
                    android:textSize="@dimen/et_text_size" />

                <EditText
                    android:id="@+id/password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:hint="@string/password_string"
                    android:inputType="textPassword"
                    android:layout_marginTop="10dp"
                    android:nextFocusDown="@+id/confirm_pswd_et"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/lightBlackTxtColor"
                    android:textSize="@dimen/et_text_size" />


                <Button
                    android:id="@+id/sign_in_btn"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/layout_orange_button"
                    android:text="@string/sign_in_string"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteTxtColor"
                    android:textSize="@dimen/btn_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/forgot_pswd_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:inputType="textCapSentences"
                    android:nextFocusDown="@+id/confirm_pswd_et"
                    android:singleLine="true"
                    android:text="Forgot password?"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textSize="@dimen/et_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.3dp"
                        android:gravity="center_vertical"
                        android:text="@string/dont_have_string"
                        android:textColor="@color/lightBlackTxtColor"
                        android:textSize="@dimen/text_view_size" />

                    <TextView
                        android:id="@+id/sign_up_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/sign_up_string"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_view_size" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>