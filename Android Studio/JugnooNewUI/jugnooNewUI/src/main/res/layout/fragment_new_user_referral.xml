<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayoutInner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="52px"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etPromoCode"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginTop="36px"
            android:background="#0000"
            android:capitalize="characters"
            android:digits="@string/digits_characters_caps_numbers"
            android:maxWidth="200dp"
            android:hint="@string/enter_referral_code"
            android:inputType="textCapCharacters"
            android:gravity="center"
            android:paddingStart="20px"
            android:paddingEnd="20px"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/black_text"
            android:textColorHint="@color/black_text_alpha"
            android:textCursorDrawable="@drawable/cursor_black"
            android:textSize="30px" />

        <ImageView
            android:layout_width="400px"
            android:layout_height="2px"
            android:layout_gravity="center_horizontal"
            android:src="@color/stroke_light_grey" />

        <Button
            android:id="@+id/buttonApplyPromo"
            style="@style/ButtonThemeCapsule"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200px"
            android:imeOptions="actionDone"
            android:text="@string/claim_coupon"
            app:typekitFont="maven"/>
    </LinearLayout>


</RelativeLayout>