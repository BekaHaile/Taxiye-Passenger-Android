<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rv"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:splitMotionEvents="false"
                android:soundEffectsEnabled="false"
    >

    <RelativeLayout
        android:id="@+id/relativeLayoutInner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="40px"
        android:background="@drawable/background_white_rounded_bordered"
        android:splitMotionEvents="false"
        android:soundEffectsEnabled="false"
        >


        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2px"
            android:splitMotionEvents="false"
            >

            <TextView
                android:id="@+id/textHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:paddingStart="40px"
                android:paddingEnd="40px"
                android:text="Title"
                android:textColor="@color/text_color"
                android:textSize="40px"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/textMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:lineSpacingExtra="10px"
                android:maxHeight="800px"
                android:paddingStart="40px"
                android:paddingEnd="40px"
                android:text="Message"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_32"
                android:textIsSelectable="true"
                android:autoLink="web"
                />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/grey_light"/>

            <Button
                android:id="@+id/btnOk"
                android:layout_width="match_parent"
                android:layout_height="83px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0px"
                android:background="@drawable/button_white_grey_br_selector"
                android:text="OK"
                android:textColor="@color/text_color"
                android:textSize="34px"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>