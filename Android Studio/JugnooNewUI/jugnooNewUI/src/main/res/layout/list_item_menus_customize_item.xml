<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relative"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCustomizeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10px"
        card_view:cardCornerRadius="@dimen/button_corner_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dialog_color_menus_customize">

            <RelativeLayout
                android:id="@+id/relativeLayoutCustomizeItem"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewCustomizeItemCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="20px"
                    android:text="Size"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textSize="32px"/>

                <ImageView
                    android:id="@+id/imageViewArrow"
                    android:layout_width="23px"
                    android:layout_height="41px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24px"
                    android:layout_marginTop="20px"
                    android:background="@drawable/ic_back_pressed"
                    android:rotation="180"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutCustomizeItemAddItem"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutCustomizeItem"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewCustomizeItemDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14px"
                    android:layout_marginLeft="24px"
                    android:text="Personal Giant Slice"
                    android:textColor="@color/grey_dark_less"
                    android:textSize="26px"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_below="@id/textViewCustomizeItemDesc"
                    android:layout_marginLeft="25px"
                    android:layout_marginRight="25px"
                    android:background="@color/grey_light_more_alpha"/>

                <TextView
                    android:id="@+id/textViewItemAdditionalCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textViewCustomizeItemDesc"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="14px"
                    android:text="Additional Cost"
                    android:textAllCaps="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/textViewItemAdditionalCostValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textViewCustomizeItemDesc"
                    android:layout_marginBottom="10px"
                    android:layout_marginRight="26px"
                    android:layout_marginTop="14px"
                    android:text="Rs 185.00"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textSize="26px"/>
            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
