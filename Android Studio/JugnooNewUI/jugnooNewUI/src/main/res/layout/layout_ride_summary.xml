<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutRideSummary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light_more_alpha"
    >

    
    <LinearLayout
        android:id="@+id/linearLayoutReceipt"
        android:layout_width="671px"
        android:layout_height="920px"
        android:layout_marginTop="38px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/receipt_background"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <!-- driver info -->
        <RelativeLayout
            android:id="@+id/relativeLayoutEndRideDriverInfo"
            android:layout_width="560px"
            android:layout_height="102px"
            android:layout_marginTop="5px"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="280px"
                android:layout_height="100px">

                <ImageView
                    android:id="@+id/imageViewEndRideDriverIcon"
                    android:layout_width="32px"
                    android:layout_height="43px"
                    android:layout_marginLeft="42px"
                    android:layout_marginRight="10px"
                    android:src="@drawable/driver_icon_end_ride"
                    android:tag="mwar"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textViewEndRideDriverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10px"
                    android:layout_toRightOf="@+id/imageViewEndRideDriverIcon"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="Driver Name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="280px"
                android:layout_height="100px"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/imageViewEndRideAutoIcon"
                    android:layout_width="81px"
                    android:layout_height="62px"
                    android:src="@drawable/auto_icon_end_ride"
                    android:tag="mwar"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"/>

                <TextView
                    android:id="@+id/textViewEndRideDriverCarNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:layout_toRightOf="@+id/imageViewEndRideAutoIcon"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="Car Number"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28"/>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="540px"
            android:layout_height="2px"
            android:background="@color/text_color_hint"
            />

        <TextView
            android:id="@+id/textViewEndRideSummary"
            android:layout_width="560px"
            android:layout_height="70px"
            android:gravity="center"
            android:text="Ride Summary"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_30"
            android:textAllCaps="true"
            />

        <ImageView
            android:layout_width="540px"
            android:layout_height="2px"
            android:background="@color/text_color_hint"
            />

        <ScrollView
            android:id="@+id/scrollViewEndRide"
            android:layout_width="560px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22px"
            android:layout_below="@+id/relativeLayoutEndRideDriverInfo"
            >

            <LinearLayout
                android:id="@+id/linearLayoutEndRideInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:splitMotionEvents="false"
                >


                <!-- ride bill -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- fare -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14px">

                        <TextView
                            android:id="@+id/textViewEndRideFare"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="Fare"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>


                        <TextView
                            android:id="@+id/textViewEndRideFareValue"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="40px"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </RelativeLayout>


                    <!-- luggage charge -->
                    <RelativeLayout
                        android:id="@+id/relativeLayoutLuggageCharge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px">

                        <TextView
                            android:id="@+id/textViewEndRideLuggageCharge"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="Luggage Charge"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>


                        <TextView
                            android:id="@+id/textViewEndRideLuggageChargeValue"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="40px"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </RelativeLayout>

                    <!-- convenience charge -->
                    <RelativeLayout
                        android:id="@+id/relativeLayoutConvenienceCharge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px">

                        <TextView
                            android:id="@+id/textViewEndRideConvenienceCharge"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="Convenience Charge"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>


                        <TextView
                            android:id="@+id/textViewEndRideConvenienceChargeValue"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="40px"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </RelativeLayout>

                    <!-- discount -->
                    <RelativeLayout
                        android:id="@+id/relativeLayoutEndRideDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px">

                        <TextView
                            android:id="@+id/textViewEndRideDiscount"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="Discount"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>


                        <TextView
                            android:id="@+id/textViewEndRideDiscountValue"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="40px"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </RelativeLayout>

                    <product.clicklabs.jugnoo.utils.NonScrollListView
                        android:id="@+id/listViewEndRideDiscounts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/transparent"
                        android:dividerHeight="2dp"
                        android:splitMotionEvents="false">
                    </product.clicklabs.jugnoo.utils.NonScrollListView>


                    <!-- discounted fare -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px">

                        <TextView
                            android:id="@+id/textViewEndRideFinalFare"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="Final Fare"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>

                        <TextView
                            android:id="@+id/textViewEndRideFinalFareValue"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="40px"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </RelativeLayout>

                    <!-- jugnoo cash deducted -->
                    <RelativeLayout
                        android:id="@+id/relativeLayoutPaidUsingJugnooCash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px">

                        <TextView
                            android:id="@+id/textViewEndRideJugnooCash"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="Jugnoo Cash"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>


                        <TextView
                            android:id="@+id/textViewEndRideJugnooCashValue"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="40px"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </RelativeLayout>

                    <!-- paytm wallet deducted -->
                    <RelativeLayout
                        android:id="@+id/relativeLayoutPaidUsingPaytm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6px">

                        <TextView
                            android:id="@+id/textViewEndRidePaytm"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="Paytm Wallet"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>


                        <TextView
                            android:id="@+id/textViewEndRidePaytmValue"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="40px"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </RelativeLayout>


                    <!-- to be paid -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px">

                        <TextView
                            android:id="@+id/textViewEndRideToBePaid"
                            android:layout_width="340px"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30px"
                            android:text="To Be Paid"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_30"/>


                        <TextView
                            android:id="@+id/textViewEndRideToBePaidValue"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical|right"
                            android:layout_marginRight="40px"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_30"/>
                    </RelativeLayout>


                    <ImageView
                        android:layout_width="540px"
                        android:layout_height="2px"
                        android:background="@color/text_color_hint"
                        android:layout_marginTop="15px"
                        android:layout_gravity="center_horizontal"
                        />
                    
                </LinearLayout>

                <!-- ride details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textViewEndRideBaseFare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="Base Fare"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>

                        <TextView
                            android:id="@+id/textViewEndRideBaseFareValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Rs. 20"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="2px"
                        android:layout_height="80px"
                        android:background="@color/text_color_hint"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/textViewEndRideDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="Distance"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>

                        <TextView
                            android:id="@+id/textViewEndRideDistanceValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="20 kms"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </LinearLayout>



                    <RelativeLayout
                        android:id="@+id/relativeLayoutEndRideWaitTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:layout_width="2px"
                            android:layout_height="80px"
                            android:background="@color/text_color_hint"
                            android:layout_centerVertical="true"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            >
                        <TextView
                            android:id="@+id/textViewEndRideWaitTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="Wait"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>

                        <TextView
                            android:id="@+id/textViewEndRideWaitTimeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="20 min"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                        </LinearLayout>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="2px"
                        android:layout_height="80px"
                        android:background="@color/text_color_hint"
                        />

                    <LinearLayout
                        android:id="@+id/linearLayoutEndRideTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/textViewEndRideTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="Total"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"/>

                        <TextView
                            android:id="@+id/textViewEndRideTimeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="20 min"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:layout_width="540px"
                    android:layout_height="2px"
                    android:background="@color/text_color_hint"
                    android:layout_gravity="center_horizontal"
                    />


                <!-- fare factor -->

                    <TextView
                        android:id="@+id/textViewEndRideFareFactorValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Priority Tip 1x"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_26"
                        android:layout_marginTop="20px"

                        />



                <!-- start end locations -->
                <RelativeLayout
                    android:id="@+id/relativeLayoutEndRideStartEndInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px">

                    <ImageView
                        android:id="@+id/imageViewStartEnd"
                        android:layout_width="287px"
                        android:layout_height="40px"
                        android:src="@drawable/start_end_icon"
                        android:tag="mwar"
                        android:layout_centerHorizontal="true"
                        />

                    <LinearLayout
                        android:layout_width="280px"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViewStartEnd"
                        android:orientation="vertical"
                        android:layout_marginTop="10px">
                        <TextView
                            android:id="@+id/textViewEndRideStartLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Start"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/textViewEndRideStartTimeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="00:00 AM"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"
                            android:layout_marginTop="4px"/>

                        <TextView
                            android:id="@+id/textViewEndRideStartLocationValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="5"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="Sector 37, Chandigarh\nIndia"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_24"
                            android:layout_marginTop="14px"
                            android:layout_marginLeft="10px"
                            android:layout_marginRight="10px"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="280px"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/imageViewStartEnd"
                        android:orientation="vertical"
                        android:layout_marginTop="10px">
                        <TextView
                            android:id="@+id/textViewEndRideEndLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="End"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_26"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/textViewEndRideEndTimeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="00:00 AM"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_26"
                            android:layout_marginTop="4px"/>
                        <TextView
                            android:id="@+id/textViewEndRideEndLocationValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="5"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="Sector 28, Chandigarh\nIndia"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/text_size_24"
                            android:layout_marginTop="14px"
                            android:layout_marginLeft="10px"
                            android:layout_marginRight="10px"/>
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/buttonEndRideOk"
        style="@style/ButtonTheme"
        android:layout_marginTop="10px"
        android:layout_marginBottom="30px"
        android:layout_below="@+id/linearLayoutReceipt"
        android:layout_centerHorizontal="true"
        android:text="@string/ok"
        />

</RelativeLayout>