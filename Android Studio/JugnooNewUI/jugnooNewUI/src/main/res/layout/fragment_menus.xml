<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/linearLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayoutNoMenus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_menus_nothing_found"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/textViewOhSnap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110px"
            android:text="@string/oh_snap"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_52"
            />

        <TextView
            android:id="@+id/textViewNothingFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewOhSnap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="@string/nothing_found_near_you"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_32"

            />

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="73px"
            android:layout_height="88px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="64px"
            android:layout_marginTop="36px"
            android:src="@drawable/ic_curved_up_arrow"
            android:tag="mwar"
            />


    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textViewNoMenus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120px"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_34"
                android:text="@string/no_menus_available"
                android:gravity="center"
                android:visibility="gone"
                />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewRestaurant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="true"
                android:scrollbars="vertical"
                android:splitMotionEvents="false">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>


    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>