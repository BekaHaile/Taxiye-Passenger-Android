<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearStripe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvStripeCardName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_43"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:textColor="@color/text_color"
        android:textSize="34px"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_radio_button_checked"
        app:typekitFont="maven"
        android:theme="@style/GreyHighlight"
        android:background="?attr/selectableItemBackground"
        />
    <TextView
        android:id="@+id/tvStripeCardNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:text="@string/a_z"
        android:textColor="@color/text_color"
        android:textSize="34px"
        android:layout_marginLeft="-10dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        app:typekitFont="maven"
        android:theme="@style/GreyHighlight"
        android:background="?attr/selectableItemBackground"
        />



</LinearLayout>