<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="@dimen/screen_width"
            android:layout_height="@dimen/top_bar_height"
            android:background="@color/white" >

            <TextView
                android:id="@+id/textViewTitle"
                android:text="@string/about_caps"
                style="@style/title" />

            <ImageView
                android:id="@+id/imageViewBack"
                style="@style/back_image"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="@drawable/shadow_down"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false" 
            android:background="@color/menu_item_selector_color"
            
            >

            <RelativeLayout
                android:id="@+id/relativeLayoutRateUs"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@drawable/background_white_yellow_selector" >

                <ImageView
                    android:id="@+id/ivRateUs"
                    android:layout_width="43px"
                    android:layout_height="43px"
                    android:src="@drawable/ic_about_rateus"
                    android:layout_marginLeft="@dimen/px_36"
                    android:layout_centerVertical="true"
                    android:tag="mwar"/>

                <TextView
                    android:id="@+id/textViewRateUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivRateUs"
                    android:layout_marginLeft="30px"
                    android:text="Rate us on Play Store"
                    android:textColor="@color/text_color"
                    android:textSize="34px" />

                <ImageView
                    android:layout_alignParentRight="true"
                    style="@style/forward_image"
                    android:layout_marginRight="10px"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:src="@color/stroke_color_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutLikeUs"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@drawable/background_white_yellow_selector" >

                <ImageView
                    android:id="@+id/ivLikeUs"
                    android:layout_width="42px"
                    android:layout_height="40px"
                    android:src="@drawable/ic_about_like"
                    android:layout_marginLeft="@dimen/px_36"
                    android:layout_centerVertical="true"
                    android:tag="mwar"/>

                <TextView
                    android:id="@+id/textViewLikeUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/ivLikeUs"
                    android:text="Like us on Facebook"
                    android:textColor="@color/text_color"
                    android:textSize="34px" />

                <ImageView
                    android:layout_alignParentRight="true"
                    style="@style/forward_image"
                    android:layout_marginRight="10px" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:src="@color/stroke_color_light" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/relativeLayoutTNC"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@drawable/background_white_yellow_selector" >

                <ImageView
                    android:id="@+id/ivTNC"
                    android:layout_width="40px"
                    android:layout_height="43px"
                    android:src="@drawable/ic_about_tnc"
                    android:layout_marginLeft="@dimen/px_36"
                    android:layout_centerVertical="true"
                    android:tag="mwar"/>

                <TextView
                    android:id="@+id/textViewTNC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/ivTNC"
                    android:text="Terms and Conditions"
                    android:textColor="@color/text_color"
                    android:textSize="34px" />

                <ImageView
                    android:layout_alignParentRight="true"
                    style="@style/forward_image"
                    android:layout_marginRight="10px" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:src="@color/text_color_hint" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/relativeLayoutPrivacy"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@drawable/background_white_yellow_selector" >

                <ImageView
                    android:id="@+id/ivPrivacy"
                    android:layout_width="34px"
                    android:layout_height="46px"
                    android:src="@drawable/ic_about_privacy"
                    android:layout_marginLeft="@dimen/px_36"
                    android:layout_centerVertical="true"
                    android:tag="mwar"/>

                <TextView
                    android:id="@+id/textViewPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/ivPrivacy"
                    android:text="Privacy Policy"
                    android:textColor="@color/text_color"
                    android:textSize="34px" />

                <ImageView
                    android:layout_alignParentRight="true"
                    style="@style/forward_image"
                    android:layout_marginRight="10px" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:src="@color/stroke_color_light" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/relativeLayoutAbout"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@drawable/background_white_yellow_selector" >

                <ImageView
                    android:id="@+id/ivAbout"
                    android:layout_width="43px"
                    android:layout_height="43px"
                    android:src="@drawable/ic_about_who_we_are"
                    android:layout_marginLeft="@dimen/px_36"
                    android:layout_centerVertical="true"
                    android:tag="mwar"/>

                <TextView
                    android:id="@+id/textViewAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/ivAbout"
                    android:text="@string/who_are_we"
                    android:textColor="@color/text_color"
                    android:textSize="34px" />

                <ImageView
                    android:layout_alignParentRight="true"
                    style="@style/forward_image"
                    android:layout_marginRight="10px" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_alignParentBottom="true"
                    android:src="@color/stroke_color_light" />
            </RelativeLayout>
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>