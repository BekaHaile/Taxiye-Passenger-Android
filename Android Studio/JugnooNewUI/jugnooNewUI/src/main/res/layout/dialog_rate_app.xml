<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:soundEffectsEnabled="false"
    >

    <LinearLayout
        android:id="@+id/linearLayoutInner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_rounded"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        android:layout_centerInParent="true"
        android:layout_margin="40px"
        android:soundEffectsEnabled="false"
        >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Glad you liked our services"
            android:textAllCaps="true"
            android:padding="30px"
            android:textSize="@dimen/text_size_32"
            android:textColor="@color/white"
            android:background="@drawable/background_orange_tr"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_app_dialog_message"
            android:textSize="@dimen/text_size_26"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_margin="20px"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/stroke_color_light"
            android:layout_marginTop="20px"
            />

        <Button
            android:id="@+id/buttonYes"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:textColor="@color/text_color_light_selector"
            android:background="@color/transparent"
            android:textSize="@dimen/text_size_30"
            android:text="@string/rate_now"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/stroke_color_light"
            />

        <Button
            android:id="@+id/buttonMaybe"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:textColor="@color/text_color_light_selector"
            android:background="@color/transparent"
            android:textSize="@dimen/text_size_30"
            android:text="@string/not_now"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/stroke_color_light"
            />

        <Button
            android:id="@+id/buttonNo"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:textColor="@color/text_color_light_selector"
            android:background="@color/transparent"
            android:textSize="@dimen/text_size_30"
            android:text="@string/never_ask_again"
            />

    </LinearLayout>

</RelativeLayout>