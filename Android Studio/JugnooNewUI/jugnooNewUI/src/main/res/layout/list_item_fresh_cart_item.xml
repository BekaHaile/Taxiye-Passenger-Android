<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageViewItemImage"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fresh_item_placeholder"
        android:tag="mwar"/>

    <LinearLayout
        android:id="@+id/linearLayoutContent"
        android:layout_width="380px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35px"
        android:layout_marginTop="34px"
        android:layout_marginBottom="34px"
        android:layout_toRightOf="@+id/imageViewItemImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Orange"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"
            android:layout_marginTop="20px"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:orientation="horizontal"
            android:layout_marginBottom="20px"
            >

            <TextView
                android:id="@+id/textViewItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:text="@string/rupee_0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_28"
                />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutQuantitySelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/imageViewSep"
        android:layout_marginBottom="20px"
        android:layout_marginRight="20px"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageViewMinus"
            android:layout_width="74px"
            android:layout_height="74px"
            android:padding="10px"
            android:src="@drawable/ic_minus_selector"
            android:tag="mwar"/>

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="998"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"/>

        <ImageView
            android:id="@+id/imageViewPlus"
            android:layout_width="74px"
            android:layout_height="74px"
            android:padding="10px"
            android:src="@drawable/ic_plus_selector"
            android:tag="mwar"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewSep"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="140px"
        android:layout_marginRight="34px"
        android:layout_below="@+id/linearLayoutContent"
        android:background="@color/stroke_light_grey_alpha"/>

</RelativeLayout>