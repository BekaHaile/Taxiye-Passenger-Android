<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color_F7"
    android:layout_marginBottom="@dimen/height_pay_slider"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/svSuggestStore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_70"
        android:splitMotionEvents="false"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/txt_store_name"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            app:typekitFont="@string/maven_r"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dp_2">


            <EditText
                android:id="@+id/edtBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/hint_store_name"
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint_anywhere"
                android:textSize="@dimen/sp_14"
                app:typekitFont="@string/maven"/>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/store_address"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            app:typekitFont="@string/maven_r"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dp_2">



            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="start|center_vertical"
                android:hint="@string/hint_select_address"
                android:drawableRight="@drawable/ic_arrow_grey"
                android:minHeight="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint_anywhere"
                android:textSize="@dimen/sp_14"
                android:theme="@style/GreyHighlight"
                android:clickable="true"
                android:focusable="true"
                app:typekitFont="@string/maven"/>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/txt_category"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            app:typekitFont="@string/maven_r"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dp_2">


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:gravity="start|center_vertical"
                android:spinnerMode="dropdown"
                android:layout_marginRight="6dp"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint_anywhere"
                android:textSize="@dimen/sp_14"
                app:typekitFont="@string/maven"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/phone_number_add_store"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            app:typekitFont="@string/maven_r"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dp_2">


            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/enter_store_phone_number"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="@dimen/dp_10"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint_anywhere"
                android:textSize="@dimen/sp_14"
                app:typekitFont="@string/maven"/>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/txt_timings"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            app:typekitFont="@string/maven_r"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dp_2">


            <EditText
                android:id="@+id/edtTimings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/hint_timings"
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint_anywhere"
                android:textSize="@dimen/sp_14"
                app:typekitFont="@string/maven"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@string/txt_notes"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            app:typekitFont="@string/maven_r"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dp_2"
            android:id="@+id/cvNotes">


            <EditText
                android:id="@+id/edtNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="@string/hint_enter_notes"
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_hint_anywhere"
                android:textSize="@dimen/sp_14"
                app:typekitFont="@string/maven"/>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvUploadImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:minHeight="@dimen/dp_50"
            app:cardBackgroundColor="@color/menu_item_selector_color_F7"
            app:cardCornerRadius="@dimen/dp_2">


            <LinearLayout
                android:id="@+id/llUploadImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:theme="@style/GreyHighlight"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/white_dotted_background"
                    android:scaleType="center"
                    android:src="@drawable/ic_camera"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_a_photo"
                        android:textColor="@color/lightBlackTxtColor"
                        android:textSize="@dimen/sp_16"
                        app:typekitFont="@string/maven"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tap_to_upload_photo_store"
                        android:textColor="@color/feed_grey_hint_color"
                        android:textSize="@dimen/sp_14"
                        app:typekitFont="@string/maven_r"/>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cvImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="@dimen/dp_2">

            <HorizontalScrollView
                android:id="@+id/svImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_50">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/rvImages"
                        android:layout_toRightOf="@+id/rvImages"
                        android:paddingTop="4.5dp">

                        <ImageView
                            android:id="@+id/ivUploadImage"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/white_dotted_background"
                            android:scaleType="center"
                            android:src="@drawable/ic_camera"/>

                    </FrameLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvImages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/dp_10"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_5"/>

                </RelativeLayout>

            </HorizontalScrollView>

        </android.support.v7.widget.CardView>



    </LinearLayout>

</ScrollView>




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_new_height"
        android:background="@drawable/shadow_down_new" />
</RelativeLayout>