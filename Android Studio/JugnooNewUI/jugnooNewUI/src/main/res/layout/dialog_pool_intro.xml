<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">


    <LinearLayout
        android:id="@+id/linearLayoutInner"
        android:layout_width="608px"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white_rounded_bordered"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/imageViewGif"
            android:layout_width="594px"
            android:layout_height="266px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCoolToPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="ITS "
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_60" />

            <TextView
                android:id="@+id/textViewCoolToPool1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="COOL "
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_60" />

            <TextView
                android:id="@+id/textViewCoolToPool2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="TO "
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_60" />

            <TextView
                android:id="@+id/textViewCoolToPool3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="POOL"
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_60" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewShareTheJourney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:text="Share the Journey"
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/textViewShareTheJourney1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:text=" Split the Fare"
                android:textAllCaps="true"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_28" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="30px"
            android:src="@color/text_color_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRidingAlone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Riding "
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_36" />

            <TextView
                android:id="@+id/textViewRidingAlone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Alone? "
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_36" />

            <TextView
                android:id="@+id/textViewRidingAlone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Try Jugnoo Pool"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_36" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonContinue"
            style="@style/ButtonTheme"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:text="@string/try_now" />

        <TextView
            android:id="@+id/textViewLater"
            android:layout_width="250px"
            android:layout_height="80px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:textSize="@dimen/text_size_28"
            android:gravity="center"
            android:text="@string/fresh_may_be_later"
            android:textColor="@color/text_color_light_selector" />


    </LinearLayout>


</RelativeLayout>