<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:soundEffectsEnabled="false">


    <LinearLayout
        android:id="@+id/linearLayoutInner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_white_rounded_bordered"
        android:orientation="vertical"
        android:soundEffectsEnabled="false"
        android:splitMotionEvents="false">

        <ImageView
            android:id="@+id/imageViewPool"
            android:layout_width="630px"
            android:layout_height="308px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="34px"
            android:layout_marginLeft="16px"
            android:layout_marginRight="16px"
            android:layout_marginTop="16px"
            android:src="@drawable/bg_pool_intro_popup"
            android:tag="mwar" />

        <!--<TextView
            android:id="@+id/textViewCoolToPool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/its_cool_to_pool"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_60" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCoolToPool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="IT'S "
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_60" />

            <TextView
                android:id="@+id/textViewCoolToPool1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="COOL "
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_60" />

            <TextView
                android:id="@+id/textViewCoolToPool2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="TO "
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_60" />

            <TextView
                android:id="@+id/textViewCoolToPool3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="POOL"
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_60" />

        </LinearLayout>

        <!--<TextView
            android:id="@+id/textViewShareTheJourney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:gravity="center"
            android:text="@string/share_the_journey"
            android:textAllCaps="true"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_28" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewShareTheJourney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:text="Share the Journey"
                android:textAllCaps="true"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/textViewShareTheJourney1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:gravity="center"
                android:text=" Split the Fare"
                android:textAllCaps="true"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_28" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginTop="24px"
            android:src="@color/text_color_light" />

        <TextView
            android:id="@+id/textViewRidingAlone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26px"
            android:gravity="center"
            android:text="@string/riding_alone"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_36" />



        <Button
            android:id="@+id/buttonContinue"
            style="@style/ButtonTheme"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40px"
            android:layout_marginTop="44px"
            android:text="@string/okay" />


    </LinearLayout>


</RelativeLayout>