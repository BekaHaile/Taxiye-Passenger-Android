<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:tag="mlar"
        android:src="@drawable/ic_fresh_new_placeholder"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rlVideoView"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_centerHorizontal="true">
        <VideoView
            android:id="@+id/simpleVideoView"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_height="match_parent" />

        <product.clicklabs.jugnoo.utils.ProgressWheel
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressWheel"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:tag="@string/dont_touch_me"
            wheel:matProg_barColor="@color/theme_color"
            wheel:matProg_barWidth="3dp"
            wheel:matProg_fillRadius="true"
            android:layout_centerInParent="true"
            wheel:matProg_progressIndeterminate="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/ivZoom"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:background="@color/grey_alpha_66"
            android:src="@drawable/ic_expand"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlYoutubeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

</RelativeLayout>