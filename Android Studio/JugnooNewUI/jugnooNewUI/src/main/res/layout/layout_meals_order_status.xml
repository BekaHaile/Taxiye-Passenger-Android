<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="4px"
        android:paddingRight="4px"
        app:cardCornerRadius="8px"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:layout_marginTop="15px"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transparent_menu_item_selector">

            <RelativeLayout
                android:id="@+id/relativeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px">

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="27px"
                android:text="Order:"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvOrderIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvOrderId"
                android:paddingLeft="10px"
                android:layout_centerVertical="true"
                android:text="13AF67"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvDeliveryBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tvDeliveryTime"
                android:text="Delivery before:"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:visibility="gone"
                android:textSize="@dimen/text_size_24"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivArrow"
                android:paddingLeft="10px"
                android:layout_centerVertical="true"
                android:paddingRight="27px"
                android:text="8:30 PM"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="12px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="27px"
                android:src="@drawable/ic_arrow_orange_bold"/>

            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/stroke_color_light"
                android:layout_below="@+id/relativeInfo"
                android:layout_marginTop="20px"
                android:layout_marginLeft="27px"
                android:layout_marginRight="27px"/>

            <RelativeLayout
                android:id="@+id/relativeStatusBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px">

                <LinearLayout
                    android:id="@+id/llOrderPath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="40px"
                    android:paddingRight="40px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStatus0"
                        android:layout_width="@dimen/px_25"
                        android:layout_height="@dimen/px_25"
                        android:tag="mwar"
                        android:visibility="visible"
                        android:background="@drawable/circle_order_status"/>

                    <View
                        android:id="@+id/lineStatus1"
                        android:layout_width="135px"
                        android:layout_height="8px"
                        android:visibility="visible"
                        android:background="@color/rank_5"/>

                    <ImageView
                        android:id="@+id/ivStatus1"
                        android:layout_width="@dimen/px_25"
                        android:layout_height="@dimen/px_25"
                        android:tag="mwar"
                        android:visibility="visible"
                        android:background="@drawable/circle_order_status"/>

                    <View
                        android:id="@+id/lineStatus2"
                        android:layout_width="135px"
                        android:layout_height="8px"
                        android:visibility="visible"
                        android:background="@color/rank_5"/>

                    <ImageView
                        android:id="@+id/ivStatus2"
                        android:layout_width="@dimen/px_25"
                        android:layout_height="@dimen/px_25"
                        android:tag="mwar"
                        android:visibility="visible"
                        android:background="@drawable/circle_order_status"/>

                    <View
                        android:id="@+id/lineStatus3"
                        android:layout_width="135px"
                        android:layout_height="8px"
                        android:visibility="visible"
                        android:background="@color/rank_5"/>

                    <ImageView
                        android:id="@+id/ivStatus3"
                        android:layout_width="@dimen/px_25"
                        android:layout_height="@dimen/px_25"
                        android:tag="mwar"
                        android:visibility="visible"
                        android:background="@drawable/circle_order_status"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvStatus0"
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="Statu0"
                    android:layout_below="@+id/llOrderPath"
                    android:layout_marginTop="15px"
                    android:layout_marginLeft="-6px"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_alignLeft="@+id/llOrderPath"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/tvStatus1"
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="Status1"
                    android:layout_below="@+id/llOrderPath"
                    android:layout_toRightOf="@+id/tvStatus0"
                    android:layout_marginLeft="45px"
                    android:layout_marginTop="15px"
                    android:gravity="center"
                    android:visibility="visible"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/tvStatus2"
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="Status2"
                    android:layout_below="@+id/llOrderPath"
                    android:layout_toRightOf="@+id/tvStatus1"
                    android:gravity="center"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="15px"
                    android:visibility="visible"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/tvStatus3"
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="Status3"
                    android:layout_below="@+id/llOrderPath"
                    android:layout_alignRight="@+id/llOrderPath"
                    android:layout_marginTop="15px"
                    android:gravity="center"
                    android:layout_marginRight="-10px"
                    android:visibility="visible"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_22"
                    android:maxLines="2"/>
            </RelativeLayout>

        </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>