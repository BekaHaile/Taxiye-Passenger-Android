<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="CHANGE PASSWORD"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_title_text_size" />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:splitMotionEvents="false">

        <LinearLayout
            android:id="@+id/mainLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="50px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewOld"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Password"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/text_size_30" />

                <EditText
                    android:id="@+id/editTextOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="20px"
                    android:background="#0000"
                    android:maxLength="20"
                    android:gravity="center_vertical|right"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/black_text_alpha"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_30" />

            </LinearLayout>

            <ImageView
                android:layout_width="628px"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:src="@color/text_color_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNew"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="New Password"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_30" />

            <EditText
                android:id="@+id/editTextNewPassword"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:background="#0000"
                android:gravity="center_vertical|right"
                android:inputType="textPassword"
                android:paddingLeft="20px"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textColorHint="@color/black_text_alpha"
                android:textCursorDrawable="@null"
                android:textSize="30px" />

            </LinearLayout>

            <ImageView
                android:layout_width="628px"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:src="@color/text_color_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRetype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Retype"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/text_size_30" />

            <EditText
                android:id="@+id/editTextRetypeNewPassword"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_gravity="center_horizontal"
                android:background="#0000"
                android:gravity="center_vertical|right"
                android:paddingLeft="20px"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLength="20"
                android:textColor="@color/black_text"
                android:textColorHint="@color/black_text_alpha"
                android:textCursorDrawable="@null"
                android:textSize="30px" />

            </LinearLayout>

            <ImageView
                android:layout_width="628px"
                android:layout_height="2px"
                android:layout_gravity="center_horizontal"
                android:src="@color/text_color_hint" />

            <Button
                android:id="@+id/buttonChangePassword"
                style="@style/ButtonTheme"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70px"
                android:text="@string/change_password" />

            <TextView
                android:id="@+id/textViewScroll"
                android:layout_width="wrap_content"
                android:layout_height="20px"
                android:layout_marginTop="20px"
                android:text="      "
                android:textColor="@color/white"
                android:textSize="10px" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>