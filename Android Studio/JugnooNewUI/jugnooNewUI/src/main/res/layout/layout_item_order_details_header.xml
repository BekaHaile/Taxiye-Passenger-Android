<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15px"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="15px"
                    android:text="@string/order_id_colon"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_24"/>

                <TextView
                    android:id="@+id/textViewOrderIdValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15px"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="15px"
                    android:text="TEMP"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_24"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewOrderTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15px"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_24"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:background="@color/text_color_hint"/>


        <LinearLayout
            android:layout_width="560px"
            android:layout_height="102px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250px"
                android:layout_height="100px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewOrderDeliveryDate"
                    android:layout_width="35px"
                    android:layout_height="38px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:src="@drawable/ic_order_summary_date"
                    android:tag="mwar"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewOrderDeliveryDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_date"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_18"/>

                    <TextView
                        android:id="@+id/textViewOrderDeliveryDateValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="04 Apr, 16"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="100px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewOrderDeliverySlot"
                    android:layout_width="38px"
                    android:layout_height="38px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="0px"
                    android:src="@drawable/ic_order_summary_slot"
                    android:tag="mwar"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewOrderDeliverySlot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_slot"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_18"/>

                    <TextView
                        android:id="@+id/textViewOrderDeliverySlotValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10:00 PM - 02:00 PM"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_24"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewOrderAddressValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:gravity="center"
                android:maxLines="2"
                android:text="TEMP"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_22"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:background="@color/text_color_hint"/>

        <TextView
            android:id="@+id/textViewOrderReceipt"
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:gravity="center"
            android:text="@string/order_receipt"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_26"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:background="@color/text_color_hint"/>
    </LinearLayout>

</LinearLayout>