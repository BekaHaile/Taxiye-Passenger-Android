<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12">

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:paddingStart="@dimen/dp_28"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:background="@drawable/bg_white_transparent_layer_shadow">

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exo Fresh - Madhya Marg"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                app:typekitFont="maven"/>

            <TextView
                android:id="@+id/tvDeliveryCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charges 50"
                android:textColor="@color/green_delivery_stores"
                android:textSize="@dimen/sp_12"
                app:typekitFont="maven"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/rank_3"
                android:layout_marginTop="@dimen/dp_8"/>

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earliest delivery : Today, 4PM - 6PM"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_2"
                android:visibility="gone"
                android:drawableStart="@drawable/ic_delivery_time"
                app:typekitFont="@string/maven_r"/>

            <TextView
                android:id="@+id/tvCartItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_items_in_cart"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_2"
                android:drawableStart="@drawable/ic_delivery_store_cart"
                app:typekitFont="@string/maven_r"/>

            <TextView
                android:id="@+id/tvMinOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minimum_order_with_value"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_color"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_2"
                android:drawableStart="@drawable/ic_scooter"
                app:typekitFont="@string/maven_r"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivRadio"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/radio_deactive"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"/>

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/capsule_text_color"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:text="Rating 2.1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            android:visibility="gone"
            app:typekitFont="maven"
            />

    </RelativeLayout>

</RelativeLayout>