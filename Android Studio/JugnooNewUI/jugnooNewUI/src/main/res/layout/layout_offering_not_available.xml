<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutNoMenus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_menus_nothing_found"
    android:visibility="gone">

    <ImageView
        android:id="@+id/imageViewShadow"
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textViewOhSnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110px"
        android:text="@string/oh_snap"
        android:textColor="@color/theme_color"
        android:textSize="@dimen/text_size_52" />

    <TextView
        android:id="@+id/textViewNothingFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOhSnap"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="@string/nothing_found_near_you"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_32"

        />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="73px"
        android:layout_height="88px"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="80px"
        android:scaleX="-1"
        android:layout_marginTop="50px"
        android:src="@drawable/ic_curved_up_arrow"
        android:tag="mwar" />


</RelativeLayout>