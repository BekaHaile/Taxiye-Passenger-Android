<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/spacing_small"
    android:layout_marginRight="@dimen/spacing_small"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/background_popup_edit_feed"
        android:layout_gravity="right"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="12.5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white_rounded_radius_5"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/tv_edit_post"
            style="@style/text_feed_popup"
            android:background="@drawable/background_white_grey_light_selector"
            android:drawableLeft="@drawable/ic_feed_edit_icon"
            android:drawablePadding="@dimen/spacing_normal"
            android:gravity="center|left"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:text="Edit Post"
            android:textColor="@color/feed_grey_text"
            app:font="maven" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/feed_grey_background_light"
            android:paddingLeft="@dimen/spacing_extra_tiny"
            android:paddingRight="@dimen/spacing_extra_tiny" />

        <TextView
            android:id="@+id/tv_delete_post"
            style="@style/text_feed_popup"
            android:background="@drawable/background_white_grey_light_selector"
            android:drawableLeft="@drawable/ic_delete_feed"
            android:drawablePadding="@dimen/spacing_normal"
            android:gravity="center|left"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:text="Delete Post"
            android:textColor="@color/feed_grey_text"
            app:font="maven" />

    </LinearLayout>


</LinearLayout>