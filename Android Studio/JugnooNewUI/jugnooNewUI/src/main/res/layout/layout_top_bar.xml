<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white"
        android:splitMotionEvents="false"
        android:soundEffectsEnabled="false"
        >

        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:src="@drawable/ic_menu_selector"
            android:tag="mwar"/>

        <Button
            android:id="@+id/buttonCheckServer"
            android:layout_width="80px"
            android:layout_height="80px"
            android:background="@drawable/background_transparent"
            android:layout_toRightOf="@+id/imageViewMenu"
            android:layout_marginLeft="50px"
            android:soundEffectsEnabled="false"
            />

        <ImageView
            android:id="@+id/imageViewBack"
            style="@style/back_image"
            />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageViewSearchIcon"
                android:layout_width="63px"
                android:layout_height="63px"
                android:padding="15px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/search_icon"
                android:tag="mwar"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imageViewAppToggle"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/ic_fatafat_selector"
                android:layout_gravity="center_vertical"
                android:tag="mwar"/>

            <ImageView
                android:id="@+id/imageViewHelp"
                android:layout_width="77px"
                android:layout_height="77px"
                android:padding="5px"
                android:layout_marginLeft="5px"
                android:visibility="gone"
                android:src="@drawable/ic_emergency_help_selector"
                android:layout_gravity="center_vertical"
                android:tag="mwar"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="67px"
            android:layout_height="73px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:src="@drawable/ic_delete_white"
            android:padding="20px"
            android:tag="mwar"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/textViewAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:padding="20px"
            android:text="@string/add"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_36"
            android:visibility="gone"
            />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topRl"
        android:background="@drawable/shadow_down"
        />
</RelativeLayout>