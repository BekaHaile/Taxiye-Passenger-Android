<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topRl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/nl_background_theme_color"
        android:splitMotionEvents="false"
        >

        <ImageView
            android:id="@+id/imageViewMenu"
            android:layout_width="83px"
            android:layout_height="70px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/menu_icon_selector"
            android:tag="mwar"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/checkServerBtn"
            android:layout_width="82px"
            android:layout_height="82px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="270px"
            android:background="@drawable/background_transparent"
            android:longClickable="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="540px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:orientation="horizontal"
            >


            <RelativeLayout
                android:id="@+id/relativeLayoutNotification"
                android:layout_width="80px"
                android:layout_height="70px"
                android:layout_gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/imageViewNotification"
                    android:layout_width="56px"
                    android:layout_height="54px"
                    android:layout_centerInParent="true"
                    android:padding="10px"
                    android:src="@drawable/ic_notification_center_selector"
                    android:tag="mwar"
                    />

                <TextView
                    android:id="@+id/textViewNotificationValue"
                    android:layout_width="32px"
                    android:layout_height="35px"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_notification_unread"
                    android:gravity="center_horizontal"
                    android:paddingTop="2px"
                    android:tag="mwar"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20px"
                    />

            </RelativeLayout>


            <ImageView
                android:id="@+id/imageViewSearchCancel"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10px"
                android:src="@drawable/cross_button_selector"
                android:tag="mwar"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewHelp"
            android:layout_width="71px"
            android:layout_height="71px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:src="@drawable/emergency_help_icon"
            android:tag="mwar"/>

        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="67px"
            android:layout_height="73px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:src="@drawable/ic_delete_white"
            android:padding="20px"
            android:tag="mwar"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/textViewAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:padding="20px"
            android:text="@string/add"
            android:textAllCaps="true"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/text_size_36"
            android:visibility="gone"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/topRl"
        android:background="@drawable/shadow_down"
        />
</RelativeLayout>