<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llPayViewContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:visibility="visible"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:tag="@string/dont_touch_me"
    >

    <RelativeLayout
        android:id="@+id/rlSliderContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_rectangle_gradient_normal"
        android:visibility="visible">

        <View
            android:id="@+id/viewAlpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/slider_green"/>

        <RelativeLayout
            android:id="@+id/relativeLayoutSlider"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/capsule_slider_color_bg">

            <TextView
                android:id="@+id/tvSlide"
                android:layout_width="93dp"
                android:layout_height="36dp"
                android:background="@drawable/capsule_white_color"
                android:gravity="center"
                android:text="Pay 300"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12"
                app:typekitFont="maven"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/sliderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:text="Swipe to confirm >>"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12"
            app:typekitFont="maven"/>

    </RelativeLayout>

    <Button
        android:id="@+id/buttonPlaceOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_place_order_selector"
        android:text="@string/place_order"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        android:visibility="gone"
        app:typekitFont="@string/maven_r"
        />

</LinearLayout>