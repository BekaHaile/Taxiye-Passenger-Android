<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color_F7"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">




    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llPayViewContainer"
        android:background="@color/menu_item_selector_color_F7">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="75dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="Describe your Task"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                app:font="@string/maven_r" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="2dp">


                <EditText
                    android:id="@+id/edt_task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Do you need something for lunch? Don't feel like going to the grocery store?\nTell us what you need and we'll deliver it for you."
                    android:maxHeight="150dp"
                    android:minHeight="50dp"
                    android:padding="7dp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="14sp"
                    app:font="@string/maven" />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="Pickup Address"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                app:font="@string/maven_r" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_pickup_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="2dp">


                <TextView
                    android:id="@+id/tv_pickup_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_grey"
                    android:gravity="top"
                    android:padding="10dp"
                    android:text="Anywhere"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    app:font="@string/maven" />


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="Delivery Address"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                app:font="@string/maven_r" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_delivery_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="2dp">


                <TextView
                    android:id="@+id/tv_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_arrow_grey"
                    android:gravity="top"
                    android:padding="10dp"
                    android:text="Anywhere"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    app:font="@string/maven" />


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Delivery Time"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                app:font="@string/maven_r" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="2dp">


                <RadioGroup
                    android:id="@+id/rg_time_slot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/rb_asap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top"
                        android:padding="10dp"
                        android:text="As soon as possible"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        app:font="@string/maven" />

                    <RadioButton
                        android:id="@+id/rb_st"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top"
                        android:padding="10dp"
                        android:text="Scheduled Time"
                        android:textColor="@color/text_color"
                        android:textSize="14sp"
                        app:font="@string/maven" />

                </RadioGroup>


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_new_height"
        android:background="@drawable/shadow_down_new" />
    <include
        layout="@layout/layout_fresh_pay_action_container" />
</RelativeLayout>


