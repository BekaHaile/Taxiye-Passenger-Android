<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/menu_item_selector_color_F7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_white_menu_item_selector_color_selector"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ivPaidVia"
                android:text=""
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_15"
                app:font="@string/maven"
                />


            <ImageView
                android:id="@+id/ivPaidVia"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_13"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tvPaidViaValue"
                android:src="@drawable/ic_cash_no_padding"
                />

            <TextView
                android:id="@+id/tvPaidViaValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="Cash"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_15"
                app:font="@string/maven"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/stroke_light_grey_alpha"/>

        <TextView
            android:id="@+id/tvServiceDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Service Date: 02:00PM | 24 June,17"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_12"
            app:font="@string/maven"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/stroke_light_grey_alpha"/>

        <RelativeLayout
            android:id="@+id/relativeStatusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:id="@+id/llOrderPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <ImageView
                    android:id="@+id/ivStatus0"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/circle_order_status"
                    android:tag="mwar"
                    android:visibility="visible"/>

                <View
                    android:id="@+id/lineStatus1"
                    android:layout_width="@dimen/dp_63"
                    android:layout_height="@dimen/dp_4"
                    android:background="@color/rank_5"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/ivStatus1"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/circle_order_status"
                    android:tag="mwar"
                    android:visibility="visible"/>

                <View
                    android:id="@+id/lineStatus2"
                    android:layout_width="@dimen/dp_63"
                    android:layout_height="@dimen/dp_4"
                    android:background="@color/rank_5"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/ivStatus2"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/circle_order_status"
                    android:tag="mwar"
                    android:visibility="visible"/>

                <View
                    android:id="@+id/lineStatus3"
                    android:layout_width="@dimen/dp_63"
                    android:layout_height="@dimen/dp_4"
                    android:background="@color/rank_5"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/ivStatus3"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:background="@drawable/circle_order_status"
                    android:tag="mwar"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/llOrderPath"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"

                >

                <TextView
                    android:id="@+id/tvStatus0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Booking Accepted"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_11"
                    android:visibility="visible"
                    app:font="@string/maven"
                    />

                <TextView
                    android:id="@+id/tvStatus1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Pro\nAssigned"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_11"
                    android:visibility="visible"
                    app:font="@string/maven"/>

                <TextView
                    android:id="@+id/tvStatus2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Service Started"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_11"
                    android:visibility="visible"
                    app:font="@string/maven"/>

                <TextView
                    android:id="@+id/tvStatus3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Service Finished"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_11"
                    android:visibility="visible"
                    app:font="@string/maven"/>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/stroke_light_grey_alpha"
                />

            <View
                android:id="@+id/vMidSep"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/stroke_light_grey_alpha"
                />


            <TextView
                android:id="@+id/tvNeedHelp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/vMidSep"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/need_help"
                android:textAllCaps="true"
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/sp_13"
                app:font="maven"
                />

            <TextView
                android:id="@+id/tvViewDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/vMidSep"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/view_details"
                android:textAllCaps="true"
                android:textColor="@color/text_color_selector"
                android:textSize="@dimen/sp_13"
                app:font="maven"
                />


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>