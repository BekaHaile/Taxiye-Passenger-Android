<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relative"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvDelCharges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/px_26"
        android:layout_marginLeft="@dimen/px_34"
        android:layout_marginTop="@dimen/px_30"
        android:text="@string/delivery_charges"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_32"
        app:typekitFont="maven"
        />

    <TextView
        android:id="@+id/tvDelChargesVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px_34"
        android:text="@string/rupee_0"
        android:textColor="@color/order_status_green"
        android:textSize="@dimen/text_size_32"
        app:typekitFont="maven"/>

    <View
        android:id="@+id/vDivider"
        style="@style/HorizontalDividerDotted"
        android:layout_below="@+id/tvDelCharges"
        android:layout_marginLeft="@dimen/px_40"
        android:layout_marginRight="@dimen/px_40"
        />

</RelativeLayout>