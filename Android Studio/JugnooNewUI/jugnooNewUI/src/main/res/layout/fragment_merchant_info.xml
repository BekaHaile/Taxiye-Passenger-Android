<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            >


            <TextView
                android:id="@+id/tvMerchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:text="Bittu Delux Dhaba"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16"
                app:font="@string/maven"
                />

            <LinearLayout
                android:id="@+id/llRatingStars"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:text="37 Ratings"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_12"
                    app:font="@string/maven_r"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tvMerchantDisplayAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@drawable/ic_restaurant_location"
                android:drawablePadding="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Sector 28 B"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12"
                app:font="@string/maven"
                />


            <TextView
                android:id="@+id/tvOpensAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_horizontal"
                android:text="Open Now : 09:00 PM - 10:00 PM"
                android:textColor="@color/green_fresh_fab_pressed"
                android:textSize="@dimen/sp_12"
                app:font="maven"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/dp_15"
                android:background="@color/stroke_light_grey_alpha"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp_5"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/llChatNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_50"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/ivChatNow"
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26"
                        android:src="@drawable/ic_chat_now_gradient"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:text="@string/chat_now"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_12"
                        app:font="maven"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_50"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26"
                        android:src="@drawable/ic_call_gradient"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:text="@string/call"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_12"
                        app:font="maven"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAddReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/dp_26"
                        android:layout_height="@dimen/dp_26"
                        android:src="@drawable/ic_add_review_gradient"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:text="@string/add_review"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/sp_12"
                        app:font="maven"
                        />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/dp_15"
                android:background="@color/stroke_light_grey_alpha"
                />


            <Button
                android:id="@+id/bOrderOnline"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@drawable/capsule_theme_color_selector"
                android:text="@string/order_online"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                app:font="@string/maven"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_7"
                android:background="@drawable/shadow_gradient_seperator"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/additional_info"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_14"
                app:font="@string/maven"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_14"
                android:background="@color/stroke_light_grey_alpha"
                />


            <TextView
                android:id="@+id/tvMerchantMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:drawableLeft="@drawable/ic_mail_merchant"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:text="www.vendor.com"
                android:textColor="@color/text_color"
                android:textColorLink="@color/text_color_link"
                android:textSize="@dimen/sp_12"
                app:font="@string/maven_r"
                />


            <TextView
                android:id="@+id/tvMerchantContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:drawableLeft="@drawable/ic_call_merchant"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:text="+91-9746214255, +92-88888 88888"
                android:textColor="@color/text_color"
                android:textColorLink="@color/text_color"
                android:textSize="@dimen/sp_12"
                app:font="@string/maven_r"
                />

            <TextView
                android:id="@+id/tvMerchantAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:autoLink="web"
                android:drawableLeft="@drawable/ic_location_merchant"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:text="SCF-128, phase 7, mohali, Sahibzada Ajit Singh Nagar, 160062"
                android:textColor="@color/text_color"
                android:textColorLink="@color/text_color_link"
                android:textSize="@dimen/sp_12"
                app:font="@string/maven_r"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_7"
                android:background="@drawable/shadow_gradient_seperator"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvReviewsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/reviews"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/sp_14"
                    app:font="@string/maven"
                    />


                <product.clicklabs.jugnoo.utils.ProgressWheel
                    android:id="@+id/progressWheel"
                    xmlns:wheel="http://schemas.android.com/apk/res-auto"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    wheel:matProg_barColor="@color/theme_color"
                    wheel:matProg_barWidth="3dp"
                    wheel:matProg_fillRadius="true"
                    wheel:matProg_progressIndeterminate="true">

                </product.clicklabs.jugnoo.utils.ProgressWheel>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_14"
                android:background="@color/stroke_light_grey_alpha"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_horizontal"
                android:text="@string/rate_the_restaurant"
                android:textColor="@color/pf_grey_light"
                android:textSize="@dimen/sp_14"
                app:font="@string/maven"
                />

            <com.sabkuchfresh.utils.RatingBarMenuFeedback
                android:id="@+id/ratingBarReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:numStars="5"
                android:rating="0"
                android:visibility="visible"
                app:animate="false"
                app:halfStars="false"
                app:maxStars="5"
                app:onlyForDisplay="false"
                app:starOff="@drawable/ic_menu_feedback_star_off"
                app:starOn="@drawable/ic_menu_feedback_star_on"
                app:belowTextSize="1sp"
                app:belowTextColor="@color/transparent"
                app:compoundDrawablePadding="@dimen/dp_1"
                app:starPadding="0dp"
                app:viewMargin="@dimen/dp_5"
                app:viewMinWidth="@dimen/dp_20"
                app:displayText="false"
                app:singleColor="true"
                app:starColor="@color/star_color_yellow"
                app:noStarColor="@color/nl_white_dark"
                />

            <EditText
                android:id="@+id/etReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/bg_menu_item_selector_color_r_extra"
                android:hint="@string/say_something"
                android:padding="@dimen/dp_10"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color_light"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                app:font="@string/maven"
                android:inputType="text|textMultiLine"
                android:maxLines="3"
                android:maxLength="500"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                />
            
            <TextView
                android:id="@+id/tvReviewTextCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/text_color_hint"
                android:text="500"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:gravity="right"
                android:visibility="gone"
                app:font="@string/maven"
                />


            <TextView
                android:id="@+id/tvSubmitReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:text="@string/submit_your_rating"
                android:textColor="@color/text_color_theme_selector"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                app:font="@string/maven"
                android:background="?android:attr/selectableItemBackground"
                />


            <View
                android:id="@+id/vAddReviewSep"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@color/stroke_light_grey_alpha"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTopReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                />

            <LinearLayout
                android:id="@+id/llSeeAll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/sp_13"
                    app:font="@string/maven"
                    />

                <ImageView
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_11"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:alpha="0.6"
                    android:src="@drawable/ic_arrow_grey"
                    />

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:background="@drawable/shadow_down_new"
        />

</RelativeLayout>