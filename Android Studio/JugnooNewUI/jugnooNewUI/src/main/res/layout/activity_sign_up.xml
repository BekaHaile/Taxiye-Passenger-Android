<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_logo" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/first_name_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="@string/full_name_string"
                    android:inputType="textCapSentences|textNoSuggestions"
                    android:digits="@string/digits_characters_numbers"
                    android:nextFocusDown="@+id/email_et"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/et_text_size" />


                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:hint="@string/email_string"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/phone_et"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/et_text_size" />

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:hint="@string/mobile_string"
                    android:inputType="number"
                    android:maxLength="10"
                    android:nextFocusDown="@+id/password_et"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/et_text_size" />

                <EditText
                    android:id="@+id/password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:hint="@string/password_string"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/confirm_pswd_et"
                    android:singleLine="true"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textColorHint="@color/hintColor"
                    android:textSize="@dimen/et_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/signup_note_string"
                    android:textColor="@color/generalTxtColor"
                    android:textSize="@dimen/normal_text_view_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/regular_charges_string"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textSize="@dimen/normal_text_view_size"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sign_up_btn"
                    android:layout_width="@dimen/btn_width"
                    android:layout_height="@dimen/btn_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/layout_orange_button"
                    android:text="@string/sign_up_string"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteTxtColor"
                    android:textSize="@dimen/btn_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/before_terms_string"
                    android:textColor="@color/generalTxtColor"
                    android:textSize="@dimen/normal_text_view_size" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>