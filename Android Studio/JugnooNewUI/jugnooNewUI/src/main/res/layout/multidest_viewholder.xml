<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:splitMotionEvents="false">

    <LinearLayout
        android:id="@+id/llDestLogo"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/ivLineUpper"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:background="@color/grey_969696"
            android:rotation="0"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/circle_theme"
            android:tag="mwar" />

        <View
            android:id="@+id/ivLineLower"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:background="@color/grey_969696"
            android:rotation="0"
            android:visibility="visible" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/llDestLogo"
        android:orientation="horizontal"
        app:cardElevation="5dp">



        <RelativeLayout
            android:id="@+id/rlDest"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@color/white">


            <TextView
                android:id="@+id/textViewDestSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/assigning_state_edit_text_hint"
                android:paddingEnd="20px"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="30px" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rlCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageViewDropCross"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="16px"
            android:src="@drawable/ic_cross_et_selector"
            android:tag="mwar"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewDropAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="16px"
            android:src="@drawable/ic_plus_theme"
            android:tag="mwar"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>
