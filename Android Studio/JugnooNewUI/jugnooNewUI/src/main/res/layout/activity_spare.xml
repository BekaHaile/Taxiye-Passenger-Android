<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark"
    >
    <!-- initial layout -->
    <RelativeLayout
        android:id="@+id/initialLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="96px"
        android:splitMotionEvents="false"
        android:visibility="visible"
        >

        <RelativeLayout
            android:id="@+id/relativeLayoutRequestInfo"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNearestDriverETA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Nearest Driver is 4 minutes away"
                    android:textColor="@color/black_text"
                    android:textSize="30px"/>

                <RelativeLayout
                    android:id="@+id/relativeLayoutInitialFareFactor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:animateLayoutChanges="true"
                    >

                    <TextView
                        android:id="@+id/textViewCurrentFareFactor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="1.2x"
                        android:textColor="@color/black_text_grey"
                        android:textSize="26px"/>


                    <TextView
                        android:id="@+id/textViewCurrentRatesInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textViewCurrentFareFactor"
                        android:layout_marginLeft="10px"
                        android:layout_toRightOf="@+id/textViewCurrentFareFactor"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="of standard rates applicable right now"
                        android:textColor="@color/grey_dark"
                        android:textSize="24px"/>

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutInitialSearchBar"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20px"
            android:background="@drawable/background_white_rounded"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageViewInitialSearchGPSIcon"
                android:layout_width="30px"
                android:layout_height="44px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18px"
                android:src="@drawable/search_location_icon"
                android:tag="mwar"/>

            <TextView
                android:id="@+id/textViewInitialSearch"
                android:layout_width="580px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/imageViewInitialSearchGPSIcon"
                android:background="@color/transparent"
                android:hint="Search pickup location"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textSize="30px"/>

            <ProgressBar
                android:id="@+id/progressBarInitialSearch"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"/>
        </RelativeLayout>

        <Button
            android:id="@+id/initialMyLocationBtn"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_above="@+id/relativeLayoutRequestInfo"
            android:layout_marginBottom="77px"
            android:layout_marginLeft="92px"
            android:background="@drawable/mylocation_btn_selector"
            android:tag="mwar"
            />


        <ImageView
            android:id="@+id/imageViewRideNow"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_above="@+id/relativeLayoutRequestInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40px"
            android:src="@drawable/auto_icon_r_selector"
            android:tag="mwar"
            />


        <Button
            android:id="@+id/initialMyLocationBtnChangeLoc"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_above="@+id/changeLocalityBtn"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="50px"
            android:background="@drawable/mylocation_btn_selector"
            android:tag="mwar"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/changeLocalityBtn"
            android:layout_width="648px"
            android:layout_height="100px"
            android:layout_above="@+id/relativeLayoutRequestInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40px"
            android:background="@drawable/button_yellow_selector"
            android:text="CHANGE LOCALITY"
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/button_text_size"
            android:visibility="gone"
            />


        <Button
            android:id="@+id/initialMyLocationBtnPromo"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_above="@+id/linearLayoutPromo"
            android:layout_marginBottom="40px"
            android:layout_marginLeft="50px"
            android:background="@drawable/mylocation_btn_selector"
            android:tag="mwar"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/linearLayoutPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:id="@+id/linearLayoutCouponList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                >
                <TextView
                    android:id="@+id/textViewPromoChooseCoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="16px"
                    android:text="CHOOSE YOUR COUPON"
                    android:textColor="@color/black_text"
                    android:textSize="28px"
                    />

                <ImageView
                    android:layout_width="520px"
                    android:layout_height="2px"
                    android:background="@color/grey_light_more"/>

                <ListView
                    android:id="@+id/listViewPromotions"
                    android:layout_width="match_parent"
                    android:layout_height="270px"
                    android:layout_marginTop="26px"
                    android:divider="@color/grey_light"
                    android:dividerHeight="1px"
                    android:splitMotionEvents="false"
                    android:visibility="visible"
                    >
                </ListView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:background="@color/yellow"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginTop="0px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:splitMotionEvents="false"
                >

                <LinearLayout
                    android:id="@+id/linearLayoutFareEstimate"
                    android:layout_width="360px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/background_white_yellow_selector"
                    >

                    <ImageView
                        android:layout_width="56px"
                        android:layout_height="38px"
                        android:src="@drawable/ic_fe_pay_selector"
                        android:tag="mwar"
                        />

                    <TextView
                        android:id="@+id/textViewFareEstimate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="FARE ESTIMATE"
                        android:textColor="@drawable/text_color_black_white_selector"
                        android:textSize="28px"
                        />


                </LinearLayout>

                <ImageView
                    android:layout_width="3px"
                    android:layout_height="76px"
                    android:background="@color/yellow"
                    />

                <LinearLayout
                    android:id="@+id/linearLayoutRateCard"
                    android:layout_width="360px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/background_white_yellow_selector"
                    >

                    <ImageView
                        android:layout_width="42px"
                        android:layout_height="42px"
                        android:src="@drawable/ic_fe_rate_selector"
                        android:tag="mwar"
                        />

                    <TextView
                        android:id="@+id/textViewRateCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="RATE CARD"
                        android:textColor="@drawable/text_color_black_white_selector"
                        android:textSize="28px"
                        />


                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/buttonChalo"
                android:layout_width="580px"
                android:layout_height="95px"
                android:layout_marginBottom="40px"
                android:layout_marginTop="20px"
                android:background="@drawable/button_yellow_selector"
                android:text="CHALO JUGNOO SE !"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size"/>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>