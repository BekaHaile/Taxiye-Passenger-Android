<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light_alpha"
    >
    <RelativeLayout
        android:id="@+id/topRlOuter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:splitMotionEvents="false">

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@color/yellow"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageViewMenu"
                android:layout_width="83px"
                android:layout_height="70px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:padding="20px"
                android:src="@drawable/menu_icon_selector"
                android:tag="mwar"/>

            <Button
                android:id="@+id/checkServerBtn"
                android:layout_width="82px"
                android:layout_height="82px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="270px"
                android:background="@drawable/background_transparent"
                android:longClickable="true"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="540px"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="AUTOS"
                android:textColor="@color/white"
                android:textSize="40px"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewGift"
                    android:layout_width="65px"
                    android:layout_height="68px"
                    android:padding="10px"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_gift_jugnoo"
                    android:layout_alignParentRight="true"/>

                <ImageView
                    android:id="@+id/jugnooShopImageView"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/gift_button_selector"
                    android:tag="mwar"/>

                <ImageView
                    android:id="@+id/imageViewSearchCancel"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10px"
                    android:src="@drawable/cross_button_selector"
                    android:tag="mwar"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/imageViewHelp"
                android:layout_width="71px"
                android:layout_height="71px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:src="@drawable/emergency_help_icon"
                android:tag="mwar"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>