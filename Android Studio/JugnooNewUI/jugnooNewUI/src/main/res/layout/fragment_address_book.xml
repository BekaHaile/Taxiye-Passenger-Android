<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativeLayoutRoot"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sliding_bottom_bg_color"
                android:splitMotionEvents="false"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSavedAddresses"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/saved_locations"
                android:textAllCaps="true"
                android:textColor="@color/text_color_less_light"
                android:textSize="@dimen/text_size_24"
                android:visibility="visible"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewAddresses"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="4px"
                >

                <LinearLayout
                    android:id="@+id/linearLayoutAddresses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:id="@+id/relativeLayoutHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_menu_item_selector_color_selector"
                        android:minHeight="110px">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="20px"
                            android:layout_marginTop="20px"
                            android:layout_toLeftOf="@+id/imageViewEditHome"
                            android:layout_toRightOf="@+id/imageViewHome"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewHome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/home"
                                android:textColor="@color/text_color_light_selector"
                                android:textSize="@dimen/text_size_32"/>

                            <TextView
                                android:id="@+id/textViewHomeValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5px"
                                android:text="test"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/text_size_26"
                                android:visibility="visible"/>

                            <TextView
                                android:id="@+id/textViewAddressUsedHome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7px"
                                android:text="@string/address_used_multiple_time_format"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/text_size_22"
                                />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageViewHome"
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30px"
                            android:src="@drawable/ic_home"
                            android:tag="mwar"/>

                        <ImageView
                            android:id="@+id/imageViewEditHome"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:padding="15px"
                            android:src="@drawable/edit_icon_selector"
                            android:tag="mwar"
                            android:visibility="gone"/>

                        <View
                            android:id="@+id/viewHomeSep"
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:background="@color/stroke_color_light"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutWork"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_menu_item_selector_color_selector"
                        android:minHeight="110px">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="20px"
                            android:layout_marginLeft="20px"
                            android:layout_marginTop="20px"
                            android:layout_toLeftOf="@+id/imageViewEditWork"
                            android:layout_toRightOf="@+id/imageViewWork"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textViewWork"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/work"
                                android:textColor="@color/text_color_light_selector"
                                android:textSize="@dimen/text_size_32"/>

                            <TextView
                                android:id="@+id/textViewWorkValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5px"
                                android:text="test"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/text_size_26"
                                android:visibility="visible"/>

                            <TextView
                                android:id="@+id/textViewAddressUsedWork"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7px"
                                android:text="@string/address_used_multiple_time_format"
                                android:textColor="@color/text_color_light"
                                android:textSize="@dimen/text_size_22"
                                />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageViewWork"
                            android:layout_width="50px"
                            android:layout_height="50px"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30px"
                            android:src="@drawable/ic_work"
                            android:tag="mwar"/>

                        <ImageView
                            android:id="@+id/imageViewEditWork"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20px"
                            android:padding="15px"
                            android:src="@drawable/edit_icon_selector"
                            android:tag="mwar"
                            android:visibility="gone"/>

                        <View
                            android:id="@+id/viewWorkSep"
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="40px"
                            android:layout_marginRight="40px"
                            android:background="@color/stroke_color_light"/>

                    </RelativeLayout>

                    <product.clicklabs.jugnoo.utils.NonScrollListView
                        android:id="@+id/listViewSavedLocations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:divider="@color/transparent"
                        android:dividerHeight="0dp"
                        android:splitMotionEvents="false"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/textViewRecentAddresses"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/suggested_addresses"
                android:textAllCaps="true"
                android:textColor="@color/text_color_less_light"
                android:textSize="@dimen/text_size_24"
                android:visibility="visible"
                />


            <android.support.v7.widget.CardView
                android:id="@+id/cardViewRecentAddresses"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="4px"
                >

                <product.clicklabs.jugnoo.utils.NonScrollListView
                    android:id="@+id/listViewRecentAddresses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:divider="@color/transparent"
                    android:dividerHeight="0px"
                    android:fadeScrollbars="true"
                    android:scrollbars="vertical"
                    android:splitMotionEvents="false"
                    android:visibility="visible"
                    />
            </android.support.v7.widget.CardView>


            <Button
                android:id="@+id/bAddNewAddress"
                android:layout_width="264dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/capsule_green_color_selector"
                android:text="@string/plus_add_new_address"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:tag="@string/dont_touch_me"
                app:font="maven"
                />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"/>

</RelativeLayout>