<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_26"
        android:layout_marginEnd="@dimen/px_26"
        android:layout_marginBottom="@dimen/px_13"
        android:layout_marginTop="@dimen/px_13"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlOffering"
            android:layout_width="98px"
            android:layout_height="98px"
            android:layout_marginBottom="22px"
            android:layout_marginStart="22px"
            android:layout_marginTop="22px"
            android:background="@drawable/circle_white_stroke_grey"
            android:tag="mwar">

            <ImageView
                android:id="@+id/ivOfferring"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_auto_grey"
                android:tag="mwar" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20px"
            android:layout_marginStart="16px"
            android:layout_marginEnd="20px"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOfferingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/autos"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_28" />

            <TextView
                android:id="@+id/tvOfferingBenefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7px"
                android:text="ajhdjkas"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_26" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>