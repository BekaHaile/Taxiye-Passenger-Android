<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Edit Place"
            android:textColor="@color/white"
            android:textSize="30.6px" />

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linearLayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_translucent"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/relativeLayoutSearchBar"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/dropshadow_grey"
            android:splitMotionEvents="false">

            <ImageView
                android:id="@+id/imageViewSearchGPSIcon"
                android:layout_width="30px"
                android:layout_height="44px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18px"
                android:src="@drawable/search_location_icon"
                android:tag="mwar"/>

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="510px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/imageViewSearchGPSIcon"
                android:background="@color/transparent"
                android:hint="Set pick up location"
                android:singleLine="true"
                android:textColor="@color/black_text"
                android:textCursorDrawable="@null"
                android:textSize="30px"/>

            <product.clicklabs.jugnoo.utils.ProgressWheel
                android:id="@+id/progressBarSearch"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageViewSearchCross"
                android:layout_marginRight="0px"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                wheel:matProg_barColor="@color/yellow"
                wheel:matProg_fillRadius="true"
                wheel:matProg_progressIndeterminate="true"
                wheel:matProg_barWidth="3dp"
                />

            <ImageView
                android:id="@+id/imageViewSearchCross"
                android:layout_width="70px"
                android:layout_height="70px"
                android:padding="20px"
                android:layout_centerVertical="true"
                android:layout_marginRight="5px"
                android:src="@drawable/ic_cross_et"
                android:layout_alignParentRight="true"
                android:tag="mwar"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayoutSearchBar"
            android:layout_above="@+id/buttonRemove">

            <LinearLayout
                android:id="@+id/linearLayoutScrollSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <product.clicklabs.jugnoo.utils.NonScrollListView
                    android:id="@+id/listViewSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/transparent"
                    android:dividerHeight="0px"
                    android:splitMotionEvents="false">
                </product.clicklabs.jugnoo.utils.NonScrollListView>

                <TextView
                    android:id="@+id/textViewScrollSearch"
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:textSize="28px"/>
            </LinearLayout>
        </ScrollView>


        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="648px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70px"
            android:layout_marginTop="70px"
            android:background="@drawable/button_yellow"
            android:text="REMOVE "
            android:textColor="@drawable/text_color_white_alpha_selector"
            android:textSize="@dimen/button_text_size" />
    </RelativeLayout>

</LinearLayout>