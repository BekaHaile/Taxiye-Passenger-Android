<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="@dimen/screen_width"
            android:layout_height="@dimen/top_bar_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/textViewTitle"
                style="@style/title"
                android:text="Edit Place"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageViewBack"
                style="@style/back_image" />

            <RelativeLayout
                android:id="@+id/relativeLayoutSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100px"
                android:layout_marginRight="10px">
                <EditText
                    android:id="@+id/editTextDeliveryAddress"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@+id/ivDeliveryAddressCross"
                    android:layout_height="62px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_menu_item_color_f7_r"
                    android:hint="@string/type_delivery_address"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:drawableLeft="@drawable/ic_location_marker_grey"
                    android:drawablePadding="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:textSize="@dimen/text_size_30"
                    />

                <product.clicklabs.jugnoo.utils.ProgressWheel
                    xmlns:wheel="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/progressWheelDeliveryAddressPin"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_centerVertical="true"
                    android:tag="mwar"
                    wheel:matProg_barColor="@color/green_light"
                    wheel:matProg_barWidth="3dp"
                    wheel:matProg_fillRadius="true"
                    wheel:matProg_progressIndeterminate="true"
                    wheel:matProg_barSpinCycleTime="2500"
                    android:layout_alignRight="@+id/editTextDeliveryAddress"
                    android:layout_marginRight="10px"
                    android:visibility="visible"
                    />


                <ImageView
                    android:id="@+id/ivDeliveryAddressCross"
                    android:layout_width="70px"
                    android:layout_height="70px"
                    android:padding="16px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5px"
                    android:src="@drawable/ic_cross_et_selector"
                    android:layout_alignParentRight="true"
                    android:tag="mwar"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewDelete"
                android:layout_width="74px"
                android:layout_height="82px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:src="@drawable/ic_delete_selector"
                android:padding="20px"
                android:tag="mwar"
                android:visibility="gone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topBar"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:layout_below="@+id/topBar"
            android:background="@drawable/shadow_down" />

    </RelativeLayout>


</LinearLayout>