<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutAddFav"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewSep"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginStart="40px"
        android:layout_marginEnd="40px"
        android:background="@color/fatafat_divider_color" />
    <RelativeLayout
        android:id="@+id/relativeLayoutAddHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22px"
        android:paddingBottom="22px"
        android:visibility="visible"
        android:theme="@style/GreyHighlight"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/textViewAddHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20px"
            android:layout_toEndOf="@+id/imageViewAddHome"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingEnd="20px"
            android:text="@string/add_home"
            android:textColor="@color/text_color_light_selector"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/imageViewAddHome"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30px"
            android:src="@drawable/ic_home"
            android:tag="mwar" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewSep2"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginStart="40px"
        android:layout_marginEnd="40px"
        android:background="@color/fatafat_divider_color"
        />

    <RelativeLayout
        android:id="@+id/relativeLayoutAddWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22px"
        android:paddingBottom="22px"
        android:visibility="visible"
        android:theme="@style/GreyHighlight"
        android:background="?attr/selectableItemBackground">


        <TextView
            android:id="@+id/textViewAddWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20px"
            android:layout_toEndOf="@+id/imageViewAddWork"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingEnd="20px"
            android:text="@string/add_work"
            android:textColor="@color/text_color_light_selector"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/imageViewAddWork"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30px"
            android:src="@drawable/ic_work"
            android:tag="mwar" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivDivSavedPlaces"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginStart="40px"
        android:layout_marginEnd="40px"
        android:background="@color/fatafat_divider_color"
        />

    <RelativeLayout
        android:id="@+id/relativeLayoutSavedPlaces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="22px"
        android:paddingBottom="22px"
        android:visibility="visible"
        android:theme="@style/GreyHighlight"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/textViewSavedPlaces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20px"
            android:layout_toEndOf="@+id/imageViewOther"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingEnd="20px"
            android:text="@string/add_saved_place"
            android:textColor="@color/text_color_light_selector"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/imageViewOther"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30px"
            android:src="@drawable/ic_loc_other"
            android:tag="mwar" />

    </RelativeLayout>

</LinearLayout>