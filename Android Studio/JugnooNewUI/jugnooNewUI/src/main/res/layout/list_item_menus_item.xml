<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:soundEffectsEnabled="false"
    >

    <RelativeLayout
        android:id="@+id/rlInner"
        android:paddingStart="28px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="108px"
            android:layout_height="108px"
            android:layout_marginEnd="14px"
            android:layout_marginTop="@dimen/px_20"
            android:tag="mwar"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/imageViewFoodType"
            android:layout_width="26px"
            android:layout_height="26px"
            android:layout_marginEnd="14px"
            android:layout_marginTop="@dimen/px_20"
            android:layout_alignParentTop="true"
            android:src="@drawable/veg"
            android:layout_toEndOf="@+id/ivItemImage"
            />

        <TextView
            android:id="@+id/textViewItemCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="220px"
            android:layout_marginTop="@dimen/px_20"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imageViewFoodType"
            android:lineSpacingExtra="2px"
            android:text="@string/margherita_npizza"
            android:textColor="@color/lightBlackTxtColor"
            android:textSize="@dimen/px_28"
            />

        <include
            layout="@layout/layout_item_quantity_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            />


        <TextView
            android:id="@+id/textViewAboutItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewItemCategoryName"
            android:layout_toEndOf="@id/imageViewFoodType"
            android:layout_marginEnd="@dimen/px_20"
            android:layout_marginTop="5px"
            android:text="@string/wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
            android:textColor="@color/color_menu_item_desc"
            android:textSize="24px"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/saperatorImage"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/rlInner"
        android:layout_marginStart="25px"
        android:layout_marginEnd="25px"
        android:layout_marginTop="25px"
        android:background="@color/grey_light_more_alpha"
        android:visibility="visible"
        />

</RelativeLayout>