<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageViewFoodType"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_18"
        android:layout_marginTop="@dimen/px_30"
        android:src="@drawable/veg"
        android:tag="mwar"
        />

    <TextView
        android:id="@+id/textViewItemCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10px"
        android:layout_toLeftOf="@+id/linearLayoutQuantitySelector"
        android:lineSpacingExtra="2px"
        android:layout_marginTop="@dimen/px_24"
        android:text="Margherita \nPizza"
        android:textColor="@color/lightBlackTxtColor"
        android:textSize="@dimen/px_32"
        android:layout_toRightOf="@id/imageViewFoodType"
        />

    <include
        layout="@layout/layout_item_quantity_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginTop="@dimen/px_20"
        />


    <TextView
        android:id="@+id/textViewAboutItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewItemCategoryName"
        android:layout_marginRight="20px"
        android:layout_marginTop="5px"
        android:layout_toRightOf="@id/imageViewFoodType"
        android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
        android:textColor="@color/color_menu_item_desc"
        android:textSize="24px"
        />

    <ImageView
        android:id="@+id/saperatorImage"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/textViewAboutItemDescription"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="@dimen/px_24"
        android:background="@color/grey_light_more_alpha"
        android:visibility="visible"
        />

</RelativeLayout>