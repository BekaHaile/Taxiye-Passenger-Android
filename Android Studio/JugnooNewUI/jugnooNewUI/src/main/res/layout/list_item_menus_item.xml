<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <android.support.v7.widget.CardView
        android:id="@+id/cvRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25px"
        android:layout_marginRight="25px"
        android:layout_marginTop="-5px"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/button_corner_radius">

        <RelativeLayout
            android:id="@+id/relativeLayoutItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px">

            <ImageView
                android:id="@+id/imageViewFoodType"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="15px"
                android:layout_marginTop="25px"
                android:tag="mwar"
                android:src="@drawable/veg"
                />

            <RelativeLayout
                android:id="@+id/relativeLayoutItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_toRightOf="@id/imageViewFoodType">

                <TextView
                    android:id="@+id/textViewItemCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:layout_toLeftOf="@+id/relativeLayoutQuantitySel"
                    android:lineSpacingExtra="2px"
                    android:layout_centerVertical="true"
                    android:text="Margherita Pizza"
                    android:textColor="@color/lightBlackTxtColor"
                    android:textSize="32px"/>

                <RelativeLayout
                    android:id="@+id/relativeLayoutQuantitySel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:layout_centerVertical="true"
                    >

                    <include
                        layout="@layout/layout_item_quantity_selector"
                        />

                    <Button
                        android:id="@+id/add_button"
                        android:layout_width="188px"
                        android:layout_height="60px"
                        android:background="@drawable/button_white_grey_theme_border_selector"
                        android:text="ADD"
                        android:textColor="@color/text_color_theme_selector"
                        android:textSize="@dimen/text_size_32"
                        android:visibility="visible"/>
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/textViewAboutItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutItemName"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="5px"
                android:layout_marginRight="20px"
                android:layout_toRightOf="@id/imageViewFoodType"
                android:text="wwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
                android:textColor="@color/color_menu_item_desc"
                android:textSize="24px"
                />

            <ImageView
                android:id="@+id/saperatorImage"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_below="@id/textViewAboutItemDescription"
                android:layout_marginLeft="25px"
                android:layout_marginRight="25px"
                android:layout_marginTop="10px"
                android:background="@color/grey_light_more_alpha"
                android:visibility="visible"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

