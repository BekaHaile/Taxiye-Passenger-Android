<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:gravity="center_vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/usr_icon_you"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_marginStart="@dimen/px_32"
            android:tag="mwar"
            android:src="@drawable/profile_placeholder" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/px_10"
            android:layout_toEndOf="@+id/triangle_you"
            android:background="@drawable/bg_msg_you">

            <TextView
                android:id="@+id/chat_txt_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px_20"
                android:layout_marginEnd="@dimen/px_20"
                android:layout_marginTop="@dimen/px_10"
                android:autoLink="web"
                android:minWidth="170px"
                android:maxWidth="420px"
                android:textColor="@color/text_color"
                android:linksClickable="true"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/chat_time_you"
                android:layout_width="@dimen/px_150"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_txt_you"
                android:layout_alignEnd="@+id/chat_txt_you"
                android:layout_marginEnd="@dimen/px_10"
                android:gravity="end"
                android:paddingBottom="@dimen/px_5"
                android:text="Time"
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_22" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/triangle_you"
            android:layout_width="@dimen/px_32"
            android:layout_height="@dimen/px_32"
            android:layout_marginTop="@dimen/px_10"
            android:layout_toEndOf="@id/usr_icon_you"
            android:tag="mwar"
            android:src="@drawable/triangle_you" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/px_32"
            android:layout_toStartOf="@+id/triangle_me"
            android:background="@drawable/bg_msg_me">

            <TextView
                android:id="@+id/chat_txt_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px_20"
                android:layout_marginEnd="@dimen/px_20"
                android:layout_marginTop="@dimen/px_10"
                android:minWidth="170px"
                android:maxWidth="420px"
                android:autoLink="web"
                android:text=""
                android:linksClickable="true"
                android:textIsSelectable="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_30" />

            <TextView
                android:id="@+id/chat_time_me"
                android:layout_width="@dimen/px_150"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_txt_me"
                android:layout_marginEnd="@dimen/px_10"
                android:gravity="end"
                android:layout_alignEnd="@+id/chat_txt_me"
                android:paddingBottom="@dimen/px_5"
                android:text=""
                android:textColor="@color/text_color_hint"
                android:textSize="@dimen/text_size_22" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/triangle_me"
            android:layout_width="@dimen/px_32"
            android:layout_height="@dimen/px_32"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/px_32"
            android:layout_marginTop="@dimen/px_10"
            android:tag="mwar"
            android:src="@drawable/triangle_me" />

        <ImageView
            android:id="@+id/usr_icon_me"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_100"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/px_8"
            android:tag="mwar"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/px_32"
            android:src="@drawable/profile_placeholder" />
    </RelativeLayout>

</RelativeLayout>