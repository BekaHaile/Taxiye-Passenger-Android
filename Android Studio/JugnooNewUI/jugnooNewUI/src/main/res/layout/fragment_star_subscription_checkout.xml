<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_item_selector_color"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="30px"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="4px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlPlan1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/px_20"
                        android:paddingBottom="@dimen/px_20"
                        android:background="@color/transparent">

                        <ImageView
                            android:id="@+id/ivRadio1"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/px_50"
                            android:src="@drawable/ic_radio_button_normal"
                            style="@style/ic_radio_button_style" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/px_24"
                            android:layout_toRightOf="@+id/ivRadio1"
                            android:layout_toLeftOf="@+id/tvAmount1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvPeriod1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Monthly"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_30" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.sabkuchfresh.utils.TextViewStrikeThrough
                                    android:id="@+id/tvActualAmount1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="-10px"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="2388"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_24"
                                    android:visibility="gone" />



                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAmount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/tvDuration1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_30" />

                        <TextView
                            android:id="@+id/tvDuration1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0px"
                            android:ellipsize="end"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/px_50"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_20"
                            app:font="@string/maven_r"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlPlan2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/px_20"
                        android:paddingBottom="@dimen/px_20"
                        android:background="@color/transparent">

                        <ImageView
                            android:id="@+id/ivRadio2"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/px_50"
                            android:src="@drawable/ic_radio_button_normal"
                            style="@style/ic_radio_button_style" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/px_24"
                            android:layout_toRightOf="@+id/ivRadio2"
                            android:layout_toLeftOf="@+id/tvAmount2"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvPeriod2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Annual"
                                android:textColor="@color/text_color"
                                android:textSize="@dimen/text_size_30" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.sabkuchfresh.utils.TextViewStrikeThrough
                                    android:id="@+id/tvActualAmount2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="-10px"
                                    android:ellipsize="end"
                                    android:visibility="gone"
                                    android:maxLines="1"
                                    android:text="2388"
                                    android:textColor="@color/text_color"
                                    android:textSize="@dimen/text_size_24" />



                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAmount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0px"
                            android:ellipsize="end"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/tvDuration2"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_30" />

                        <TextView
                            android:id="@+id/tvDuration2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0px"
                            android:ellipsize="end"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/px_50"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_20"
                            app:font="@string/maven_r"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="@dimen/text_size_30">

                    <ImageView
                        android:id="@+id/ivStar"
                        android:layout_width="@dimen/px_45"
                        android:layout_height="@dimen/px_45"
                        android:tag="mwar"
                        android:layout_centerVertical="true"
                        android:src="@drawable/star"/>

                    <TextView
                        android:id="@+id/tvPaymentPlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jugnoo Star"
                        android:layout_toRightOf="@+id/ivStar"
                        android:layout_marginLeft="@dimen/px_10"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_32"
                        android:textColor="@color/text_color"/>

                    <TextView
                        android:id="@+id/tvPlanAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="199"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_44"
                        android:textColor="@color/green"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/linearLayoutPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:orientation="vertical"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/textViewPaymentVia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="26px"
                    android:text="@string/payment_mode"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    android:visibility="visible"
                    />


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="14px"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="4px"
                    >


                    <LinearLayout
                        android:id="@+id/linearLayoutWalletContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5px"
                        android:layout_marginTop="5px"
                        android:orientation="vertical"
                        >

                        <RelativeLayout
                            android:id="@+id/relativeLayoutPaytm"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewPaytmRadio"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginLeft="30px"
                                    />

                                <ImageView
                                    android:layout_width="84px"
                                    android:layout_height="27px"
                                    android:layout_marginLeft="24px"
                                    android:src="@drawable/ic_paytm_no_padding"
                                    android:tag="mwar"
                                    />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewPaytmValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="30px"
                                android:text="00"
                                android:textColor="@color/text_green_color"
                                android:textSize="@dimen/text_size_30"/>

                            <ImageView
                                android:id="@+id/imageViewAddPaytm"
                                android:layout_width="52px"
                                android:layout_height="53px"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="30px"
                                android:src="@drawable/ic_add_checkout"
                                android:tag="mwar"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutMobikwik"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewRadioMobikwik"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginLeft="30px"/>

                                <ImageView
                                    android:layout_width="120px"
                                    android:layout_height="36px"
                                    android:layout_marginLeft="24px"
                                    android:src="@drawable/ic_mobikwik_no_padding"
                                    android:tag="mwar"
                                    />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewMobikwikValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="30px"
                                android:text="00"
                                android:textColor="@color/text_green_color"
                                android:textSize="@dimen/text_size_30"/>

                            <ImageView
                                android:id="@+id/imageViewAddMobikwik"
                                android:layout_width="52px"
                                android:layout_height="53px"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="30px"
                                android:src="@drawable/ic_add_checkout"
                                android:tag="mwar"
                                />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutFreeCharge"
                            android:layout_width="match_parent"
                            android:layout_height="80px"
                            android:background="@drawable/bg_transparent_menu_item_selector"
                            android:visibility="visible"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewRadioFreeCharge"
                                    style="@style/ic_radio_button_style"
                                    android:layout_marginLeft="30px"/>

                                <ImageView
                                    android:layout_width="123px"
                                    android:layout_height="28px"
                                    android:layout_marginLeft="24px"
                                    android:src="@drawable/ic_freecharge_no_padding"
                                    android:tag="mwar"
                                    />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewFreeChargeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="30px"
                                android:text="00"
                                android:textColor="@color/text_green_color"
                                android:textSize="@dimen/text_size_30"/>

                            <ImageView
                                android:id="@+id/imageViewAddFreeCharge"
                                android:layout_width="52px"
                                android:layout_height="53px"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="30px"
                                android:src="@drawable/ic_add_checkout"
                                android:tag="mwar"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutOffers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32px"
                android:orientation="vertical"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/textViewOffers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="26px"
                    android:text="@string/offers"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_26"
                    android:visibility="visible"
                    />


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="14px"
                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="4px"
                    >

                    <product.clicklabs.jugnoo.utils.NonScrollListView
                        android:id="@+id/listViewOffers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/transparent"
                        android:dividerHeight="0dp"
                        android:splitMotionEvents="false">
                    </product.clicklabs.jugnoo.utils.NonScrollListView>


                </android.support.v7.widget.CardView>

            </LinearLayout>


            <Button
                android:id="@+id/bPlaceOrder"
                style="@style/ButtonTheme"
                android:layout_height="@dimen/payment_option_cash_rl_height"
                android:background="@drawable/capsule_green_selector"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="70px"
                android:layout_marginTop="32px"
                android:text="@string/pay_now"
                android:textSize="@dimen/text_size_34"
                />

            <TextView
                android:id="@+id/textViewScroll"
                android:layout_width="20px"
                android:layout_height="0px"
                android:text=" "
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>