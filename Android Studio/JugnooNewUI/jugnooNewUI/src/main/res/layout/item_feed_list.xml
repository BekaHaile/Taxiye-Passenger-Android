<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root_layout_item"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="@dimen/spacing_large">


    <RelativeLayout
        android:id="@+id/layout_user_activity_heading"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_tiny">

        <ImageView
            android:id="@+id/iv_user_profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/spacing_small"
            android:src="@drawable/ic_fresh_item_placeholder" />

        <TextView
            android:id="@+id/tv_user_activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_toRightOf="@id/iv_user_profile_pic"
            android:text="@string/dummy_text_2"
            android:textColor="@color/feed_grey_text_heading"
            android:textSize="@dimen/font_large"
            app:font="maven" />

        <TextView
            android:id="@+id/tv_user_activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_activity_title"
            android:layout_toRightOf="@id/iv_user_profile_pic"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="2dp"
            android:gravity="top"
            android:text="2w"
            android:textColor="@color/feed_grey_text_secondary"
            android:textSize="@dimen/font_extra_small" />


    </RelativeLayout>

    <View
        android:visibility="gone"
        android:id="@+id/divider_user_activity"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_user_activity_heading"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:background="@color/stroke_light_grey_alpha" />


    <RelativeLayout
        android:id="@+id/layout_owner_feed_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_user_activity"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal">

        <ImageView
            android:id="@+id/iv_owner_profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/spacing_small"
            android:src="@drawable/ic_fresh_item_placeholder" />

        <TextView
            android:id="@+id/tv_feed_owner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_toLeftOf="@+id/tv_feed_rating"

            android:layout_toRightOf="@id/iv_owner_profile_pic"
            android:text="@string/dummy_text_2"
            android:textColor="@color/feed_grey_text_heading"
            android:textSize="@dimen/font_large"
            app:font="maven" />

        <TextView
            android:id="@+id/tv_owner_feed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_feed_owner_title"
            android:layout_toRightOf="@id/iv_owner_profile_pic"
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="2dp"
            android:gravity="top"
            android:text="2w"
            android:textColor="@color/feed_grey_text_secondary"
            android:textSize="@dimen/font_extra_small" />

        <TextView
            android:id="@id/tv_feed_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/capsule_text_color"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="@dimen/spacing_tiny"
            android:paddingLeft="@dimen/spacing_extra_tiny"
            android:paddingRight="@dimen/spacing_extra_tiny"
            android:paddingTop="@dimen/spacing_tiny"
            android:text="Rating 2.1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_tiny"
            android:visibility="visible"
            app:font="maven" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_feed_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_owner_feed_layout"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:text="Not the best pizza Iâ€™ve ever had, Pepperoni was too less."
        android:textColor="@color/feed_grey_text"
        android:textSize="@dimen/font_small"
        app:font="maven" />


    <ImageView
        android:id="@+id/iv_place_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height_feed"
        android:layout_below="@id/tv_feed_description"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:background="@drawable/ic_fresh_new_placeholder"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_restaurant_feed_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_feed_description"
        android:layout_marginRight="@dimen/spacing_extra_huge"
        android:layout_marginTop="@dimen/spacing_extra_tiny"
        android:background="@drawable/capsule_black_70"
        android:drawableLeft="@drawable/location_icon"
        android:drawablePadding="@dimen/spacing_tiny"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="@dimen/spacing_tiny"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_tiny"
        android:maxWidth="250dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tiny"
        app:font="@string/maven_r" />

    <TextView
        android:id="@+id/tv_like_comment_status"
        android:layout_width="wrap_content"
        android:gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_place_image"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:text="115 Likes  154 Comments"
        android:textColor="@color/feed_grey_text_secondary"
        app:font="maven" />

    <View
        android:id="@+id/line_below_like_status"
        style="@style/Feed_Line_Horizontal"
        android:layout_below="@id/tv_like_comment_status" />

    <View
        android:id="@+id/line_divider_like_comment"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_below="@id/line_below_like_status"
        android:layout_centerHorizontal="true"
        android:background="@color/stroke_light_grey_alpha" />


    <LinearLayout
        android:id="@+id/view_action_comment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line_below_like_status"
        android:layout_toRightOf="@id/line_divider_like_comment"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_action_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_comment"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="center"
            android:text="Comment"
            android:textColor="@color/feed_grey_text"
            android:textSize="@dimen/font_small"
            app:font="@string/maven_r" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_action_like"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line_below_like_status"
        android:layout_toLeftOf="@id/line_divider_like_comment"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">


        <TextView
            android:id="@+id/tv_action_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_like"
            android:drawablePadding="@dimen/spacing_tiny"
            android:gravity="center"
            android:text="Like"
            android:textColor="@color/feed_grey_text"
            android:textSize="@dimen/font_small"
            app:font="@string/maven_r" />
    </LinearLayout>

    <View
        android:id="@+id/line_bottom"
        style="@style/Feed_Line_Horizontal"
        android:layout_below="@id/line_divider_like_comment" />

    <View
        android:id="@+id/vShadowDown"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/line_bottom"
        android:background="@drawable/shadow_feed_sep" />
</RelativeLayout>