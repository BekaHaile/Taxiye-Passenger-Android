<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingTop="@dimen/spacing_large"
    android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/layout_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_profile_pic"
                    android:src="@drawable/whatsapp"
                    android:layout_width="50dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_marginBottom="@dimen/spacing_tiny"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/tv_feed_heading"
                    android:textSize="@dimen/font_large"
                    android:text="@string/dummy_text"
                    android:layout_toRightOf="@id/iv_profile_pic"
                    android:paddingBottom="1dp"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:textColor="@color/feed_grey_text_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="2w"
                    android:textSize="@dimen/font_extra_small"
                    android:layout_below="@id/tv_feed_heading"
                    android:layout_toRightOf="@id/iv_profile_pic"
                    android:textColor="@color/feed_grey_text_secondary"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@drawable/ic_clock_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </RelativeLayout>

    
        <TextView
            app:font="maven"
            android:textColor="@color/feed_grey_text"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginLeft="@dimen/spacing_large"
            android:text="Not the best pizza Iâ€™ve ever had, Pepperoni was too less."
            android:layout_below="@id/layout_heading"
            android:id="@+id/tv_feed_description"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
        <ImageView
            android:id="@+id/iv_place_image"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_below="@id/tv_feed_description"
            android:background="@drawable/ic_restaurant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height_feed" />

        <TextView
            android:id="@+id/tv_like_comment_status"
            android:text="115 Likes . 154 Comments"
            app:font="maven"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:textColor="@color/feed_grey_text_secondary"
            android:layout_below="@id/iv_place_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/line_below_like_status"
            style="@style/Feed_Line_Horizontal"
            android:layout_below="@id/tv_like_comment_status" />

        <View
            android:id="@+id/line_divider_like_comment"
             android:layout_centerHorizontal="true"
            android:layout_below="@id/line_below_like_status"
            android:layout_width="1dp"
            android:background="@color/stroke_light_grey"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tv_action_comment"
            android:text="Comment"
            android:gravity="center"
            app:font="maven"
            android:textSize="@dimen/font_small"
            android:layout_toRightOf="@id/line_divider_like_comment"
            android:layout_below="@id/line_below_like_status"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_action_like"
            android:text="Like"
            android:gravity="center"
            android:textSize="@dimen/font_small"
            app:font="maven"
            android:layout_toLeftOf="@id/line_divider_like_comment"
            android:layout_below="@id/line_below_like_status"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <View
            android:id="@+id/line_bottom"
            style="@style/Feed_Line_Horizontal"
            android:layout_below="@id/line_divider_like_comment" />


</RelativeLayout>