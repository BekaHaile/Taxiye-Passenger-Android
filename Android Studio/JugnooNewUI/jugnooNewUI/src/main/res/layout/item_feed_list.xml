<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/spacing_large"
    android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/relative_post_heading"
            android:paddingBottom="@dimen/spacing_tiny"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_profile_pic_user"
                    android:src="@drawable/ic_fresh_item_placeholder"
                    android:layout_width="50dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/tv_relative_feed_heading"
                    android:textSize="@dimen/font_large"
                    android:text="@string/dummy_text_2"
                    android:layout_toRightOf="@id/iv_profile_pic_user"
                    android:layout_marginRight="@dimen/spacing_small"
                    app:font="maven"
                    android:textColor="@color/feed_grey_text_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_relative_feed_time_posted"
                    android:text="2w"
                    android:textSize="@dimen/font_extra_small"
                    android:layout_below="@id/tv_relative_feed_heading"
                    android:gravity="top"
                    android:layout_toRightOf="@id/iv_profile_pic_user"
                    android:textColor="@color/feed_grey_text_secondary"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@drawable/ic_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



        </RelativeLayout>

        <View
            android:id="@+id/divider_relative_post"
            android:background="@color/stroke_light_grey_alpha"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_below="@id/relative_post_heading"
            android:layout_height="1dp"
            android:layout_width="match_parent"/>


        <RelativeLayout
            android:id="@+id/layout_heading"
            android:layout_below="@id/divider_relative_post"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_profile_pic"
                    android:src="@drawable/ic_fresh_item_placeholder"
                    android:layout_width="50dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/tv_feed_heading"
                    android:textSize="@dimen/font_large"
                    android:text="@string/dummy_text_2"
                    android:layout_toRightOf="@id/iv_profile_pic"
                    android:layout_toLeftOf="@+id/tv_feed_rating"

                    android:layout_marginRight="@dimen/spacing_small"
                    app:font="maven"
                    android:textColor="@color/feed_grey_text_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="2w"
                    android:textSize="@dimen/font_extra_small"
                    android:layout_below="@id/tv_feed_heading"
                    android:gravity="top"
                    android:layout_toRightOf="@id/iv_profile_pic"
                    android:textColor="@color/feed_grey_text_secondary"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@drawable/ic_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@id/tv_feed_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/capsule_text_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/spacing_extra_tiny"
                    android:paddingRight="@dimen/spacing_extra_tiny"
                    android:paddingTop="@dimen/spacing_tiny"
                    android:paddingBottom="@dimen/spacing_tiny"
                    android:maxLines="1"
                    android:text="Rating 2.1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_tiny"
                    android:visibility="visible"
                    app:font="maven" />

        </RelativeLayout>

    
        <TextView
            app:font="maven"
            android:textColor="@color/feed_grey_text"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_large"
            android:text="Not the best pizza Iâ€™ve ever had, Pepperoni was too less."
            android:layout_below="@id/layout_heading"
            android:id="@+id/tv_feed_description"
            android:layout_marginRight="@dimen/spacing_large"
            android:textSize="@dimen/font_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
        
        
        
        

        
        <ImageView
            android:id="@+id/iv_place_image"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_below="@id/tv_feed_description"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_fresh_item_placeholder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height_feed" />
        <TextView
            android:id="@+id/tv_restaurant_feed_address"
            android:layout_below="@id/tv_feed_description"
            android:layout_marginRight="@dimen/spacing_extra_huge"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/spacing_extra_tiny"
            android:paddingLeft="@dimen/spacing_small"
            android:paddingRight="@dimen/spacing_small"
            android:paddingTop="@dimen/spacing_tiny"
            android:paddingBottom="@dimen/spacing_tiny"
            android:maxLines="1"
            android:gravity="center"
            android:drawableLeft="@drawable/location_icon"
            android:drawablePadding="@dimen/spacing_tiny"
            android:textColor="@color/white"
            app:font="@string/maven_r"
            android:textSize="@dimen/font_tiny"
            android:text="Sector 17"
            android:background="@drawable/capsule_black_70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_like_comment_status"
            android:text="115 Likes  154 Comments"
            app:font="maven"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:textColor="@color/feed_grey_text_secondary"
            android:layout_below="@id/iv_place_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/line_below_like_status"
            style="@style/Feed_Line_Horizontal"
            android:layout_below="@id/tv_like_comment_status" />

        <View
            android:id="@+id/line_divider_like_comment"
             android:layout_centerHorizontal="true"
            android:layout_below="@id/line_below_like_status"
            android:layout_width="1dp"
            android:background="@color/stroke_light_grey_alpha"
            android:layout_height="40dp"/>


        <LinearLayout
            android:id="@+id/view_action_comment"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:layout_toRightOf="@id/line_divider_like_comment"
            android:layout_below="@id/line_below_like_status"
            android:layout_width="match_parent"
            android:layout_height="40dp" >
        <TextView
            android:id="@+id/tv_action_comment"
            android:text="Comment"
            android:gravity="center"
            app:font="@string/maven_r"
            android:drawablePadding="@dimen/spacing_tiny"
            android:drawableLeft="@drawable/ic_comment"
            android:textColor="@color/feed_grey_text"
            android:textSize="@dimen/font_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:layout_toLeftOf="@id/line_divider_like_comment"
            android:layout_below="@id/line_below_like_status"
            android:id="@+id/view_action_like"
            android:layout_width="match_parent"
            android:layout_height="40dp">


        <TextView
            android:id="@+id/tv_action_like"
            android:text="Like"
            android:textColor="@color/feed_grey_text"
            android:gravity="center"
            android:textSize="@dimen/font_small"
            app:font="@string/maven_r"
            android:drawableLeft="@drawable/ic_like"
            android:drawablePadding="@dimen/spacing_tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/line_bottom"
            style="@style/Feed_Line_Horizontal"
            android:layout_below="@id/line_divider_like_comment" />

        <View

            android:id="@+id/vShadowDown"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/line_bottom"
            android:background="@drawable/shadow_feed_sep" />
</RelativeLayout>