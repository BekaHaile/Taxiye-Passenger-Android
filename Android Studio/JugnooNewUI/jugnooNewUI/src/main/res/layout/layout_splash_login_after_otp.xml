<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llLoginNew"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:splitMotionEvents="false"
    android:visibility="visible">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_160"
            android:src="@drawable/splash_top_bg"
            android:tag="mwar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="240px"
                android:layout_height="252px"
                android:layout_centerHorizontal="true"
                android:background="@drawable/logo_big"
                android:focusable="true"
                android:layout_gravity="center_horizontal"
                android:tag="mhar"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:layout_marginTop="@dimen/px_60"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageViewEmail"
                        android:layout_width="@dimen/px_30"
                        android:layout_height="@dimen/px_30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36px"
                        android:src="@drawable/ic_phone"
                        android:tag="mhar" />

                    <AutoCompleteTextView
                        android:id="@+id/etPhoneNew"
                        android:layout_width="match_parent"
                        android:layout_height="88px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10px"
                        android:layout_toLeftOf="@+id/textViewEmailRequired"
                        android:layout_toRightOf="@+id/imageViewEmail"
                        android:background="#0000"
                        android:completionThreshold="1"
                        android:gravity="center_vertical"
                        android:hint="@string/phone_number"
                        android:inputType="number"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:ellipsize="end"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_size_34" />

                    <TextView
                        android:id="@+id/textViewEmailRequired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:text="@string/nl_splash_required"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_22" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_marginRight="@dimen/px_20"
                    android:src="@color/grey_light" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imageViewPassword"
                        android:layout_width="18px"
                        android:layout_height="27px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36px"
                        android:src="@drawable/ic_password"
                        android:tag="mhar" />

                    <EditText
                        android:id="@+id/etPasswordNew"
                        android:layout_width="match_parent"
                        android:layout_height="88px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="22px"
                        android:layout_toLeftOf="@+id/textViewPasswordRequired"
                        android:layout_toRightOf="@+id/imageViewPassword"
                        android:background="#0000"
                        android:gravity="center_vertical"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color_hint"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/text_size_34" />

                    <TextView
                        android:id="@+id/textViewPasswordRequired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px"
                        android:text="@string/nl_splash_required"
                        android:textColor="@color/text_color_hint"
                        android:textSize="@dimen/text_size_22" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bEmailLoginNew"
                android:layout_width="@dimen/splash_button_width"
                android:layout_height="@dimen/splash_button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px_30"
                android:background="@drawable/capsule_login_button_selector"
                android:text="@string/nl_login"
                android:textAllCaps="true"
                android:textColor="@color/text_color_light_selector"
                android:textSize="@dimen/text_size_34" />


            <TextView
                android:id="@+id/textViewForgotPassword"
                android:layout_width="400px"
                android:layout_height="70px"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:visibility="visible"
                android:text="@string/forgot_password"
                android:textColor="@color/services_name_txt_color"
                android:textSize="@dimen/text_size_26"
                app:font="@string/maven_r"/>
        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/ivBottom1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        android:layout_alignParentBottom="true"
        android:src="@drawable/splash_bottom_building_bg1"
        android:tag="mwar"
        android:visibility="visible" />
</RelativeLayout>