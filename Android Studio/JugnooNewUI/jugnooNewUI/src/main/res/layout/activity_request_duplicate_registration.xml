<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:background="@color/white"
            android:splitMotionEvents="false">

            <TextView
                android:id="@+id/textViewTitle"
                style="@style/title"
                android:text="@string/nl_signup_request_registration" />

            <ImageView
                android:id="@+id/imageViewBack"
                style="@style/back_image" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="@drawable/shadow_down" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false">

            <LinearLayout
                android:id="@+id/linearLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:splitMotionEvents="false">

                <TextView
                    android:id="@+id/textViewRegistration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px"
                    android:text="@string/nl_signup_request_registration_info"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_32" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textViewRegisterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"
                            android:text="@string/name_with_colon"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28" />

                        <TextView
                            android:id="@+id/textViewRegisterNameValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="180px"
                            android:layout_marginRight="40px"
                            android:singleLine="true"
                            android:text="@string/user1"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textViewRegisterEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"
                            android:text="@string/email_with_colon"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28" />

                        <TextView
                            android:id="@+id/textViewRegisterEmailValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="180px"
                            android:layout_marginRight="40px"
                            android:singleLine="true"
                            android:text="@string/user1"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px">

                        <TextView
                            android:id="@+id/textViewRegisterPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40px"
                            android:text="@string/phone"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28" />

                        <TextView
                            android:id="@+id/textViewRegisterPhoneValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="180px"
                            android:layout_marginRight="40px"
                            android:singleLine="true"
                            android:text="@string/user1"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28" />

                    </RelativeLayout>

                </LinearLayout>


                <EditText
                    android:id="@+id/editTextMessage"
                    android:layout_width="match_parent"
                    android:layout_height="310px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="40px"
                    android:background="@drawable/dropshadow_in_white"
                    android:gravity="left"
                    android:hint="@string/nl_signup_request_registration_you_have_already_format"
                    android:padding="25px"
                    android:scrollbars="vertical"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textCursorDrawable="@drawable/cursor_black"
                    android:textSize="@dimen/text_size_26" />


                <TextView
                    android:id="@+id/textViewRegisterHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="40px"
                    android:gravity="center_horizontal"
                    android:text="@string/nl_signup_request_registration_revert_you"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_28" />


                <Button
                    android:id="@+id/buttonSubmitRequest"
                    style="@style/ButtonTheme"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px"
                    android:text="@string/submit" />

                <TextView
                    android:id="@+id/textViewScroll"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:text=" " />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>