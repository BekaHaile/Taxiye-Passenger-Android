<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/topRl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height"
            android:splitMotionEvents="false"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/nl_signup_request_registration"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="@dimen/text_size_34" />

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="80.7px"
                android:layout_height="96.9px"
                android:layout_marginLeft="5px"
                android:padding="30px"
                android:src="@drawable/back_white_selector"
                android:tag="mwar" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="6px"
            android:background="@drawable/shadow_down"
            />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:splitMotionEvents="false" >

            <LinearLayout
                android:id="@+id/linearLayoutMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:splitMotionEvents="false" >

                <TextView
                    android:id="@+id/textViewRegistration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_32"
                    android:text="@string/nl_signup_request_registration_info"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30px">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewRegisterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"
                            android:layout_marginLeft="40px"
                            android:text="Name:"/>

                        <TextView
                            android:id="@+id/textViewRegisterNameValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"
                            android:text="User1"
                            android:layout_marginLeft="180px"
                            android:layout_marginRight="40px"
                            android:singleLine="true"
                            />

                        </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px">

                        <TextView
                            android:id="@+id/textViewRegisterEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"
                            android:layout_marginLeft="40px"
                            android:text="Email:"/>

                        <TextView
                            android:id="@+id/textViewRegisterEmailValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"
                            android:text="User1"
                            android:layout_marginLeft="180px"
                            android:layout_marginRight="40px"
                            android:singleLine="true"
                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px">

                        <TextView
                            android:id="@+id/textViewRegisterPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"
                            android:layout_marginLeft="40px"
                            android:text="Phone:"/>

                        <TextView
                            android:id="@+id/textViewRegisterPhoneValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_28"
                            android:text="User1"
                            android:layout_marginLeft="180px"
                            android:layout_marginRight="40px"
                            android:singleLine="true"
                            />

                    </RelativeLayout>

                    </LinearLayout>


                <EditText
                    android:id="@+id/editTextMessage"
                    android:layout_width="match_parent"
                    android:layout_height="310px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="40px"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/dropshadow_grey"
                    android:gravity="left"
                    android:hint="@string/nl_signup_request_registration_you_have_already_format"
                    android:padding="25px"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/text_size_26"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint"
                    />


                <TextView
                    android:id="@+id/textViewRegisterHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/text_color"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size_28"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:text="@string/nl_signup_request_registration_revert_you"/>


                <Button
                    android:id="@+id/buttonSubmitRequest"
                    style="@style/ButtonTheme"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px"
                    android:text="@string/submit"
                    />

                <TextView
                    android:id="@+id/textViewScroll"
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:text=" " />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>