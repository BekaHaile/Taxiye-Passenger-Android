<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/rv"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
android:orientation="vertical"
android:splitMotionEvents="false" >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="50px"
    android:background="@drawable/background_white_rounded_bordered"
    android:splitMotionEvents="false" >

    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2px"
        android:splitMotionEvents="false" >

        <TextView
            android:id="@+id/textHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:paddingStart="40px"
            android:paddingEnd="40px"
            android:text="Alert"
            android:textColor="@color/text_color"
            android:textSize="34px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40px"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:lineSpacingExtra="10px"
            android:maxHeight="800px"
            android:paddingStart="40px"
            android:paddingEnd="40px"
            android:text="Message"
            android:textColor="@color/text_color"
            android:textSize="30px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/grey_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:splitMotionEvents="false" >

            <Button
                android:id="@+id/btnOk"
                android:layout_width="307px"
                android:layout_height="90px"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_white_grey_brr_selector"
                android:singleLine="true"
                android:text="OK"
                android:textColor="@color/text_color"
                android:textSize="34px" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/grey_light" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="307px"
                android:layout_height="90px"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/imageView1"
                android:background="@drawable/button_white_grey_blr_selector"
                android:singleLine="true"
                android:text="Cancel"
                android:textColor="@color/text_color"
                android:textSize="34px" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

</FrameLayout>