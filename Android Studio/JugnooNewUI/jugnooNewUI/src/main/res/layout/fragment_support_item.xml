<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollViewRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light_grey"
    >
    <LinearLayout
        android:id="@+id/linearLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        android:animateLayoutChanges="true"
        >


        <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"
            android:layout_marginTop="35px"
            android:text="Account"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_32"
            />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="35px"
            android:layout_marginRight="35px"
            android:text="Answer"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_28"
            android:lineSpacingExtra="6px"
            android:autoLink="web"
            />

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dropshadow_grey"
            android:gravity="left"
            android:hint="@string/leave_a_comment"
            android:padding="25px"
            android:scrollbars="vertical"
            android:textSize="@dimen/text_size_28"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_hint"
            />

        <TextView
            android:id="@+id/textViewRSOtherError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginTop="20px"
            android:text="@string/star_required"
            android:textColor="@color/red_status"
            android:textSize="22px"/>

        <Button
            android:id="@+id/buttonSubmit"
            style="@style/ButtonTheme"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:layout_marginBottom="30px"
            android:text="@string/submit"
            />


        <RelativeLayout
            android:id="@+id/relativeLayoutCallDriver"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_theme"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:layout_marginBottom="30px"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageViewCallDriver"
                android:layout_width="36px"
                android:layout_height="36px"
                android:tag="mwar"
                android:src="@drawable/ic_phone_white"
                />

            <TextView
                android:id="@+id/textViewCallDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34"
                android:textAllCaps="true"
                android:text="@string/call_driver"
                android:layout_toRightOf="@+id/imageViewCallDriver"
                android:layout_marginLeft="10px"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayoutCallJugnoo"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/button_theme"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:layout_marginBottom="30px"
            android:gravity="center"
            >


            <ImageView
                android:id="@+id/imageViewCallJugnoo"
                android:layout_width="36px"
                android:layout_height="36px"
                android:tag="mwar"
                android:src="@drawable/ic_phone_white"
                />

            <TextView
                android:id="@+id/textViewCallJugnoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34"
                android:textAllCaps="true"
                android:text="@string/call_jugnoo"
                android:layout_toRightOf="@+id/imageViewCallJugnoo"
                android:layout_marginLeft="10px"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewScroll"
            android:layout_width="10px"
            android:layout_height="10px"/>


    </LinearLayout>
</ScrollView>