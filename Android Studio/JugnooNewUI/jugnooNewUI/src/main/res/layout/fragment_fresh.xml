<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light_grey"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_fresh"
        >

        <product.clicklabs.jugnoo.widgets.PagerSlidingTabStrip
            android:id="@+id/tabs"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:visibility="visible"
            app:pstsDividerColor="@color/text_color_hint"
            app:pstsIndicatorHeight="10px"
            app:pstsShouldExpand="true"
            app:pstsUnderlineColor="@color/grey_light"
            app:pstsUnderlineHeight="2px"
            android:background="@color/white_light_grey"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabs"
            android:layout_above="@+id/relativeLayoutCheckoutBar"
            >
        </android.support.v4.view.ViewPager>


        <RelativeLayout
            android:id="@+id/relativeLayoutCheckoutBar"
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_white_grey_light_selector"
            >

            <RelativeLayout
                android:id="@+id/relativeLayoutCart"
                android:layout_width="156px"
                android:layout_height="match_parent"
                android:background="@drawable/background_white_grey_light_selector"
                >
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/text_color_hint"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20px"
                    android:layout_marginBottom="20px"
                    />

                <ImageView
                    android:id="@+id/imageViewCart"
                    android:layout_width="58px"
                    android:layout_height="53px"
                    android:tag="mwar"
                    android:src="@drawable/ic_cart"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    />

                <TextView
                    android:id="@+id/textViewCartItemsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_yellow_rounded"
                    android:gravity="center"
                    android:padding="8px"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24"
                    android:visibility="visible"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25px"
                    android:layout_marginTop="10px"
                    android:minWidth="45px"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_color_hint"
                />

            <TextView
                android:id="@+id/textViewTotalPrice"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/rupee_0"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_38"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/relativeLayoutCart"
                android:layout_marginLeft="35px"

                />



            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/text_color_hint"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageViewCheckoutForward"
                android:layout_marginRight="35px"
                />

            <ImageView
                android:id="@+id/imageViewCheckoutForward"
                android:layout_width="21px"
                android:layout_height="37px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35px"
                android:tag="mwar"
                android:src="@drawable/ic_arrow_orange"
                />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>