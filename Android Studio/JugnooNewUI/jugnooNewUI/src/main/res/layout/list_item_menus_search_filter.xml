<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutSearchFilter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSearch"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="560px"
        android:layout_height="84px"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4px"
        android:layout_marginLeft="24px"
        android:layout_marginTop="24px"
        android:layout_marginBottom="6px"
        >

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/search_dot"
            android:paddingLeft="32px"
            android:paddingRight="32px"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_hint"
            android:textSize="@dimen/text_size_32"
            />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewFilter"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="84px"
        android:layout_height="84px"
        android:layout_alignParentRight="true"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4px"
        android:layout_marginRight="24px"
        android:layout_marginTop="24px"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_transparent_menu_item_selector"
            >

            <ImageView
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_filters"
                android:tag="mwar"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_below="@+id/cardViewSearch"
        />


</RelativeLayout>