<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="81px"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="10px"
        android:layout_height="match_parent"
        android:src="@drawable/background_white_theme_selector"/>

    <ImageView
        android:id="@+id/imageViewMenuIcon"
        android:layout_width="56px"
        android:layout_height="56px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:src="@drawable/ic_play_normal"
        android:tag="mwar" />

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/menu_text_margin_left"
        android:text="@string/t20_world_cup_2016"
        android:textColor="@color/text_color_white_theme_selector"
        android:textSize="@dimen/text_size_38" />

    <LinearLayout
        android:layout_marginLeft="@dimen/px_12"
        android:gravity="right"
        android:layout_toRightOf="@id/textViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/textViewNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:text="@string/str_new"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_36"
            android:layout_marginRight="30px"/>

        <TextView
            android:id="@+id/textViewValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/px_3"
            android:gravity="center"

            android:text="@string/rupee_0"
            android:textColor="@color/theme_color"
            android:textSize="36px"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>