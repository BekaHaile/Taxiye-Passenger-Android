<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/rv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/screen_width"
    android:layout_height="@dimen/screen_height"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <LinearLayout
        android:id="@+id/innerRl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/payment_option_dialog_margin"
        android:background="@drawable/dialog_background_color"
        android:orientation="vertical"
        android:splitMotionEvents="false">

        <TextView
            android:id="@+id/textViewSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/payment_option_dialog_title_margin_tb"
            android:layout_marginLeft="@dimen/payment_option_dialog_title_margin_lr"
            android:layout_marginRight="@dimen/payment_option_dialog_title_margin_lr"
            android:gravity="center_vertical"
            android:text="@string/payment_option_dialog_title"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/payment_option_dialog_title_text_size"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/textViewJugnooCashInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/payment_option_dialog_title_margin_lr"
            android:layout_marginRight="@dimen/payment_option_dialog_title_margin_lr"
            android:gravity="center_vertical"
            android:text="Jugnoo Cash will be deducted first"
            android:textColor="@color/grey_dark"
            android:textSize="24px"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/grey_light_more"
            android:layout_marginTop="20px"
            />


        <RelativeLayout
            android:id="@+id/relativeLayoutPaytm"
            android:layout_width="@dimen/payment_option_rl_width"
            android:layout_height="@dimen/payment_option_paytm_rl_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/background_white_white_light_grey_selector">

            <ImageView
                android:id="@+id/imageViewPaytmSelection"
                android:layout_width="@dimen/payment_option_selection_icon_width"
                android:layout_height="@dimen/payment_option_selection_icon_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/payment_option_selection_icon_margin_left"
                android:background="@drawable/ic_payment_mode_unpressed"
                />

            <TextView
                android:id="@+id/textViewPaytmWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/payment_option_text_margin_left"
                android:text="@string/paytm"
                android:textColor="@color/grey_black"
                android:textSize="@dimen/payment_option_text_size"
                android:layout_toRightOf="@+id/imageViewPaytmSelection"
                />

            <TextView
                android:id="@+id/textViewPaytmWalletValue"
                android:layout_width="@dimen/payment_option_paytm_balance_text_width"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/payment_option_paytm_balance_text_right_margin"
                android:layout_alignParentRight="true"
                android:text="@string/rupee_0"
                android:textColor="@color/grey_black"
                android:textSize="@dimen/payment_option_paytm_balance_text_text_size"
                android:gravity="right"
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/payment_option_rl_width"
            android:layout_height="@dimen/line_width"
            android:layout_gravity="center_horizontal"
            android:background="@color/yellow"/>

        <RelativeLayout
            android:id="@+id/relativeLayoutCash"
            android:layout_width="@dimen/payment_option_rl_width"
            android:layout_height="@dimen/payment_option_cash_rl_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/background_white_white_light_grey_selector"
            android:layout_marginBottom="@dimen/dialog_border_width"
            >

            <ImageView
                android:id="@+id/imageViewCashSelection"
                android:layout_width="@dimen/payment_option_selection_icon_width"
                android:layout_height="@dimen/payment_option_selection_icon_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/payment_option_selection_icon_margin_left"
                android:background="@drawable/ic_payment_mode_unpressed"
                />

            <TextView
                android:id="@+id/textViewCash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageViewCashSelection"
                android:layout_marginLeft="@dimen/payment_option_text_margin_left"
                android:text="@string/cash"
                android:textColor="@color/grey_black"
                android:textSize="@dimen/payment_option_text_size"
                />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>