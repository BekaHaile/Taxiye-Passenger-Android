<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cvFavouriteDriver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp">


    <TextView
        android:id="@+id/tvDriverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        tools:text="@string/driver_name"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvVehicleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            tools:text="@string/select_vehicle_type"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDriverName"
            app:layout_constraintStart_toStartOf="@id/tvDriverName"
           />

    <TextView
        android:id="@+id/tvDriverRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        tools:text="@string/txt_ratings"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvVehicleType"
        app:layout_constraintStart_toStartOf="@id/tvVehicleType"
        />

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>