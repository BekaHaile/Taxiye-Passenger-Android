<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMenusItemCharges"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayoutMenusItemCharges"
        android:layout_width="match_parent"
        android:layout_height="70px">

        <TextView
            android:id="@+id/textViewMenusItemChargeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:gravity="center_vertical"
            android:text="@string/discount"
            android:textColor="@color/text_color"
            android:textSize="30px"
            />


        <TextView
            android:id="@+id/textViewMenusItemChargeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:text="@string/rupee_0"
            android:textAllCaps="true"
            android:textColor="@color/text_color"
            android:textSize="32px"
            />

        <ImageView
            android:id="@+id/imageViewSep1"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:src="@color/stroke_color_light"
            />

    </RelativeLayout>
</LinearLayout>