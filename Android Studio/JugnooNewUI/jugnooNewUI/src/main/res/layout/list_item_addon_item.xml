<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_grey_light_selector"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewItemImage"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fresh_item_placeholder"
        android:tag="mwar"/>


    <LinearLayout
        android:id="@+id/linearLayoutContent"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="55px"
        android:layout_toRightOf="@+id/imageViewItemImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:maxLines="2"
            android:text="Orange"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"

            />

        <TextView
            android:id="@+id/textViewItemUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:singleLine="true"
            android:text="500gm"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_28"/>

        <TextView
            android:id="@+id/textViewItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="25px"
            android:layout_marginTop="20px"
            android:maxLines="2"
            android:text="@string/rupee_0"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutQuantitySelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageViewSep"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25px"
        android:layout_marginRight="20px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageViewMinus"
            android:layout_width="74px"
            android:layout_height="74px"
            android:padding="10px"
            android:src="@drawable/ic_minus_selector"
            android:tag="mwar"/>

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="70px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="998"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_34"/>

        <ImageView
            android:id="@+id/imageViewPlus"
            android:layout_width="74px"
            android:layout_height="74px"
            android:padding="10px"
            android:src="@drawable/ic_plus_selector"
            android:tag="mwar"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_button"
        android:layout_width="118px"
        android:layout_height="60px"
        android:layout_above="@+id/imageViewSep"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25px"
        android:layout_marginRight="20px"
        android:background="@drawable/button_theme"
        android:text="ADD"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_32"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/imageViewSep"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/linearLayoutContent"
        android:background="@color/text_color_hint"/>

</RelativeLayout>