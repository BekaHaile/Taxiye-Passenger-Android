<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rlPhoneLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        android:src="@drawable/bg_top_2"
        android:tag="mwar"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ivLogoP"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:src="@drawable/ic_taxi_logo"
        android:tag="@string/dont_touch_me"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/tvJugnooTaxiP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/jugnoo_taxi"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_below="@+id/ivLogoP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:tag="@string/dont_touch_me"
        />

    <RelativeLayout
        android:id="@+id/rlPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_480"
        android:layout_marginRight="@dimen/px_80"
        android:layout_marginLeft="@dimen/px_80">

        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="@dimen/px_30"
            android:layout_height="@dimen/px_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:src="@drawable/ic_phone"
            android:tag="mhar" />

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_toLeftOf="@+id/textViewPhoneNumberRequired"
            android:layout_toRightOf="@+id/imageViewEmail"
            android:background="#0000"
            android:completionThreshold="1"
            android:gravity="center_vertical"
            android:hint="@string/phone_number"
            android:inputType="number"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:maxLines="1"
            android:maxLength="10"
            android:ellipsize="end"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_34"
            app:typekitFont="@string/maven"
            />

        <TextView
            android:id="@+id/textViewPhoneNumberRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:text="@string/nl_splash_required"
            android:textColor="@color/text_color_hint"
            android:textSize="@dimen/text_size_22"
            app:typekitFont="@string/maven"
            android:visibility="visible"
            />



    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginRight="@dimen/px_80"
        android:layout_below="@+id/rlPhone"
        android:src="@color/grey_light" />

    <Button
        android:id="@+id/btnPhoneLogin"
        android:layout_width="550px"
        android:layout_height="@dimen/splash_button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_50"
        android:layout_below="@+id/rlPhone"
        android:text="@string/continue_text"
        android:textSize="@dimen/px_30"
        android:textColor="@color/white"
        android:textAllCaps="true"
        app:typekitFont="@string/maven"
        android:background="@drawable/capsule_theme_login_selector"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_160"
        android:layout_alignParentBottom="true"
        android:src="@drawable/splash_bottom_building_bg2"
        android:tag="mwar"
        android:visibility="invisible"/>

</RelativeLayout>