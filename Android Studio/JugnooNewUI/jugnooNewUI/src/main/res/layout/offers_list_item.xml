<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearLayoutPromotion1"
        android:layout_width="664px"
        android:layout_height="92px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8px"
        android:layout_marginStart="30px"
        android:layout_marginEnd="30px"
        android:layout_marginTop="8px"
        android:background="@drawable/bg_white_r_bthin"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/radioPromotion1"
            android:layout_width="83px"
            android:layout_height="83px"
            android:layout_centerVertical="true"
            android:padding="25px"
            android:src="@drawable/ic_radio_button_normal"
            android:tag="mwar"/>

        <TextView
            android:id="@+id/textViewPromotion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5px"
            android:layout_toStartOf="@+id/textViewTNC"
            android:layout_toEndOf="@+id/radioPromotion1"
            android:maxLines="2"
            android:text="cashback"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_30"
            />

        <TextView
            android:id="@+id/textViewTNC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingBottom="20px"
            android:paddingStart="20px"
            android:paddingEnd="20px"
            android:paddingTop="20px"
            android:text="@string/tnc"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_22"/>

    </RelativeLayout>

</LinearLayout>