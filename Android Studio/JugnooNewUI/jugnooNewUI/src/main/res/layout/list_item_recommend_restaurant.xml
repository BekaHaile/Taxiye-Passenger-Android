<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayoutSuggestRestaurant"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_custom_order_root_layout"
    android:paddingStart="@dimen/padding_custom_order_root_layout"
    android:paddingEnd="@dimen/padding_custom_order_root_layout"
    android:paddingBottom="@dimen/padding_bottom_delivery_home_page"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/stroke_light_grey_alpha"
        />

    <TextView
        android:id="@+id/tvCouldNotFind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/could_not_find_favorite_restaurant"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="4dp"
        />





    <TextView
        android:id="@+id/tvRecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/why_not_recommend_it"
        android:textColor="@color/text_color_light_less"
        android:textSize="@dimen/sp_14"
        android:layout_marginStart="4dp"
        android:layout_marginTop="@dimen/dp_5"
        />

    <EditText
        android:id="@+id/etRestaurantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:textSize="@dimen/sp_14"

        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/background_white_rounded_bordered"
        android:maxLines="1"
        android:inputType="text"
        android:hint="@string/restaurant_name_star"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color_hint"

        android:textCursorDrawable="@drawable/cursor_black"
        />

    <EditText
        android:id="@+id/etLocality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/background_white_rounded_bordered"
        android:maxLines="1"
        android:inputType="text"
        android:hint="@string/locality_optional"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color_hint"

        android:textCursorDrawable="@drawable/cursor_black"
        />

    <EditText
        android:id="@+id/etTelephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_7"
        android:background="@drawable/background_white_rounded_bordered"
        android:maxLines="1"
        android:inputType="phone"
        android:hint="@string/telephone_number_optional"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color_hint"
        android:textCursorDrawable="@drawable/cursor_black"
        />

    
    <Button
        android:id="@+id/bSubmit"
        style="@style/ButtonTheme"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="@string/submit"
        android:textSize="@dimen/sp_17"
        android:background="@drawable/capsule_theme_color_selector"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"
        />


</LinearLayout>