<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@color/white_light_grey"
    android:splitMotionEvents="false">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="PAYTM WALLET"
            android:textColor="@color/white"
            android:textSize="@dimen/top_bar_title_text_size"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topBar">

        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- paytm logo rl-->
                <RelativeLayout
                    android:id="@+id/relativeLayoutPaytmLogo"
                    android:layout_width="match_parent"
                    android:layout_height="250px"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/imageViewPaytmIcon"
                        android:layout_width="167px"
                        android:layout_height="53px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50px"
                        android:src="@drawable/ic_paytm_logo_big"
                        android:tag="mwar"
                        />


                    <TextView
                        android:id="@+id/textViewAddWalletHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="60px"
                        android:text="Pay for Jugnoo Rides with a Mobile Wallet"
                        android:textColor="@color/grey_dark"
                        android:textSize="28px"
                        />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/yellow_alpha"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textViewOTPMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60px"
                    android:text="Sending OTP To"
                    android:textColor="@color/grey_dark"
                    android:textSize="30px"
                    />

                <TextView
                    android:id="@+id/textViewOTPNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10px"
                    android:text="+91 0000000000"
                    android:textColor="@color/grey_dark_more"
                    android:textSize="36px"
                    />

                <!-- opt editText rl-->
                <LinearLayout
                    android:id="@+id/linearLayoutOTP"
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40px"
                    android:orientation="vertical"
                    >

                    <EditText
                        android:id="@+id/editTextOTP"
                        android:layout_width="240px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5px"
                        android:layout_marginTop="5px"
                        android:background="#0000"
                        android:gravity="center"
                        android:hint="Enter Code"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:textColor="@color/grey_dark_more"
                        android:textColorHint="@color/grey_dark_less"
                        android:textCursorDrawable="@null"
                        android:textSize="34px"/>

                    <ImageView
                        android:layout_width="240px"
                        android:layout_height="2px"
                        android:layout_gravity="center_horizontal"
                        android:src="@color/yellow"/>


                </LinearLayout>

            </LinearLayout>


            <!-- buttons rl-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="140px"
                android:orientation="vertical"
                >


                <Button
                    android:id="@+id/buttonRequestOTP"
                    android:layout_width="620px"
                    android:layout_height="84px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20px"
                    android:background="@drawable/button_yellow"
                    android:text="REQUEST OTP"
                    android:textColor="@drawable/text_color_white_alpha_selector"
                    android:textSize="@dimen/add_paytm_button_text_size"
                    android:visibility="gone"
                    />


                <Button
                    android:id="@+id/buttonVerifyOTP"
                    android:layout_width="620px"
                    android:layout_height="84px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25px"
                    android:background="@drawable/button_yellow"
                    android:text="VERIFY"
                    android:textColor="@drawable/text_color_white_alpha_selector"
                    android:textSize="@dimen/add_paytm_button_text_size"
                    android:visibility="visible"
                    />


                <Button
                    android:id="@+id/buttonResendOTP"
                    android:layout_width="620px"
                    android:layout_height="84px"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20px"
                    android:background="@drawable/button_yellow"
                    android:text="RESEND OTP"
                    android:textColor="@drawable/text_color_white_alpha_selector"
                    android:textSize="@dimen/add_paytm_button_text_size"
                    android:visibility="visible"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/textViewScroll"
                android:layout_width="10px"
                android:layout_height="10px"
                android:textSize="28px"/>

        </LinearLayout>
    </ScrollView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:layout_below="@+id/topBar"
        android:background="@drawable/shadow_down"
        />

</RelativeLayout>