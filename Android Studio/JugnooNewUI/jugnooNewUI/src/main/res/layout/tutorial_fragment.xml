<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_tut"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_40">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/grey_alpha_50"
                android:alpha="0.6"
                app:layout_constraintBottom_toBottomOf="@+id/tvTutDescription"
                app:layout_constraintEnd_toEndOf="@+id/tvTutDescription"
                app:layout_constraintStart_toStartOf="@+id/tvTutDescription"
                app:layout_constraintTop_toTopOf="@+id/tvTutDescription" />

            <TextView
                android:id="@+id/tvTutDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/sp_26"
                android:padding="@dimen/dp_8"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:typekitFont="maven"
                tools:text="Rajan Ke Raja, Maharjan ke Maharaja" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
