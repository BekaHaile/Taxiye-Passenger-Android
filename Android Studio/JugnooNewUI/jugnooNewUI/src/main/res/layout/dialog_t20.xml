<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false">


    <LinearLayout
        android:id="@+id/linearLayoutInner"
        android:layout_width="644px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_white_rounded_bordered"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        >

        <ImageView
            android:id="@+id/imageViewDialogTop"
            android:layout_width="644px"
            android:layout_height="268px"
            android:src="@drawable/ic_fresh_new_placeholder"
            android:tag="mwar"
            />


        <LinearLayout
            android:id="@+id/linearLayoutBeforeRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/textViewPlayPredictWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20px"
                android:text="@string/play_predict_win"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_34"

                />


            <TextView
                android:id="@+id/textViewTeams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:text="@string/team_vs_team_format"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_34"

                />

            <TextView
                android:id="@+id/textViewConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20px"
                android:layout_marginTop="40px"
                android:gravity="center"
                android:text="@string/t20_terms"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_18"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutAfterRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/textViewWhoDoYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:text="@string/who_do_you_think_will_win_today"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_34"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:id="@+id/linearLayoutTeam1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                    <ImageView
                        android:id="@+id/imageViewTeam1Check"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:src="@drawable/check_box_checked"
                        android:layout_marginStart="20px"
                        android:tag="mwar" />


                    <TextView
                        android:id="@+id/textViewTeam1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_zealand"
                        android:padding="10px"
                        android:layout_marginStart="10px"
                        android:layout_marginEnd="10px"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_28" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutTeam2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="40px">


                    <ImageView
                        android:id="@+id/imageViewTeam2Check"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:src="@drawable/check_box_unchecked"
                        android:layout_marginStart="20px"
                        android:tag="mwar" />


                    <TextView
                        android:id="@+id/textViewTeam2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/south_africa"
                        android:padding="10px"
                        android:layout_marginStart="10px"
                        android:layout_marginEnd="10px"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_28" />


                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="180px"
                android:layout_height="70px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40px"
                android:layout_marginBottom="40px"
                android:text="@string/submit"
                android:background="@drawable/button_theme"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_34"
                android:textAllCaps="true"
                />

        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewClose"
        style="@style/cross_popup"
        />

</RelativeLayout>