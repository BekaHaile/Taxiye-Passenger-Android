<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutSlidingBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayoutPoolInfoBar"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="@color/white">

        <TextView
            android:id="@+id/textViewPoolInfo1"
            android:layout_width="450px"
            android:layout_height="match_parent"
            android:background="@drawable/background_pool_info_trb"
            android:text="Share the ride, Split the fare"
            android:textColor="@color/text_color"
            android:paddingLeft="30px"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_26"/>

        <TextView
            android:id="@+id/textViewPoolInfo2"
            android:layout_width="450px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textViewPoolInfo1"
            android:background="@color/white"
            android:text="SAVE UPTO 80%"
            android:textColor="@color/theme_color"
            android:gravity="center"
            android:textSize="@dimen/text_size_26"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:src="@color/stroke_color_light" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <product.clicklabs.jugnoo.widgets.PagerSlidingTabStrip
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:background="@color/white"
            android:visibility="visible"
            app:pstsIndicatorHeight="8px"
            app:pstsShouldExpand="true"
            app:pstsUnderlineColor="@color/grey_light"
            app:pstsUnderlineHeight="2px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayoutCash"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewPaymentOp"
                    android:layout_width="68px"
                    android:layout_height="22px"
                    android:src="@drawable/ic_cash_small"
                    android:tag="mwar" />

                <TextView
                    android:id="@+id/textViewCashValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9px"
                    android:gravity="center"
                    android:text="200"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_30" />

            </LinearLayout>

            <ImageView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginBottom="25px"
                android:layout_marginTop="25px"
                android:src="@color/stroke_color_light" />

            <LinearLayout
                android:id="@+id/linearLayoutFare"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewMinFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/nl_min_fare"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/textViewMinFareValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_30" />

            </LinearLayout>


            <ImageView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginBottom="25px"
                android:layout_marginTop="25px"
                android:src="@color/stroke_color_light" />

            <LinearLayout
                android:id="@+id/linearLayoutOffers"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/nl_offers"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_30" />

                <TextView
                    android:id="@+id/textViewOffersValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_30"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:src="@color/grey_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nl_sliding_bottom_without_tabs"
        android:background="@color/sliding_bottom_bg_color"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>