<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:background="@color/yellow">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="CANCEL RIDE"
            android:textColor="@color/white"
            android:textSize="30.6px"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_light_grey">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <TextView
                android:id="@+id/textViewWantToCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35px"
                android:gravity="center"
                android:text="I want to cancel my ride because"
                android:textColor="@color/grey_dark"
                android:textSize="30px"/>

            <product.clicklabs.jugnoo.utils.NonScrollListView
                android:id="@+id/listViewCancelOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:divider="@color/transparent"
                android:dividerHeight="10px"
                android:splitMotionEvents="false">
            </product.clicklabs.jugnoo.utils.NonScrollListView>

            <RelativeLayout
                android:id="@+id/relativeLayoutOtherCancelOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                >
                <RelativeLayout
                    android:id="@+id/relativeLayoutOtherCancelOptionInner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    >

                    <TextView
                        android:id="@+id/textViewOtherCancelOption"
                        android:layout_width="600px"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="40px"
                        android:text="Others"
                        android:textColor="@color/grey_dark"
                        android:textSize="30px"/>

                    <ImageView
                        android:id="@+id/imageViewOtherCancelOptionCheck"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="40px"
                        android:src="@drawable/check_box_checked_new"
                        android:tag="mwar"
                        />
                </RelativeLayout>

                <EditText
                    android:id="@+id/editTextOtherCancelOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutOtherCancelOptionInner"
                    android:textSize="30px"
                    android:hint="Please specify the reason. It would help us in making your experience better next time."
                    android:background="@drawable/edittext_background_white_yellow_border"
                    android:layout_marginRight="30px"
                    android:layout_marginLeft="30px"
                    android:layout_marginTop="10px"
                    android:gravity="left"
                    android:padding="20px"
                    android:minHeight="200px"
                    android:maxLength="250"
                    />


            </RelativeLayout>

            <Button
                android:id="@+id/buttonCancelRide"
                android:layout_width="648px"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:background="@drawable/button_yellow_selector"
                android:text="CANCEL RIDE"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size"/>

            <TextView
                android:id="@+id/textViewCancelInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                android:gravity="center"
                android:text="Cancellation of a ride more than 5 minutes\nafter the driver is allocated will lead to\ncancellation charges of Rs. 20"
                android:textColor="@color/grey_dark"
                android:textSize="30px"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>