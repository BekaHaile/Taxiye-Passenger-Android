<LinearLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="@dimen/screen_width"
        android:layout_height="@dimen/top_bar_height"
        android:background="@drawable/nl_background_theme_color">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="CANCEL RIDE"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_34"/>

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="60.7px"
            android:layout_height="76.9px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:padding="20px"
            android:src="@drawable/back_white_selector"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@drawable/shadow_down"
        />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/linearLayoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            android:animateLayoutChanges="true"
            >

            <TextView
                android:id="@+id/textViewWantToCancel"
                android:layout_width="match_parent"
                android:layout_height="105px"
                android:layout_gravity="center_horizontal"
                android:background="@color/sliding_bottom_bg_color"
                android:gravity="center"
                android:text="@string/i_want_to_cancel_my_ride_because"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_32"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_color_hint"
                />

            <product.clicklabs.jugnoo.utils.NonScrollListView
                android:id="@+id/listViewCancelOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:divider="@color/transparent"
                android:dividerHeight="10px"
                android:splitMotionEvents="false">
            </product.clicklabs.jugnoo.utils.NonScrollListView>

            <RelativeLayout
                android:id="@+id/relativeLayoutOtherCancelOptionInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                >

                <TextView
                    android:id="@+id/textViewOtherCancelOption"
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/imageViewOtherCancelOptionCheck"
                    android:paddingRight="30px"
                    android:paddingLeft="30px"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"
                    android:text="Others"
                    android:textColor="@color/text_color"
                    android:textSize="30px"/>

                <ImageView
                    android:id="@+id/imageViewOtherCancelOptionCheck"
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40px"
                    android:src="@drawable/check_box_checked"
                    android:tag="mwar"
                    />
            </RelativeLayout>

            <EditText
                android:id="@+id/editTextOtherCancelOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="10px"
                android:background="@drawable/edittext_background_white_yellow_border"
                android:gravity="left"
                android:hint="Please specify the reason"
                android:maxLength="250"
                android:minHeight="160px"
                android:padding="20px"
                android:textSize="30px"
                />

            <RelativeLayout
                android:id="@+id/relativeLayoutOtherError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px">

                <TextView
                    android:id="@+id/textViewOtherError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_status"
                    android:textSize="22px"
                    android:layout_centerVertical="true"
                    android:text="* Required"
                    android:layout_marginLeft="60px"
                    />


            </RelativeLayout>


            <Button
                android:id="@+id/buttonCancelRide"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:background="@drawable/button_theme"
                android:text="CANCEL RIDE"
                android:textColor="@drawable/text_color_white_alpha_selector"
                android:textSize="@dimen/button_text_size"/>

            <TextView
                android:id="@+id/textViewCancelInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50px"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_marginTop="50px"
                android:gravity="center"
                android:text="Cancellation of a ride more than 5 minutes\nafter the driver is allocated will lead to\ncancellation charges of Rs. 20"
                android:textColor="@color/text_color"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/textViewScroll"
                android:layout_width="10px"
                android:layout_height="10px"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>