            @color/theme_color
        </item>
        <item name="android:colorForeground">
            @color/feed_grey_text_secondary
        </item>
    </style>

    <style name="ThemeSwitchAlternate">
        <item name="colorControlActivated">
            @color/theme_green_color
        </item>
        <item name="android:colorForeground">
            @color/feed_grey_text_secondary
        </item>
    </style>

    <style name="Feed.Button.Green" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:gravity">
            center
        </item>
        <item name="android:background">
            @drawable/capsule_green_color_selector
        </item>
        <item name="android:textColor">
            @android:color/white
        </item>
        <item name="android:textSize">
            @dimen/font_medium
        </item>
        <item name="typekitFont">
            "maven"
        </item>
    </style>

    <style name="Text.Input.Layout.Feed" parent="@android:style/TextAppearance">
        <item name="android:textColor">
            @color/feed_red
        </item>
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:gravity">
            center
        </item>

    </style>

    <style
        name="AppThemePay.NoActionBar">
        <item
            name="windowActionBar">
            false
        </item>
        <item
            name="windowNoTitle">
            true
        </item>
    </style>

    <style
        name="AppThemePay.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style
        name="AppThemePay.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light"/>

    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_marginStart">@dimen/dp_2</item>
        <item name="android:layout_marginTop">@dimen/dp_4</item>
        <item name="android:background">@drawable/bg_white_layer_shadow</item>
    </style>

    <style name="EditText.Fatafat.Theme" parent="TransparentTheme">
    <item name="colorControlNormal">#c5c5c5</item>
    <item name="colorControlActivated">#c5c5c5</item>
    <item name="colorControlHighlight">#c5c5c5</item>
</style>

    <style name="TextAppearanceTab" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CardWidgetStyle" parent="@android:style/Theme.DeviceDefault">
        <item name="android:background">@color/theme_color_alpha</item>
        <item name="editTextStyle">@style/EditTextOverride</item>
        <item name="android:editTextStyle">@style/EditTextOverride</item>
    </style>

    <style name="EditTextOverride" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
    </style>
