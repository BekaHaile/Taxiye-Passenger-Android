<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TransparentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white_less_dark</item>
        <item name="colorControlNormal">#e2e2e2</item>
        <item name="colorControlActivated">@color/theme_color</item>
        <item name="colorControlHighlight">@color/white_less_dark</item>
        <item name="android:textColorHint">#595968</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
        <item name="popupMenuStyle">@style/PopupMenu1</item>
        <item name="textAppearanceLargePopupMenu">@style/popupText</item>
        <item name="textAppearanceSmallPopupMenu">@style/popupTextSmall</item>
    </style>

    <style name="back_image">
        <item name="android:layout_width">
            76px
        </item>
        <item name="android:layout_height">
            76px
        </item>
        <item name="android:layout_centerVertical">
            true
        </item>
        <item name="android:padding">
            20px
        </item>
        <item name="android:src">
            @drawable/ic_back_selector
        </item>
        <item name="android:scaleType">
            centerInside
        </item>
        <item name="android:layout_marginStart">
            10px
        </item>
        <item name="android:theme">@style/GreyHighlight</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tag">
            mwar
        </item>
        <item name="android:rotationY">
            @integer/locale_mirror_flip
        </item>

    </style>


    <style name="popupText" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="PopupMenu1" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/button_white_grey_border_round_selector</item>
        <item name="android:popupElevation">4dp</item>
    </style>
    <style name="popupTextSmall" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/text_color_light</item>
    </style>
</resources>