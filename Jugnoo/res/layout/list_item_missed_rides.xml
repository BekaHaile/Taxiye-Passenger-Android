<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
        android:splitMotionEvents="false"
     >

    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:splitMotionEvents="false"
        >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        
        
        >
        
        
        <LinearLayout 
            android:id="@+id/relativeLayoutMissedRideFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
        android:splitMotionEvents="false"
            >
            
            
       

        <TextView
            android:id="@+id/textViewMissedRideFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="36px"
            android:layout_marginLeft="20px"
            android:singleLine="true"
             />
        
        <TextView
            android:id="@+id/textViewMissedRideFromValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elante shjksfjkrhldehkfthlrtewterwtrwtywery"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="36px"
            android:layout_marginLeft="5px"
            android:layout_marginRight="20px"
             />
        
        
         </LinearLayout>
         
        
        
        <LinearLayout 
            android:id="@+id/relativeLayoutMissedRideTime"
            android:layout_width="540px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
        android:splitMotionEvents="false"
            >
        
        
        <ImageView 
           android:layout_width="30px"
           android:layout_height="30px"
           android:src="@drawable/time"
           android:tag="mwar"
            android:layout_marginLeft="20px"
           />
        
        
        <TextView
            android:id="@+id/textViewMissedRideTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 June, 2014"
            android:textColor="@color/bg_grey_opaque"
            android:textSize="30px"
            android:layout_marginLeft="5px"
            android:singleLine="true"
             />
        
        
         </LinearLayout>
        
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@drawable/shadow_up"
            android:layout_marginTop="10px"
            />
        
        
    </LinearLayout>
    
    
    </RelativeLayout>

</LinearLayout>